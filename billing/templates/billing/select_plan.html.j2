.billing-note {
    margin-top: 1rem;
    font-size: 0.875rem;
}

.original-price {
    text-decoration: line-through;
    color: var(--bs-gray-400);
    margin-right: 0.75rem;
}

.savings {
    color: #10b981;
    font-weight: 700;
    background: var(--bs-success-bg-subtle);
    padding: 0.25rem 0.5rem;
    border-radius: 0.5rem;
}

.plan-description {
    color: var(--bs-gray-600);
    margin: 0;
    line-height: 1.6;
    font-size: 1.125rem;
    font-weight: 500;
}

/* Plan Features */
.plan-features {
    flex-grow: 1;
    margin-bottom: 2.5rem;
}

.features-list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.feature-item {
    display: flex;
    align-items: center;
    padding: 1rem 0;
    border-bottom: 1px solid var(--bs-gray-100);
    font-size: 1rem;
    font-weight: 500;
    color: var(--bs-gray-700);
}

.feature-item:last-child {
    border-bottom: none;
}

.feature-check {
    color: #10b981;
    margin-right: 1rem;
    font-size: 1rem;
    width: 20px;
    text-align: center;
}

.feature-item-header {
    border-top: 2px solid var(--bs-gray-200);
    margin-top: 1rem;
    padding-top: 1.5rem;
    border-bottom: none;
    padding-bottom: 0.5rem;
}

.feature-includes {
    font-weight: 700;
    color: var(--bs-gray-800);
    font-style: italic;
    font-size: 1.05rem;
}

/* Plan Action Buttons */
.plan-action {
    text-align: center;
}

.btn-plan {
    width: 100%;
    padding: 1.25rem 2rem;
    border: none;
    border-radius: 1rem;
    font-size: 1.125rem;
    font-weight: 700;
    transition: all 0.3s ease;
    cursor: pointer;
    margin-bottom: 1rem;
    text-decoration: none;
    display: inline-block;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
}

.btn-primary:hover:not(:disabled) {
    background: linear-gradient(135deg, #5a67d8 0%, #6b46c1 100%);
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
    color: white;
}

.btn-current {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
    cursor: default;
}

.btn-enterprise {
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
    color: white;
    text-decoration: none;
}

.btn-enterprise:hover:not(:disabled) {
    background: linear-gradient(135deg, #d97706 0%, #b45309 100%);
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(245, 158, 11, 0.4);
    color: white;
}

.btn-plan:disabled {
    opacity: 0.7;
    cursor: not-allowed;
    transform: none !important;
}

.warning-message {
    background: var(--bs-warning-bg-subtle);
    border: 1px solid var(--bs-warning-border-subtle);
    color: var(--bs-warning-text-emphasis);
    padding: 1rem;
    border-radius: 0.75rem;
    font-size: 0.875rem;
    text-align: left;
    font-weight: 500;
}

/* FAQ Section */
.faq-section {
    background: var(--bs-white);
    padding: 4rem 0;
}

.faq-header h2 {
    font-size: 2.75rem;
    font-weight: 800;
    color: var(--bs-gray-800);
    margin-bottom: 1rem;
}

.faq-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.faq-item {
    background: var(--bs-gray-50);
    border-radius: 1rem;
    overflow: hidden;
    border: 1px solid var(--bs-gray-200);
    transition: all 0.3s ease;
}

.faq-item:hover {
    border-color: var(--bs-gray-300);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
}

.faq-question {
    padding: 1.75rem 2rem;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-weight: 600;
    color: var(--bs-gray-800);
    transition: all 0.3s ease;
    font-size: 1.125rem;
}

.faq-question:hover {
    background: var(--bs-gray-100);
}

.faq-question i {
    transition: transform 0.3s ease;
    color: var(--bs-primary);
    font-size: 1.25rem;
}

.faq-question i.rotated {
    transform: rotate(180deg);
}

.faq-answer {
    padding: 0 2rem 1.75rem;
    color: var(--bs-gray-600);
    line-height: 1.7;
    font-size: 1rem;
}

/* Responsive Design */
@media (max-width: 992px) {
    .pricing-card.popular {
        transform: none;
    }

    .pricing-card.popular:hover {
        transform: translateY(-8px);
    }
}

@media (max-width: 768px) {
    .hero-title {
        font-size: 2.5rem;
    }

    .hero-subtitle {
        font-size: 1.125rem;
    }

    .billing-toggle {
        flex-direction: column;
        gap: 1rem;
        padding: 1.5rem;
    }

    .pricing-card {
        padding: 2rem;
    }

    .plan-icon {
        width: 60px;
        height: 60px;
        font-size: 1.5rem;
    }

    .plan-name {
        font-size: 1.75rem;
    }

    .price-main {
        font-size: 2.5rem;
    }

    .usage-stats {
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }

    .stat-number {
        font-size: 2.25rem;
    }
}

@media (max-width: 576px) {
    .hero-title {
        font-size: 2rem;
    }

    .price-main {
        font-size: 2rem;
    }

    .usage-stats {
        grid-template-columns: 1fr;
        gap: 1rem;
    }

    .stat-number {
        font-size: 2rem;
    }

    .usage-card {
        padding: 2rem;
    }

    .faq-question {
        padding: 1.5rem;
        font-size: 1rem;
    }

    .faq-answer {
        padding: 0 1.5rem 1.5rem;
    }
}

/* Modern Popover Styling */
.modern-popover {
    border: none;
    border-radius: 1rem;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
    background: var(--bs-white);
    max-width: 350px;
}

.modern-popover .popover-arrow::before {
    border-top-color: var(--bs-white);
}

.modern-popover .popover-body {
    padding: 0;
    border-radius: 1rem;
    overflow: hidden;
}

.popover-content {
    padding: 1.5rem;
}

.popover-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--bs-gray-800);
    margin: 0 0 1rem 0;
    display: flex;
    align-items: center;
}

.popover-title::before {
    content: "";
    width: 4px;
    height: 1.25rem;
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    border-radius: 2px;
    margin-right: 0.75rem;
}

.popover-text {
    color: var(--bs-gray-600);
    margin: 0 0 1.5rem 0;
    line-height: 1.5;
    font-size: 0.95rem;
}

.popover-actions {
    display: flex;
    justify-content: flex-end;
    gap: 0.75rem;
}

.popover-actions .btn {
    border-radius: 0.5rem;
    font-weight: 600;
    padding: 0.5rem 1rem;
    transition: all 0.2s ease;
}

.popover-actions .btn-secondary {
    background: var(--bs-gray-100);
    border: 1px solid var(--bs-gray-300);
    color: var(--bs-gray-700);
}

.popover-actions .btn-secondary:hover {
    background: var(--bs-gray-200);
    transform: translateY(-1px);
}

.popover-actions .btn-danger {
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    border: none;
    color: var(--bs-white);
}

.popover-actions .btn-danger:hover {
    background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
    color: var(--bs-white);
}

/* Responsive Popover */
@media (max-width: 768px) {
    .modern-popover {
        max-width: 300px;
    }

    .popover-content {
        padding: 1.25rem;
    }

    .popover-actions {
        flex-direction: column;
        gap: 0.5rem;
    }

    .popover-actions .btn {
        width: 100%;
        justify-content: center;
    }
}
