.enterprise-icon {
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
}

.plan-name {
    font-size: 2rem;
    font-weight: 800;
    color: var(--bs-gray-800);
    margin-bottom: 1rem;
    line-height: 1.1;
}

.plan-price {
    margin-bottom: 1.5rem;
}

.price-main {
    font-size: 3.5rem;
    font-weight: 900;
    color: var(--bs-gray-800);
    line-height: 1;
    display: block;
}

.price-period {
    font-size: 1.125rem;
    color: var(--bs-gray-500);
    font-weight: 500;
    margin-top: -0.5rem;
    display: block;
