{% extends "core/dashboard_base.html.j2" %}
{% comment %}
Template context:
component: Component object
sbom: SBOM object (if component_type is SBOM)
document: Document object (if component_type is DOCUMENT)
APP_BASE_URL: Base URL for the application (for AJAX requests)
has_crud_permissions: Boolean indicating if user has CRUD permissions
{% endcomment %}
{% load widget_tweaks %}
{% load static %}
{% load django_vite %}
{% block title %}
    {% if component.component_type == 'sbom' %}
        SBOM: {{ sbom.name }}
    {% elif component.component_type == 'document' %}
        Document: {{ document.name }}
    {% else %}
        Component Details: {{ component.name }}
    {% endif %}
{% endblock %}
{% block content %}
    <div class="page-header mb-4">
        <div class="header-main mb-3">
            <div class="title-section">
                <h1 class="item-title">
                    {% if component.component_type == 'sbom' %}
                        <i class="fas fa-file-code me-3 text-primary"></i>
                        {{ sbom.name }}
                    {% elif component.component_type == 'document' %}
                        <i class="fas fa-file-alt me-3 text-primary"></i>
                        {{ document.name }}
                    {% endif %}
                </h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{% url 'core:component_details' component.id %}">{{ component.name }}</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Detailed View</li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="header-meta">
            <span class="meta-item">
                <i class="fas fa-cube me-2 text-primary"></i>
                <span class="meta-label">Component</span>
            </span>
            <span class="meta-divider">•</span>
            {% if component.component_type == 'sbom' %}
                <span class="meta-item">
                    <span class="meta-label">Format:</span>
                    <span class="badge bg-success-subtle text-success ms-1">
                        {% if sbom.format == 'cyclonedx' %}
                            CycloneDX
                        {% elif sbom.format == 'spdx' %}
                            SPDX
                        {% else %}
                            {{ sbom.format|upper }}
                        {% endif %}
                        {{ sbom.format_version }}
                    </span>
                </span>
                {% if sbom.version %}
                    <span class="meta-divider">•</span>
                    <span class="meta-item">
                        <span class="meta-label">Version:</span>
                        <span class="ms-1 version-display" title="{{ sbom.version }}">{{ sbom.version }}</span>
                    </span>
                {% endif %}
            {% elif component.component_type == 'document' %}
                <span class="meta-item">
                    <span class="meta-label">Type:</span>
                    <span class="badge bg-info-subtle text-info ms-1">{{ document.document_type|default:"Document" }}</span>
                </span>
                {% if document.version %}
                    <span class="meta-divider">•</span>
                    <span class="meta-item">
                        <span class="meta-label">Version:</span>
                        <span class="ms-1 version-display" title="{{ document.version }}">{{ document.version }}</span>
                    </span>
                {% endif %}
            {% endif %}
        </div>
    </div>

    {% if component.component_type == 'sbom' %}
        <!-- SBOM Detailed View -->

        <!-- SBOM Upload Section -->
        <div class="row mb-4">
            <div class="col-12">
                {% include "core/components/sbom_upload_card.html.j2" with component=component has_crud_permissions=has_crud_permissions %}
            </div>
        </div>

        <!-- SBOM Details Section -->
        <div class="row">
            <div class="col-12 col-lg-6">
                {% include "core/components/sbom_metadata_card.html.j2" with sbom=sbom %}
            </div>
            <div class="col-12 col-lg-6">
                {% include "core/components/sbom_actions_card.html.j2" with sbom=sbom component=component has_crud_permissions=has_crud_permissions %}
            </div>
        </div>

        <!-- Component Metadata Section -->
        <div class="row mt-4">
            <div class="col-12">
                <!-- TODO: Add component metadata management -->
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Component Metadata:</strong> Supplier information, licenses, and lifecycle management features will be available here.
                </div>
            </div>
        </div>
    {% elif component.component_type == 'document' %}
        <!-- Document Detailed View -->
        <div class="row">
            <div class="col-12 col-lg-8">
                <div class="row">
                    <div class="col-12">
                        {% include "core/components/document_metadata_card.html.j2" with document=document %}
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4 text-center">
                        <div class="download-icon mb-3">
                            <i class="fas fa-download fa-2x text-primary"></i>
                        </div>
                        <h5 class="card-title mb-2">Download Document</h5>
                        <p class="text-muted small mb-3">Get the original document file</p>
                        <a href="{% url 'documents:document_download' document.id %}"
                           class="btn btn-primary w-100 mb-3">
                            <i class="fas fa-download me-2"></i>Download {{ document.name }}
                        </a>
                        {% if has_crud_permissions %}
                            <a href="{% url 'documents:document_metadata_edit' document.id %}"
                               class="btn btn-outline-primary w-100">
                                <i class="fas fa-edit me-2"></i>Edit Document
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
{% block scripts %}
    {% vite_asset 'core/js/main.ts' %}
    {% if component.component_type == 'sbom' %}
        {% vite_asset 'sboms/js/main.ts' %}
    {% elif component.component_type == 'document' %}
        {% vite_asset 'documents/js/main.ts' %}
    {% endif %}
{% endblock %}
