{% extends "core/public_base.html.j2" %}
{% comment %}
Template context:
component - Component object
sboms - List of SBOM objects without data and packages fields
brand - BrandingInfo object
{% endcomment %}
{% load widget_tweaks %}
{% load static %}
{% load django_vite %}
{% load breadcrumb_tags %}
{% block title %}{{ component.name }}{% endblock %}
{% block meta_description %}
    {{ component.name }} - {{ component.get_component_type_display }} component. View SBOMs and documents associated with this component.
{% endblock %}
{% block breadcrumb %}
    {% breadcrumb component 'component' %}
{% endblock %}
{% block content %}
    <!-- Public Component Details -->
    <div class="public-component-details">
        <!-- Header -->
        <div class="page-header mb-4">
            <div class="header-main">
                <div class="title-section">
                    <h1 class="item-title">
                        <i class="fas fa-cube me-3 text-primary"></i>
                        {{ component.name }}
                    </h1>
                    <div class="meta-badges mt-2">
                        <span class="meta-badge meta-badge--primary">
                            <i class="fas fa-cube"></i>
                            Component
                        </span>
                        <span class="meta-badge meta-badge--secondary">
                            <i class="fas fa-tag"></i>
                            {{ component.get_component_type_display }}
                        </span>
                        <span class="meta-badge meta-badge--secondary">
                            <i class="fas fa-fingerprint"></i>
                            <span class="copyable-value"
                                  data-value="{{ component.id }}"
                                  title="Component ID: {{ component.id }} (click to copy)">{{ component.id }}</span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <!-- Component Content -->
        {% if component.component_type == 'sbom' and sboms_data %}
            <div class="component-content">
                {% include "core/components/items_table.html.j2" with items_data=sboms_data component_type="sbom" table_title="SBOMs" is_public_view=True show_vulnerabilities=False show_delete_button=False team_billing_plan=team_billing_plan has_crud_permissions=False %}
            </div>
        {% elif component.component_type == 'document' and documents_data %}
            <div class="component-content">
                {% include "core/components/items_table.html.j2" with items_data=documents_data component_type="document" table_title="Documents" is_public_view=True show_vulnerabilities=False show_delete_button=False team_billing_plan=team_billing_plan has_crud_permissions=False %}
            </div>
        {% else %}
            <div class="text-center text-muted py-5">
                <i class="fas fa-cube fa-3x mb-3"></i>
                <h4>No Content Available</h4>
                <p>This component doesn't have any public content to display.</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
{% block scripts %}
    <!-- Minimal JS for copyable values -->
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Copyable value functionality
        document.querySelectorAll('.copyable-value').forEach(function(element) {
            element.style.cursor = 'pointer';
            element.addEventListener('click', function() {
                const value = this.getAttribute('data-value');
                navigator.clipboard.writeText(value).then(function() {
                    // Show success feedback
                    const originalText = element.textContent;
                    element.textContent = 'Copied!';
                    element.style.color = '#28a745';
                    setTimeout(function() {
                        element.textContent = originalText;
                        element.style.color = '';
                    }, 1000);
                });
            });
        });
    });
    </script>
{% endblock %}
