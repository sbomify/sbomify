<!-- Access Token Form Component -->
<form method="post"
      id="tokenGenerationForm"
      class="needs-validation"
      novalidate>
    {% csrf_token %}
    <div class="mb-3">
        <label for="id_description" class="form-label fw-semibold">
            <i class="fas fa-tag me-2"></i>Token Description
        </label>
        <input type="text"
               name="description"
               class="form-control"
               id="id_description"
               placeholder="Enter a descriptive name for this token (e.g., 'CI/CD Pipeline', 'Local Development')"
               required
               maxlength="255">
        <div class="invalid-feedback">Please provide a description for your token.</div>
        <div class="form-text">Choose a name that helps you remember what this token is used for.</div>
    </div>
    <div class="d-flex gap-2 flex-wrap">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Generate Token
        </button>
        <button type="button"
                class="btn btn-outline-secondary"
                id="clearTokenFormBtn">
            <i class="fas fa-times me-2"></i>Clear
        </button>
    </div>
</form>
<!-- Form will be enhanced by TypeScript component -->
