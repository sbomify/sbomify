<!-- Access Tokens List Component -->
{% if access_tokens %}
    <div class="tokens-list">
        {% for token in access_tokens %}
            <div class="d-flex justify-content-between align-items-center py-3 {% if not forloop.last %}border-bottom{% endif %}">
                <div class="flex-grow-1">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-key text-muted me-3"></i>
                        <div>
                            <h6 class="mb-1 fw-semibold">{{ token.description }}</h6>
                            <small class="text-muted">Created on {{ token.created_at|date:"M d, Y" }}</small>
                        </div>
                    </div>
                </div>
                <div class="d-flex align-items-center gap-2">
                    <button type="button"
                            class="btn btn-outline-danger btn-sm delete-token-btn"
                            data-token-id="{{ token.id }}"
                            data-token-description="{{ token.description|escapejs }}"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteTokenModal"
                            data-item-id="{{ token.id }}"
                            data-item-name="{{ token.description|escapejs }}"
                            data-delete-url="{% url 'core:delete_access_token' token.id %}"
                            title="Delete token">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="text-center py-5">
        <div class="mb-3">
            <i class="fas fa-key text-muted display-4"></i>
        </div>
        <h5 class="text-muted">No Personal Access Tokens</h5>
        <p class="text-muted mb-0">Generate your first personal access token to start using the sbomify API.</p>
    </div>
{% endif %}
