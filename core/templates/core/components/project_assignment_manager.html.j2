{% comment %}
Generic Assignment Manager Component - Server-side rendered with JavaScript enhancement
Context variables:
- parent_type: Type of parent item (e.g., "product", "project", "release")
- parent_id: ID of the parent item
- child_type: Type of child items (e.g., "project", "component", "artifact")
- assigned_items: QuerySet/List of assigned child objects
- available_items: List of available child objects from API
- has_crud_permissions: Boolean for CRUD permissions
- assigned_title: Title for assigned section (e.g., "Assigned Projects")
- available_title: Title for available section (e.g., "Available Projects")
- empty_message: Message when no items assigned
- no_available_message: Message when no items available
- create_url: URL to create new child items (optional)
- create_button_text: Text for create button (optional)
{% endcomment %}
{% load static %}
<!-- Generic Assignment Manager -->
<div class="row g-4">
    <!-- Assigned Items -->
    <div class="col-lg-6">
        <div class="card shadow-brand">
            <div class="card-header px-4 py-3">
                <div class="d-flex justify-content-between align-items-center w-100">
                    <h4 class="card-title mb-0">{{ assigned_title|default:"Assigned "|add:child_type|add:"s"|title }}</h4>
                    <span class="badge bg-primary rounded-pill">{{ assigned_items|length }}</span>
                </div>
            </div>
            <div class="card-body p-0"
                 data-assignment-manager
                 data-parent-type="{{ parent_type }}"
                 data-parent-id="{{ parent_id }}"
                 data-child-type="{{ child_type }}"
                 data-has-crud-permissions="{{ has_crud_permissions|yesno:'true,false' }}">
                {% if not assigned_items %}
                    <!-- Empty State -->
                    <div class="text-center py-5 text-muted">
                        <i class="fas fa-folder-open fa-3x mb-3 opacity-25"></i>
                        <h6 class="text-muted">{{ empty_message|default:"No "|add:child_type|add:"s assigned" }}</h6>
                        <p class="text-muted mb-3">
                            {{ empty_description|default:"Assign "|add:child_type|add:"s to this "|add:parent_type|add:" to organize your content" }}
                        </p>
                        {% if has_crud_permissions and available_items %}
                            <button class="btn btn-primary assign-item-btn" data-action="assign-multiple">
                                <i class="fas fa-plus me-2"></i>Assign {{ child_type|title }}
                            </button>
                        {% endif %}
                    </div>
                {% else %}
                    <!-- Search for assigned items -->
                    <div class="border-bottom p-3">
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-search text-muted"></i>
                            </span>
                            <input type="text"
                                   class="form-control"
                                   placeholder="Search assigned {{ child_type }}s..."
                                   id="assignedSearch">
                        </div>
                    </div>
                    <!-- Assigned Items List -->
                    <div class="assigned-items-container"
                         style="max-height: 400px;
                                overflow-y: auto">
                        {% for item in assigned_items %}
                            <div class="d-flex align-items-center justify-content-between p-3 border-bottom assigned-item"
                                 data-item-name="{{ item.name|lower }}"
                                 data-item-id="{{ item.id }}">
                                <div class="d-flex align-items-center">
                                    <div class="me-3">
                                        <i class="fas fa-folder text-primary"></i>
                                    </div>
                                    <div>
                                        <div class="fw-medium">
                                            <a href="{% url 'core:project_details' project.id %}"
                                               class="text-decoration-none">{{ project.name }}</a>
                                        </div>
                                        <div class="d-flex align-items-center gap-2 mt-1">
                                            {% if project.is_public %}
                                                <span class="badge bg-success-subtle text-success">Public</span>
                                            {% else %}
                                                <span class="badge bg-secondary-subtle text-secondary">Private</span>
                                            {% endif %}
                                            <small class="text-muted">{{ project.components.count }} component{{ project.components.count|pluralize }}</small>
                                        </div>
                                    </div>
                                </div>
                                {% if has_crud_permissions %}
                                    <button class="btn btn-sm btn-outline-danger remove-project-btn"
                                            data-project-id="{{ project.id }}"
                                            data-project-name="{{ project.name }}"
                                            title="Remove from product">
                                        <i class="fas fa-times"></i>
                                    </button>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    <!-- Available Projects -->
    {% if has_crud_permissions %}
        <div class="col-lg-6">
            <div class="card shadow-brand">
                <div class="card-header px-4 py-3">
                    <div class="d-flex justify-content-between align-items-center w-100">
                        <h4 class="card-title mb-0">Available Projects</h4>
                        <span class="badge bg-secondary rounded-pill">{{ available_projects|length }}</span>
                    </div>
                </div>
                <div class="card-body p-0">
                    {% if not available_projects %}
                        <!-- Empty State -->
                        <div class="text-center py-5 text-muted">
                            <i class="fas fa-folder-plus fa-3x mb-3 opacity-25"></i>
                            <h6 class="text-muted">No available projects</h6>
                            <p class="text-muted mb-3">All projects in your team are already assigned to this product</p>
                            <a href="{% url 'core:projects_dashboard' %}"
                               class="btn btn-outline-primary">
                                <i class="fas fa-plus me-2"></i>Create New Project
                            </a>
                        </div>
                    {% else %}
                        <!-- Search for available projects -->
                        <div class="border-bottom p-3">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-search text-muted"></i>
                                </span>
                                <input type="text"
                                       class="form-control"
                                       placeholder="Search available projects..."
                                       id="availableSearch">
                            </div>
                        </div>
                        <!-- Available Projects List -->
                        <div class="available-projects-container"
                             style="max-height: 400px;
                                    overflow-y: auto">
                            {% for project in available_projects %}
                                <div class="d-flex align-items-center justify-content-between p-3 border-bottom available-project-item"
                                     data-project-name="{{ project.name|lower }}">
                                    <div class="d-flex align-items-center">
                                        <div class="me-3">
                                            <i class="fas fa-folder-open text-muted"></i>
                                        </div>
                                        <div>
                                            <div class="fw-medium">{{ project.name }}</div>
                                            <div class="d-flex align-items-center gap-2 mt-1">
                                                {% if project.is_public %}
                                                    <span class="badge bg-success-subtle text-success">Public</span>
                                                {% else %}
                                                    <span class="badge bg-secondary-subtle text-secondary">Private</span>
                                                {% endif %}
                                                <small class="text-muted">{{ project.component_count|default:0 }} component{{ project.component_count|default:0|pluralize }}</small>
                                            </div>
                                        </div>
                                    </div>
                                    <button class="btn btn-sm btn-outline-primary assign-project-btn"
                                            data-project-id="{{ project.id }}"
                                            data-project-name="{{ project.name }}"
                                            title="Assign to product">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endif %}
</div>
<!-- TypeScript functionality loaded via main.ts -->
