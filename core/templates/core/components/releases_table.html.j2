{% comment %}
Generic Django template for releases table - uses standard card component
Context variables:
- releases: QuerySet of Release objects
- product_id: Product ID
- is_public_view: Boolean for public/private view
- has_crud_permissions: Boolean for CRUD permissions
- table_title: Title for the table (e.g., "Releases")
- show_actions: Boolean to show action buttons
- max_releases: Optional limit for number of releases to show
- view_all_url: Optional URL for "View All" link when truncated
{% endcomment %}
{% load static %}
<!-- Releases Table using Standard Card -->
<div class="standard-card mt-3">
    <div class="card shadow-brand">
        <!-- Card Header -->
        <div class="card-header">
            <div class="header-content">
                <h4 class="card-title mb-0">{{ table_title|default:"Releases" }}</h4>
                <div class="header-actions">
                    {% if view_all_url and max_releases and releases|length > max_releases %}
                        <a href="{{ view_all_url }}" class="btn btn-sm btn-outline-primary">
                            View All <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    {% endif %}
                    {% if has_crud_permissions and not is_public_view %}
                        <button class="btn btn-sm btn-primary"
                                data-bs-toggle="modal"
                                data-bs-target="#createReleaseModal">
                            <i class="fas fa-plus me-1"></i>Add Release
                        </button>
                    {% endif %}
                </div>
            </div>
        </div>
        <!-- Card Body -->
        <div class="card-body p-0"
             data-releases-table
             data-product-id="{{ product_id }}"
             data-has-crud-permissions="{{ has_crud_permissions|yesno:'true,false' }}"
             data-releases='{{ releases|safe }}'>
            {% if not releases %}
                <!-- Empty state -->
                <div class="text-center text-muted p-5">
                    <i class="fas fa-tag fa-3x mb-3 opacity-25"></i>
                    <h6 class="text-muted">No releases yet</h6>
                    <p class="text-muted mb-3">
                        {% if is_public_view %}
                            This product doesn't have any releases yet.
                        {% else %}
                            Create your first release to get started
                        {% endif %}
                    </p>
                    {% if has_crud_permissions and not is_public_view %}
                        <button class="btn btn-primary"
                                data-bs-toggle="modal"
                                data-bs-target="#createReleaseModal">
                            <i class="fas fa-plus me-2"></i>Create Release
                        </button>
                    {% endif %}
                </div>
            {% else %}
                <!-- Releases Table -->
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Artifacts</th>
                                <th>Created</th>
                                {% if show_actions and has_crud_permissions and not is_public_view %}<th class="text-end">Actions</th>{% endif %}
                            </tr>
                        </thead>
                        <tbody id="releases-table-body">
                            {% for release in releases %}
                                {% if not max_releases or forloop.counter <= max_releases %}
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div>
                                                    <strong>
                                                        <a href="{% if is_public_view %}{% url 'core:release_details_public' product_id release.id %}{% else %}{% url 'core:release_details' product_id release.id %}{% endif %}"
                                                           class="text-decoration-none">{{ release.name }}</a>
                                                    </strong>
                                                    {% if release.description %}<div class="text-muted small">{{ release.description|truncatechars:60 }}</div>{% endif %}
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center gap-2">
                                                {% if release.is_latest %}<span class="badge bg-success">Latest</span>{% endif %}
                                                {% if release.is_prerelease %}<span class="badge bg-warning">Pre-release</span>{% endif %}
                                                {% if is_public_view or release.is_public %}
                                                    <span class="badge bg-primary">Public</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">Private</span>
                                                {% endif %}
                                            </div>
                                        </td>
                                        <td>
                                            {% if release.artifacts_count %}
                                                <span class="text-muted">
                                                    <i class="fas fa-puzzle-piece me-1"></i>{{ release.artifacts_count }} artifact{{ release.artifacts_count|pluralize }}
                                                </span>
                                            {% else %}
                                                <span class="text-muted">No artifacts</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <span class="text-muted small">{{ release.created_at|date:"M j, Y" }}</span>
                                        </td>
                                        {% if show_actions and has_crud_permissions and not is_public_view %}
                                            <td class="text-end">
                                                <div class="btn-group btn-group-sm">
                                                    <a href="{% url 'core:release_details' product_id release.id %}"
                                                       class="btn btn-outline-primary btn-sm"
                                                       title="View">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    {% if release.has_sboms %}
                                                        <a href="/api/v1/releases/{{ release.id }}/download"
                                                           class="btn btn-outline-success btn-sm"
                                                           title="Download">
                                                            <i class="fas fa-download"></i>
                                                        </a>
                                                    {% endif %}
                                                    {% if not release.is_latest %}
                                                        <button class="btn btn-outline-primary btn-sm edit-release-btn"
                                                                title="Edit"
                                                                data-release-id="{{ release.id }}"
                                                                data-release-name="{{ release.name }}"
                                                                data-release-description="{{ release.description }}"
                                                                data-release-prerelease="{{ release.is_prerelease|yesno:'true,false' }}">
                                                            <i class="fas fa-edit"></i>
                                                        </button>
                                                        <button class="btn btn-outline-danger btn-sm delete-release-btn"
                                                                title="Delete"
                                                                data-release-id="{{ release.id }}"
                                                                data-release-name="{{ release.name }}">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </button>
                                                    {% endif %}
                                                </div>
                                            </td>
                                        {% endif %}
                                    </tr>
                                {% endif %}
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- Show "View All" message when releases are truncated -->
                {% if view_all_url and max_releases and releases|length > max_releases %}
                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted small">Showing {{ max_releases }} of {{ releases|length }} releases</span>
                            <a href="{{ view_all_url }}" class="btn btn-sm btn-outline-primary">
                                View All Releases <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                {% endif %}
            {% endif %}
        </div>
    </div>
</div>
<!-- Create/Edit Release Modal -->
{% if has_crud_permissions and not is_public_view %}
    <div class="modal fade" id="createReleaseModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="releaseModalTitle">Create Release</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="createReleaseForm">
                        {% csrf_token %}
                        <div class="mb-3">
                            <label for="releaseName" class="form-label">
                                Release Name <span class="text-danger">*</span>
                            </label>
                            <input type="text"
                                   class="form-control"
                                   id="releaseName"
                                   name="name"
                                   required
                                   placeholder="e.g., v1.0.0">
                        </div>
                        <div class="mb-3">
                            <label for="releaseDescription" class="form-label">Description</label>
                            <textarea class="form-control"
                                      id="releaseDescription"
                                      name="description"
                                      rows="3"
                                      placeholder="Describe what's included in this release..."></textarea>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input"
                                       type="checkbox"
                                       id="isPrerelease"
                                       name="is_prerelease">
                                <label class="form-check-label" for="isPrerelease">
                                    Pre-release
                                    <small class="text-muted d-block">Mark this as a pre-release version</small>
                                </label>
                            </div>
                        </div>
                        <div id="createReleaseError"
                             class="alert alert-danger create-release-error"></div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="createReleaseBtn">
                        <span id="createReleaseSpinner"
                              class="spinner-border spinner-border-sm me-2 create-release-spinner"></span>
                        <span id="createReleaseText">Create Release</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endif %}
<!-- TypeScript functionality loaded via main.ts -->
