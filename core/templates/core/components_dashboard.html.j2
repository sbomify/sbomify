{% extends "core/dashboard_base.html.j2" %}
{% load widget_tweaks %}
{% load form_helpers %}
{% load django_vite %}
{% block title %}sbomify Components{% endblock %}
{% block content %}
    <div class="page-header mb-4">
        <div class="header-main">
            <div class="title-section">
                <h1 class="item-title">
                    <i class="fas fa-cube me-3 text-primary"></i>Components
                </h1>
                <p class="item-subtitle">Manage individual software components and their SBOMs</p>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-12">
            <!-- Components Table using dedicated components table component -->
            {% include "core/components/components_table.html.j2" with components=components has_crud_permissions=has_crud_permissions show_add_button=True table_title="Components" pagination_meta=pagination_meta current_page=current_page page_size=page_size page_size_options=page_size_options add_modal_target="addComponentModal" %}
        </div>
    </div>
    
    <!-- Add Component Modal - Django Template -->
    {% include "core/components/add_item_modal.html.j2" with modal_id="addComponentModal" item_type="Component" api_endpoint="/api/v1/components" form_fields=component_form_fields has_crud_permissions=has_crud_permissions %}
{% endblock %}

{% block scripts %}
    <!-- Load main scripts for Django template functionality -->
    {% vite_asset 'core/js/main.ts' %}
{% endblock %}
