{% extends "core/dashboard_base.html.j2" %}
{% comment %}
Template context:
product: Product object
APP_BASE_URL: Base URL for the application (for AJAX requests)
has_crud_permissions: Boolean indicating if user has CRUD permissions
{% endcomment %}
{% load widget_tweaks %}
{% load static %}
{% load django_vite %}
{% block title %}sbomify Product: {{ product.name }}{% endblock %}
{% block content %}
    {% csrf_token %}
    <div class="detail-page-header mb-4">
        <!-- Breadcrumb Navigation -->
        <div class="detail-breadcrumb-nav mb-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb detail-breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{% url 'core:products_dashboard' %}">Products</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">{{ product.name }}</li>
                </ol>
            </nav>
        </div>
        <!-- Main Header Content -->
        <div class="detail-header-main">
            <div class="detail-header-left">
                <div class="detail-title-group">
                    <h1 class="detail-item-title">
                        {% if has_crud_permissions %}
                            {% include "core/components/editable_field.html.j2" with item_type="product" item_id=product.id field_name="name" current_value=product.name css_class="product-name-field" %}
                        {% else %}
                            {{ product.name }}
                        {% endif %}
                    </h1>
                    <div class="detail-meta-row">
                        <span class="detail-meta-badge">
                            <i class="fas fa-box me-2"></i>Product
                        </span>
                        <span class="detail-meta-id-container">
                            {% include "core/components/copyable_value.html.j2" with value=product.id display_text=product.id title="Product ID: "|add:product.id|add:" (click to copy)" css_class="detail-meta-id-chip" %}
                        </span>
                    </div>
                </div>
            </div>
            {% if has_crud_permissions %}
                <div class="detail-header-right">
                    {% include "core/components/public_status_toggle.html.j2" with item_type="product" item_id=product.id is_public=product.is_public public_url="/public/product/"|add:product.id|add:"/" inline=True %}
                </div>
            {% endif %}
        </div>
    </div>
    <!-- Project Assignment Section -->
    <div class="row mt-3">
        <div class="col-12">
            {% include "core/components/assignment_manager.html.j2" with parent_type="product" parent_id=product.id child_type="project" assigned_items=product.projects.all available_items=available_projects has_crud_permissions=has_crud_permissions assigned_title="Assigned Projects" available_title="Available Projects" empty_message="No projects assigned" empty_description="Assign projects to this product to organize your components and releases" create_url="core:projects_dashboard" create_button_text="Create New Project" %}
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            {% include "core/components/product_identifiers_manager.html.j2" with product_id=product.id product_identifiers=product_identifiers has_crud_permissions=has_crud_permissions team_billing_plan=team_billing_plan table_title="Product Identifiers" %}
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            {% include "core/components/product_links_manager.html.j2" with product_id=product.id product_links=product_links has_crud_permissions=has_crud_permissions table_title="Product Links" is_public_page=False %}
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            {% include "core/components/releases_table.html.j2" with releases=recent_releases product_id=product.id has_crud_permissions=has_crud_permissions table_title="Recent Releases" show_actions=True max_releases=5 view_all_url="/product/"|add:product.id|add:"/releases/" is_public_view=False %}
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <div class="standard-card mt-3">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <div class="header-content">
                            <h4 class="card-title mb-0">
                                <i class="fas fa-download me-2"></i>Latest Release
                            </h4>
                        </div>
                    </div>
                    <div class="card-body text-center">
                        <p class="text-muted mb-3">
                            Download SBOM from the latest release containing the most current artifacts for this product
                        </p>
                        <a class="btn btn-primary"
                           href="/api/v1/products/{{ product.id }}/download">
                            <i class="fas fa-download me-2"></i>Download Latest Release
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% if has_crud_permissions %}
        <div class="row mt-3">
            <div class="col-12">
                {% include "core/components/danger_zone.html.j2" with item_type="product" item_id=product.id item_name=product.name delete_endpoint="/api/v1/products/{id}" redirect_url="/dashboard/" title="Danger Zone" description="Permanently remove this product and all associated data" button_text="Delete Product" collapsible=True default_expanded=False %}
            </div>
        </div>
    {% endif %}
{% endblock %}
{% block scripts %}<!-- Reusable components handle their own JavaScript -->{% endblock %}
