{% extends "core/dashboard_base.html.j2" %}
{% comment %}
Template context:
project: Project object
APP_BASE_URL: Base URL for the application (for AJAX requests)
has_crud_permissions: Boolean indicating if user has CRUD permissions
{% endcomment %}
{% load widget_tweaks %}
{% load django_vite %}
{% block title %}sbomify Project: {{ project.name }}{% endblock %}
{% block content %}
    <div class="detail-page-header mb-4">
        <!-- Breadcrumb Navigation -->
        <div class="detail-breadcrumb-nav mb-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb detail-breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{% url 'core:projects_dashboard' %}">Projects</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">{{ project.name }}</li>
                </ol>
            </nav>
        </div>
        <!-- Main Header Content -->
        <div class="detail-header-main">
            <div class="detail-header-left">
                <div class="detail-title-group">
                    <h1 class="detail-item-title">
                        {% if has_crud_permissions %}
                            {% include "core/components/editable_field.html.j2" with item_type="project" item_id=project.id field_name="name" current_value=project.name placeholder="Project name" inline=True %}
                        {% else %}
                            {{ project.name }}
                        {% endif %}
                    </h1>
                    <div class="detail-meta-row">
                        <span class="detail-meta-badge">
                            <i class="fas fa-project-diagram me-2"></i>Project
                        </span>
                        <span class="detail-meta-id-container">
                            {% include "core/components/copyable_value.html.j2" with value=project.id display_text=project.id title="Project ID: "|add:project.id|add:" (click to copy)" css_class="detail-meta-id-chip" %}
                        </span>
                    </div>
                </div>
            </div>
            {% if has_crud_permissions %}
                <div class="detail-header-right">
                    {% include "core/components/public_status_toggle.html.j2" with item_type="project" item_id=project.id is_public=project.is_public public_url="/public/project/"|add:project.id|add:"/" inline=True %}
                </div>
            {% endif %}
        </div>
    </div>
    <!-- Project Stats -->
    <div class="row">
        <div class="col-md-4">
            <div class="card border-light shadow-brand">
                <div class="card-body text-center p-4">
                    <div class="stat-icon mb-3">
                        <i class="fas fa-cube fa-2x text-primary"></i>
                    </div>
                    <h3 class="stat-number mb-2">{{ components_count }}</h3>
                    <p class="stat-label text-muted mb-0">Components in Project</p>
                </div>
            </div>
        </div>
    </div>
    <!-- Component Assignment Section - Reuse existing assignment_manager.html.j2 -->
    <div class="row mt-3">
        <div class="col-12">
            {% include "core/components/assignment_manager.html.j2" with parent_type="project" parent_id=project.id child_type="component" assigned_items=components available_items=available_components has_crud_permissions=has_crud_permissions assigned_title="Project Components" available_title="Available Components" empty_message="No components assigned" empty_description="Assign components to this project to organize your SBOMs and documents" create_url="core:components_dashboard" create_button_text="Create New Component" %}
        </div>
    </div>
    <!-- Danger Zone - Use Django template component -->
    {% if has_crud_permissions %}
        <div class="row mt-3">
            <div class="col-12">
                {% include "core/components/danger_zone.html.j2" with item_type="project" item_id=project.id item_name=project.name delete_endpoint="/api/v1/projects/"|add:project.id redirect_url="/projects/" title="Danger Zone" %}
            </div>
        </div>
    {% endif %}
{% endblock %}
{% block scripts %}
    <!-- Load main scripts for Django template functionality -->
    {% vite_asset 'core/js/main.ts' %}
{% endblock %}
