{% extends "core/dashboard_base.html.j2" %}
{% comment %}
Template context:
has_crud_permissions: Boolean indicating if user has CRUD permissions
APP_BASE_URL: Base URL for the application (for AJAX requests)
{% endcomment %}
{% load widget_tweaks %}
{% load static %}
{% load django_vite %}
{% block title %}sbomify Releases{% endblock %}
{% block content %}
    <div class="page-header mb-4">
        <div class="header-main">
            <div class="title-section">
                <h1 class="item-title">
                    <i class="fas fa-tag me-3 text-primary"></i>Releases
                </h1>
                <p class="item-subtitle">Manage and view all software releases across your products</p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            {% include "core/components/all_releases_table.html.j2" with releases=releases has_crud_permissions=has_crud_permissions team_products=team_products table_title="All Releases" %}
        </div>
    </div>
{% endblock %}
{% block scripts %}
    {% vite_asset 'core/js/components/all-releases-table.ts' %}
{% endblock %}
