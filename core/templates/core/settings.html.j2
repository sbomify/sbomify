{% extends "core/dashboard_base.html.j2" %}
{% load widget_tweaks %}
{% load form_helpers %}
{% load django_vite %}
{% block title %}User Settings - sbomify{% endblock %}
{% block content %}
    <!-- Initialize TypeScript components -->
    <div class="vc-user-settings-page d-none"
         data-csrf-token="{{ csrf_token }}"></div>
    <div class="container-fluid">
        <!-- Page Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h2 mb-1">User Settings</h1>
                <p class="text-muted mb-0">Manage your personal access tokens and account preferences</p>
            </div>
        </div>
        <!-- Token Display Card (only shown when a token was just created) -->
        {% if new_encoded_access_token %}
            <div class="mt-4 mb-4">
                <div class="card border-light shadow-brand">
                    <div class="card-header px-4 py-3">
                        <div class="d-flex justify-content-between align-items-center w-100">
                            <h4 class="card-title mb-0">
                                <i class="fas fa-exclamation-triangle me-2 text-warning"></i>
                                Your Personal Access Token
                            </h4>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <div class="alert alert-info d-flex align-items-center mb-3" role="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            <div>
                                <strong>Important:</strong> Make sure to copy your personal access token now. You won't be able to see it again!
                            </div>
                        </div>
                        {% include "core/components/token_display.html.j2" with access_token=new_encoded_access_token %}
                    </div>
                </div>
            </div>
        {% endif %}
        <!-- Token Generation Card -->
        <div class="mt-3 mb-4">
            <div class="card border-light shadow-brand">
                <div class="card-header px-4 py-3">
                    <div class="d-flex justify-content-between align-items-center w-100">
                        <h4 class="card-title mb-0">Generate Token</h4>
                    </div>
                </div>
                <div class="card-body p-4">{% include "core/components/access_token_form.html.j2" %}</div>
            </div>
        </div>
        <!-- Personal Access Tokens List Card -->
        <div class="mt-3 mb-4">
            <div class="card border-light shadow-brand">
                <div class="card-header px-4 py-3">
                    <div class="d-flex justify-content-between align-items-center w-100">
                        <h4 class="card-title mb-0">Personal Access Tokens</h4>
                    </div>
                </div>
                <div class="card-body p-4">{% include "core/components/access_tokens_list.html.j2" %}</div>
            </div>
        </div>
    </div>
    <!-- Delete Confirmation Modal -->
    {% include "core/components/delete_confirmation_modal.html.j2" with modal_id="deleteTokenModal" item_type="Personal Access Token" warning_message="Applications using this token will no longer be able to access the sbomify API." csrf_token=csrf_token %}
{% endblock %}
{% block scripts %}
    <!-- Load main scripts for Django template functionality -->
    {% vite_asset 'core/js/main.ts' %}
{% endblock %}
