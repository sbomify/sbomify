{
  "name": "sbomify-frontend-components",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "copy-bootstrap": "cp node_modules/bootstrap/dist/css/bootstrap.min.css sbomify/static/css/ && cp node_modules/bootstrap/dist/css/bootstrap.min.css.map sbomify/static/css/",
    "copy-fontawesome": "cp -r node_modules/@fortawesome/fontawesome-free/webfonts sbomify/static/ && cp node_modules/@fortawesome/fontawesome-free/css/all.min.css sbomify/static/css/fontawesome.min.css",
    "copy-deps": "bun run copy-bootstrap && bun run copy-fontawesome",
    "build": "bun run copy-deps && vue-tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint \"sbomify/apps/core/js/**/*.{js,ts,vue}\" \"sbomify/apps/sboms/js/**/*.{js,ts,vue}\" \"sbomify/apps/teams/js/**/*.{js,ts,vue}\" \"sbomify/apps/billing/js/**/*.{js,ts,vue}\" \"sbomify/apps/documents/js/**/*.{js,ts,vue}\" \"sbomify/apps/vulnerability_scanning/js/**/*.{js,ts,vue}\" \"sbomify/apps/plugins/js/**/*.{js,ts,vue}\" \"*.{js,ts}\"",
    "lint-fix": "eslint \"sbomify/apps/core/js/**/*.{js,ts,vue}\" \"sbomify/apps/sboms/js/**/*.{js,ts,vue}\" \"sbomify/apps/teams/js/**/*.{js,ts,vue}\" \"sbomify/apps/billing/js/**/*.{js,ts,vue}\" \"sbomify/apps/documents/js/**/*.{js,ts,vue}\" \"sbomify/apps/vulnerability_scanning/js/**/*.{js,ts,vue}\" \"sbomify/apps/plugins/js/**/*.{js,ts,vue}\" \"*.{js,ts}\" --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,vue,css,scss,html}\" --ignore-path .gitignore",
    "type-check": "vue-tsc --noEmit --skipLibCheck -p tsconfig.app.json",
    "test": "bun test",
    "test:run": "bun test"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@mdi/font": "^7.4.47",
    "@types/bun": "^1.3.2",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^25.0.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "alpinejs": "3.15.3",
    "axios": "^1.13.2",
    "bootstrap": "^5.3.8",
    "chart.js": "^4.5.1",
    "clipboard": "^2.0.11",
    "dotenv": "^17.2.3",
    "highlight.js": "^11.11.1",
    "js-cookie": "^3.0.5",
    "jsbarcode": "^3.12.1",
    "license-expressions": "^0.8.0",
    "sweetalert2": "^11.26.3",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-pwa": "^1.1.0",
    "vue": "^3.5.24",
    "vue-chartjs": "^5.3.3",
    "vue-tsc": "^3.1.3",
    "vuetify": "^3.10.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/alpinejs": "^3.13.11",
    "@types/bootstrap": "^5.2.10",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.5.1",
    "globals": "^17.0.0",
    "markdownlint-cli": "0.47.0",
    "prettier": "^3.6.2",
    "vue-eslint-parser": "^10.2.0"
  }
}
