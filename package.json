{
  "name": "sbomify-frontend-components",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "copy-bootstrap": "cp node_modules/bootstrap/dist/css/bootstrap.min.css sbomify/static/css/ && cp node_modules/bootstrap/dist/css/bootstrap.min.css.map sbomify/static/css/",
    "copy-fontawesome": "cp -r node_modules/@fortawesome/fontawesome-free/webfonts sbomify/static/ && cp node_modules/@fortawesome/fontawesome-free/css/all.min.css sbomify/static/css/fontawesome.min.css",
    "copy-htmx-ext": "mkdir -p sbomify/static/js && cp node_modules/htmx-ext-alpine-morph/dist/alpine-morph.min.js sbomify/static/js/htmx-ext-alpine-morph.min.js",
    "copy-deps": "bun run copy-bootstrap && bun run copy-fontawesome && bun run copy-htmx-ext",
    "build": "bun run copy-deps && tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint \"sbomify/apps/core/js/**/*.{js,ts}\" \"sbomify/apps/sboms/js/**/*.{js,ts}\" \"sbomify/apps/teams/js/**/*.{js,ts}\" \"sbomify/apps/billing/js/**/*.{js,ts}\" \"sbomify/apps/documents/js/**/*.{js,ts}\" \"sbomify/apps/vulnerability_scanning/js/**/*.{js,ts}\" \"sbomify/apps/plugins/js/**/*.{js,ts}\" \"*.{js,ts}\"",
    "lint-fix": "eslint \"sbomify/apps/core/js/**/*.{js,ts}\" \"sbomify/apps/sboms/js/**/*.{js,ts}\" \"sbomify/apps/teams/js/**/*.{js,ts}\" \"sbomify/apps/billing/js/**/*.{js,ts}\" \"sbomify/apps/documents/js/**/*.{js,ts}\" \"sbomify/apps/vulnerability_scanning/js/**/*.{js,ts}\" \"sbomify/apps/plugins/js/**/*.{js,ts}\" \"*.{js,ts}\" --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,scss,html}\" --ignore-path .gitignore",
    "type-check": "tsc --noEmit --skipLibCheck -p tsconfig.app.json",
    "test": "bun test",
    "test:run": "bun test"
  },
  "dependencies": {
    "@alpinejs/anchor": "^3.15.4",
    "@alpinejs/collapse": "^3.15.4",
    "@alpinejs/focus": "^3.15.4",
    "@alpinejs/intersect": "^3.15.4",
    "@alpinejs/mask": "^3.15.4",
    "@alpinejs/morph": "^3.15.4",
    "@alpinejs/persist": "^3.15.4",
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@mdi/font": "^7.4.47",
    "@sentry/browser": "^10.36.0",
    "@types/bun": "^1.3.2",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^25.0.0",
    "alpinejs": "3.15.8",
    "axios": "^1.13.2",
    "bootstrap": "^5.3.8",
    "chart.js": "^4.5.1",
    "clipboard": "^2.0.11",
    "dotenv": "^17.2.3",
    "highlight.js": "^11.11.1",
    "htmx-ext-alpine-morph": "^2.0.2",
    "js-cookie": "^3.0.5",
    "jsbarcode": "^3.12.1",
    "license-expressions": "^0.8.0",
    "sweetalert2": "^11.26.3",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-pwa": "^1.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/alpinejs": "^3.13.11",
    "@types/bootstrap": "^5.2.10",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^17.0.0",
    "markdownlint-cli": "0.47.0",
    "prettier": "^3.6.2"
  }
}
