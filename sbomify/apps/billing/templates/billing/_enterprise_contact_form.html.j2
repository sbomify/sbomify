{% load widget_tweaks %}
<div class="tw-bg-gradient-to-r tw-from-blue-600 tw-to-blue-700 tw-py-12 tw-mb-8">
    <div class="tw-max-w-3xl tw-mx-auto tw-px-4 tw-text-center">
        <h1 class="tw-text-3xl md:tw-text-4xl tw-font-bold tw-text-white tw-mb-4">Let's Talk Enterprise</h1>
        <p class="tw-text-lg tw-text-white/80 tw-mb-6">
            Ready to scale your security and product artifact management? Our enterprise team will work with you to create a custom solution that meets your organization's specific needs.
        </p>
        <div class="tw-flex tw-flex-wrap tw-justify-center tw-gap-3">
            <span class="tw-inline-flex tw-items-center tw-gap-2 tw-bg-white/20 tw-text-white tw-px-4 tw-py-2 tw-rounded-full tw-text-sm tw-font-medium">
                <i class="fas fa-users"></i>Unlimited Users
            </span>
            <span class="tw-inline-flex tw-items-center tw-gap-2 tw-bg-white/20 tw-text-white tw-px-4 tw-py-2 tw-rounded-full tw-text-sm tw-font-medium">
                <i class="fas fa-shield-alt"></i>Advanced Security
            </span>
            <span class="tw-inline-flex tw-items-center tw-gap-2 tw-bg-white/20 tw-text-white tw-px-4 tw-py-2 tw-rounded-full tw-text-sm tw-font-medium">
                <i class="fas fa-headset"></i>Dedicated Support
            </span>
        </div>
    </div>
</div>
<div class="tw-max-w-3xl tw-mx-auto tw-px-4 tw-pb-12">
    {% if messages %}
        {% for message in messages %}
            <div x-data="{ show: true }"
                 x-show="show"
                 x-transition
                 class="tw-mb-4 tw-p-4 tw-rounded-lg tw-flex tw-items-center tw-justify-between {% if message.tags == 'success' %}tw-bg-green-50 tw-border tw-border-green-200 tw-text-green-800{% elif message.tags == 'error' %}tw-bg-red-50 tw-border tw-border-red-200 tw-text-red-800{% else %}tw-bg-blue-50 tw-border tw-border-blue-200 tw-text-blue-800{% endif %}">
                <span>{{ message }}</span>
                <button type="button"
                        class="tw-text-current tw-opacity-70 hover:tw-opacity-100"
                        aria-label="Dismiss message"
                        @click="show = false">
                    <i class="fas fa-times" aria-hidden="true"></i>
                </button>
            </div>
        {% endfor %}
    {% endif %}
    <div class="tw-bg-white tw-rounded-xl tw-shadow-lg tw-border tw-border-gray-100 tw-overflow-hidden dark:tw-bg-gray-800 dark:tw-border-gray-700">
        <div class="tw-p-8">
            <div class="tw-text-center tw-mb-8">
                <h2 class="tw-text-2xl tw-font-bold tw-text-gray-900 tw-mb-2 dark:tw-text-white">Tell Us About Your Needs</h2>
                <p class="tw-text-gray-500 dark:tw-text-gray-400">
                    We'll get back to you within 1-2 business days with a custom proposal.
                </p>
            </div>
            <form method="post" novalidate>
                {% csrf_token %}
                <div class="tw-mb-8">
                    <div class="tw-flex tw-items-center tw-gap-3 tw-mb-4 tw-pb-3 tw-border-b tw-border-gray-200 dark:tw-border-gray-600">
                        <div class="tw-w-10 tw-h-10 tw-bg-blue-600 tw-text-white tw-rounded-lg tw-flex tw-items-center tw-justify-center">
                            <i class="fas fa-building"></i>
                        </div>
                        <h3 class="tw-text-lg tw-font-semibold tw-text-gray-900 dark:tw-text-white">Company Information</h3>
                    </div>
                    <div class="tw-grid tw-grid-cols-1 md:tw-grid-cols-2 tw-gap-4">
                        <div class="md:tw-col-span-2">
                            <label for="{{ form.company_name.id_for_label }}"
                                   class="tw-block tw-text-sm tw-font-semibold tw-text-gray-700 tw-mb-1.5 dark:tw-text-gray-300">
                                {{ form.company_name.label }} <span class="tw-text-red-500">*</span>
                            </label>
                            {% render_field form.company_name %}
                            {% if form.company_name.errors %}
                                <p class="tw-text-red-500 tw-text-sm tw-mt-1">{{ form.company_name.errors.0 }}</p>
                            {% endif %}
                        </div>
                        <div>
                            <label for="{{ form.company_size.id_for_label }}"
                                   class="tw-block tw-text-sm tw-font-semibold tw-text-gray-700 tw-mb-1.5 dark:tw-text-gray-300">
                                {{ form.company_size.label }} <span class="tw-text-red-500">*</span>
                            </label>
                            {% render_field form.company_size %}
                            {% if form.company_size.errors %}
                                <p class="tw-text-red-500 tw-text-sm tw-mt-1">{{ form.company_size.errors.0 }}</p>
                            {% endif %}
                        </div>
                        <div>
                            <label for="{{ form.industry.id_for_label }}"
                                   class="tw-block tw-text-sm tw-font-semibold tw-text-gray-700 tw-mb-1.5 dark:tw-text-gray-300">
                                {{ form.industry.label }}
                            </label>
                            {% render_field form.industry %}
                            {% if form.industry.errors %}<p class="tw-text-red-500 tw-text-sm tw-mt-1">{{ form.industry.errors.0 }}</p>{% endif %}
                        </div>
                    </div>
                </div>
                <div class="tw-mb-8">
                    <div class="tw-flex tw-items-center tw-gap-3 tw-mb-4 tw-pb-3 tw-border-b tw-border-gray-200 dark:tw-border-gray-600">
                        <div class="tw-w-10 tw-h-10 tw-bg-blue-600 tw-text-white tw-rounded-lg tw-flex tw-items-center tw-justify-center">
                            <i class="fas fa-user"></i>
                        </div>
                        <h3 class="tw-text-lg tw-font-semibold tw-text-gray-900 dark:tw-text-white">Contact Information</h3>
                    </div>
                    <div class="tw-grid tw-grid-cols-1 md:tw-grid-cols-2 tw-gap-4">
                        <div>
                            <label for="{{ form.first_name.id_for_label }}"
                                   class="tw-block tw-text-sm tw-font-semibold tw-text-gray-700 tw-mb-1.5 dark:tw-text-gray-300">
                                {{ form.first_name.label }} <span class="tw-text-red-500">*</span>
                            </label>
                            {% render_field form.first_name %}
                            {% if form.first_name.errors %}
                                <p class="tw-text-red-500 tw-text-sm tw-mt-1">{{ form.first_name.errors.0 }}</p>
                            {% endif %}
                        </div>
                        <div>
                            <label for="{{ form.last_name.id_for_label }}"
                                   class="tw-block tw-text-sm tw-font-semibold tw-text-gray-700 tw-mb-1.5 dark:tw-text-gray-300">
                                {{ form.last_name.label }} <span class="tw-text-red-500">*</span>
                            </label>
                            {% render_field form.last_name %}
                            {% if form.last_name.errors %}
                                <p class="tw-text-red-500 tw-text-sm tw-mt-1">{{ form.last_name.errors.0 }}</p>
                            {% endif %}
                        </div>
                        <div>
                            <label for="{{ form.email.id_for_label }}"
                                   class="tw-block tw-text-sm tw-font-semibold tw-text-gray-700 tw-mb-1.5 dark:tw-text-gray-300">
                                {{ form.email.label }} <span class="tw-text-red-500">*</span>
                            </label>
                            {% render_field form.email %}
                            {% if form.email.errors %}<p class="tw-text-red-500 tw-text-sm tw-mt-1">{{ form.email.errors.0 }}</p>{% endif %}
                        </div>
                        <div>
                            <label for="{{ form.phone.id_for_label }}"
                                   class="tw-block tw-text-sm tw-font-semibold tw-text-gray-700 tw-mb-1.5 dark:tw-text-gray-300">
                                {{ form.phone.label }}
                            </label>
                            {% render_field form.phone %}
                            {% if form.phone.errors %}<p class="tw-text-red-500 tw-text-sm tw-mt-1">{{ form.phone.errors.0 }}</p>{% endif %}
                        </div>
                        <div class="md:tw-col-span-2">
                            <label for="{{ form.job_title.id_for_label }}"
                                   class="tw-block tw-text-sm tw-font-semibold tw-text-gray-700 tw-mb-1.5 dark:tw-text-gray-300">
                                {{ form.job_title.label }}
                            </label>
                            {% render_field form.job_title %}
                            {% if form.job_title.errors %}
                                <p class="tw-text-red-500 tw-text-sm tw-mt-1">{{ form.job_title.errors.0 }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="tw-mb-8">
                    <div class="tw-flex tw-items-center tw-gap-3 tw-mb-4 tw-pb-3 tw-border-b tw-border-gray-200 dark:tw-border-gray-600">
                        <div class="tw-w-10 tw-h-10 tw-bg-blue-600 tw-text-white tw-rounded-lg tw-flex tw-items-center tw-justify-center">
                            <i class="fas fa-project-diagram"></i>
                        </div>
                        <h3 class="tw-text-lg tw-font-semibold tw-text-gray-900 dark:tw-text-white">Project Details</h3>
                    </div>
                    <div class="tw-grid tw-grid-cols-1 md:tw-grid-cols-2 tw-gap-4">
                        <div>
                            <label for="{{ form.primary_use_case.id_for_label }}"
                                   class="tw-block tw-text-sm tw-font-semibold tw-text-gray-700 tw-mb-1.5 dark:tw-text-gray-300">
                                {{ form.primary_use_case.label }} <span class="tw-text-red-500">*</span>
                            </label>
                            {% render_field form.primary_use_case %}
                            {% if form.primary_use_case.errors %}
                                <p class="tw-text-red-500 tw-text-sm tw-mt-1">{{ form.primary_use_case.errors.0 }}</p>
                            {% endif %}
                        </div>
                        <div>
                            <label for="{{ form.timeline.id_for_label }}"
                                   class="tw-block tw-text-sm tw-font-semibold tw-text-gray-700 tw-mb-1.5 dark:tw-text-gray-300">
                                {{ form.timeline.label }}
                            </label>
                            {% render_field form.timeline %}
                            {% if form.timeline.errors %}<p class="tw-text-red-500 tw-text-sm tw-mt-1">{{ form.timeline.errors.0 }}</p>{% endif %}
                        </div>
                    </div>
                </div>
                <div class="tw-mb-8">
                    <div class="tw-flex tw-items-center tw-gap-3 tw-mb-4 tw-pb-3 tw-border-b tw-border-gray-200 dark:tw-border-gray-600">
                        <div class="tw-w-10 tw-h-10 tw-bg-blue-600 tw-text-white tw-rounded-lg tw-flex tw-items-center tw-justify-center">
                            <i class="fas fa-comment-alt"></i>
                        </div>
                        <h3 class="tw-text-lg tw-font-semibold tw-text-gray-900 dark:tw-text-white">Tell Us More</h3>
                    </div>
                    <div>
                        <label for="{{ form.message.id_for_label }}"
                               class="tw-block tw-text-sm tw-font-semibold tw-text-gray-700 tw-mb-1.5 dark:tw-text-gray-300">
                            {{ form.message.label }} <span class="tw-text-red-500">*</span>
                        </label>
                        {% render_field form.message rows="5" %}
                        {% if form.message.errors %}<p class="tw-text-red-500 tw-text-sm tw-mt-1">{{ form.message.errors.0 }}</p>{% endif %}
                        <p class="tw-text-sm tw-text-gray-500 tw-mt-1.5 dark:tw-text-gray-400">
                            Please include details about your specific requirements, number of applications, compliance needs, or integration requirements.
                        </p>
                    </div>
                </div>
                <div class="tw-mb-6">
                    <label class="tw-flex tw-items-start tw-gap-3 tw-cursor-pointer">
                        {% render_field form.newsletter_signup %}
                        <span class="tw-text-sm tw-text-gray-700 dark:tw-text-gray-300">{{ form.newsletter_signup.label }}</span>
                    </label>
                </div>
                {% if turnstile_site_key and not debug %}
                    <div class="tw-mb-6">
                        <div class="tw-flex tw-items-center tw-gap-3 tw-mb-3 tw-pb-2 tw-border-b tw-border-gray-200 dark:tw-border-gray-600">
                            <div class="tw-w-10 tw-h-10 tw-bg-blue-600 tw-text-white tw-rounded-lg tw-flex tw-items-center tw-justify-center">
                                <i class="fas fa-shield-alt"></i>
                            </div>
                            <h3 class="tw-text-lg tw-font-semibold tw-text-gray-900 dark:tw-text-white">Security Verification</h3>
                        </div>
                        <div class="cf-turnstile"
                             data-sitekey="{{ turnstile_site_key }}"
                             data-callback="turnstileCallback"
                             data-error-callback="turnstileErrorCallback"></div>
                        {% render_field form.cf_turnstile_response %}
                        {% if form.cf_turnstile_response.errors %}
                            <p class="tw-text-red-500 tw-text-sm tw-mt-2">{{ form.cf_turnstile_response.errors.0 }}</p>
                        {% endif %}
                    </div>
                {% else %}
                    <div class="tw-bg-amber-50 tw-border tw-border-amber-200 tw-rounded-lg tw-p-4 tw-mb-6 tw-flex tw-items-center tw-gap-2">
                        <i class="fas fa-exclamation-triangle tw-text-amber-500"></i>
                        <span class="tw-text-amber-800"><strong>Development Mode:</strong> Turnstile verification is not configured. In production, this form will include spam protection.</span>
                    </div>
                    {% render_field form.cf_turnstile_response %}
                {% endif %}
                <div class="tw-flex tw-flex-col sm:tw-flex-row tw-justify-between tw-items-center tw-gap-4 tw-pt-6 tw-border-t tw-border-gray-200 dark:tw-border-gray-600">
                    <a href="{{ back_url|default:'/' }}"
                       class="tw-inline-flex tw-items-center tw-gap-2 tw-px-5 tw-py-2.5 tw-border tw-border-gray-300 tw-text-gray-700 tw-font-medium tw-rounded-lg hover:tw-bg-gray-50 tw-transition-colors dark:tw-border-gray-600 dark:tw-text-gray-300 dark:hover:tw-bg-gray-700">
                        <i class="fas fa-arrow-left" aria-hidden="true"></i>{{ back_text|default:'Back to Home' }}
                    </a>
                    <button type="submit"
                            class="tw-inline-flex tw-items-center tw-gap-2 tw-px-6 tw-py-2.5 tw-bg-blue-600 tw-text-white tw-font-medium tw-rounded-lg hover:tw-bg-blue-700 tw-transition-colors">
                        <i class="fas fa-paper-plane"></i>Send Enterprise Inquiry
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
