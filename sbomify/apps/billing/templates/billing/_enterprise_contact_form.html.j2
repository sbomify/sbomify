{% load widget_tweaks %}
<!-- Hero Section -->
<div class="text-white py-5 mb-5 enterprise-hero">
    <div class="container mx-auto px-4">
        <div class="flex justify-center text-center">
            <div class="w-full lg:w-2/3">
                <h1 class="text-4xl font-bold mb-4 text-white">Let's Talk Enterprise</h1>
                <p class="text-xl mb-4 text-white opacity-75 enterprise-hero-text">
                    Ready to scale your security and product artifact management? Our enterprise team will work with you to create a custom solution that meets your organization's specific needs.
                </p>
                <div class="flex flex-wrap justify-center gap-3 mb-4">
                    <span class="inline-flex items-center px-3 py-2 rounded-full text-base bg-white bg-opacity-25">
                        <i class="fas fa-users mr-2"></i>Unlimited Users
                    </span>
                    <span class="inline-flex items-center px-3 py-2 rounded-full text-base bg-white bg-opacity-25">
                        <i class="fas fa-shield-alt mr-2"></i>Advanced Security
                    </span>
                    <span class="inline-flex items-center px-3 py-2 rounded-full text-base bg-white bg-opacity-25">
                        <i class="fas fa-headset mr-2"></i>Dedicated Support
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Form Section -->
<div class="container mx-auto px-4 pb-5">
    <div class="flex justify-center">
        <div class="w-full lg:w-2/3">
            {% if messages %}
                {% for message in messages %}
                    <div class="px-4 py-3 rounded mb-4 alert-dismissible fade show"
                         :class="{ 'bg-success-50 border border-success-200 text-success-800': '{{ message.tags }}' === 'success', 'bg-danger-50 border border-danger-200 text-danger-800': '{{ message.tags }}' === 'error', 'bg-warning-50 border border-warning-200 text-warning-800': '{{ message.tags }}' === 'warning', 'bg-info-50 border border-info-200 text-info-800': '{{ message.tags }}' === 'info' }"
                         role="alert"
                         x-data="notificationAutoDismiss(4000)"
                         x-show="isVisible"
                         @mouseenter="handleMouseEnter()"
                         @mouseleave="handleMouseLeave()"
                         x-transition:leave="transition ease-in duration-150"
                         x-transition:leave-start="opacity-100"
                         x-transition:leave-end="opacity-0">
                        {{ message }}
                        <button type="button"
                                class="text-gray-400 hover:text-gray-600 focus:outline-none float-right"
                                @click="dismiss()"
                                aria-label="Close">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                {% endfor %}
            {% endif %}
            <div class="bg-white rounded-lg shadow-lg border-0">
                <div class="p-6 md:p-8">
                    <!-- Form Header -->
                    <div class="text-center mb-6">
                        <h2 class="text-2xl font-bold text-gray-900 mb-3">Tell Us About Your Needs</h2>
                        <p class="text-gray-600">We'll get back to you within 1-2 business days with a custom proposal.</p>
                    </div>
                    <form method="post" novalidate>
                        {% csrf_token %}
                        <!-- Company Information Section -->
                        <div class="mb-6">
                            <div class="flex items-center mb-4 pb-3 border-b">
                                <div class="bg-brand-primary text-white rounded flex items-center justify-center mr-3 w-10 h-10">
                                    <i class="fas fa-building"></i>
                                </div>
                                <h3 class="text-lg font-semibold mb-0">Company Information</h3>
                            </div>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div class="md:col-span-2">
                                    <label for="{{ form.company_name.id_for_label }}"
                                           class="block text-sm font-medium text-gray-700 font-semibold mb-1">
                                        {{ form.company_name.label }} <span class="text-danger-500">*</span>
                                    </label>
                                    {% render_field form.company_name class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-brand-primary focus:border-transparent" %}
                                    {% if form.company_name.errors %}
                                        <div class="text-danger-500 text-sm mt-1">{{ form.company_name.errors.0 }}</div>
                                    {% endif %}
                                </div>
                                <div>
                                    <label for="{{ form.company_size.id_for_label }}"
                                           class="block text-sm font-medium text-gray-700 font-semibold mb-1">
                                        {{ form.company_size.label }} <span class="text-danger-500">*</span>
                                    </label>
                                    {% render_field form.company_size class="w-full px-3 py-2 border border-gray-300 rounded bg-white focus:outline-none focus:ring-2 focus:ring-brand-primary" %}
                                    {% if form.company_size.errors %}
                                        <div class="text-danger-500 text-sm mt-1">{{ form.company_size.errors.0 }}</div>
                                    {% endif %}
                                </div>
                                <div>
                                    <label for="{{ form.industry.id_for_label }}"
                                           class="block text-sm font-medium text-gray-700 font-semibold mb-1">
                                        {{ form.industry.label }}
                                    </label>
                                    {% render_field form.industry class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-brand-primary focus:border-transparent" %}
                                    {% if form.industry.errors %}<div class="text-danger-500 text-sm mt-1">{{ form.industry.errors.0 }}</div>{% endif %}
                                </div>
                            </div>
                        </div>
                        <!-- Contact Information Section -->
                        <div class="mb-6">
                            <div class="flex items-center mb-4 pb-3 border-b">
                                <div class="bg-brand-primary text-white rounded flex items-center justify-center mr-3 w-10 h-10">
                                    <i class="fas fa-user"></i>
                                </div>
                                <h3 class="text-lg font-semibold mb-0">Contact Information</h3>
                            </div>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label for="{{ form.first_name.id_for_label }}"
                                           class="block text-sm font-medium text-gray-700 font-semibold mb-1">
                                        {{ form.first_name.label }} <span class="text-danger-500">*</span>
                                    </label>
                                    {% render_field form.first_name class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-brand-primary focus:border-transparent" %}
                                    {% if form.first_name.errors %}
                                        <div class="text-danger-500 text-sm mt-1">{{ form.first_name.errors.0 }}</div>
                                    {% endif %}
                                </div>
                                <div>
                                    <label for="{{ form.last_name.id_for_label }}"
                                           class="block text-sm font-medium text-gray-700 font-semibold mb-1">
                                        {{ form.last_name.label }} <span class="text-danger-500">*</span>
                                    </label>
                                    {% render_field form.last_name class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-brand-primary focus:border-transparent" %}
                                    {% if form.last_name.errors %}<div class="text-danger-500 text-sm mt-1">{{ form.last_name.errors.0 }}</div>{% endif %}
                                </div>
                                <div>
                                    <label for="{{ form.email.id_for_label }}"
                                           class="block text-sm font-medium text-gray-700 font-semibold mb-1">
                                        {{ form.email.label }} <span class="text-danger-500">*</span>
                                    </label>
                                    {% render_field form.email class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-brand-primary focus:border-transparent" %}
                                    {% if form.email.errors %}<div class="text-danger-500 text-sm mt-1">{{ form.email.errors.0 }}</div>{% endif %}
                                </div>
                                <div>
                                    <label for="{{ form.phone.id_for_label }}"
                                           class="block text-sm font-medium text-gray-700 font-semibold mb-1">
                                        {{ form.phone.label }}
                                    </label>
                                    {% render_field form.phone class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-brand-primary focus:border-transparent" %}
                                    {% if form.phone.errors %}<div class="text-danger-500 text-sm mt-1">{{ form.phone.errors.0 }}</div>{% endif %}
                                </div>
                                <div class="md:col-span-2">
                                    <label for="{{ form.job_title.id_for_label }}"
                                           class="block text-sm font-medium text-gray-700 font-semibold mb-1">
                                        {{ form.job_title.label }}
                                    </label>
                                    {% render_field form.job_title class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-brand-primary focus:border-transparent" %}
                                    {% if form.job_title.errors %}<div class="text-danger-500 text-sm mt-1">{{ form.job_title.errors.0 }}</div>{% endif %}
                                </div>
                            </div>
                        </div>
                        <!-- Project Details Section -->
                        <div class="mb-6">
                            <div class="flex items-center mb-4 pb-3 border-b">
                                <div class="bg-brand-primary text-white rounded flex items-center justify-center mr-3 w-10 h-10">
                                    <i class="fas fa-project-diagram"></i>
                                </div>
                                <h3 class="text-lg font-semibold mb-0">Project Details</h3>
                            </div>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label for="{{ form.primary_use_case.id_for_label }}"
                                           class="block text-sm font-medium text-gray-700 font-semibold mb-1">
                                        {{ form.primary_use_case.label }} <span class="text-danger-500">*</span>
                                    </label>
                                    {% render_field form.primary_use_case class="w-full px-3 py-2 border border-gray-300 rounded bg-white focus:outline-none focus:ring-2 focus:ring-brand-primary" %}
                                    {% if form.primary_use_case.errors %}
                                        <div class="text-danger-500 text-sm mt-1">{{ form.primary_use_case.errors.0 }}</div>
                                    {% endif %}
                                </div>
                                <div>
                                    <label for="{{ form.timeline.id_for_label }}"
                                           class="block text-sm font-medium text-gray-700 font-semibold mb-1">
                                        {{ form.timeline.label }}
                                    </label>
                                    {% render_field form.timeline class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-brand-primary focus:border-transparent" %}
                                    {% if form.timeline.errors %}<div class="text-danger-500 text-sm mt-1">{{ form.timeline.errors.0 }}</div>{% endif %}
                                </div>
                            </div>
                        </div>
                        <!-- Message Section -->
                        <div class="mb-6">
                            <div class="flex items-center mb-4 pb-3 border-b">
                                <div class="bg-brand-primary text-white rounded flex items-center justify-center mr-3 w-10 h-10">
                                    <i class="fas fa-comment-alt"></i>
                                </div>
                                <h3 class="text-lg font-semibold mb-0">Tell Us More</h3>
                            </div>
                            <div class="mb-4">
                                <label for="{{ form.message.id_for_label }}"
                                       class="block text-sm font-medium text-gray-700 font-semibold mb-1">
                                    {{ form.message.label }} <span class="text-danger-500">*</span>
                                </label>
                                {% render_field form.message class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-brand-primary focus:border-transparent" rows="5" %}
                                {% if form.message.errors %}<div class="text-danger-500 text-sm mt-1">{{ form.message.errors.0 }}</div>{% endif %}
                                <div class="text-sm text-gray-600 mt-1">
                                    Please include details about your specific requirements, number of applications, compliance needs, or integration requirements.
                                </div>
                            </div>
                        </div>
                        <!-- Consent Section -->
                        <div class="mb-4">
                            <div class="flex items-center">
                                {% render_field form.newsletter_signup class="w-4 h-4 text-brand-primary border-gray-300 rounded focus:ring-brand-primary" %}
                                <label class="ml-2 text-sm text-gray-700"
                                       for="{{ form.newsletter_signup.id_for_label }}">
                                    {{ form.newsletter_signup.label }}
                                </label>
                            </div>
                        </div>
                        <!-- Turnstile CAPTCHA Section -->
                        {% if turnstile_site_key and not debug %}
                            <div class="mb-4" x-cloak x-data="turnstile()">
                                <div class="flex items-center mb-3 pb-2 border-b">
                                    <div class="bg-brand-primary text-white rounded flex items-center justify-center mr-3 w-10 h-10">
                                        <i class="fas fa-shield-alt"></i>
                                    </div>
                                    <h3 class="text-lg font-semibold mb-0">Security Verification</h3>
                                </div>
                                <div class="cf-turnstile"
                                     data-sitekey="{{ turnstile_site_key }}"
                                     data-callback="turnstileCallback"
                                     data-error-callback="turnstileErrorCallback"></div>
                                {% render_field form.cf_turnstile_response|attr:"x-ref:tokenInput" %}
                                {% if form.cf_turnstile_response.errors %}
                                    <div class="text-danger-500 text-sm mt-2">{{ form.cf_turnstile_response.errors.0 }}</div>
                                {% endif %}
                            </div>
                        {% else %}
                            <!-- Development Mode Warning -->
                            <div class="bg-warning-50 border border-warning-200 text-warning-800 px-4 py-3 rounded flex items-center mb-4">
                                <i class="fas fa-exclamation-triangle mr-2"></i>
                                <span><strong>Development Mode:</strong> Turnstile verification is not configured. In production, this form will include spam protection.</span>
                            </div>
                            {% render_field form.cf_turnstile_response %}
                        {% endif %}
                        <!-- Submit Section -->
                        <div class="flex flex-row justify-between items-center gap-3 pt-4 border-t">
                            {% block back_button %}
                                <a href="/"
                                   class="px-4 py-2 border border-gray-300 text-gray-700 rounded hover:bg-gray-50 transition-colors">
                                    <i class="fas fa-arrow-left mr-2"></i>Back to Home
                                </a>
                            {% endblock %}
                            <button type="submit"
                                    class="px-4 py-2 bg-brand-primary text-white rounded hover:opacity-90 transition-opacity">
                                <i class="fas fa-paper-plane mr-2"></i>Send Enterprise Inquiry
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
