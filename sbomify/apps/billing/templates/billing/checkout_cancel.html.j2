{% extends "core/base.html.j2" %}
{% block title %}Payment Cancelled{% endblock %}
{% block content %}
    <div class="container mx-auto py-12 px-4">
        <div class="max-w-lg mx-auto">
            <div class="tw-card">
                <div class="tw-card-body text-center py-8">
                    <div class="mb-6">
                        <i class="fas fa-times-circle text-warning text-6xl"></i>
                    </div>
                    <h2 class="text-2xl font-semibold text-warning mb-4">Payment Cancelled</h2>
                    <p class="text-lg text-text-muted mb-6">Your payment was cancelled and no charges were made to your account.</p>
                    <p class="text-sm text-text-muted mb-8">
                        If you experienced any issues during checkout, please contact our support team for assistance.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-3 justify-center">
                        {% url 'core:dashboard' as dashboard_url %}
                        {% include "components/tw/button_link.html.j2" with url=dashboard_url text="Back to Dashboard" icon="fas fa-tachometer-alt" variant="secondary" %}
                        {% include "components/tw/button.html.j2" with text="Try Again" icon="fas fa-arrow-left" variant="primary" attrs='@click="window.history.back()"' %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
