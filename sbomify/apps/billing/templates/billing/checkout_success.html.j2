{% extends "core/base.html.j2" %}
{% block title %}Payment Successful{% endblock %}
{% block content %}
    <div class="container mx-auto py-12 px-4">
        <div class="max-w-lg mx-auto">
            <div class="tw-card">
                <div class="tw-card-body text-center py-8">
                    <div class="mb-6">
                        <i class="fas fa-check-circle text-success text-6xl"></i>
                    </div>
                    <h2 class="text-2xl font-semibold text-success mb-4">Payment Successful!</h2>
                    <p class="text-lg text-text-muted mb-6">
                        Thank you for your purchase. Your subscription is now active and you can start using all the features of your plan.
                    </p>
                    <p class="text-sm text-text-muted mb-8">
                        You will receive a confirmation email shortly with your receipt and subscription details.
                    </p>
                    {% url 'core:dashboard' as dashboard_url %}
                    {% include "components/tw/button_link.html.j2" with url=dashboard_url text="Go to Dashboard" icon="fas fa-tachometer-alt" variant="primary" size="lg" %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
