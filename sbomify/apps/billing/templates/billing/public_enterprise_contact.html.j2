<!DOCTYPE html>
{% load static %}
{% load django_vite %}
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description"
              content="Contact sbomify for enterprise solutions. Get custom SBOM management and security solutions for your organization.">
        <meta name="keywords"
              content="sbomify, enterprise, SBOM, security, contact, software bill of materials">
        <title>Enterprise Contact - sbomify</title>
        <!-- Inter Font -->
        <link rel="preload"
              href="{% vite_asset_url 'sbomify/static/css/main.css' %}"
              as="style">
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
              rel="stylesheet">
        <!-- Tailwind CSS - synchronous so no FOUC -->
        <link rel="stylesheet"
              href="{% vite_asset_url 'sbomify/static/css/main.css' %}">
        <!-- Keep Bootstrap during migration - will be removed in Phase 7 -->
        <link href="{% static 'css/bootstrap.min.css' %}" rel="stylesheet">
        <!-- Local FontAwesome CSS -->
        <link href="{% static 'css/fontawesome.min.css' %}" rel="stylesheet">
        <!-- Our CSS modules -->
        <link href="{% static 'css/tokens.css' %}" rel="stylesheet">
        <link href="{% static 'css/base.css' %}" rel="stylesheet">
        <link href="{% static 'css/layout.css' %}" rel="stylesheet">
        <link href="{% static 'css/components.css' %}" rel="stylesheet">
        <link href="{% static 'css/pages.css' %}" rel="stylesheet">
        <link href="{% static 'css/utilities.css' %}" rel="stylesheet">
        {% if turnstile_site_key and not debug %}
            <script src="https://challenges.cloudflare.com/turnstile/v0/api.js"
                    async
                    defer></script>
        {% endif %}
    </head>
    <body>
        <div class="min-h-screen flex flex-col">
            <main class="flex-grow">
                {% include "billing/_enterprise_contact_form.html.j2" with form=form %}
            </main>
            <!-- Modern Footer -->
            {% include "core/components/footer.html.j2" %}
        </div>
    </body>
</html>
