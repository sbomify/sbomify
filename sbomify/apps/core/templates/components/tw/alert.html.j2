<div class="tw-alert tw-alert-{{ variant|default:'info' }}{% if class %} {{ class }}{% endif %}"
     role="alert"
     {{ attrs|safe }}>
    {% if icon %}
        <i class="{{ icon }} tw-alert-icon" aria-hidden="true"></i>
    {% elif variant == "success" %}
        <i class="fas fa-check-circle tw-alert-icon" aria-hidden="true"></i>
    {% elif variant == "warning" %}
        <i class="fas fa-exclamation-triangle tw-alert-icon" aria-hidden="true"></i>
    {% elif variant == "danger" %}
        <i class="fas fa-times-circle tw-alert-icon" aria-hidden="true"></i>
    {% else %}
        <i class="fas fa-info-circle tw-alert-icon" aria-hidden="true"></i>
    {% endif %}
    <div class="tw-alert-content">
        {% if title %}<p class="tw-alert-title">{{ title }}</p>{% endif %}
        <p class="text-sm m-0">{{ message }}</p>
    </div>
    {% if dismissible %}
        <button type="button"
                class="tw-alert-close"
                @click="$el.closest('.tw-alert')?.remove()"
                aria-label="Dismiss">
            <i class="fas fa-times" aria-hidden="true"></i>
        </button>
    {% endif %}
</div>
