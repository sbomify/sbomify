<div class="flex flex-col items-center justify-center py-12 px-4 text-center{% if class %} {{ class }}{% endif %}">
    <div class="w-16 h-16 rounded-full bg-muted/30 flex items-center justify-center mb-4">
        <i class="{{ icon|default:'fas fa-inbox' }} text-2xl text-muted"
           aria-hidden="true"></i>
    </div>
    <h3 class="text-lg font-semibold text-foreground mb-1">{{ title }}</h3>
    {% if message %}<p class="text-sm text-muted max-w-sm mb-4">{{ message }}</p>{% endif %}
    {% if action_text and action_url %}
        <a href="{{ action_url }}"
           class="tw-btn tw-btn-{{ action_variant|default:'primary' }}">{{ action_text }}</a>
    {% endif %}
</div>
