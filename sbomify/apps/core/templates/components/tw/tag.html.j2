<span class="tw-tag tw-tag-{{ variant|default:'secondary' }}{% if class %} {{ class }}{% endif %}"
      {{ attrs|safe }}>
    {% if icon %}<i class="{{ icon }} mr-1" aria-hidden="true"></i>{% endif %}
    {{ text }}
    {% if removable %}
        <button type="button" class="tw-tag-remove" aria-label="Remove {{ text }}">
            <i class="fas fa-times" aria-hidden="true"></i>
        </button>
    {% endif %}
</span>
