<div class="tw-toast tw-toast-{{ variant|default:'info' }}{% if class %} {{ class }}{% endif %}"
     role="alert"
     {{ attrs|safe }}>
    <div class="flex items-start gap-3">
        {% if icon %}
            <i class="{{ icon }} text-lg" aria-hidden="true"></i>
        {% elif variant == "success" %}
            <i class="fas fa-check-circle text-lg" aria-hidden="true"></i>
        {% elif variant == "warning" %}
            <i class="fas fa-exclamation-triangle text-lg" aria-hidden="true"></i>
        {% elif variant == "danger" %}
            <i class="fas fa-times-circle text-lg" aria-hidden="true"></i>
        {% else %}
            <i class="fas fa-info-circle text-lg" aria-hidden="true"></i>
        {% endif %}
        <div class="flex-1 min-w-0">
            {% if title %}<p class="font-semibold text-sm">{{ title }}</p>{% endif %}
            <p class="text-sm{% if title %} mt-0.5{% endif %}">{{ message }}</p>
        </div>
        {% if dismissible != False %}
            <button type="button"
                    class="text-current opacity-70 hover:opacity-100 transition-opacity shrink-0 focus:outline-none focus-visible:ring-2 focus-visible:ring-current rounded"
                    aria-label="Dismiss"
                    onclick="this.closest('.tw-toast')?.remove()">
                <i class="fas fa-times" aria-hidden="true"></i>
            </button>
        {% endif %}
    </div>
</div>
