<div class="tw-toast tw-toast-{{ variant|default:'info' }}{% if class %} {{ class }}{% endif %}"
     role="alert"
     {{ attrs|safe }}>
    {% if icon %}
        <i class="{{ icon }} tw-toast-icon" aria-hidden="true"></i>
    {% elif variant == "success" %}
        <i class="fas fa-check-circle tw-toast-icon" aria-hidden="true"></i>
    {% elif variant == "warning" %}
        <i class="fas fa-exclamation-triangle tw-toast-icon" aria-hidden="true"></i>
    {% elif variant == "danger" %}
        <i class="fas fa-times-circle tw-toast-icon" aria-hidden="true"></i>
    {% else %}
        <i class="fas fa-info-circle tw-toast-icon" aria-hidden="true"></i>
    {% endif %}
    <div class="tw-toast-content">
        {% if title %}<p class="tw-toast-title">{{ title }}</p>{% endif %}
        <p class="tw-toast-message">{{ message }}</p>
    </div>
    {% if dismissible != False %}
        <button type="button"
                class="tw-toast-close"
                aria-label="Dismiss"
                onclick="this.closest('.tw-toast')?.remove()">
            <i class="fas fa-times" aria-hidden="true"></i>
        </button>
    {% endif %}
</div>
