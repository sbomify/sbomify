<label class="tw-toggle-label{% if class %} {{ class }}{% endif %}">
    <input type="checkbox"
           id="{{ name }}"
           name="{{ name }}"
           class="sr-only peer"
           {% if checked %}checked{% endif %}
           {% if disabled %}disabled{% endif %}
           {{ attrs|safe }}>
    <span class="tw-toggle"></span>
    <span>{{ label }}</span>
</label>
