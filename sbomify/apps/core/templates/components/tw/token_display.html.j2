<div class="{% if class %}{{ class }}{% endif %}" x-data="{ revealed:
    {% if masked == False %}
        true
    {% else %}
        false
    {% endif %}
    }">
    {% if label %}<label class="tw-form-label mb-1.5">{{ label }}</label>{% endif %}
    <div class="flex items-center gap-2">
        <div class="flex-1 font-mono text-sm bg-muted/30 px-3 py-2 rounded-md border border-border overflow-x-auto">
            <span x-show="!revealed">{{ token|slice:":4" }}••••••••••••{{ token|slice:"-4:" }}</span>
            <span x-show="revealed" x-cloak>{{ token }}</span>
        </div>
        <button type="button"
                class="tw-icon-btn"
                @click="revealed = !revealed"
                :aria-label="revealed ? 'Hide' : 'Show'">
            <i class="fas"
               :class="revealed ? 'fa-eye-slash' : 'fa-eye'"
               aria-hidden="true"></i>
        </button>
        {% if copyable != False %}
            <button type="button"
                    class="tw-icon-btn"
                    aria-label="Copy"
                    @click="navigator.clipboard.writeText('{{ token }}')">
                <i class="fas fa-copy" aria-hidden="true"></i>
            </button>
        {% endif %}
    </div>
</div>
