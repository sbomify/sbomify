{% load static %}
{% load cache %}
{% load schema_tags %}
{% load django_vite %}
<!DOCTYPE html>
<html lang="en">
    <head>
        {% block head %}
            <meta charset="utf-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <meta name="color-scheme" content="light">
            <meta name="theme-color" content="#3b7ddd">
            <meta name="description" content="Software Bill of Materials management">
            <meta name="keywords"
                  content="SBOM SBOMs software bill of materials security">
            <!-- Favicon -->
            <link rel="apple-touch-icon"
                  sizes="180x180"
                  href="{% static 'img/favicons/apple-touch-icon.png' %}">
            <link rel="icon"
                  type="image/png"
                  sizes="32x32"
                  href="{% static 'img/favicons/favicon-32x32.png' %}">
            <link rel="icon"
                  type="image/png"
                  sizes="16x16"
                  href="{% static 'img/favicons/favicon-16x16.png' %}">
            <link rel="icon"
                  type="image/svg+xml"
                  href="{% static 'img/favicons/favicon.svg' %}">
            <link rel="manifest" href="{% static 'manifest.webmanifest' %}">
            <!-- Schema.org metadata -->
            {% schema_org_metadata %}
            <!-- Open Graph / Facebook -->
            <meta property="og:type" content="website">
            <meta property="og:url" content="{{ request.build_absolute_uri }}">
            <meta property="og:title"
                  content="{% block og_title %} sbomify - Software Bill of Materials Management {% endblock %}">
            <meta property="og:description"
                  content="{% block og_description %} Manage and track your software bill of materials with ease. Secure your software supply chain with sbomify. {% endblock %}">
            <meta property="og:image"
                  content="{% static 'img/favicons/android-chrome-512x512.png' %}">
            <!-- Twitter -->
            <meta property="twitter:card" content="summary_large_image">
            <meta property="twitter:url" content="{{ request.build_absolute_uri }}">
            <meta property="twitter:title"
                  content="{% block twitter_title %} sbomify - Software Bill of Materials Management {% endblock %}">
            <meta property="twitter:description"
                  content="{% block twitter_description %} Manage and track your software bill of materials with ease. Secure your software supply chain with sbomify. {% endblock %}">
            <meta property="twitter:image"
                  content="{% static 'img/favicons/android-chrome-512x512.png' %}">
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
                  rel="stylesheet">
            <link href="{% static 'css/bootstrap.min.css' %}" rel="stylesheet">
            <link href="{% static 'css/fontawesome.min.css' %}" rel="stylesheet">
            <link href="{% static 'css/tokens.css' %}" rel="stylesheet">
            <link href="{% static 'css/base.css' %}" rel="stylesheet">
            <link href="{% static 'css/layout.css' %}" rel="stylesheet">
            <link href="{% static 'css/components.css' %}" rel="stylesheet">
            <link href="{% static 'css/responsive.css' %}" rel="stylesheet">
            <link href="{% static 'css/pages.css' %}" rel="stylesheet">
            <link href="{% static 'css/utilities.css' %}" rel="stylesheet">
            <link href="{% static 'css/components/download-card.css' %}" rel="stylesheet">
            <link href="{% static 'css/components/items-list-table.css' %}" rel="stylesheet">
            <link href="{% static 'css/components/standard-card.css' %}" rel="stylesheet">
            {% block extra_styles %}{% endblock %}
            <title>
                {% block title %}sbomify{% endblock %}
            </title>
        {% endblock %}
    </head>
    <body hx-headers='{"x-csrftoken": "{{ csrf_token }}"}'>
        {% block main %}
            {% if request.user.is_authenticated %}
                <!-- AdminKit-style Layout -->
                <div class="wrapper">
                    <!-- Sidebar -->
                    {% cache 300 'sidebar' request.user.id request.session.current_team.id request.resolver_match.url_name %}
                    {% include "core/components/sidebar.html.j2" %}
                {% endcache %}
                <!-- Main content area -->
                <div class="main">
                    <!-- Top navigation -->
                    {% cache 300 'header' request.user.id %}
                    {% include "core/components/topnav.html.j2" %}
                {% endcache %}
                <!-- Main content -->
                <main class="content">
                    <div class="container-fluid p-0">
                        <div class="messages-container">{% include "core/components/messages.htmx.j2" %}</div>
                        {% block content %}{% endblock %}
                    </div>
                </main>
                <!-- Footer -->
                {% include "core/components/footer.html.j2" %}
            </div>
        </div>
    {% else %}
        <!-- Login layout -->
        <div class="bg-light min-vh-100 d-flex align-items-center">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-4">
                        <div class="text-center mb-4">
                            <img src="{% static 'img/logo.svg' %}"
                                 alt="sbomify Logo"
                                 class="img-fluid mb-3 login-logo"
                                 width="200"
                                 height="36">
                        </div>
                        <div class="messages-container">{% include "core/components/messages.htmx.j2" %}</div>
                        <div class="card shadow">
                            <div class="card-body p-4">
                                {% block login_content %}{% endblock %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
<!-- Scripts for HTMX pages -->
{% vite_asset 'sbomify/apps/core/js/htmx-bundle.ts' %}
{% block scripts %}{% endblock %}
</body>
</html>
