{% load django_vite %}
<!-- Hidden container for Django messages -->
{% if messages %}
    <div id="django-messages"
         x-cloak
         x-data="djangoMessages()"
         style="display: none">
        <script type="text/data" x-ref="djangoMessagesData">
    {% for message in messages %}{{ message.tags }}:{{ message|escapejs }}{% if not forloop.last %}|{% endif %} {% endfor %}
        </script>
    </div>
{% endif %}
