{% extends "core/dashboard_base.htmx.j2" %}
{% load widget_tweaks %}
{% load static %}
{% load django_htmx %}
{% load django_vite %}
{% block title %}sbomify Component: {{ component.name }}{% endblock %}
{% block extra_styles %}
    <link rel="stylesheet"
          href="{% static 'css/component-details-private.css' %}">
{% endblock %}
{% block content %}
    <div class="page-header mb-4">
        <div class="header-main mb-3">
            <div class="title-section">
                <h1 class="item-title">
                    {% if component.has_crud_permissions %}
                        <span class="vc-editable-single-field"
                              data-item-type="component"
                              data-item-id="{{ component.id }}"
                              data-item-value="{{ component.name }}"></span>
                    {% else %}
                        {{ component.name }}
                    {% endif %}
                </h1>
                {% if component.has_crud_permissions %}
                    <div class="vc-public-status-toggle"
                         data-item-type="component"
                         data-item-id="{{ component.id }}"
                         data-public-url="{{ APP_BASE_URL }}{% url 'core:component_details_public' component.id %}"
                         data-inline="true"></div>
                {% endif %}
            </div>
        </div>
        <div class="header-meta">
            <span class="meta-item">
                <i class="fas fa-cube me-2 text-primary"></i>
                <span class="meta-label">Component</span>
            </span>
            <span class="meta-divider">•</span>
            <span class="meta-item">
                <i class="fas fa-tag me-2 text-info"></i>
                <span class="meta-label">{{ component.component_type_display }}</span>
            </span>
            <span class="meta-divider">•</span>
            <span class="meta-item">
                {% include 'core/components/copyable-value.html.j2' with value=component.id title="Component ID: "|add:component.id|add:" (click to copy)" %}
            </span>
        </div>
        {% if component.component_type == 'document' %}
            <div class="mt-3">
                <div class="standard-card p-3">
                    <div>
                        <span class="badge {% if component.is_global %}bg-primary-subtle text-primary{% else %}bg-secondary-subtle text-secondary{% endif %}">
                            {% if component.is_global %}
                                <i class="fas fa-building me-1"></i>Workspace-wide
                            {% else %}
                                <i class="fas fa-project-diagram me-1"></i>Project-scoped
                            {% endif %}
                        </span>
                        <p class="text-muted small mb-0 mt-2">
                            {% if component.is_global %}
                                Visible on the workspace trust center and not tied to projects.
                            {% else %}
                                Restricted to the projects this component is assigned to.
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
    {% if component.component_type == 'sbom' %}
        <div class="vc-component-meta-info"
             data-component-id="{{ component.id }}"
             data-team-key="{{ request.session.current_team.key }}"
             {% if component.has_crud_permissions %}data-allow-edit{% endif %}></div>
    {% endif %}
    {% if component.component_type == 'sbom' %}
        <!-- Vulnerability Time Series Chart -->
        <div class="row mt-3">
            <div class="col-12">
                <div class="vc-vulnerability-timeseries"
                     data-team-key="{{ request.session.current_team.key }}"
                     data-component-id="{{ component.id }}"
                     data-default-days="30"></div>
            </div>
        </div>
    {% endif %}
    {% if component.has_crud_permissions %}
        <div class="row">
            <div class="col-12">
                <div class="vc-ci-cd-info"
                     data-component-id="{{ component.id }}"
                     data-component-name="{{ component.name }}"></div>
            </div>
        </div>
    {% endif %}
    {% if component.component_type == 'sbom' %}
        {% if component.has_crud_permissions %}
            <div class="row mt-3">
                <div class="col-12">
                    <div class="vc-sbom-upload" data-component-id="{{ component.id }}"></div>
                </div>
            </div>
        {% endif %}
        <div class="row mt-3">
            <div class="col-12">
                <div id="sboms-table-container"
                     hx-get="{% url 'sboms:sboms_table' component.id %}"
                     hx-trigger="load, refreshSbomsTable from:body"
                     hx-swap="innerHTML">
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2 text-muted">Loading SBOMs...</p>
                    </div>
                </div>
            </div>
        </div>
    {% elif component.component_type == 'document' %}
        {% if component.has_crud_permissions %}
            <div class="row mt-3">
                <div class="col-12">
                    <div class="vc-document-upload" data-component-id="{{ component.id }}"></div>
                </div>
            </div>
        {% endif %}
        <div class="row mt-3">
            <div class="col-12">
                <div id="documents-table-container"
                     hx-get="{% url 'documents:documents_table' component.id %}"
                     hx-trigger="load, refreshDocumentsTable from:body"
                     hx-swap="innerHTML">
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2 text-muted">Loading documents...</p>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
    {% if component.has_crud_permissions %}
        <div class="row mt-3">
            <div class="col-12">
                {{ request.session.user_teams|json_script:"user-workspaces-data" }}
                <div class="vc-danger-zone"
                     data-component-id="{{ component.id }}"
                     data-component-name="{{ component.name }}"
                     data-is-owner="{% if is_owner %} true {% else %} false {% endif %}"
                     data-user-workspaces-element-id="user-workspaces-data"
                     data-csrf-token="{{ csrf_token }}"></div>
            </div>
        </div>
    {% endif %}
{% endblock %}
{% block scripts %}
    {% htmx_script %}
    {% vite_asset 'sbomify/apps/core/js/main.ts' %}
    {% vite_asset 'sbomify/apps/vulnerability_scanning/js/main.ts' %}
    {% if component.component_type == 'sbom' %}
        {% vite_asset 'sbomify/apps/sboms/js/main.ts' %}
    {% elif component.component_type == 'document' %}
        {% vite_asset 'sbomify/apps/documents/js/main.ts' %}
    {% endif %}
{% endblock %}
