{% extends "core/public_base.htmx.j2" %}
{% load static %}
{% load django_vite %}
{% load breadcrumb_tags %}
{% block title %}{{ component.name }}{% endblock %}
{% block meta_description %}
    {{ component.name }} - {{ component.get_component_type_display }} component. View SBOMs and documents associated with this component.
{% endblock %}
{% block breadcrumb %}
    {% breadcrumb component 'component' %}
{% endblock %}
{% block content %}
    <div class="public-page-layout">
        <div class="content-wrapper">
            <div class="content-background"></div>
            <div class="content-container">
                <div class="public-page-header">
                    <div class="page-header-content">
                        <h1 class="page-title">
                            <i class="fas fa-cube title-icon"></i>
                            {{ component.name }}
                        </h1>
                    </div>
                </div>
                <div class="public-main-content">
                    <div class="content-section">
                        <div class="component-content">
                            {% if component.component_type == 'sbom' and sboms_data %}
                                {{ sboms_data|json_script:"sboms-data" }}
                                <div class="vc-sboms-table"
                                     data-sboms-data-element-id="sboms-data"
                                     data-component-id="{{ component.id }}"
                                     data-has-crud-permissions="false"
                                     data-team-billing-plan="{{ team_billing_plan }}"></div>
                            {% elif component.component_type == 'document' and documents_data %}
                                {{ documents_data|json_script:"documents-data" }}
                                <div class="vc-documents-table"
                                     data-documents-data-element-id="documents-data"
                                     data-component-id="{{ component.id }}"
                                     data-has-crud-permissions="false"></div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    {% vite_asset 'sbomify/apps/core/js/main.ts' %}
    {% if component.component_type == 'sbom' %}
        {% vite_asset 'sbomify/apps/sboms/js/main.ts' %}
    {% elif component.component_type == 'document' %}
        {% vite_asset 'sbomify/apps/documents/js/main.ts' %}
    {% endif %}
{% endblock %}
