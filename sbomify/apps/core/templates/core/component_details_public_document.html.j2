{% extends "core/component_details_public_base.html.j2" %}
{% load django_vite %}
{% block meta_description_suffix %}View documents associated with this component.{% endblock %}
{% block table_icon %}<i class="fas fa-file-alt text-primary"></i>{% endblock %}
{% block table_section %}
    <div id="documents-table-container"
         hx-get="{% url 'documents:documents_table_public' component.id %}"
         hx-trigger="load, refreshDocumentsTable from:body"
         hx-swap="innerHTML">
        <div class="text-center py-8">
            <div class="animate-spin w-8 h-8 border-4 border-primary border-t-transparent rounded-full mx-auto"
                 role="status">
                <span class="sr-only">Loading...</span>
            </div>
            <p class="mt-3 text-text-muted">Loading documents...</p>
        </div>
    </div>
{% endblock %}
{% block scripts_additional %}
    {% vite_asset 'sbomify/apps/documents/js/main.ts' %}
{% endblock %}
