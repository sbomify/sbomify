{% extends "core/component_details_public_base.html.j2" %}
{% load django_vite %}
{% block meta_description_suffix %}View SBOMs associated with this component.{% endblock %}
{% block table_icon %}<i class="fas fa-file-code me-2"></i>{% endblock %}
{% block table_section %}
    <div id="sboms-table-container"
         hx-get="{% url 'sboms:sboms_table_public' component.id %}"
         hx-trigger="load, refreshSbomsTable from:body"
         hx-swap="innerHTML">
        <div class="text-center py-4">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2 text-muted">Loading SBOMs...</p>
        </div>
    </div>
{% endblock %}
{% block scripts_additional %}
    {% vite_asset 'sbomify/apps/sboms/js/main.ts' %}
{% endblock %}
