{% extends "core/dashboard_base.htmx.j2" %}
{% load static %}
{% load django_vite %}
{% block title %}{{ component.component_type_display }}: {{ item.name }}{% endblock %}
{% block extra_styles %}
    <link rel="stylesheet"
          href="{% static 'css/component-detailed-private.css' %}">
    <link rel="stylesheet"
          href="{% static 'css/components/vulnerability-trends.css' %}">
{% endblock %}
{% block content %}
    <div class="page-header mb-4">
        <div class="header-main mb-3">
            <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
                <div class="title-section">
                    <h1 class="item-title">
                        <i class="fas {% if item_type == 'sboms' %}fa-file-code{% elif item_type == 'documents' %}fa-file-alt{% endif %} me-3 text-primary"></i>
                        {{ item.name }}
                    </h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item">
                                <a href="{% url 'core:component_details' item.component_id %}">{{ item.component_name }}</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                {% if item_type == 'sboms' %}
                                    SBOM Details
                                {% else %}
                                    Document Details
                                {% endif %}
                            </li>
                        </ol>
                    </nav>
                </div>
                <div class="header-actions d-flex gap-2">
                    {% if item_type == 'sboms' %}
                        <a href="{% url 'sboms:sbom_download' item.id %}"
                           class="btn btn-primary">
                            <i class="fas fa-download me-2"></i>Download
                        </a>
                        <a href="{% url 'sboms:sbom_vulnerabilities' item.id %}"
                           class="btn btn-outline-warning">
                            <i class="fas fa-shield-alt me-2"></i>Vulnerabilities
                        </a>
                    {% elif item_type == 'documents' %}
                        <a href="{% url 'documents:document_download' item.id %}"
                           class="btn btn-primary">
                            <i class="fas fa-download me-2"></i>Download
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="header-meta d-flex align-items-center flex-wrap gap-2">
            {% if item_type == 'sboms' %}
                <span class="badge bg-success-subtle text-success">
                    {% if item.format == 'cyclonedx' %}
                        CycloneDX
                    {% elif item.format == 'spdx' %}
                        SPDX
                    {% else %}
                        {{ item.format|upper }}
                    {% endif %}
                    {{ item.format_version }}
                </span>
                {% if item.version %}
                    <span class="meta-divider">•</span>
                    <span class="meta-item">
                        <span class="text-muted">Version:</span>
                        <span class="ms-1 version-display" title="{{ item.version }}">{{ item.version }}</span>
                    </span>
                {% endif %}
                <span class="meta-divider">•</span>
                <span class="meta-item">
                    <span class="text-muted">Uploaded:</span>
                    <span class="ms-1">{{ item.created_at|date:"M d, Y" }}</span>
                </span>
                <span class="meta-divider">•</span>
                <span class="meta-item">
                    <span class="text-muted">Source:</span>
                    <span class="badge bg-info-subtle text-info ms-1">{{ item.source_display }}</span>
                </span>
                <span class="meta-divider">•</span>
                <span class="meta-item">
                    <span class="text-muted">ID:</span>
                    <span class="ms-1">
                        {% include 'core/components/copyable-value.html.j2' with value=item.id title="SBOM ID (click to copy)" %}
                    </span>
                </span>
            {% elif item_type == 'documents' %}
                <span class="badge bg-info-subtle text-info">{{ item.document_type|default:"Document" }}</span>
                {% if item.version %}
                    <span class="meta-divider">•</span>
                    <span class="meta-item">
                        <span class="text-muted">Version:</span>
                        <span class="ms-1 version-display" title="{{ item.version }}">{{ item.version }}</span>
                    </span>
                {% endif %}
                <span class="meta-divider">•</span>
                <span class="meta-item">
                    <span class="text-muted">Uploaded:</span>
                    <span class="ms-1">{{ item.created_at|date:"M d, Y" }}</span>
                </span>
                <span class="meta-divider">•</span>
                <span class="meta-item">
                    <span class="text-muted">Source:</span>
                    <span class="badge bg-info-subtle text-info ms-1">{{ item.source_display }}</span>
                </span>
                {% if item.content_type %}
                    <span class="meta-divider">•</span>
                    <span class="meta-item">
                        <span class="text-muted">Format:</span>
                        <span class="ms-1">{{ item.content_type }}</span>
                    </span>
                {% endif %}
                {% if item.file_size %}
                    <span class="meta-divider">•</span>
                    <span class="meta-item">
                        <span class="text-muted">Size:</span>
                        <span class="ms-1">{{ item.file_size|filesizeformat }}</span>
                    </span>
                {% endif %}
                <span class="meta-divider">•</span>
                <span class="meta-item">
                    <span class="text-muted">ID:</span>
                    <span class="ms-1">
                        {% include 'core/components/copyable-value.html.j2' with value=item.id title="Document ID (click to copy)" %}
                    </span>
                </span>
            {% endif %}
        </div>
    </div>
    {% if item_type == 'sboms' %}
        <!-- Vulnerability Summary Section -->
        {% if vulnerability_summary %}
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card shadow-sm border-0 vulnerability-summary-card">
                        <div class="card-body py-3">
                            <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
                                <div class="d-flex align-items-center gap-3">
                                    <i class="fas fa-shield-alt fa-lg text-primary"></i>
                                    <div>
                                        <span class="fw-semibold">Vulnerability Scan</span>
                                        <small class="text-muted ms-2">
                                            {{ vulnerability_summary.scan_date|date:"M d, Y" }}
                                            <span class="badge bg-secondary-subtle text-secondary ms-1">{{ vulnerability_summary.provider|upper }}</span>
                                        </small>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center gap-2 flex-wrap">
                                    <div class="vulnerability-stat-box total">
                                        <div class="fs-5 fw-bold">{{ vulnerability_summary.total }}</div>
                                        <small class="text-muted">Total</small>
                                    </div>
                                    {% if vulnerability_summary.critical > 0 %}
                                        <div class="vulnerability-stat-box bg-danger-subtle">
                                            <div class="fs-5 fw-bold text-danger">{{ vulnerability_summary.critical }}</div>
                                            <small class="text-danger">Critical</small>
                                        </div>
                                    {% endif %}
                                    {% if vulnerability_summary.high > 0 %}
                                        <div class="vulnerability-stat-box bg-warning-subtle">
                                            <div class="fs-5 fw-bold text-warning">{{ vulnerability_summary.high }}</div>
                                            <small class="text-warning">High</small>
                                        </div>
                                    {% endif %}
                                    {% if vulnerability_summary.medium > 0 %}
                                        <div class="vulnerability-stat-box bg-info-subtle">
                                            <div class="fs-5 fw-bold text-info">{{ vulnerability_summary.medium }}</div>
                                            <small class="text-info">Medium</small>
                                        </div>
                                    {% endif %}
                                    {% if vulnerability_summary.low > 0 %}
                                        <div class="vulnerability-stat-box bg-secondary-subtle">
                                            <div class="fs-5 fw-bold text-secondary">{{ vulnerability_summary.low }}</div>
                                            <small class="text-secondary">Low</small>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
        <!-- Assessment Results Section -->
        {% if assessment_runs %}
            <div class="row mb-4">
                <div class="col-12">
                    {% include 'plugins/components/assessment_results_card.html.j2' with sbom_id=item.id assessment_runs=assessment_runs %}
                </div>
            </div>
        {% endif %}
        <!-- Danger Zone -->
        <div class="row">
            <div class="col-12">
                {% include 'components/sbom_danger_zone.html.j2' with sbom_id=item.id sbom_name=item.name component_id=component_id %}
            </div>
        </div>
    {% elif item_type == 'documents' %}
        <!-- Document preview or additional content could be added here -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm border-0">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
                        <p class="text-muted mb-0">Document stored successfully. Use the Download button above to access the file.</p>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
{% block scripts %}
    {% vite_asset 'sbomify/apps/core/js/main.ts' %}
    {% if item_type == 'sboms' %}
        {% vite_asset 'sbomify/apps/sboms/js/main.ts' %}
        {% vite_asset 'sbomify/apps/plugins/js/main.ts' %}
    {% elif item_type == 'documents' %}
        {% vite_asset 'sbomify/apps/documents/js/main.ts' %}
    {% endif %}
{% endblock %}
