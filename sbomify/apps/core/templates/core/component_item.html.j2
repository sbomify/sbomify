{% extends "core/dashboard_base.htmx.j2" %}
{% load static %}
{% load django_vite %}
{% block title %}{{ component.component_type_display }}: {{ item.name }}{% endblock %}
{% block extra_styles %}
    <link rel="stylesheet"
          href="{% static 'css/component-detailed-private.css' %}">
    <link rel="stylesheet"
          href="{% static 'css/components/vulnerability-trends.css' %}">
{% endblock %}
{% block content %}
    <div class="page-header mb-4">
        <div class="header-main mb-3">
            <div class="title-section">
                <h1 class="item-title">
                    <i class="fas {% if item_type == 'sboms' %}fa-file-code{% elif item_type == 'documents' %}fa-file-alt{% endif %} me-3 text-primary"></i>
                    {{ item.name }}
                </h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{% url 'core:component_details' item.component_id %}">{{ item.component_name }}</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            {% if item_type == 'sboms' %}
                                SBOM
                            {% else %}
                                Document
                            {% endif %}
                            Details
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="header-meta">
            <span class="meta-item">
                <i class="fas fa-cube me-2 text-primary"></i>
                <span class="meta-label">Component</span>
            </span>
            <span class="meta-divider">•</span>
            {% if item_type == 'sboms' %}
                <span class="meta-item">
                    <span class="meta-label">Format:</span>
                    <span class="badge bg-success-subtle text-success ms-1">
                        {% if item.format == 'cyclonedx' %}
                            CycloneDX
                        {% elif item.format == 'spdx' %}
                            SPDX
                        {% else %}
                            {{ item.format|upper }}
                        {% endif %}
                        {{ item.format_version }}
                    </span>
                </span>
                {% if item.version %}
                    <span class="meta-divider">•</span>
                    <span class="meta-item">
                        <span class="meta-label">Version:</span>
                        <span class="ms-1 version-display" title="{{ item.version }}">{{ item.version }}</span>
                    </span>
                {% endif %}
            {% elif item_type == 'documents' %}
                <span class="meta-item">
                    <span class="meta-label">Type:</span>
                    <span class="badge bg-info-subtle text-info ms-1">{{ item.document_type|default:"Document" }}</span>
                </span>
                {% if item.version %}
                    <span class="meta-divider">•</span>
                    <span class="meta-item">
                        <span class="meta-label">Version:</span>
                        <span class="ms-1 version-display" title="{{ item.version }}">{{ item.version }}</span>
                    </span>
                {% endif %}
            {% endif %}
        </div>
    </div>
    {% if item_type == 'sboms' %}
        <!-- Vulnerability Summary Section -->
        {% if vulnerability_summary %}
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card shadow-sm border-0 vulnerability-summary-card">
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="rounded-circle p-3 vulnerability-summary-icon">
                                        <i class="fas fa-shield-alt fa-lg text-primary"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-1">Vulnerability Scan Summary</h5>
                                        <small class="text-muted">
                                            Last scanned: {{ vulnerability_summary.scan_date|date:"M d, Y H:i" }}
                                            <span class="badge bg-info-subtle text-info ms-2">{{ vulnerability_summary.provider|upper }}</span>
                                        </small>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center gap-2 flex-wrap">
                                    <div class="vulnerability-stat-box total">
                                        <div class="fs-4 fw-bold">{{ vulnerability_summary.total }}</div>
                                        <small class="text-muted">Total</small>
                                    </div>
                                    {% if vulnerability_summary.critical > 0 %}
                                        <div class="vulnerability-stat-box bg-danger-subtle">
                                            <div class="fs-4 fw-bold text-danger">{{ vulnerability_summary.critical }}</div>
                                            <small class="text-danger">Critical</small>
                                        </div>
                                    {% endif %}
                                    {% if vulnerability_summary.high > 0 %}
                                        <div class="vulnerability-stat-box bg-warning-subtle">
                                            <div class="fs-4 fw-bold text-warning">{{ vulnerability_summary.high }}</div>
                                            <small class="text-warning">High</small>
                                        </div>
                                    {% endif %}
                                    {% if vulnerability_summary.medium > 0 %}
                                        <div class="vulnerability-stat-box bg-info-subtle">
                                            <div class="fs-4 fw-bold text-info">{{ vulnerability_summary.medium }}</div>
                                            <small class="text-info">Medium</small>
                                        </div>
                                    {% endif %}
                                    {% if vulnerability_summary.low > 0 %}
                                        <div class="vulnerability-stat-box bg-secondary-subtle">
                                            <div class="fs-4 fw-bold text-secondary">{{ vulnerability_summary.low }}</div>
                                            <small class="text-secondary">Low</small>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
        <!-- Assessment Results Section -->
        {% if assessment_runs %}
            <div class="row mb-4">
                <div class="col-12">
                    {% include 'plugins/components/assessment_results_card.html.j2' with sbom_id=item.id assessment_runs=assessment_runs %}
                </div>
            </div>
        {% endif %}
        <div class="row">
            <div class="col-12 col-lg-5">{% include 'sboms/components/sbom_metadata_card.html.j2' with item=item %}</div>
            <div class="col-12 col-lg-7">{% include 'sboms/components/sbom_actions_card.html.j2' with item=item %}</div>
        </div>
        <!-- Danger Zone Vue Component -->
        <div class="row mt-4">
            <div class="col-12">
                {% include 'components/sbom_danger_zone.html.j2' with sbom_id=item.id sbom_name=item.name component_id=component_id %}
            </div>
        </div>
    {% elif item_type == 'documents' %}
        <div class="row">
            <div class="col-12 col-lg-8">{% include 'documents/components/document_metadata_card.html.j2' with item=item %}</div>
            <div class="col-12 col-lg-4">{% include 'documents/components/document_actions_card.html.j2' with item=item %}</div>
        </div>
    {% endif %}
{% endblock %}
{% block scripts %}
    {% vite_asset 'sbomify/apps/core/js/main.ts' %}
    {% if item_type == 'sboms' %}
        {% vite_asset 'sbomify/apps/sboms/js/main.ts' %}
        {% vite_asset 'sbomify/apps/plugins/js/main.ts' %}
    {% elif item_type == 'documents' %}
        {% vite_asset 'sbomify/apps/documents/js/main.ts' %}
    {% endif %}
{% endblock %}
