{% extends "core/dashboard_base.htmx.j2" %}
{% load static %}
{% load django_vite %}
{% block title %}{{ component.component_type_display }}: {{ item.name }}{% endblock %}
{% block extra_styles %}
    <link rel="stylesheet"
          href="{% static 'css/component-detailed-private.css' %}">
    <link rel="stylesheet"
          href="{% static 'css/components/vulnerability-trends.css' %}">
{% endblock %}
{% block content %}
    <div class="mb-6">
        <div class="mb-4">
            <div class="flex justify-between items-start flex-wrap gap-4">
                <div>
                    <h1 class="text-2xl font-bold text-text flex items-center gap-3">
                        <i class="fas {% if item_type == 'sboms' %}fa-file-code{% elif item_type == 'documents' %}fa-file-alt{% endif %} text-primary"></i>
                        {{ item.name }}
                    </h1>
                    <nav aria-label="breadcrumb" class="mt-2">
                        <ol class="flex items-center gap-2 text-sm text-text-muted">
                            <li>
                                <a href="{% url 'core:component_details' item.component_id %}"
                                   class="text-primary hover:underline">{{ item.component_name }}</a>
                            </li>
                            <li class="text-text-muted">/</li>
                            <li class="text-text" aria-current="page">
                                {% if item_type == 'sboms' %}
                                    SBOM Details
                                {% else %}
                                    Document Details
                                {% endif %}
                            </li>
                        </ol>
                    </nav>
                </div>
                <div class="flex gap-2">
                    {% if item_type == 'sboms' %}
                        <a href="{% url 'sboms:sbom_download' item.id %}"
                           class="tw-btn-secondary inline-flex items-center gap-2"
                           title="Download {% if item.format == 'cyclonedx' %}CycloneDX{% elif item.format == 'spdx' %}SPDX{% else %}{{ item.format }}{% endif %} SBOM">
                            {% if item.format == 'cyclonedx' %}
                                <img src="{% static 'img/cyclonedx-logo.svg' %}"
                                     alt="CycloneDX"
                                     class="h-4 w-auto"
                                     width="16"
                                     height="16">
                            {% elif item.format == 'spdx' %}
                                <img src="{% static 'img/spdx-logo.svg' %}"
                                     alt="SPDX"
                                     class="h-4 w-auto"
                                     width="16"
                                     height="16">
                            {% endif %}
                            <i class="fas fa-download"></i>
                        </a>
                        <a href="{% url 'sboms:sbom_vulnerabilities' item.id %}"
                           class="inline-flex items-center gap-2 px-4 py-2 border border-warning rounded-lg text-warning hover:bg-warning/10 transition-colors no-underline">
                            <i class="fas fa-shield-alt"></i>Vulnerabilities
                        </a>
                    {% elif item_type == 'documents' %}
                        <a href="{% url 'documents:document_download' item.id %}"
                           class="tw-btn-primary">
                            <i class="fas fa-download mr-2"></i>Download
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="flex items-center flex-wrap gap-2">
            {% if item_type == 'sboms' %}
                <span class="px-3 py-1.5 text-sm font-medium rounded-full bg-success/10 text-success">
                    {% if item.format == 'cyclonedx' %}
                        CycloneDX
                    {% elif item.format == 'spdx' %}
                        SPDX
                    {% else %}
                        {{ item.format|upper }}
                    {% endif %}
                    {{ item.format_version }}
                </span>
                {% if item.version %}
                    <span class="text-text-muted">•</span>
                    <span class="text-sm">
                        <span class="text-text-muted">Version:</span>
                        <span class="ml-1 text-text" title="{{ item.version }}">{{ item.version }}</span>
                    </span>
                {% endif %}
                <span class="text-text-muted">•</span>
                <span class="text-sm">
                    <span class="text-text-muted">Uploaded:</span>
                    <span class="ml-1 text-text">{{ item.created_at|date:"M d, Y" }}</span>
                </span>
                <span class="text-text-muted">•</span>
                <span class="text-sm flex items-center gap-1">
                    <span class="text-text-muted">Source:</span>
                    <span class="px-2 py-0.5 text-xs font-medium rounded-full bg-info/10 text-info">{{ item.source_display }}</span>
                </span>
                <span class="text-text-muted">•</span>
                <span class="text-sm">
                    <span class="text-text-muted">ID:</span>
                    <span class="ml-1">
                        {% include 'core/components/copyable-value.html.j2' with value=item.id title="SBOM ID: "|add:item.id|add:" (click to copy)" %}
                    </span>
                </span>
            {% elif item_type == 'documents' %}
                <span class="px-3 py-1.5 text-sm font-medium rounded-full bg-info/10 text-info">{{ item.document_type|default:"Document" }}</span>
                {% if item.version %}
                    <span class="text-text-muted">•</span>
                    <span class="text-sm">
                        <span class="text-text-muted">Version:</span>
                        <span class="ml-1 text-text" title="{{ item.version }}">{{ item.version }}</span>
                    </span>
                {% endif %}
                <span class="text-text-muted">•</span>
                <span class="text-sm">
                    <span class="text-text-muted">Uploaded:</span>
                    <span class="ml-1 text-text">{{ item.created_at|date:"M d, Y" }}</span>
                </span>
                <span class="text-text-muted">•</span>
                <span class="text-sm flex items-center gap-1">
                    <span class="text-text-muted">Source:</span>
                    <span class="px-2 py-0.5 text-xs font-medium rounded-full bg-info/10 text-info">{{ item.source_display }}</span>
                </span>
                {% if item.content_type %}
                    <span class="text-text-muted">•</span>
                    <span class="text-sm">
                        <span class="text-text-muted">Format:</span>
                        <span class="ml-1 text-text">{{ item.content_type }}</span>
                    </span>
                {% endif %}
                {% if item.file_size %}
                    <span class="text-text-muted">•</span>
                    <span class="text-sm">
                        <span class="text-text-muted">Size:</span>
                        <span class="ml-1 text-text">{{ item.file_size|filesizeformat }}</span>
                    </span>
                {% endif %}
                <span class="text-text-muted">•</span>
                <span class="text-sm">
                    <span class="text-text-muted">ID:</span>
                    <span class="ml-1">
                        {% include 'core/components/copyable-value.html.j2' with value=item.id title="Document ID: "|add:item.id|add:" (click to copy)" %}
                    </span>
                </span>
            {% endif %}
        </div>
    </div>
    {% if item_type == 'sboms' %}
        <!-- Vulnerability Summary Section -->
        {% if vulnerability_summary %}
            <div class="mb-6">
                <div class="tw-card shadow-sm">
                    <div class="p-4 md:py-3">
                        <div class="flex items-center justify-between flex-wrap gap-4">
                            <div class="flex items-center gap-3">
                                <i class="fas fa-shield-alt text-lg text-primary"></i>
                                <div>
                                    <span class="font-semibold text-text">Vulnerability Scan</span>
                                    <span class="text-sm text-text-muted ml-2">
                                        {{ vulnerability_summary.scan_date|date:"M d, Y" }}
                                        <span class="px-2 py-0.5 text-xs font-medium rounded-full bg-border/50 text-text-muted ml-1">{{ vulnerability_summary.provider|upper }}</span>
                                    </span>
                                </div>
                            </div>
                            <div class="flex items-center gap-2 flex-wrap">
                                <div class="px-3 py-2 rounded-lg bg-border/30 text-center">
                                    <div class="text-lg font-bold text-text">{{ vulnerability_summary.total }}</div>
                                    <small class="text-text-muted">Total</small>
                                </div>
                                {% if vulnerability_summary.critical > 0 %}
                                    <div class="px-3 py-2 rounded-lg bg-danger/10 text-center">
                                        <div class="text-lg font-bold text-danger">{{ vulnerability_summary.critical }}</div>
                                        <small class="text-danger">Critical</small>
                                    </div>
                                {% endif %}
                                {% if vulnerability_summary.high > 0 %}
                                    <div class="px-3 py-2 rounded-lg bg-warning/10 text-center">
                                        <div class="text-lg font-bold text-warning">{{ vulnerability_summary.high }}</div>
                                        <small class="text-warning">High</small>
                                    </div>
                                {% endif %}
                                {% if vulnerability_summary.medium > 0 %}
                                    <div class="px-3 py-2 rounded-lg bg-info/10 text-center">
                                        <div class="text-lg font-bold text-info">{{ vulnerability_summary.medium }}</div>
                                        <small class="text-info">Medium</small>
                                    </div>
                                {% endif %}
                                {% if vulnerability_summary.low > 0 %}
                                    <div class="px-3 py-2 rounded-lg bg-border/50 text-center">
                                        <div class="text-lg font-bold text-text-muted">{{ vulnerability_summary.low }}</div>
                                        <small class="text-text-muted">Low</small>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
        <!-- Assessment Results Section -->
        {% if assessment_runs %}
            <div class="mb-6">
                {% include 'plugins/components/assessment_results_card.html.j2' with sbom_id=item.id assessment_runs=assessment_runs %}
            </div>
        {% endif %}
        <!-- Danger Zone -->
        <div>
            {% include 'components/sbom_danger_zone.html.j2' with sbom_id=item.id sbom_name=item.name component_id=component_id %}
        </div>
    {% elif item_type == 'documents' %}
        <!-- Document preview or additional content could be added here -->
        <div>
            <div class="tw-card shadow-sm">
                <div class="p-6 text-center py-12">
                    <i class="fas fa-file-alt text-5xl text-text-muted mb-4"></i>
                    <p class="text-text-muted mb-0">Document stored successfully. Use the Download button above to access the file.</p>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
{% block scripts %}
    {% vite_asset 'sbomify/apps/core/js/main.ts' %}
    {% if item_type == 'sboms' %}
        {% vite_asset 'sbomify/apps/sboms/js/main.ts' %}
        {% vite_asset 'sbomify/apps/plugins/js/main.ts' %}
    {% elif item_type == 'documents' %}
        {% vite_asset 'sbomify/apps/documents/js/main.ts' %}
    {% endif %}
{% endblock %}
