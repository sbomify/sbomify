{% comment %}
  Empty State Partial

  Usage:
  {% include "core/components/_empty_state.html.j2" with
      icon="fa-key"
      title="No personal access tokens"
      description="Generate a personal access token to access the sbomify API."
      action_url="/settings/"
      action_text="Generate Token"
      action_icon="fa-plus"
  %}

  Parameters:
  - icon: FontAwesome icon class (required)
  - title: Empty state title (required)
  - description: Description text (optional)
  - action_url: URL for action button (optional)
  - action_text: Button text (optional, defaults to "Get Started")
  - action_icon: Button icon class (optional)
  - compact: Set to true for smaller padding
{% endcomment %}
<div class="flex flex-col items-center justify-center text-center {% if compact %}py-6{% else %}py-12{% endif %}"
     role="status"
     aria-label="{{ title }}">
    {% if icon %}
        <div class="w-16 h-16 rounded-full bg-border/30 flex items-center justify-center mb-4">
            <i class="fas {{ icon }} text-2xl text-text-muted" aria-hidden="true"></i>
        </div>
    {% endif %}
    <h5 class="text-lg font-medium text-text-muted mb-2">{{ title }}</h5>
    {% if description %}
        <p class="text-text-muted max-w-sm mx-auto {% if action_url %}mb-4{% else %}m-0{% endif %}">{{ description }}</p>
    {% endif %}
    {% if action_url %}
        <a href="{{ action_url }}" class="tw-btn-primary">
            {% if action_icon %}<i class="fas {{ action_icon }} mr-2" aria-hidden="true"></i>{% endif %}
            {{ action_text|default:"Get Started" }}
        </a>
    {% endif %}
</div>
