{% comment %}
  Page Header Partial

  Usage:
  {% include "core/components/_page_header.html.j2" with
      icon="fa-users"
      title="Workspaces"
      subtitle="Manage your collaborative workspaces"
      icon_color="text-primary"
  %}

  Parameters:
  - icon: FontAwesome icon class (e.g., "fa-users")
  - title: Main page title
  - subtitle: Optional subtitle/description
  - icon_color: Optional Tailwind text color class (default: text-primary)
  - no_margin: Set to true to remove bottom margin
{% endcomment %}
<div class="{% if not no_margin %}mb-6{% endif %}">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
        <div>
            <h1 class="text-2xl font-bold text-text flex items-center gap-3 m-0">
                {% if icon %}
                    <i class="fas {{ icon }} {{ icon_color|default:'text-primary' }}"
                       aria-hidden="true"></i>
                {% endif %}
                {{ title }}
            </h1>
            {% if subtitle %}<p class="text-text-muted mt-1 m-0">{{ subtitle }}</p>{% endif %}
        </div>
        {% block header_actions %}{% endblock %}
    </div>
</div>
