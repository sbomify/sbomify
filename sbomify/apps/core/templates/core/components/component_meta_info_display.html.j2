<div class="tw-settings-card" x-data="{ expanded: true }">
    <div class="flex justify-start items-center cursor-pointer px-6 py-4 border-b border-border"
         @click="expanded = !expanded"
         :class="{ 'border-b-0': !expanded }"
         :aria-expanded="expanded"
         aria-controls="componentMetadataContent">
        <h5 class="text-lg font-semibold text-text m-0 flex items-center">
            Component Metadata
            <i class="fas fa-chevron-down ml-2 text-sm text-text-muted transition-transform"
               :style="expanded ? '' : 'transform: rotate(-90deg)'"></i>
        </h5>
    </div>
    <div id="componentMetadataContent" x-show="expanded" x-collapse>
        <div class="p-6">
            <div class="flex items-center gap-2 mb-6 p-3 rounded-lg bg-info/10">
                <i class="fas fa-info-circle text-primary"></i>
                <span class="text-sm text-text-muted">
                    <strong class="text-text">Augmentation:</strong> Enable the <a href="https://sbomify.com/features/generate-collaborate-analyze/"
    target="_blank"
    rel="noopener noreferrer"
    class="text-primary hover:underline">Augmentation feature</a> to include this metadata in your SBOM
                </span>
            </div>
            {# Contact Profile view - show entities with roles #}
            <template x-if="metadata.contact_profile">
                <div>
                    <div class="mb-4">
                        <div class="flex items-center gap-2">
                            <i class="fas fa-address-card text-text-muted"></i>
                            <span class="font-semibold text-text"
                                  x-text="metadata.contact_profile.name"></span>
                            <template x-if="metadata.contact_profile.is_default">
                                <span class="px-2 py-0.5 text-xs font-medium rounded-full bg-info/10 text-info">Default</span>
                            </template>
                        </div>
                    </div>
                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                        <div x-data="{ profile: metadata.contact_profile }">
                            {% include "teams/contact_profiles/partials/profile_details.html.j2" %}
                        </div>
                        <div>
                            <div class="mb-6">
                                <div class="text-sm font-bold text-text-muted uppercase tracking-wider pb-2 mb-3 border-b border-border">
                                    Lifecycle
                                </div>
                                <template x-if="!metadata.lifecycle_phase && !metadata.release_date && !metadata.end_of_support && !metadata.end_of_life">
                                    <span class="text-text-muted italic">Not set yet</span>
                                </template>
                                <template x-if="metadata.lifecycle_phase || metadata.release_date || metadata.end_of_support || metadata.end_of_life">
                                    <div class="space-y-3">
                                        <template x-if="metadata.lifecycle_phase">
                                            <div class="flex items-center gap-2">
                                                <span class="text-text-muted text-sm">Phase:</span>
                                                <span class="px-2.5 py-1 text-sm font-medium rounded-full"
                                                      :class="getLifecyclePhaseClass(metadata.lifecycle_phase)"
                                                      x-text="formatLifecyclePhase(metadata.lifecycle_phase)"></span>
                                            </div>
                                        </template>
                                        <template x-if="metadata.release_date || metadata.end_of_support || metadata.end_of_life">
                                            <div class="grid grid-cols-1 sm:grid-cols-3 gap-2">
                                                <template x-if="metadata.release_date">
                                                    <div class="px-3 py-2 rounded-lg bg-success/5 border border-success/20">
                                                        <div class="text-xs text-text-muted">Release</div>
                                                        <div class="text-sm font-medium text-text"
                                                             x-text="new Date(metadata.release_date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })">
                                                        </div>
                                                    </div>
                                                </template>
                                                <template x-if="metadata.end_of_support">
                                                    <div class="px-3 py-2 rounded-lg bg-warning/5 border border-warning/20">
                                                        <div class="text-xs text-text-muted">End of Support</div>
                                                        <div class="text-sm font-medium text-text"
                                                             x-text="new Date(metadata.end_of_support).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })">
                                                        </div>
                                                    </div>
                                                </template>
                                                <template x-if="metadata.end_of_life">
                                                    <div class="px-3 py-2 rounded-lg bg-danger/5 border border-danger/20">
                                                        <div class="text-xs text-text-muted">End of Life</div>
                                                        <div class="text-sm font-medium text-text"
                                                             x-text="new Date(metadata.end_of_life).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })">
                                                        </div>
                                                    </div>
                                                </template>
                                            </div>
                                        </template>
                                    </div>
                                </template>
                            </div>
                            <div>
                                <div class="text-sm font-bold text-text-muted uppercase tracking-wider pb-2 mb-3 border-b border-border">Licenses</div>
                                <template x-if="isEmpty(metadata.licenses)">
                                    <span class="text-text-muted italic">Not set yet</span>
                                </template>
                                <template x-if="!isEmpty(metadata.licenses)">
                                    <div class="flex flex-wrap gap-2">
                                        <template x-for="license in metadata.licenses"
                                                  :key="typeof license === 'string' ? license : license.name">
                                            <span class="px-2.5 py-1 text-sm rounded-full bg-border/50 text-text border border-border">
                                                <span x-text="typeof license === 'string' ? license : (license.name + ' (custom)')"></span>
                                            </span>
                                        </template>
                                    </div>
                                </template>
                            </div>
                        </div>
                    </div>
                </div>
            </template>
            {# Custom metadata view - show flat supplier/authors structure #}
            <template x-if="!metadata.contact_profile">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <div>
                        <div class="text-sm font-bold text-text-muted uppercase tracking-wider pb-2 mb-3 border-b border-border">Supplier</div>
                        <div class="text-xs text-text-muted mb-2">Custom contact information</div>
                        <template x-if="isEmpty(metadata.supplier)">
                            <span class="text-text-muted italic">Not set yet</span>
                        </template>
                        <template x-if="!isEmpty(metadata.supplier)">
                            <div>
                                <table class="w-full text-sm mb-3" x-show="hasSupplierInfo">
                                    <tbody>
                                        <template x-if="metadata.supplier.name">
                                            <tr>
                                                <td class="text-text-muted py-1 w-24">Name</td>
                                                <td class="py-1 text-text">
                                                    <span x-text="metadata.supplier.name"></span>
                                                </td>
                                            </tr>
                                        </template>
                                        <template x-if="metadata.supplier.url && metadata.supplier.url.length > 0">
                                            <tr>
                                                <td class="text-text-muted py-1">URL</td>
                                                <td class="py-1">
                                                    <a :href="metadata.supplier.url[0]"
                                                       target="_blank"
                                                       rel="noopener noreferrer"
                                                       class="text-primary hover:underline no-underline">
                                                        <span x-text="metadata.supplier.url[0]"></span>
                                                        <i class="fas fa-arrow-up-right-from-square ml-1 text-xs text-text-muted"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        </template>
                                        <template x-if="metadata.supplier.address">
                                            <tr>
                                                <td class="text-text-muted py-1">Address</td>
                                                <td class="py-1 text-text" x-text="metadata.supplier.address"></td>
                                            </tr>
                                        </template>
                                    </tbody>
                                </table>
                                <template x-if="!hasSupplierInfo && isEmpty(metadata.supplier.contacts)">
                                    <span class="text-text-muted italic">No supplier information provided</span>
                                </template>
                            </div>
                        </template>
                        <template x-if="metadata.supplier && metadata.supplier.contacts && metadata.supplier.contacts.length > 0">
                            <div class="mt-4">
                                <div class="text-xs font-bold text-text-muted mb-2">Contacts</div>
                                <div class="flex flex-col gap-2">
                                    <template x-for="(contact, index) in metadata.supplier.contacts" :key="index">
                                        <div class="flex items-center flex-wrap gap-1">
                                            <span class="px-2.5 py-1 text-sm rounded-full bg-border/50 text-text border border-border inline-flex items-center">
                                                <span x-text="contact.name"></span>
                                                <template x-if="contact.email">
                                                    <span x-text="' (' + contact.email + ')'"></span>
                                                </template>
                                                <i x-show="showEditButton"
                                                   class="far fa-times-circle ml-2 cursor-pointer text-text-muted hover:text-danger"
                                                   @click="removeSupplierContact(index)"></i>
                                            </span>
                                        </div>
                                    </template>
                                </div>
                            </div>
                        </template>
                    </div>
                    <div>
                        <div class="text-sm font-bold text-text-muted uppercase tracking-wider pb-2 mb-3 border-b border-border">
                            Lifecycle
                        </div>
                        <template x-if="!metadata.lifecycle_phase && !metadata.release_date && !metadata.end_of_support && !metadata.end_of_life">
                            <span class="text-text-muted italic">Not set yet</span>
                        </template>
                        <template x-if="metadata.lifecycle_phase || metadata.release_date || metadata.end_of_support || metadata.end_of_life">
                            <div class="space-y-3">
                                <template x-if="metadata.lifecycle_phase">
                                    <div class="flex items-center gap-2">
                                        <span class="text-text-muted text-sm">Phase:</span>
                                        <span class="px-2.5 py-1 text-sm font-medium rounded-full"
                                              :class="getLifecyclePhaseClass(metadata.lifecycle_phase)"
                                              x-text="formatLifecyclePhase(metadata.lifecycle_phase)"></span>
                                    </div>
                                </template>
                                <template x-if="metadata.release_date || metadata.end_of_support || metadata.end_of_life">
                                    <div class="grid grid-cols-1 sm:grid-cols-3 gap-2">
                                        <template x-if="metadata.release_date">
                                            <div class="px-3 py-2 rounded-lg bg-success/5 border border-success/20">
                                                <div class="text-xs text-text-muted">Release</div>
                                                <div class="text-sm font-medium text-text"
                                                     x-text="new Date(metadata.release_date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })">
                                                </div>
                                            </div>
                                        </template>
                                        <template x-if="metadata.end_of_support">
                                            <div class="px-3 py-2 rounded-lg bg-warning/5 border border-warning/20">
                                                <div class="text-xs text-text-muted">End of Support</div>
                                                <div class="text-sm font-medium text-text"
                                                     x-text="new Date(metadata.end_of_support).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })">
                                                </div>
                                            </div>
                                        </template>
                                        <template x-if="metadata.end_of_life">
                                            <div class="px-3 py-2 rounded-lg bg-danger/5 border border-danger/20">
                                                <div class="text-xs text-text-muted">End of Life</div>
                                                <div class="text-sm font-medium text-text"
                                                     x-text="new Date(metadata.end_of_life).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })">
                                                </div>
                                            </div>
                                        </template>
                                    </div>
                                </template>
                            </div>
                        </template>
                    </div>
                    <div>
                        <div class="text-sm font-bold text-text-muted uppercase tracking-wider pb-2 mb-3 border-b border-border">Licenses</div>
                        <template x-if="isEmpty(metadata.licenses)">
                            <span class="text-text-muted italic">Not set yet</span>
                        </template>
                        <template x-if="!isEmpty(metadata.licenses)">
                            <div class="flex flex-wrap gap-2">
                                <template x-for="license in metadata.licenses"
                                          :key="typeof license === 'string' ? license : license.name">
                                    <span class="px-2.5 py-1 text-sm rounded-full bg-border/50 text-text border border-border">
                                        <span x-text="typeof license === 'string' ? license : (license.name + ' (custom)')"></span>
                                    </span>
                                </template>
                            </div>
                        </template>
                    </div>
                    <div>
                        <div class="text-sm font-bold text-text-muted uppercase tracking-wider pb-2 mb-3 border-b border-border">Authors</div>
                        <template x-if="isEmpty(metadata.authors)">
                            <span class="text-text-muted italic">Not set yet</span>
                        </template>
                        <template x-if="!isEmpty(metadata.authors)">
                            <div class="flex flex-wrap gap-2">
                                <template x-for="(author, index) in metadata.authors" :key="index">
                                    <span class="px-2.5 py-1 text-sm rounded-full bg-border/50 text-text border border-border inline-flex items-center">
                                        <span x-text="author.name"></span>
                                        <span x-text="' (' + author.email + ')'"></span>
                                        <i x-show="showEditButton"
                                           class="far fa-times-circle ml-2 cursor-pointer text-text-muted hover:text-danger"
                                           @click="removeAuthor(index)"></i>
                                    </span>
                                </template>
                            </div>
                        </template>
                    </div>
                </div>
            </template>
            <template x-if="showEditButton">
                <div class="flex gap-2 justify-end mt-6 pt-4 border-t border-border">
                    <button class="tw-btn-secondary text-sm" @click="$dispatch('edit-metadata')">
                        <i class="fas fa-edit mr-2"></i>
                        Edit Metadata
                    </button>
                </div>
            </template>
        </div>
    </div>
</div>
