{% load static %}
<link rel="stylesheet"
      href="{% static 'css/components/component-meta-info-display.css' %}">
<div class="standard-card settings-card shadow-md"
     x-cloak
     x-data="collapsibleSection(true)">
    <div class="px-6 py-4 border-b flex justify-start items-center cursor-pointer"
         @click="toggle()"
         role="button"
         tabindex="0"
         @keydown.enter="toggle()"
         @keydown.space.prevent="toggle()"
         :class="{ 'collapsed': !expanded }"
         :aria-expanded="expanded"
         aria-controls="componentMetadataContent">
        <h5 class="text-lg font-semibold mb-0">
            Component Metadata
            <i class="fas fa-chevron-down ml-2 transition-transform"
               :style="expanded ? '' : 'transform: rotate(-90deg)'"
               aria-hidden="true"></i>
        </h5>
    </div>
    <div id="componentMetadataContent" x-show="expanded" x-collapse>
        <div class="p-6">
            <div class="info-notice mb-4">
                <i class="fas fa-info-circle"></i>
                <span>
                    <strong>Augmentation:</strong> Enable the <a href="https://sbomify.com/features/generate-collaborate-analyze/"
    target="_blank"
    rel="noopener noreferrer">Augmentation feature</a> to include this metadata in your SBOM
                </span>
            </div>
            {# Contact Profile view - show entities with roles #}
            <template x-if="metadata.contact_profile">
                <div>
                    <div class="profile-indicator mb-3">
                        <div class="flex items-center gap-2">
                            <i class="fas fa-address-card text-gray-600"></i>
                            <span class="font-semibold" x-text="metadata.contact_profile.name"></span>
                            <template x-if="metadata.contact_profile.is_default">
                                <span class="inline-flex items-center px-2 py-1 text-xs font-semibold rounded-full bg-info-50 text-info-700">Default</span>
                            </template>
                        </div>
                    </div>
                    <div class="row gy-4">
                        <div class="col-12 col-lg-6">
                            <div x-data="{ profile: metadata.contact_profile }">
                                {% include "teams/contact_profiles/partials/profile_details.html.j2" %}
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="section-content mb-4">
                                <div class="section-label border-bottom pb-2 mb-3 text-muted fw-bold small">Lifecycle</div>
                                <template x-if="metadata.lifecycle_phase">
                                    <div class="mb-2">
                                        <span class="badge fw-normal"
                                              :class="getLifecyclePhaseClass(metadata.lifecycle_phase)"
                                              x-text="formatLifecyclePhase(metadata.lifecycle_phase)"></span>
                                    </div>
                                </template>
                                <template x-if="!metadata.lifecycle_phase && !metadata.release_date && !metadata.end_of_support && !metadata.end_of_life">
                                    <span class="text-muted fst-italic">Not set yet</span>
                                </template>
                                <template x-if="metadata.release_date || metadata.end_of_support || metadata.end_of_life">
                                    <div class="d-flex flex-wrap gap-3 small">
                                        <template x-if="metadata.release_date">
                                            <div>
                                                <span class="text-gray-600">Release:</span>
                                                <span x-text="metadata.release_date"></span>
                                            </div>
                                        </template>
                                        <template x-if="metadata.end_of_support">
                                            <div>
                                                <span class="text-gray-600">End of Support:</span>
                                                <span x-text="metadata.end_of_support"></span>
                                            </div>
                                        </template>
                                        <template x-if="metadata.end_of_life">
                                            <div>
                                                <span class="text-gray-600">End of Life:</span>
                                                <span x-text="metadata.end_of_life"></span>
                                            </div>
                                        </template>
                                    </div>
                                </template>
                            </div>
                            <div class="section-content">
                                <div class="section-label border-b pb-2 mb-3 text-gray-600 font-bold text-sm">Licenses</div>
                                <template x-if="isEmpty(metadata.licenses)">
                                    <span class="text-gray-600 italic">Not set yet</span>
                                </template>
                                <template x-if="!isEmpty(metadata.licenses)">
                                    <div class="flex flex-wrap gap-2">
                                        <template x-for="license in metadata.licenses"
                                                  :key="typeof license === 'string' ? license : license.name">
                                            <span class="inline-flex items-center px-3 py-1 text-sm font-normal rounded-full bg-gray-100 text-gray-900 border border-gray-300">
                                                <span x-text="typeof license === 'string' ? license : (license.name + ' (custom)')"></span>
                                            </span>
                                        </template>
                                    </div>
                                </template>
                            </div>
                        </div>
                    </div>
                </div>
            </template>
            {# Custom metadata view - show flat supplier/authors structure #}
            <template x-if="!metadata.contact_profile">
                <div class="row gy-4">
                    <div class="col-12 col-lg-6">
                        <div class="section-content">
                            <div class="section-label border-bottom pb-2 mb-3 text-muted fw-bold small">Supplier</div>
                            <div class="section-subtext text-muted mb-2 small">Custom contact information</div>
                            <template x-if="isEmpty(metadata.supplier)">
                                <span class="text-muted fst-italic">Not set yet</span>
                            </template>
                            <template x-if="!isEmpty(metadata.supplier)">
                                <div>
                                    <table class="table table-borderless table-sm mb-3" x-show="hasSupplierInfo">
                                        <tbody>
                                            <template x-if="metadata.supplier.name">
                                                <tr>
                                                    <td class="text-gray-600" style="width: 100px">Name</td>
                                                    <td>
                                                        <span x-text="metadata.supplier.name"></span>
                                                    </td>
                                                </tr>
                                            </template>
                                            <template x-if="metadata.supplier.url && metadata.supplier.url.length > 0">
                                                <tr>
                                                    <td class="text-gray-600">URL</td>
                                                    <td>
                                                        <a :href="metadata.supplier.url[0]"
                                                           target="_blank"
                                                           rel="noopener noreferrer"
                                                           class="hover:underline">
                                                            <span x-text="metadata.supplier.url[0]"></span>
                                                            <i class="fas fa-arrow-up-right-from-square ml-1 text-xs text-gray-600"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            </template>
                                            <template x-if="metadata.supplier.address">
                                                <tr>
                                                    <td class="text-gray-600">Address</td>
                                                    <td x-text="metadata.supplier.address"></td>
                                                </tr>
                                            </template>
                                        </tbody>
                                    </table>
                                    <template x-if="!hasSupplierInfo && isEmpty(metadata.supplier.contacts)">
                                        <span class="text-gray-600 italic">No supplier information provided</span>
                                    </template>
                                </div>
                            </template>
                            <template x-if="metadata.supplier && metadata.supplier.contacts && metadata.supplier.contacts.length > 0">
                                <div class="mt-3">
                                    <div class="sub-section-label mb-2 text-gray-600 font-bold text-sm">Contacts</div>
                                    <div class="flex flex-col gap-2">
                                        <template x-for="(contact, index) in metadata.supplier.contacts" :key="index">
                                            <div class="flex items-center flex-wrap gap-1">
                                                <span class="inline-flex items-center px-3 py-1 text-sm font-normal rounded-full bg-gray-100 text-gray-900 border border-gray-300">
                                                    <span x-text="contact.name"></span>
                                                    <template x-if="contact.email">
                                                        <span x-text="' (' + contact.email + ')'"></span>
                                                    </template>
                                                    <i x-show="showEditButton"
                                                       class="fa-regular fa-circle-xmark ml-2 cursor-pointer text-gray-600 hover:text-danger-500"
                                                       @click="removeSupplierContact(index)"></i>
                                                </span>
                                            </div>
                                        </template>
                                    </div>
                                </div>
                            </template>
                        </div>
                    </div>
                    <div>
                        <div class="section-content">
                            <div class="section-label border-bottom pb-2 mb-3 text-muted fw-bold small">Lifecycle</div>
                            <template x-if="metadata.lifecycle_phase">
                                <div class="mb-2">
                                    <span class="badge fw-normal"
                                          :class="getLifecyclePhaseClass(metadata.lifecycle_phase)"
                                          x-text="formatLifecyclePhase(metadata.lifecycle_phase)"></span>
                                </div>
                            </template>
                            <template x-if="!metadata.lifecycle_phase && !metadata.release_date && !metadata.end_of_support && !metadata.end_of_life">
                                <span class="text-muted fst-italic">Not set yet</span>
                            </template>
                            <template x-if="metadata.release_date || metadata.end_of_support || metadata.end_of_life">
                                <div class="d-flex flex-wrap gap-3 small">
                                    <template x-if="metadata.release_date">
                                        <div>
                                            <span class="text-muted">Release:</span>
                                            <span x-text="metadata.release_date"></span>
                                        </div>
                                    </template>
                                    <template x-if="metadata.end_of_support">
                                        <div>
                                            <span class="text-muted">End of Support:</span>
                                            <span x-text="metadata.end_of_support"></span>
                                        </div>
                                    </template>
                                    <template x-if="metadata.end_of_life">
                                        <div>
                                            <span class="text-muted">End of Life:</span>
                                            <span x-text="metadata.end_of_life"></span>
                                        </div>
                                    </template>
                                </div>
                            </template>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6">
                        <div class="section-content">
                            <div class="section-label border-bottom pb-2 mb-3 text-muted fw-bold small">Licenses</div>
                            <template x-if="isEmpty(metadata.licenses)">
                                <span class="text-muted fst-italic">Not set yet</span>
                            </template>
                            <template x-if="!isEmpty(metadata.licenses)">
                                <div class="d-flex flex-wrap gap-2">
                                    <template x-for="license in metadata.licenses"
                                              :key="typeof license === 'string' ? license : license.name">
                                        <span class="badge bg-light text-dark border rounded-pill fw-normal">
                                            <span x-text="typeof license === 'string' ? license : (license.name + ' (custom)')"></span>
                                        </span>
                                    </template>
                                </div>
                            </template>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6">
                        <div class="section-content">
                            <div class="section-label border-bottom pb-2 mb-3 text-muted fw-bold small">Authors</div>
                            <template x-if="isEmpty(metadata.authors)">
                                <span class="text-muted fst-italic">Not set yet</span>
                            </template>
                            <template x-if="!isEmpty(metadata.authors)">
                                <div class="d-flex flex-wrap gap-2">
                                    <template x-for="(author, index) in metadata.authors" :key="index">
                                        <span class="badge bg-light text-dark border rounded-pill fw-normal">
                                            <span x-text="author.name"></span>
                                            <span x-text="' (' + author.email + ')'"></span>
                                            <i x-show="showEditButton"
                                               class="fa-regular fa-circle-xmark ms-2 cursor-pointer text-muted hover-danger"
                                               @click="removeAuthor(index)"></i>
                                        </span>
                                    </template>
                                </div>
                            </template>
                        </div>
                    </div>
                </div>
            </template>
            <template x-if="showEditButton">
                <div class="d-flex gap-2 justify-content-end mt-4 pt-3 border-top">
                    <button class="btn btn-outline-primary btn-sm"
                            @click="$dispatch('edit-metadata')">
                        <i class="fa-solid fa-edit me-2"></i>
                        Edit Metadata
                    </button>
                </div>
            </template>
        </div>
    </div>
</div>
