{% load static %}
{# For entity/contact forms #}
{{ metadata|default:None|json_script:"component-metadata" }}
{{ contact_profiles|default:None|json_script:"contact-profiles" }}
<div x-data="componentMetaInfoEditor({ componentId: '{{ component.id }}', teamKey: '{{ request.session.current_team.key }}', metadata: window.parseJsonScript('component-metadata'), contactProfiles: window.parseJsonScript('contact-profiles') || [] })"
     class="component-meta-info-editor">
    <!-- Main Card -->
    <div class="tw-card shadow-lg">
        <div class="px-6 py-4 border-b border-border">
            <h5 class="text-lg font-semibold text-text m-0">Component Metadata</h5>
        </div>
        <div class="p-6">
            <div class="flex items-start gap-3 p-4 mb-6 rounded-lg bg-info/10 border border-info/30">
                <i class="fas fa-info-circle text-info mt-0.5"></i>
                <span class="text-text">
                    <strong>Augmentation:</strong> Enable the <a href="https://sbomify.com/features/generate-collaborate-analyze/"
    target="_blank"
    rel="noopener noreferrer"
    class="text-primary hover:underline">Augmentation feature</a> to include this metadata in your SBOM
                </span>
            </div>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <!-- Left Column: Contact Information -->
                <div>
                    <div class="tw-card shadow">
                        <div class="px-6 py-4 border-b border-border">
                            <h6 class="text-base font-semibold text-text m-0 flex items-center gap-2">
                                Contact Information
                                <span class="relative group">
                                    <i class="fa-regular fa-circle-question text-text-muted text-sm cursor-help"></i>
                                    <span class="absolute left-1/2 -translate-x-1/2 bottom-full mb-2 px-3 py-2 text-xs text-white bg-gray-900 rounded-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all whitespace-nowrap z-50">Organizations (manufacturer, supplier) and contacts (authors, security, technical) for this component</span>
                                </span>
                            </h6>
                        </div>
                        <div class="p-6">
                            <!-- Contact Profile Selector -->
                            <div class="mb-4">
                                <label class="block text-sm font-medium text-text mb-2">Contact Profile</label>
                                <select class="w-full px-3 py-2 text-sm bg-card border border-border rounded-lg text-text focus:outline-none focus:ring-2 focus:ring-primary/50"
                                        x-model="selectedProfileId"
                                        @change="handleProfileChange()"
                                        :disabled="contactProfiles.length === 0 && !selectedProfile">
                                    <option value="">Use custom contact info</option>
                                    <template x-for="profile in allContactProfiles" :key="profile.id">
                                        <option :value="profile.id" x-text="getProfileOptionText(profile)"></option>
                                    </template>
                                </select>
                                <template x-if="contactProfiles.length === 0">
                                    <div class="text-text-muted text-sm mt-2">
                                        No contact profiles available. Manage them in Workspace Settings â†’ Contact Profiles.
                                    </div>
                                </template>
                            </div>
                            <!-- Profile Details (when using profile) -->
                            <template x-if="isUsingProfile">
                                <div>
                                    <div class="flex items-start gap-3 p-4 mb-4 rounded-lg bg-info/10 border border-info/30">
                                        <i class="fas fa-info-circle text-info mt-0.5"></i>
                                        <span class="text-text text-sm">
                                            This component uses the <strong x-text="selectedProfile?.name || 'contact profile'"></strong>.
                                            Contact details are managed at the workspace level.
                                        </span>
                                    </div>
                                    <template x-if="selectedProfile">
                                        <div x-data="{ profile: selectedProfile }">
                                            {% include "teams/contact_profiles/partials/profile_details.html.j2" %}
                                        </div>
                                    </template>
                                    <template x-if="!selectedProfile">
                                        <div class="text-text-muted">Profile details unavailable.</div>
                                    </template>
                                </div>
                            </template>
                            <!-- Custom Contact Form (when not using profile) -->
                            <template x-if="!isUsingProfile">
                                <div id="custom-contact-form-container"
                                     hx-get="{% url 'core:component_metadata_form' component.id %}"
                                     hx-trigger="load"
                                     hx-swap="innerHTML"
                                     x-init="$nextTick(() => htmx.process($el))"
                                     @cancel-custom-form.window="$dispatch('close-editor')"
                                     class="custom-contact-form">
                                    <div class="text-center py-6">
                                        <i class="fas fa-spinner fa-spin text-text-muted mr-2"></i>
                                        <span class="text-text-muted">Loading contact form...</span>
                                    </div>
                                </div>
                            </template>
                        </div>
                    </div>
                </div>
                <!-- Right Column -->
                <div class="flex flex-col gap-4">
                    <!-- Lifecycle -->
                    <div class="tw-card shadow">
                        <div class="px-6 py-4 border-b border-border">
                            <h6 class="text-base font-semibold text-text m-0 flex items-center gap-2">
                                Lifecycle
                                <span class="relative group">
                                    <i class="fa-regular fa-circle-question text-text-muted text-sm cursor-help"></i>
                                    <span class="absolute left-1/2 -translate-x-1/2 bottom-full mb-2 px-3 py-2 text-xs text-white bg-gray-900 rounded-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all whitespace-nowrap z-50">Lifecycle phase and key dates (release, end of support, end of life) aligned with Common Lifecycle Enumeration</span>
                                </span>
                            </h6>
                        </div>
                        <div class="p-6">
                            <!-- Lifecycle Phase -->
                            <div class="mb-4">
                                <label class="block text-sm text-text-muted mb-1">SBOM Generation Phase</label>
                                <select class="w-full px-3 py-2 text-sm bg-card border rounded-lg text-text focus:outline-none focus:ring-2 focus:ring-primary/50"
                                        :class="validationErrors.lifecycle_phase ? 'border-danger' : 'border-border'"
                                        x-model="metadata.lifecycle_phase"
                                        @change="hasUnsavedChanges = true">
                                    <option :value="null">Select a phase...</option>
                                    <template x-for="phase in lifecyclePhases" :key="phase.value">
                                        <option :value="phase.value" x-text="phase.label"></option>
                                    </template>
                                </select>
                                <template x-if="validationErrors.lifecycle_phase">
                                    <div class="text-danger text-sm mt-1"
                                         x-text="validationErrors.lifecycle_phase"></div>
                                </template>
                            </div>
                            <!-- Lifecycle Event Dates -->
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                                <div>
                                    <label class="block text-sm text-text-muted mb-1">Release Date</label>
                                    <div class="flex items-center border border-border rounded-lg overflow-hidden">
                                        <span class="px-2 py-1.5 bg-border/30 text-text-muted text-sm"><i class="fas fa-calendar-alt"></i></span>
                                        <input type="date"
                                               class="flex-1 px-2 py-1.5 text-sm bg-card text-text border-0 focus:outline-none"
                                               x-model="metadata.release_date"
                                               @change="hasUnsavedChanges = true"
                                               placeholder="YYYY-MM-DD">
                                    </div>
                                </div>
                                <div>
                                    <label class="block text-sm text-text-muted mb-1">End of Support</label>
                                    <div class="flex items-center border border-border rounded-lg overflow-hidden">
                                        <span class="px-2 py-1.5 bg-border/30 text-text-muted text-sm"><i class="fas fa-calendar-alt"></i></span>
                                        <input type="date"
                                               class="flex-1 px-2 py-1.5 text-sm bg-card text-text border-0 focus:outline-none"
                                               x-model="metadata.end_of_support"
                                               @change="hasUnsavedChanges = true"
                                               placeholder="YYYY-MM-DD">
                                    </div>
                                </div>
                                <div>
                                    <label class="block text-sm text-text-muted mb-1">End of Life</label>
                                    <div class="flex items-center border border-border rounded-lg overflow-hidden">
                                        <span class="px-2 py-1.5 bg-border/30 text-text-muted text-sm"><i class="fas fa-calendar-alt"></i></span>
                                        <input type="date"
                                               class="flex-1 px-2 py-1.5 text-sm bg-card text-text border-0 focus:outline-none"
                                               x-model="metadata.end_of_life"
                                               @change="hasUnsavedChanges = true"
                                               placeholder="YYYY-MM-DD">
                                    </div>
                                </div>
                            </div>
                            <p class="text-text-muted text-sm mt-3 mb-0">Key lifecycle dates aligned with Common Lifecycle Enumeration (CLE)</p>
                        </div>
                    </div>
                    <!-- Licenses -->
                    <div class="tw-card shadow licenses-card-container">
                        <div class="px-6 py-4 border-b border-border">
                            <h6 class="text-base font-semibold text-text m-0 flex items-center gap-2">
                                Licenses
                                <span class="relative group">
                                    <i class="fa-regular fa-circle-question text-text-muted text-sm cursor-help"></i>
                                    <span class="absolute left-1/2 -translate-x-1/2 bottom-full mb-2 px-3 py-2 text-xs text-white bg-gray-900 rounded-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all whitespace-nowrap z-50">Software licenses or license expressions (e.g., MIT AND Apache-2.0) that apply to this component</span>
                                </span>
                            </h6>
                        </div>
                        <div class="p-6">
                            <div x-data="licensesEditor({ licenses: metadata.licenses, unknownTokens: [] })"
                                 @licenses-updated.window="metadata.licenses = $event.detail.licenses; hasUnsavedChanges = true">
                                {% include 'sboms/components/licenses_editor.html.j2' %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Actions Section -->
            <div class="mt-6 pt-6 border-t border-border">
                <div class="grid grid-cols-1 lg:grid-cols-4 gap-4">
                    <div class="lg:col-span-3">
                        <button class="tw-btn-primary w-full py-3"
                                :disabled="!isFormValid || isSaving"
                                @click="updateMetaData()">
                            <template x-if="isSaving">
                                <span>
                                    <i class="fa-solid fa-spinner fa-spin mr-2"></i>Saving Changes...
                                </span>
                            </template>
                            <template x-if="!isSaving">
                                <span>
                                    <i class="fa-solid fa-save mr-2"></i>Save Component Metadata
                                </span>
                            </template>
                        </button>
                    </div>
                    <div>
                        <button class="w-full py-3 px-4 rounded-lg border border-border text-text hover:bg-border/30 transition-colors"
                                @click="handleCancel()">
                            <i class="fa-solid fa-times mr-2"></i>
                            Cancel Changes
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Unsaved Changes Modal -->
    <div x-data="{ showUnsavedModal: false }"
         @open-unsavedChangesModal.window="showUnsavedModal = true"
         @keydown.escape.window="if(showUnsavedModal) showUnsavedModal = false">
        <div x-show="showUnsavedModal"
             x-cloak
             class="fixed inset-0 z-[1055] overflow-y-auto"
             id="unsavedChangesModal"
             role="dialog"
             aria-modal="true"
             aria-labelledby="unsavedChangesModalLabel">
            {# Backdrop #}
            <div x-show="showUnsavedModal"
                 x-transition:enter="transition ease-out duration-200"
                 x-transition:enter-start="opacity-0"
                 x-transition:enter-end="opacity-100"
                 x-transition:leave="transition ease-in duration-150"
                 x-transition:leave-start="opacity-100"
                 x-transition:leave-end="opacity-0"
                 class="fixed inset-0 bg-black/60 backdrop-blur-sm"></div>
            {# Modal Content #}
            <div class="fixed inset-0 flex items-center justify-center p-4">
                <div x-show="showUnsavedModal"
                     x-transition:enter="transition ease-out duration-200"
                     x-transition:enter-start="opacity-0 scale-95"
                     x-transition:enter-end="opacity-100 scale-100"
                     x-transition:leave="transition ease-in duration-150"
                     x-transition:leave-start="opacity-100 scale-100"
                     x-transition:leave-end="opacity-0 scale-95"
                     @click.stop
                     x-trap.noscroll="showUnsavedModal"
                     class="relative w-full max-w-md bg-card rounded-xl shadow-2xl border border-border">
                    <div class="px-6 pt-6 pb-0">
                        <h5 class="text-lg font-bold text-danger flex items-center gap-2 m-0"
                            id="unsavedChangesModalLabel">
                            <i class="fa-solid fa-triangle-exclamation"></i>Unsaved Changes
                        </h5>
                        <button type="button"
                                @click="showUnsavedModal = false"
                                class="absolute top-4 right-4 text-text-muted hover:text-text transition-colors"
                                aria-label="Close">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <div class="px-6 py-6">
                        <p class="text-text-muted m-0">You have unsaved changes. Are you sure you want to discard them?</p>
                    </div>
                    <div class="px-6 pb-6 flex justify-end gap-3">
                        <button type="button"
                                class="px-4 py-2 rounded-lg border border-border text-text font-medium hover:bg-border/30 transition-colors"
                                @click="showUnsavedModal = false">Keep Editing</button>
                        <button type="button"
                                class="px-4 py-2 rounded-lg bg-danger text-white font-medium hover:bg-danger/90 transition-colors"
                                @click="discardChanges(); showUnsavedModal = false">Discard Changes</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
