{# Create Modals (New Product, Project, Component) - rendered outside .wrapper to avoid layout clipping #}
{% with current_team=request.session.current_team %}
    {% if current_team %}
        {% if current_team.role == "owner" or current_team.role == "admin" %}
            {# New Product Modal #}
            <div id="newProductModal"
                 class="fixed inset-0 z-modal overflow-y-auto create-entity-modal"
                 x-data="formModal(true)"
                 x-show="open"
                 x-trap.inert.noscroll="open"
                 x-effect="open && handleShown(); document.body.classList.toggle('create-entity-modal-open', open)"
                 @keydown.escape.window="open = false"
                 @open-modal.window="if ($event.detail.id === 'newProductModal') open = true"
                 tabindex="-1"
                 aria-labelledby="newProductModalLabel"
                 :aria-hidden="!open"
                 style="display: none">
                <div class="modal-backdrop-overlay transition-opacity"
                     x-show="open"
                     x-transition:enter="ease-out duration-300"
                     x-transition:enter-start="opacity-0"
                     x-transition:enter-end="opacity-100"
                     x-transition:leave="ease-in duration-200"
                     x-transition:leave-start="opacity-100"
                     x-transition:leave-end="opacity-0"
                     @click="open = false"></div>
                <div class="flex min-h-full items-center justify-center p-4">
                    <div class="relative mx-auto my-8 w-full max-w-lg transform overflow-hidden rounded-lg bg-white shadow-xl transition-all"
                         x-show="open"
                         x-transition:enter="ease-out duration-300"
                         x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                         x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
                         x-transition:leave="ease-in duration-200"
                         x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
                         x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                         @click.stop>
                        <div class="px-6 py-4 border-b flex justify-between items-center">
                            <h4 id="newProductModalLabel" class="text-lg font-semibold text-gray-600">Add Product</h4>
                            <button type="button"
                                    class="text-gray-400 hover:text-gray-600 focus:outline-none"
                                    @click="open = false"
                                    aria-label="Close">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                        <div class="px-6 py-4 pt-3">
                            <form id="newProductForm"
                                  method="post"
                                  action="{% url 'core:products_dashboard' %}">
                                {% csrf_token %}
                                <div class="mb-4">
                                    <label class="block text-sm font-medium text-gray-600 mb-1"
                                           for="newProductName">
                                        Name
                                        <span class="text-danger-500">*</span>
                                    </label>
                                    <input id="newProductName"
                                           name="name"
                                           type="text"
                                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-primary focus:border-transparent"
                                           required />
                                </div>
                                <div class="mb-4">
                                    <label class="block text-sm font-medium text-gray-600 mb-1"
                                           for="newProductDescription">Description (Optional)</label>
                                    <textarea id="newProductDescription"
                                              name="description"
                                              class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-brand-primary focus:border-transparent"
                                              rows="3"
                                              placeholder="Describe your product..."></textarea>
                                </div>
                                <div class="flex justify-end gap-2 mt-4">
                                    <button type="button"
                                            class="modal-btn-secondary px-4 py-2 border border-gray-300 rounded text-gray-700 hover:bg-gray-50 transition-colors"
                                            @click="open = false">Cancel</button>
                                    <button type="submit"
                                            class="modal-btn-primary px-4 py-2 bg-brand-primary text-white rounded hover:opacity-90 transition-opacity">
                                        Create Product
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {# New Project Modal #}
            <div id="newProjectModal"
                 class="fixed inset-0 z-modal overflow-y-auto create-entity-modal"
                 x-data="formModal(true)"
                 x-show="open"
                 x-trap.inert.noscroll="open"
                 x-effect="open && handleShown(); document.body.classList.toggle('create-entity-modal-open', open)"
                 @keydown.escape.window="open = false"
                 @open-modal.window="if ($event.detail.id === 'newProjectModal') open = true"
                 tabindex="-1"
                 aria-labelledby="newProjectModalLabel"
                 :aria-hidden="!open"
                 style="display: none">
                <div class="modal-backdrop-overlay transition-opacity"
                     x-show="open"
                     x-transition:enter="ease-out duration-300"
                     x-transition:enter-start="opacity-0"
                     x-transition:enter-end="opacity-100"
                     x-transition:leave="ease-in duration-200"
                     x-transition:leave-start="opacity-100"
                     x-transition:leave-end="opacity-0"
                     @click="open = false"></div>
                <div class="flex min-h-full items-center justify-center p-4">
                    <div class="relative mx-auto my-8 w-full max-w-lg transform overflow-hidden rounded-lg bg-white shadow-xl transition-all"
                         x-show="open"
                         x-transition:enter="ease-out duration-300"
                         x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                         x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
                         x-transition:leave="ease-in duration-200"
                         x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
                         x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                         @click.stop>
                        <div class="px-6 py-4 border-b flex justify-between items-center">
                            <h4 id="newProjectModalLabel" class="text-lg font-semibold text-gray-600">Add Project</h4>
                            <button type="button"
                                    class="text-gray-400 hover:text-gray-600 focus:outline-none"
                                    @click="open = false"
                                    aria-label="Close">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                        <div class="px-6 py-4 pt-3">
                            <form id="newProjectForm"
                                  method="post"
                                  action="{% url 'core:projects_dashboard' %}">
                                {% csrf_token %}
                                <div class="mb-4">
                                    <label class="block text-sm font-medium text-gray-600 mb-1"
                                           for="newProjectName">
                                        Name
                                        <span class="text-danger-500">*</span>
                                    </label>
                                    <input id="newProjectName"
                                           name="name"
                                           type="text"
                                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-primary focus:border-transparent"
                                           required />
                                </div>
                                <div class="flex justify-end gap-2 mt-4">
                                    <button type="button"
                                            class="modal-btn-secondary px-4 py-2 border border-gray-300 rounded text-gray-700 hover:bg-gray-50 transition-colors"
                                            @click="open = false">Cancel</button>
                                    <button type="submit"
                                            class="modal-btn-primary px-4 py-2 bg-brand-primary text-white rounded hover:opacity-90 transition-opacity">
                                        Create Project
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {# New Component Modal #}
            <div id="newComponentModal"
                 class="fixed inset-0 z-modal overflow-y-auto create-entity-modal"
                 x-data="formModal(true)"
                 x-show="open"
                 x-trap.inert.noscroll="open"
                 x-effect="open && handleShown(); document.body.classList.toggle('create-entity-modal-open', open)"
                 @keydown.escape.window="open = false"
                 @open-modal.window="if ($event.detail.id === 'newComponentModal') open = true"
                 tabindex="-1"
                 aria-labelledby="newComponentModalLabel"
                 :aria-hidden="!open"
                 style="display: none">
                <div class="modal-backdrop-overlay transition-opacity"
                     x-show="open"
                     x-transition:enter="ease-out duration-300"
                     x-transition:enter-start="opacity-0"
                     x-transition:enter-end="opacity-100"
                     x-transition:leave="ease-in duration-200"
                     x-transition:leave-start="opacity-100"
                     x-transition:leave-end="opacity-0"
                     @click="open = false"></div>
                <div class="flex min-h-full items-center justify-center p-4">
                    <div class="relative mx-auto my-8 w-full max-w-lg transform overflow-hidden rounded-lg bg-white shadow-xl transition-all"
                         x-show="open"
                         x-transition:enter="ease-out duration-300"
                         x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                         x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
                         x-transition:leave="ease-in duration-200"
                         x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
                         x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                         @click.stop>
                        <div class="px-6 py-4 border-b flex justify-between items-center">
                            <h4 id="newComponentModalLabel"
                                class="text-lg font-semibold text-gray-600">Add Component</h4>
                            <button type="button"
                                    class="text-gray-400 hover:text-gray-600 focus:outline-none"
                                    @click="open = false"
                                    aria-label="Close">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                        <div class="px-6 py-4 pt-3">
                            <form id="newComponentForm"
                                  x-data="componentTypeSync()"
                                  method="post"
                                  action="{% url 'core:components_dashboard' %}">
                                {% csrf_token %}
                                <div class="mb-4">
                                    <label class="block text-sm font-medium text-gray-600 mb-1"
                                           for="newComponentName">
                                        Name
                                        <span class="text-danger-500">*</span>
                                    </label>
                                    <input id="newComponentName"
                                           name="name"
                                           type="text"
                                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-primary focus:border-transparent"
                                           required />
                                </div>
                                <div class="mb-4">
                                    <label class="block text-sm font-medium text-gray-600 mb-1"
                                           for="newComponentType">
                                        Type
                                        <span class="text-danger-500">*</span>
                                    </label>
                                    <select id="newComponentType"
                                            name="component_type"
                                            x-model="componentType"
                                            x-on:change="handleTypeChange()"
                                            class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-white focus:outline-none focus:ring-2 focus:ring-brand-primary"
                                            required>
                                        <option value="sbom">SBOM</option>
                                        <option value="document">Document</option>
                                    </select>
                                    <div class="text-sm text-gray-600 mt-1">Choose the type of component you're creating</div>
                                </div>
                                <div class="mb-4"
                                     id="newComponentGlobalToggleGroup"
                                     x-show="isDocument"
                                     x-transition>
                                    <div class="flex items-center">
                                        <input id="newComponentIsGlobal"
                                               name="is_global"
                                               class="w-4 h-4 text-brand-primary border-gray-300 rounded focus:ring-brand-primary"
                                               type="checkbox"
                                               role="switch">
                                        <label class="ml-2 text-sm font-medium text-gray-600"
                                               for="newComponentIsGlobal">
                                            Workspace-wide component (documents only)
                                        </label>
                                    </div>
                                    <div class="text-sm text-gray-600 mt-1">
                                        Global components live at the workspace level and are not tied to a specific project. Use for documents and attestations.
                                    </div>
                                </div>
                                <div class="flex justify-end gap-2 mt-4">
                                    <button type="button"
                                            class="modal-btn-secondary px-4 py-2 border border-gray-300 rounded text-gray-700 hover:bg-gray-50 transition-colors"
                                            @click="open = false">Cancel</button>
                                    <button type="submit"
                                            class="modal-btn-primary px-4 py-2 bg-brand-primary text-white rounded hover:opacity-90 transition-opacity">
                                        Create Component
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endif %}
{% endwith %}
