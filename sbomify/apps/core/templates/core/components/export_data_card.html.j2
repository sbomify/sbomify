{% load static %}
<div class="tw-card mt-6">
    <div class="px-6 py-4 border-b border-border">
        <h4 class="text-lg font-semibold text-text m-0">Export Data</h4>
    </div>
    <div class="p-6 text-center">
        <p class="text-text-muted mb-4">Download aggregated SBOM containing all components in this project</p>
        <div class="flex justify-center gap-3 flex-wrap">
            <a class="inline-flex items-center gap-2 px-4 py-2 border border-border rounded-lg text-text hover:bg-border/30 transition-colors no-underline"
               href="/api/v1/projects/{{ project_id }}/download"
               title="Download as CycloneDX">
                <img src="{% static 'img/cyclonedx-logo.svg' %}"
                     alt="CycloneDX"
                     class="h-[18px] w-auto"
                     width="18"
                     height="18">
                <i class="fas fa-download text-primary"></i>
            </a>
            <span class="inline-flex items-center gap-2 px-4 py-2 border border-border rounded-lg text-text-muted opacity-50 cursor-not-allowed"
                  role="button"
                  aria-disabled="true">
                <img src="{% static 'img/spdx-logo.svg' %}"
                     alt="SPDX"
                     class="h-[18px] w-auto opacity-50"
                     width="18"
                     height="18">
                <span class="text-xs">coming soon</span>
            </span>
        </div>
    </div>
</div>
