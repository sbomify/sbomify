{% load cache %}
{# Modern Balanced Footer Component #}
{% if debug %}
    <footer class="modern-footer">
        <div class="container-fluid">
            <div class="footer-content">
                <div class="footer-left">
                    <div class="brand-section">
                        <a href="https://sbomify.com"
                           class="brand-link"
                           target="_blank"
                           rel="noopener">
                            <strong>sbomify</strong>
                        </a>
                        {% if request.user.is_authenticated %}
                            {% if build_type == 'release' and app_version %}
                                {# Release build: show version with link to release notes #}
                                <a href="https://github.com/sbomify/sbomify/releases/tag/v{{ app_version }}"
                                   class="version-tag"
                                   target="_blank"
                                   rel="noopener"
                                   title="View release notes">v{{ app_version }}</a>
                                {% if git_commit %}
                                    <a href="https://github.com/sbomify/sbomify/commit/{{ git_commit_full }}"
                                       class="commit-tag"
                                       target="_blank"
                                       rel="noopener"
                                       title="View commit {{ git_commit }}">{{ git_commit }}</a>
                                {% endif %}
                            {% elif git_commit %}
                                {# Development/branch build: show branch @ commit #}
                                <span class="version-tag dev-build"
                                      title="Development build from {{ git_ref }}">
                                    {% if git_ref %}{{ git_ref }} @{% endif %}
                                    <a href="https://github.com/sbomify/sbomify/commit/{{ git_commit_full }}"
                                       target="_blank"
                                       rel="noopener">{{ git_commit }}</a>
                                </span>
                            {% elif app_version %}
                                {# Fallback: just show version (local development) #}
                                <a href="https://github.com/sbomify/sbomify/releases/tag/v{{ app_version }}"
                                   class="version-tag"
                                   target="_blank"
                                   rel="noopener"
                                   title="View release notes">v{{ app_version }}</a>
                            {% endif %}
                        {% endif %}
                    </div>
                    <div class="copyright-text">© {% now "Y" %} sbomify, ltd. All rights reserved.</div>
                </div>
                <div class="footer-right">
                    <nav class="footer-actions">
                        <a href="{% url 'core:support_contact' %}" class="action-link">
                            <i class="fas fa-envelope"></i>
                            <span>Contact Support</span>
                        </a>
                    </nav>
                </div>
            </div>
        </div>
    </footer>
{% else %}
