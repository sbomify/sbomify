{% load cache %}
{# Modern Balanced Footer Component #}
{% if debug %}
    <footer class="modern-footer">
        <div class="container-fluid">
            <div class="footer-content">
                <div class="footer-left">
                    <div class="copyright-text">© {% now "Y" %} sbomify, ltd. All rights reserved.</div>
                </div>
                <div class="footer-right">
                    <nav class="footer-actions">
                        <a href="{% url 'core:support_contact' %}" class="action-link">
                            <i class="fas fa-envelope"></i>
                            <span>Contact Support</span>
                        </a>
                    </nav>
                </div>
            </div>
        </div>
    </footer>
    {% if git_commit %}
        <!-- build: {% if build_type == 'release' and app_version %}v{{ app_version }} ({{ git_commit }}){% else %}{{ git_commit }}{% endif %} -->
    {% endif %}
{% else %}
    {% cache 3600 'footer' app_version build_type request.user.is_authenticated %}
    <footer class="modern-footer">
        <div class="container-fluid">
            <div class="footer-content">
                <div class="footer-left">
                    <div class="copyright-text">© {% now "Y" %} sbomify, ltd. All rights reserved.</div>
                </div>
                <div class="footer-right">
                    <nav class="footer-actions">
                        <a href="{% url 'core:support_contact' %}" class="action-link">
                            <i class="fas fa-envelope"></i>
                            <span>Contact Support</span>
                        </a>
                    </nav>
                </div>
            </div>
        </div>
    </footer>
{% endcache %}
{% if git_commit %}
    <!-- build: {% if build_type == 'release' and app_version %}v{{ app_version }} ({{ git_commit }}){% else %}{{ git_commit }}{% endif %} -->
{% endif %}
{% endif %}
