{% load cache %}
{# Tailwind Footer Component #}
{% if debug %}
    <footer class="pl-0 lg:pl-64 transition-all duration-300 border-t border-border/50 bg-surface/30 backdrop-blur-sm"
            :class="{ 'lg:!pl-16': sidebarCollapsed }">
        <div class="max-w-7xl mx-auto px-6 py-4">
            <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
                {# Copyright #}
                <div class="text-text-muted text-sm">© {% now "Y" %} sbomify, ltd. All rights reserved.</div>
                {# Links #}
                <nav class="flex items-center gap-6">
                    <a href="{% url 'core:support_contact' %}"
                       class="flex items-center gap-2 text-sm text-text-muted hover:text-primary transition-colors duration-200">
                        <i class="fas fa-envelope text-xs"></i>
                        <span>Contact Support</span>
                    </a>
                </nav>
            </div>
        </div>
    </footer>
    {% if git_commit %}
        <!-- build: {% if build_type == 'release' and app_version %}v{{ app_version }} ({{ git_commit }}){% else %}{{ git_commit }}{% endif %} -->
    {% endif %}
{% else %}
    {% cache 3600 'footer' app_version build_type request.user.is_authenticated %}
    <footer class="pl-0 lg:pl-64 transition-all duration-300 border-t border-border/50 bg-surface/30 backdrop-blur-sm"
            :class="{ 'lg:!pl-16': sidebarCollapsed }">
        <div class="max-w-7xl mx-auto px-6 py-4">
            <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
                {# Copyright #}
                <div class="text-text-muted text-sm">© {% now "Y" %} sbomify, ltd. All rights reserved.</div>
                {# Links #}
                <nav class="flex items-center gap-6">
                    <a href="{% url 'core:support_contact' %}"
                       class="flex items-center gap-2 text-sm text-text-muted hover:text-primary transition-colors duration-200">
                        <i class="fas fa-envelope text-xs"></i>
                        <span>Contact Support</span>
                    </a>
                </nav>
            </div>
        </div>
    </footer>
{% endcache %}
{% if git_commit %}
    <!-- build: {% if build_type == 'release' and app_version %}v{{ app_version }} ({{ git_commit }}){% else %}{{ git_commit }}{% endif %} -->
{% endif %}
{% endif %}
