{% load utils %}
<div x-cloak x-data="messagesHtmx()" style="display: none;">
    <script type="text/data" x-ref="messagesHtmxData">
    {
        "messages": [
            {% for message in messages %}
            {
                "level_tag": "{{ message.level_tag }}",
                "message": "{{ message|escapejs }}"
            }{% if not forloop.last %},{% endif %}
            {% endfor %}
        ],
        "pendingInvitationsCount": {{ pending_invitations_count|default:0 }},
        "pendingAccessRequestsCount": {{ pending_access_requests_count|default:0 }}
    }
    </script>
</div>
