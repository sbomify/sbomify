{% extends "core/dashboard_base.html.j2" %}
{% load widget_tweaks %}
{% load django_vite %}
{% block title %}Set Up Your SBOM Identity - sbomify{% endblock %}
{% block content %}
    <div class="py-8">
        <div class="flex justify-center">
            <div class="w-full max-w-lg">
                <div class="tw-card shadow-lg rounded-2xl border-0 relative">
                    {% if current_step == 'setup' %}
                        <!-- Close/Skip Button -->
                        <a href="{% url 'core:dashboard' %}"
                           class="absolute top-4 right-4 p-2 text-text-muted hover:text-text bg-transparent border-0 cursor-pointer"
                           aria-label="Skip for now"
                           title="Skip for now">
                            <i class="fas fa-times"></i>
                        </a>
                        <!-- Setup Step -->
                        <div class="p-6 md:p-10"
                             x-data="onboardingWizard({ initialEmail: '{{ form.email.value|default:''|escapejs }}', initialContactName: '{{ form.contact_name.value|default:''|escapejs }}' })">
                            <!-- Header with centered icon -->
                            <div class="text-center mb-6">
                                <div class="inline-flex items-center justify-center bg-primary/10 rounded-full mb-4 w-16 h-16">
                                    <i class="fas fa-id-card text-primary text-2xl"></i>
                                </div>
                                <h1 class="text-xl font-semibold text-text mb-2">Set Up Your SBOM Identity</h1>
                                <p class="text-text-muted m-0">Get started in under a minute</p>
                            </div>
                            <!-- Value Proposition Callout -->
                            <div class="bg-border/20 rounded-lg p-4 mb-6 border-l-4 border-l-primary">
                                <p class="mb-2 text-sm text-text">
                                    This information identifies you as the <strong>supplier</strong> in your SBOMs
                                    and enables <strong>NTIA compliance</strong>.
                                </p>
                                <a href="{{ sbom_augmentation_url }}"
                                   target="_blank"
                                   rel="noopener noreferrer"
                                   class="text-primary no-underline hover:underline text-sm">
                                    <i class="fas fa-book-open mr-1"></i>
                                    Learn about SBOM augmentation
                                    <i class="fas fa-external-link-alt ml-1 text-xs"></i>
                                </a>
                            </div>
                            <!-- Form -->
                            <form method="post"
                                  action="{% url 'teams:onboarding_wizard' %}"
                                  @submit="handleSubmit()">
                                {% csrf_token %}
                                {% if form.non_field_errors %}
                                    <div class="p-3 rounded-lg bg-danger/10 text-danger text-sm mb-4"
                                         role="alert">
                                        {% for error in form.non_field_errors %}{{ error }}{% endfor %}
                                    </div>
                                {% endif %}
                                <!-- Company Name Field -->
                                <div class="mb-4">
                                    <label for="id_company_name"
                                           class="block text-sm font-medium text-text mb-1">
                                        Company / Organization Name <span class="text-danger">*</span>
                                    </label>
                                    <input type="text"
                                           class="w-full px-3 py-2.5 border border-border rounded-lg bg-background text-text focus:outline-none focus:ring-2 focus:ring-primary/30 focus:border-primary transition-colors"
                                           id="id_company_name"
                                           name="company_name"
                                           placeholder="e.g., Acme Corporation"
                                           required
                                           x-model="companyName"
                                           @blur="markTouched('companyName')"
                                           :class="getValidationClass('companyName')"
                                           {% if form.company_name.value %}value="{{ form.company_name.value }}"{% endif %}>
                                    {% if form.company_name.errors %}
                                        <div class="text-danger text-sm mt-1">
                                            {% for error in form.company_name.errors %}{{ error }}{% endfor %}
                                        </div>
                                    {% endif %}
                                    <div class="text-xs text-text-muted mt-1">Identifies you as the supplier. Appears in your Trust Center.</div>
                                </div>
                                <!-- Contact Name Field -->
                                <div class="mb-4">
                                    <label for="id_contact_name"
                                           class="block text-sm font-medium text-text mb-1">
                                        Contact Name <span class="text-danger">*</span>
                                    </label>
                                    <input type="text"
                                           class="w-full px-3 py-2.5 border border-border rounded-lg bg-background text-text focus:outline-none focus:ring-2 focus:ring-primary/30 focus:border-primary transition-colors"
                                           id="id_contact_name"
                                           name="contact_name"
                                           placeholder="e.g., Jane Smith"
                                           required
                                           x-model="contactName"
                                           @blur="markTouched('contactName')"
                                           :class="getValidationClass('contactName')"
                                           {% if form.contact_name.value %}value="{{ form.contact_name.value }}"{% endif %}>
                                    {% if form.contact_name.errors %}
                                        <div class="text-danger text-sm mt-1">
                                            {% for error in form.contact_name.errors %}{{ error }}{% endfor %}
                                        </div>
                                    {% endif %}
                                    <div class="text-xs text-text-muted mt-1">
                                        Required for NTIA compliance. The person responsible for SBOM inquiries.
                                    </div>
                                </div>
                                <!-- Email Field -->
                                <div class="mb-4">
                                    <label for="id_email" class="block text-sm font-medium text-text mb-1">Contact Email</label>
                                    <input type="email"
                                           class="w-full px-3 py-2.5 border border-border rounded-lg bg-background text-text focus:outline-none focus:ring-2 focus:ring-primary/30 focus:border-primary transition-colors"
                                           id="id_email"
                                           name="email"
                                           placeholder="security@example.com"
                                           x-model="email"
                                           @blur="markTouched('email')"
                                           :class="getValidationClass('email')"
                                           {% if form.email.value %}value="{{ form.email.value }}"{% endif %}>
                                    {% if form.email.errors %}
                                        <div class="text-danger text-sm mt-1">
                                            {% for error in form.email.errors %}{{ error }}{% endfor %}
                                        </div>
                                    {% endif %}
                                    <div class="text-xs text-text-muted mt-1">For security inquiries. Embedded in SBOM metadata.</div>
                                </div>
                                <!-- Website Field -->
                                <div class="mb-4">
                                    <label for="id_website" class="block text-sm font-medium text-text mb-1">
                                        Website <span class="text-text-muted font-normal">(optional)</span>
                                    </label>
                                    <input type="url"
                                           class="w-full px-3 py-2.5 border border-border rounded-lg bg-background text-text focus:outline-none focus:ring-2 focus:ring-primary/30 focus:border-primary transition-colors"
                                           id="id_website"
                                           name="website"
                                           placeholder="https://example.com"
                                           x-model="website"
                                           @blur="markTouched('website')"
                                           :class="getValidationClass('website')"
                                           {% if form.website.value %}value="{{ form.website.value }}"{% endif %}>
                                    {% if form.website.errors %}
                                        <div class="text-danger text-sm mt-1">
                                            {% for error in form.website.errors %}{{ error }}{% endfor %}
                                        </div>
                                    {% endif %}
                                    <div class="text-xs text-text-muted mt-1">Added to SBOM external references.</div>
                                </div>
                                <!-- Auto-creation Info -->
                                <div class="bg-info/10 rounded-lg p-4 mb-6">
                                    <div class="flex items-start gap-3">
                                        <i class="fas fa-wand-magic-sparkles text-info mt-0.5"></i>
                                        <p class="m-0 text-sm text-text">
                                            We'll automatically create your first <strong>product</strong>,
                                            <strong>project</strong>, and <strong>SBOM component</strong>
                                            so you can start uploading right away.
                                        </p>
                                    </div>
                                </div>
                                <!-- Submit Button with Loading State -->
                                <button type="submit"
                                        class="w-full py-3 px-4 text-lg font-semibold rounded-xl bg-text text-background hover:opacity-90 hover:-translate-y-0.5 hover:shadow-md transition-all disabled:opacity-60 disabled:cursor-not-allowed"
                                        :disabled="!canSubmit">
                                    <span x-show="!isSubmitting">
                                        Create My SBOM Identity
                                        <i class="fas fa-arrow-right ml-2"></i>
                                    </span>
                                    <span x-show="isSubmitting" x-cloak>
                                        <i class="fas fa-spinner animate-spin mr-2"></i>
                                        Setting up your workspace...
                                    </span>
                                </button>
                            </form>
                        </div>
                    {% else %}
                        <!-- Complete Step -->
                        <div class="text-center p-6 md:p-10">
                            <!-- Animated Success Icon -->
                            <div class="mb-6">
                                <div class="success-checkmark">
                                    <div class="check-icon">
                                        <span class="icon-line line-tip"></span>
                                        <span class="icon-line line-long"></span>
                                        <div class="icon-circle"></div>
                                        <div class="icon-fix"></div>
                                    </div>
                                </div>
                            </div>
                            <h2 class="text-xl font-semibold text-text mb-6">You're All Set!</h2>
                            <!-- Created Entities Summary -->
                            <div class="mb-6">
                                <p class="text-text-muted mb-3">We've created everything you need to get started:</p>
                                <div class="bg-border/20 rounded-lg p-4 text-left">
                                    <div class="flex items-center py-2 border-b border-border">
                                        <i class="fas fa-building text-text-muted mr-3 w-5"></i>
                                        <span class="text-text-muted text-sm mr-2">Workspace:</span>
                                        <strong class="text-sm text-text">{{ company_name }}'s Workspace</strong>
                                    </div>
                                    <div class="flex items-center py-2 border-b border-border">
                                        <i class="fas fa-address-card text-text-muted mr-3 w-5"></i>
                                        <span class="text-text-muted text-sm mr-2">Contact Profile:</span>
                                        <strong class="text-sm text-text">Default profile created</strong>
                                    </div>
                                    <div class="flex items-center py-2 border-b border-border">
                                        <i class="fas fa-cube text-text-muted mr-3 w-5"></i>
                                        <span class="text-text-muted text-sm mr-2">Product:</span>
                                        <strong class="text-sm text-text">{{ company_name }}</strong>
                                    </div>
                                    <div class="flex items-center py-2 border-b border-border">
                                        <i class="fas fa-folder text-text-muted mr-3 w-5"></i>
                                        <span class="text-text-muted text-sm mr-2">Project:</span>
                                        <strong class="text-sm text-text">Main Project</strong>
                                    </div>
                                    <div class="flex items-center py-2">
                                        <i class="fas fa-puzzle-piece text-text-muted mr-3 w-5"></i>
                                        <span class="text-text-muted text-sm mr-2">Component:</span>
                                        <strong class="text-sm text-text">Main Component</strong>
                                        <span class="ml-2 px-2 py-0.5 text-xs font-medium rounded-full bg-primary text-white">SBOM</span>
                                    </div>
                                </div>
                            </div>
                            <!-- Next Step Card -->
                            <div class="bg-primary/10 rounded-xl p-5 mb-6">
                                <div class="flex items-start text-left gap-3">
                                    <div class="bg-primary rounded-full p-2 flex-shrink-0">
                                        <i class="fas fa-cloud-upload-alt text-white"></i>
                                    </div>
                                    <div>
                                        <h5 class="font-bold text-text mb-2">Next: Upload Your First SBOM</h5>
                                        <p class="text-text-muted m-0 text-sm">
                                            Use our GitHub Action or upload manually to start building your SBOM catalog.
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <!-- Component Types Tip -->
                            <aside role="complementary"
                                   aria-label="Additional information about component types"
                                   class="bg-warning/10 rounded-lg p-4 mb-6 text-left">
                                <div class="flex items-start gap-3">
                                    <i class="fas fa-lightbulb text-warning mt-0.5"></i>
                                    <div>
                                        <p class="font-semibold mb-2 text-sm text-text">Tip: Components can hold SBOMs or Documents</p>
                                        <ul class="mb-2 pl-4 text-sm text-text-muted list-disc">
                                            <li>
                                                <strong class="text-text">SBOM components:</strong> Software Bill of Materials (CycloneDX, SPDX)
                                            </li>
                                            <li>
                                                <strong class="text-text">Document components:</strong> SOC 2, ISO 27001, Pen Test Reports, etc.
                                            </li>
                                        </ul>
                                        <p class="text-text-muted m-0 text-sm">
                                            Create Document components later for your Trust Center to share compliance artifacts.
                                        </p>
                                    </div>
                                </div>
                            </aside>
                            <!-- Primary CTA -->
                            <a href="{% url 'core:component_details' component_id=component_id %}"
                               class="block w-full py-3 px-4 text-lg font-semibold rounded-xl bg-text text-background hover:opacity-90 hover:-translate-y-0.5 hover:shadow-md transition-all no-underline mb-4">
                                Go to Component
                                <i class="fas fa-arrow-right ml-2"></i>
                            </a>
                            <!-- Secondary Link -->
                            <div>
                                <a href="{{ sbom_augmentation_url }}"
                                   target="_blank"
                                   rel="noopener noreferrer"
                                   class="text-text-muted no-underline hover:text-text text-sm">
                                    <i class="fas fa-book-open mr-1"></i>
                                    Read the SBOM lifecycle guide
                                    <i class="fas fa-external-link-alt ml-1 text-xs"></i>
                                </a>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    {% vite_asset 'sbomify/apps/teams/js/main.ts' %}
{% endblock %}
{% block styles %}
    <style>
        /* Success Checkmark Animation */
        .success-checkmark {
            width: 80px;
            height: 80px;
            margin: 0 auto;
        }

        .success-checkmark .check-icon {
            width: 80px;
            height: 80px;
            position: relative;
            border-radius: 50%;
            box-sizing: content-box;
            border: 4px solid rgb(var(--color-success));
        }

        .success-checkmark .check-icon::before {
            top: 3px;
            left: -2px;
            width: 30px;
            transform-origin: 100% 50%;
            border-radius: 100px 0 0 100px;
        }

        .success-checkmark .check-icon::after {
            top: 0;
            left: 30px;
            width: 60px;
            transform-origin: 0 50%;
            border-radius: 0 100px 100px 0;
            animation: rotate-circle 1.25s ease-in;
        }

        .success-checkmark .check-icon::before,
        .success-checkmark .check-icon::after {
            content: '';
            height: 100px;
            position: absolute;
            background: var(--surface-card, #fff);
            transform: rotate(-45deg);
        }

        .success-checkmark .check-icon .icon-line {
            height: 5px;
            background-color: rgb(var(--color-success));
            display: block;
            border-radius: 2px;
            position: absolute;
            z-index: 10;
        }

        .success-checkmark .check-icon .icon-line.line-tip {
            top: 46px;
            left: 14px;
            width: 25px;
            transform: rotate(45deg);
            animation: icon-line-tip 0.75s;
        }

        .success-checkmark .check-icon .icon-line.line-long {
            top: 38px;
            right: 8px;
            width: 47px;
            transform: rotate(-45deg);
            animation: icon-line-long 0.75s;
        }

        .success-checkmark .check-icon .icon-circle {
            top: -4px;
            left: -4px;
            z-index: 10;
            width: 80px;
            height: 80px;
            border-radius: 50%;
            position: absolute;
            box-sizing: content-box;
            border: 4px solid rgb(var(--color-success) / 0.5);
        }

        .success-checkmark .check-icon .icon-fix {
            top: 8px;
            width: 5px;
            left: 26px;
            z-index: 1;
            height: 85px;
            position: absolute;
            transform: rotate(-45deg);
            background-color: var(--surface-card, #fff);
        }

        @keyframes rotate-circle {
            0% { transform: rotate(-45deg); }
            5% { transform: rotate(-45deg); }
            12% { transform: rotate(-405deg); }
            100% { transform: rotate(-405deg); }
        }

        @keyframes icon-line-tip {
            0% { width: 0; left: 1px; top: 19px; }
            54% { width: 0; left: 1px; top: 19px; }
            70% { width: 50px; left: -8px; top: 37px; }
            84% { width: 17px; left: 21px; top: 48px; }
            100% { width: 25px; left: 14px; top: 46px; }
        }

        @keyframes icon-line-long {
            0% { width: 0; right: 46px; top: 54px; }
            65% { width: 0; right: 46px; top: 54px; }
            84% { width: 55px; right: 0px; top: 35px; }
            100% { width: 47px; right: 8px; top: 38px; }
        }
    </style>
{% endblock %}
