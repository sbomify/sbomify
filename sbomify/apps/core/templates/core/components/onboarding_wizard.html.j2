{% extends "core/dashboard_base.html.j2" %}
{% load widget_tweaks %}
{% load django_vite %}
{% block title %}Set Up Your SBOM Identity - sbomify{% endblock %}
{% block content %}
    <div class="container-fluid py-4">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-lg rounded-4 border-0 position-relative">
                    {% if current_step == 'setup' %}
                        <!-- Close/Skip Button -->
                        <a href="{% url 'core:dashboard' %}"
                           class="btn-close position-absolute top-0 end-0 m-3"
                           aria-label="Skip for now"
                           title="Skip for now"></a>
                        <!-- Setup Step -->
                        <div class="card-body p-4 p-md-5"
                             x-data="onboardingWizard({ initialEmail: '{{ form.email.value|default:''|escapejs }}', initialContactName: '{{ form.contact_name.value|default:''|escapejs }}' })">
                            <!-- Header with centered icon -->
                            <div class="text-center mb-4">
                                <div class="d-inline-flex align-items-center justify-content-center bg-primary bg-opacity-10 rounded-circle mb-3"
                                     style="width: 64px;
                                            height: 64px">
                                    <i class="fas fa-id-card text-primary fa-2x"></i>
                                </div>
                                <h1 class="h3 fw-semibold mb-2">Set Up Your SBOM Identity</h1>
                                <p class="text-body-secondary mb-0">Get started in under a minute</p>
                            </div>
                            <!-- Value Proposition Callout -->
                            <div class="bg-light rounded-3 p-3 mb-4 border-start border-4 border-primary">
                                <p class="mb-2 small">
                                    This information identifies you as the <strong>supplier</strong> in your SBOMs
                                    and enables <strong>NTIA compliance</strong>.
                                </p>
                                <a href="{{ sbom_augmentation_url }}"
                                   target="_blank"
                                   rel="noopener noreferrer"
                                   class="text-primary text-decoration-none small">
                                    <i class="fas fa-book-open me-1"></i>
                                    Learn about SBOM augmentation
                                    <i class="fas fa-external-link-alt ms-1" style="font-size: 0.7em;"></i>
                                </a>
                            </div>
                            <!-- Form -->
                            <form method="post"
                                  action="{% url 'teams:onboarding_wizard' %}"
                                  @submit="handleSubmit()">
                                {% csrf_token %}
                                {% if form.non_field_errors %}
                                    <div class="alert alert-danger bg-danger-subtle border-0 mb-4"
                                         role="alert">
                                        {% for error in form.non_field_errors %}{{ error }}{% endfor %}
                                    </div>
                                {% endif %}
                                <!-- Company Name Field - Floating Label -->
                                <div class="form-floating mb-4">
                                    <input type="text"
                                           class="form-control"
                                           id="id_company_name"
                                           name="company_name"
                                           placeholder="e.g., Acme Corporation"
                                           required
                                           x-model="companyName"
                                           @blur="markTouched('companyName')"
                                           :class="getValidationClass('companyName')"
                                           {% if form.company_name.value %}value="{{ form.company_name.value }}"{% endif %}>
                                    <label for="id_company_name">
                                        Company / Organization Name <span class="text-danger">*</span>
                                    </label>
                                    {% if form.company_name.errors %}
                                        <div class="invalid-feedback d-block">
                                            {% for error in form.company_name.errors %}{{ error }}{% endfor %}
                                        </div>
                                    {% endif %}
                                    <div class="form-text text-body-secondary">Identifies you as the supplier. Appears in your Trust Center.</div>
                                </div>
                                <!-- Contact Name Field - Floating Label -->
                                <div class="form-floating mb-4">
                                    <input type="text"
                                           class="form-control"
                                           id="id_contact_name"
                                           name="contact_name"
                                           placeholder="e.g., Jane Smith"
                                           required
                                           x-model="contactName"
                                           @blur="markTouched('contactName')"
                                           :class="getValidationClass('contactName')"
                                           {% if form.contact_name.value %}value="{{ form.contact_name.value }}"{% endif %}>
                                    <label for="id_contact_name">
                                        Contact Name <span class="text-danger">*</span>
                                    </label>
                                    {% if form.contact_name.errors %}
                                        <div class="invalid-feedback d-block">
                                            {% for error in form.contact_name.errors %}{{ error }}{% endfor %}
                                        </div>
                                    {% endif %}
                                    <div class="form-text text-body-secondary">
                                        Required for NTIA compliance. The person responsible for SBOM inquiries.
                                    </div>
                                </div>
                                <!-- Email Field - Floating Label -->
                                <div class="form-floating mb-4">
                                    <input type="email"
                                           class="form-control"
                                           id="id_email"
                                           name="email"
                                           placeholder="security@example.com"
                                           x-model="email"
                                           @blur="markTouched('email')"
                                           :class="getValidationClass('email')"
                                           {% if form.email.value %}value="{{ form.email.value }}"{% endif %}>
                                    <label for="id_email">Contact Email</label>
                                    {% if form.email.errors %}
                                        <div class="invalid-feedback d-block">
                                            {% for error in form.email.errors %}{{ error }}{% endfor %}
                                        </div>
                                    {% endif %}
                                    <div class="form-text text-body-secondary">For security inquiries. Embedded in SBOM metadata.</div>
                                </div>
                                <!-- Website Field - Floating Label -->
                                <div class="form-floating mb-4">
                                    <input type="url"
                                           class="form-control"
                                           id="id_website"
                                           name="website"
                                           placeholder="https://example.com"
                                           x-model="website"
                                           @blur="markTouched('website')"
                                           :class="getValidationClass('website')"
                                           {% if form.website.value %}value="{{ form.website.value }}"{% endif %}>
                                    <label for="id_website">
                                        Website <span class="text-body-secondary fw-normal">(optional)</span>
                                    </label>
                                    {% if form.website.errors %}
                                        <div class="invalid-feedback d-block">
                                            {% for error in form.website.errors %}{{ error }}{% endfor %}
                                        </div>
                                    {% endif %}
                                    <div class="form-text text-body-secondary">Added to SBOM external references.</div>
                                </div>
                                <!-- Auto-creation Info -->
                                <div class="bg-info bg-opacity-10 rounded-3 p-3 mb-4">
                                    <div class="d-flex align-items-start">
                                        <div class="flex-shrink-0">
                                            <i class="fas fa-wand-magic-sparkles text-info"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <p class="mb-0 small">
                                                We'll automatically create your first <strong>product</strong>,
                                                <strong>project</strong>, and <strong>SBOM component</strong>
                                                so you can start uploading right away.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <!-- Submit Button with Loading State -->
                                <button type="submit"
                                        class="btn btn-lg btn-dark w-100 py-3 rounded-3"
                                        :disabled="!canSubmit">
                                    <span x-show="!isSubmitting">
                                        Create My SBOM Identity
                                        <i class="fas fa-arrow-right ms-2"></i>
                                    </span>
                                    <span x-show="isSubmitting" x-cloak>
                                        <i class="fas fa-spinner fa-spin me-2"></i>
                                        Setting up your workspace...
                                    </span>
                                </button>
                            </form>
                        </div>
                    {% else %}
                        <!-- Complete Step -->
                        <div class="card-body text-center p-4 p-md-5">
                            <!-- Animated Success Icon -->
                            <div class="mb-4">
                                <div class="success-checkmark">
                                    <div class="check-icon">
                                        <span class="icon-line line-tip"></span>
                                        <span class="icon-line line-long"></span>
                                        <div class="icon-circle"></div>
                                        <div class="icon-fix"></div>
                                    </div>
                                </div>
                            </div>
                            <h2 class="h3 fw-semibold mb-4">You're All Set!</h2>
                            <!-- Created Entities Summary -->
                            <div class="mb-4">
                                <p class="text-body-secondary mb-3">We've created everything you need to get started:</p>
                                <div class="bg-light rounded-3 p-3 text-start">
                                    <div class="d-flex align-items-center py-2 border-bottom">
                                        <i class="fas fa-building text-body-secondary me-3" style="width: 20px;"></i>
                                        <span class="text-body-secondary me-2 small">Workspace:</span>
                                        <strong class="small">{{ company_name }}'s Workspace</strong>
                                    </div>
                                    <div class="d-flex align-items-center py-2 border-bottom">
                                        <i class="fas fa-address-card text-body-secondary me-3"
                                           style="width: 20px"></i>
                                        <span class="text-body-secondary me-2 small">Contact Profile:</span>
                                        <strong class="small">Default profile created</strong>
                                    </div>
                                    <div class="d-flex align-items-center py-2 border-bottom">
                                        <i class="fas fa-cube text-body-secondary me-3" style="width: 20px;"></i>
                                        <span class="text-body-secondary me-2 small">Product:</span>
                                        <strong class="small">{{ company_name }}</strong>
                                    </div>
                                    <div class="d-flex align-items-center py-2 border-bottom">
                                        <i class="fas fa-folder text-body-secondary me-3" style="width: 20px;"></i>
                                        <span class="text-body-secondary me-2 small">Project:</span>
                                        <strong class="small">Main Project</strong>
                                    </div>
                                    <div class="d-flex align-items-center py-2">
                                        <i class="fas fa-puzzle-piece text-body-secondary me-3"
                                           style="width: 20px"></i>
                                        <span class="text-body-secondary me-2 small">Component:</span>
                                        <strong class="small">Main Component</strong>
                                        <span class="badge bg-primary ms-2">SBOM</span>
                                    </div>
                                </div>
                            </div>
                            <!-- Next Step Card -->
                            <div class="card border-0 bg-primary bg-opacity-10 mb-4">
                                <div class="card-body p-4">
                                    <div class="d-flex align-items-start text-start">
                                        <div class="bg-primary rounded-circle p-2 me-3 flex-shrink-0">
                                            <i class="fas fa-cloud-upload-alt text-white"></i>
                                        </div>
                                        <div>
                                            <h5 class="fw-bold mb-2">Next: Upload Your First SBOM</h5>
                                            <p class="text-body-secondary mb-0 small">
                                                Use our GitHub Action or upload manually to start building your SBOM catalog.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Component Types Tip -->
                            <aside role="complementary"
                                   aria-label="Additional information about component types"
                                   class="bg-warning bg-opacity-10 rounded-3 p-3 mb-4 text-start">
                                <div class="d-flex align-items-start">
                                    <div class="flex-shrink-0" aria-hidden="true">
                                        <i class="fas fa-lightbulb text-warning"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <p class="fw-semibold mb-2 small">Tip: Components can hold SBOMs or Documents</p>
                                        <ul class="mb-2 ps-3 small">
                                            <li>
                                                <strong>SBOM components:</strong> Software Bill of Materials (CycloneDX, SPDX)
                                            </li>
                                            <li>
                                                <strong>Document components:</strong> SOC 2, ISO 27001, Pen Test Reports, etc.
                                            </li>
                                        </ul>
                                        <p class="text-body-secondary mb-0 small">
                                            Create Document components later for your Trust Center to share compliance artifacts.
                                        </p>
                                    </div>
                                </div>
                            </aside>
                            <!-- Primary CTA -->
                            <a href="{% url 'core:component_details' component_id=component_id %}"
                               class="btn btn-lg btn-dark w-100 py-3 rounded-3 mb-3">
                                Go to Component
                                <i class="fas fa-arrow-right ms-2"></i>
                            </a>
                            <!-- Secondary Link -->
                            <div>
                                <a href="{{ sbom_augmentation_url }}"
                                   target="_blank"
                                   rel="noopener noreferrer"
                                   class="text-body-secondary text-decoration-none small">
                                    <i class="fas fa-book-open me-1"></i>
                                    Read the SBOM lifecycle guide
                                    <i class="fas fa-external-link-alt ms-1" style="font-size: 0.7em;"></i>
                                </a>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    {% vite_asset 'sbomify/apps/teams/js/main.ts' %}
{% endblock %}
{% block styles %}
    {% load static %}
    <link rel="stylesheet"
          href="{% static 'css/components/onboarding-wizard.css' %}">
{% endblock %}
