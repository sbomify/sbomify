{% extends "core/dashboard_base.html.j2" %}
{% load widget_tweaks %}
{% block title %}Set Up Your SBOM Identity - sbomify{% endblock %}
{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-lg-7 mx-auto">
                <div class="card shadow-sm border-0">
                    {% if current_step == 'setup' %}
                        <!-- Setup Step -->
                        <div class="card-header bg-white border-0 pb-0">
                            <div class="card-actions float-end">
                                <a href="{% url 'core:dashboard' %}"
                                   class="btn btn-link text-muted"
                                   title="Skip for now">
                                    <i class="align-middle fas fa-times"></i>
                                </a>
                            </div>
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary-subtle rounded-3 p-3 me-3">
                                    <i class="align-middle text-primary fas fa-building fa-lg"></i>
                                </div>
                                <div>
                                    <h1 class="h3 mb-1">Set Up Your SBOM Identity</h1>
                                    <p class="text-muted mb-0">Get started in under a minute</p>
                                </div>
                            </div>
                        </div>
                        <div class="card-body pt-0">
                            <!-- Value Proposition Callout -->
                            <div class="bg-light rounded-3 p-3 mb-4 border-start border-4 border-primary">
                                <p class="mb-2">
                                    This information identifies you as the <strong>supplier</strong> in your SBOMs
                                    and enables <strong>NTIA compliance</strong>.
                                </p>
                                <a href="{{ sbom_augmentation_url }}"
                                   target="_blank"
                                   rel="noopener"
                                   class="text-primary text-decoration-none">
                                    <i class="fas fa-book-open me-1"></i>
                                    Learn about SBOM augmentation
                                    <i class="fas fa-external-link-alt ms-1 small"></i>
                                </a>
                            </div>
                            <!-- Form -->
                            <form method="post"
                                  action="{% url 'teams:onboarding_wizard' %}"
                                  class="needs-validation"
                                  novalidate>
                                {% csrf_token %}
                                {% if form.non_field_errors %}
                                    <div class="alert alert-danger bg-danger-subtle border-0 mb-4">
                                        {% for error in form.non_field_errors %}{{ error }}{% endfor %}
                                    </div>
                                {% endif %}
                                <!-- Company Name Field -->
                                <div class="mb-4">
                                    <label class="form-label fw-semibold"
                                           for="{{ form.company_name.id_for_label }}">
                                        {{ form.company_name.label }}
                                        <span class="text-danger">*</span>
                                    </label>
                                    {{ form.company_name }}
                                    {% if form.company_name.errors %}
                                        <div class="invalid-feedback d-block">
                                            {% for error in form.company_name.errors %}{{ error }}{% endfor %}
                                        </div>
                                    {% endif %}
                                    <div class="form-text">Identifies you as the supplier. Appears in your Trust Center.</div>
                                </div>
                                <!-- Email Field -->
                                <div class="mb-4">
                                    <label class="form-label fw-semibold" for="{{ form.email.id_for_label }}">{{ form.email.label }}</label>
                                    {{ form.email }}
                                    {% if form.email.errors %}
                                        <div class="invalid-feedback d-block">
                                            {% for error in form.email.errors %}{{ error }}{% endfor %}
                                        </div>
                                    {% endif %}
                                    <div class="form-text">For security inquiries. Embedded in SBOM metadata.</div>
                                </div>
                                <!-- Website Field -->
                                <div class="mb-4">
                                    <label class="form-label fw-semibold" for="{{ form.website.id_for_label }}">
                                        {{ form.website.label }}
                                        <span class="text-muted fw-normal">(optional)</span>
                                    </label>
                                    {{ form.website }}
                                    {% if form.website.errors %}
                                        <div class="invalid-feedback d-block">
                                            {% for error in form.website.errors %}{{ error }}{% endfor %}
                                        </div>
                                    {% endif %}
                                    <div class="form-text">Added to SBOM external references.</div>
                                </div>
                                <!-- Auto-creation Info -->
                                <div class="bg-info-subtle rounded-3 p-3 mb-4">
                                    <div class="d-flex">
                                        <div class="flex-shrink-0">
                                            <i class="fas fa-magic text-info"></i>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <p class="mb-0 text-body">
                                                We'll automatically create your first <strong>product</strong>,
                                                <strong>project</strong>, and <strong>SBOM component</strong>
                                                so you can start uploading right away.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <!-- Submit Button -->
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-lg btn-primary">
                                        Get Started
                                        <i class="fas fa-arrow-right ms-2"></i>
                                    </button>
                                </div>
                            </form>
                        </div>
                    {% else %}
                        <!-- Complete Step -->
                        <div class="card-body text-center py-5">
                            <!-- Animated Success Icon -->
                            <div class="mb-4">
                                <div class="success-checkmark">
                                    <div class="check-icon">
                                        <span class="icon-line line-tip"></span>
                                        <span class="icon-line line-long"></span>
                                        <div class="icon-circle"></div>
                                        <div class="icon-fix"></div>
                                    </div>
                                </div>
                            </div>
                            <h2 class="h3 mb-4">You're All Set!</h2>
                            <!-- Created Entities Summary -->
                            <div class="row justify-content-center mb-4">
                                <div class="col-md-10">
                                    <p class="text-muted mb-3">We've created everything you need to get started:</p>
                                    <div class="bg-light rounded-3 p-3 text-start">
                                        <div class="d-flex align-items-center py-2 border-bottom">
                                            <i class="fas fa-building text-muted me-3" style="width: 20px;"></i>
                                            <span class="text-muted me-2">Workspace:</span>
                                            <strong>{{ company_name }}'s Workspace</strong>
                                        </div>
                                        <div class="d-flex align-items-center py-2 border-bottom">
                                            <i class="fas fa-address-card text-muted me-3" style="width: 20px;"></i>
                                            <span class="text-muted me-2">Contact Profile:</span>
                                            <strong>Default profile created</strong>
                                        </div>
                                        <div class="d-flex align-items-center py-2 border-bottom">
                                            <i class="fas fa-cube text-muted me-3" style="width: 20px;"></i>
                                            <span class="text-muted me-2">Product:</span>
                                            <strong>{{ company_name }}</strong>
                                        </div>
                                        <div class="d-flex align-items-center py-2 border-bottom">
                                            <i class="fas fa-folder text-muted me-3" style="width: 20px;"></i>
                                            <span class="text-muted me-2">Project:</span>
                                            <strong>Main Project</strong>
                                        </div>
                                        <div class="d-flex align-items-center py-2">
                                            <i class="fas fa-puzzle-piece text-muted me-3" style="width: 20px;"></i>
                                            <span class="text-muted me-2">Component:</span>
                                            <strong>Main Component</strong>
                                            <span class="badge bg-primary ms-2">SBOM</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Next Step Card -->
                            <div class="row justify-content-center mb-4">
                                <div class="col-md-10">
                                    <div class="card border-primary border-2 bg-primary-subtle">
                                        <div class="card-body p-4">
                                            <div class="d-flex align-items-start text-start">
                                                <div class="bg-primary rounded-circle p-2 me-3">
                                                    <i class="fas fa-cloud-upload-alt text-white"></i>
                                                </div>
                                                <div>
                                                    <h5 class="fw-bold mb-2">Next: Upload Your First SBOM</h5>
                                                    <p class="text-muted mb-0">Use our GitHub Action or upload manually to start building your SBOM catalog.</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Component Types Tip -->
                            <div class="row justify-content-center mb-4">
                                <div class="col-md-10">
                                    <aside role="complementary"
                                           aria-label="Additional information about component types"
                                           class="bg-warning-subtle rounded-3 p-3 text-start">
                                        <div class="d-flex">
                                            <div class="flex-shrink-0" aria-hidden="true">
                                                <i class="fas fa-lightbulb text-warning"></i>
                                            </div>
                                            <div class="flex-grow-1 ms-3">
                                                <p class="fw-semibold mb-2">Tip: Components can hold SBOMs or Documents</p>
                                                <ul class="mb-2 ps-3">
                                                    <li>
                                                        <strong>SBOM components:</strong> Software Bill of Materials (CycloneDX, SPDX)
                                                    </li>
                                                    <li>
                                                        <strong>Document components:</strong> SOC 2, ISO 27001, Pen Test Reports, etc.
                                                    </li>
                                                </ul>
                                                <p class="text-muted mb-0 small">
                                                    Create Document components later for your Trust Center to share compliance artifacts.
                                                </p>
                                            </div>
                                        </div>
                                    </aside>
                                </div>
                            </div>
                            <!-- Primary CTA -->
                            <a href="{% url 'core:component_details' component_id=component_id %}"
                               class="btn btn-lg btn-primary px-5 mb-3">
                                Go to Component
                                <i class="fas fa-arrow-right ms-2"></i>
                            </a>
                            <!-- Secondary Link -->
                            <div>
                                <a href="{{ sbom_augmentation_url }}"
                                   target="_blank"
                                   rel="noopener"
                                   class="text-muted text-decoration-none">
                                    <i class="fas fa-book-open me-1"></i>
                                    Read the SBOM lifecycle guide
                                    <i class="fas fa-external-link-alt ms-1 small"></i>
                                </a>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block styles %}
    <style>
        /* Success Checkmark Animation */
        .success-checkmark {
            width: 80px;
            height: 80px;
            margin: 0 auto;
        }

        .success-checkmark .check-icon {
            width: 80px;
            height: 80px;
            position: relative;
            border-radius: 50%;
            box-sizing: content-box;
            border: 4px solid #28a745;
        }

        .success-checkmark .check-icon::before {
            top: 3px;
            left: -2px;
            width: 30px;
            transform-origin: 100% 50%;
            border-radius: 100px 0 0 100px;
        }

        .success-checkmark .check-icon::after {
            top: 0;
            left: 30px;
            width: 60px;
            transform-origin: 0 50%;
            border-radius: 0 100px 100px 0;
            animation: rotate-circle 1.25s ease-in;
        }

        .success-checkmark .check-icon::before,
        .success-checkmark .check-icon::after {
            content: '';
            height: 100px;
            position: absolute;
            background: #fff;
            transform: rotate(-45deg);
        }

        .success-checkmark .check-icon .icon-line {
            height: 5px;
            background-color: #28a745;
            display: block;
            border-radius: 2px;
            position: absolute;
            z-index: 10;
        }

        .success-checkmark .check-icon .icon-line.line-tip {
            top: 46px;
            left: 14px;
            width: 25px;
            transform: rotate(45deg);
            animation: icon-line-tip 0.75s;
        }

        .success-checkmark .check-icon .icon-line.line-long {
            top: 38px;
            right: 8px;
            width: 47px;
            transform: rotate(-45deg);
            animation: icon-line-long 0.75s;
        }

        .success-checkmark .check-icon .icon-circle {
            top: -4px;
            left: -4px;
            z-index: 10;
            width: 80px;
            height: 80px;
            border-radius: 50%;
            position: absolute;
            box-sizing: content-box;
            border: 4px solid rgba(40, 167, 69, 0.5);
        }

        .success-checkmark .check-icon .icon-fix {
            top: 8px;
            width: 5px;
            left: 26px;
            z-index: 1;
            height: 85px;
            position: absolute;
            transform: rotate(-45deg);
            background-color: #fff;
        }

        @keyframes rotate-circle {
            0% {
                transform: rotate(-45deg);
            }
            5% {
                transform: rotate(-45deg);
            }
            12% {
                transform: rotate(-405deg);
            }
            100% {
                transform: rotate(-405deg);
            }
        }

        @keyframes icon-line-tip {
            0% {
                width: 0;
                left: 1px;
                top: 19px;
            }
            54% {
                width: 0;
                left: 1px;
                top: 19px;
            }
            70% {
                width: 50px;
                left: -8px;
                top: 37px;
            }
            84% {
                width: 17px;
                left: 21px;
                top: 48px;
            }
            100% {
                width: 25px;
                left: 14px;
                top: 46px;
            }
        }

        @keyframes icon-line-long {
            0% {
                width: 0;
                right: 46px;
                top: 54px;
            }
            65% {
                width: 0;
                right: 46px;
                top: 54px;
            }
            84% {
                width: 55px;
                right: 0px;
                top: 35px;
            }
            100% {
                width: 47px;
                right: 8px;
                top: 38px;
            }
        }

        /* Form styling */
        .form-control:focus {
            border-color: var(--bs-primary);
            box-shadow: 0 0 0 0.2rem rgba(var(--bs-primary-rgb), 0.15);
        }

        .form-text {
            font-size: 0.875rem;
        }
    </style>
{% endblock %}
