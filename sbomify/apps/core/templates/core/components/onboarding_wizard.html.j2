{% extends "core/dashboard_base.html.j2" %}
{% load widget_tweaks %}
{% load django_vite %}
{% block title %}Set Up Your SBOM Identity - sbomify{% endblock %}
{% block content %}
    <div class="w-full py-4">
        <div class="flex justify-center">
            <div class="w-full md:w-2/3 lg:w-1/2 xl:w-5/12">
                <div class="bg-white rounded-2xl shadow-lg border-0 relative">
                    {% if current_step == 'setup' %}
                        <!-- Close/Skip Button -->
                        <a href="{% url 'core:dashboard' %}"
                           class="absolute top-0 right-0 m-3 text-gray-400 hover:text-gray-600 focus:outline-none"
                           aria-label="Skip for now"
                           title="Skip for now">
                            <i class="fas fa-times"></i>
                        </a>
                        <!-- Setup Step -->
                        <div class="p-4 md:p-6"
                             x-cloak
                             x-data="onboardingWizard({ initialEmail: '{{ form.email.value|default:''|escapejs }}', initialContactName: '{{ form.contact_name.value|default:''|escapejs }}' })">
                            <!-- Header with centered icon -->
                            <div class="text-center mb-4">
                                <div class="inline-flex items-center justify-center bg-brand-primary bg-opacity-10 rounded-full mb-3"
                                     style="width: 64px;
                                            height: 64px">
                                    <i class="fas fa-id-card text-brand-primary fa-2x"></i>
                                </div>
                                <h1 class="text-2xl font-semibold mb-2">Set Up Your SBOM Identity</h1>
                                <p class="text-gray-600 mb-0">Get started in under a minute</p>
                            </div>
                            <!-- Value Proposition Callout -->
                            <div class="bg-gray-50 rounded-lg p-3 mb-4 border-l-4 border-brand-primary">
                                <p class="mb-2 text-sm">
                                    This information identifies you as the <strong>supplier</strong> in your SBOMs
                                    and enables <strong>NTIA compliance</strong>.
                                </p>
                                <a href="{{ sbom_augmentation_url }}"
                                   target="_blank"
                                   rel="noopener noreferrer"
                                   class="text-brand-primary no-underline text-sm">
                                    <i class="fas fa-book-open mr-1"></i>
                                    Learn about SBOM augmentation
                                    <i class="fas fa-external-link-alt ml-1" style="font-size: 0.7em;"></i>
                                </a>
                            </div>
                            <!-- Form -->
                            <form method="post"
                                  action="{% url 'teams:onboarding_wizard' %}"
                                  @submit="handleSubmit()">
                                {% csrf_token %}
                                {% if form.non_field_errors %}
                                    <div class="bg-danger-50 border border-danger-200 text-danger-800 px-4 py-3 rounded mb-4"
                                         role="alert">
                                        {% for error in form.non_field_errors %}{{ error }}{% endfor %}
                                    </div>
                                {% endif %}
                                <!-- Company Name Field -->
                                <div class="mb-4">
                                    <label for="id_company_name"
                                           class="block text-sm font-medium text-gray-700 mb-1">
                                        Company / Organization Name <span class="text-danger-500">*</span>
                                    </label>
                                    <input type="text"
                                           class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-brand-primary focus:border-transparent"
                                           id="id_company_name"
                                           name="company_name"
                                           placeholder="e.g., Acme Corporation"
                                           required
                                           x-model="companyName"
                                           @blur="markTouched('companyName')"
                                           :class="getValidationClass('companyName')"
                                           {% if form.company_name.value %}value="{{ form.company_name.value }}"{% endif %}>
                                    {% if form.company_name.errors %}
                                        <div class="text-sm text-danger-500 block mt-1">
                                            {% for error in form.company_name.errors %}{{ error }}{% endfor %}
                                        </div>
                                    {% endif %}
                                    <div class="text-sm text-gray-600 mt-1">Identifies you as the supplier. Appears in your Trust Center.</div>
                                </div>
                                <!-- Contact Name Field -->
                                <div class="mb-4">
                                    <label for="id_contact_name"
                                           class="block text-sm font-medium text-gray-700 mb-1">
                                        Contact Name <span class="text-danger-500">*</span>
                                    </label>
                                    <input type="text"
                                           class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-brand-primary focus:border-transparent"
                                           id="id_contact_name"
                                           name="contact_name"
                                           placeholder="e.g., Jane Smith"
                                           required
                                           x-model="contactName"
                                           @blur="markTouched('contactName')"
                                           :class="getValidationClass('contactName')"
                                           {% if form.contact_name.value %}value="{{ form.contact_name.value }}"{% endif %}>
                                    {% if form.contact_name.errors %}
                                        <div class="text-sm text-danger-500 block mt-1">
                                            {% for error in form.contact_name.errors %}{{ error }}{% endfor %}
                                        </div>
                                    {% endif %}
                                    <div class="text-sm text-gray-600 mt-1">Required for NTIA compliance. The person responsible for SBOM inquiries.</div>
                                </div>
                                <!-- Email Field -->
                                <div class="mb-4">
                                    <label for="id_email" class="block text-sm font-medium text-gray-700 mb-1">Contact Email</label>
                                    <input type="email"
                                           class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-brand-primary focus:border-transparent"
                                           id="id_email"
                                           x-ref="emailInput"
                                           name="email"
                                           placeholder="security@example.com"
                                           x-model="email"
                                           @blur="markTouched('email')"
                                           :class="getValidationClass('email')"
                                           {% if form.email.value %}value="{{ form.email.value }}"{% endif %}>
                                    {% if form.email.errors %}
                                        <div class="text-sm text-danger-500 block mt-1">
                                            {% for error in form.email.errors %}{{ error }}{% endfor %}
                                        </div>
                                    {% endif %}
                                    <div class="text-sm text-gray-600 mt-1">For security inquiries. Embedded in SBOM metadata.</div>
                                </div>
                                <!-- Website Field -->
                                <div class="mb-4">
                                    <label for="id_website" class="block text-sm font-medium text-gray-700 mb-1">
                                        Website <span class="text-gray-600 font-normal">(optional)</span>
                                    </label>
                                    <input type="url"
                                           class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-brand-primary focus:border-transparent"
                                           id="id_website"
                                           name="website"
                                           placeholder="https://example.com"
                                           x-model="website"
                                           @blur="markTouched('website')"
                                           :class="getValidationClass('website')"
                                           {% if form.website.value %}value="{{ form.website.value }}"{% endif %}>
                                    {% if form.website.errors %}
                                        <div class="text-sm text-danger-500 block mt-1">
                                            {% for error in form.website.errors %}{{ error }}{% endfor %}
                                        </div>
                                    {% endif %}
                                    <div class="text-sm text-gray-600 mt-1">Added to SBOM external references.</div>
                                </div>
                                <!-- Auto-creation Info -->
                                <div class="bg-info-50 rounded-lg p-3 mb-4">
                                    <div class="flex items-start">
                                        <div class="flex-shrink-0">
                                            <i class="fas fa-wand-magic-sparkles text-info-500"></i>
                                        </div>
                                        <div class="flex-grow-1 ml-3">
                                            <p class="mb-0 text-sm">
                                                We'll automatically create your first <strong>product</strong>,
                                                <strong>project</strong>, and <strong>SBOM component</strong>
                                                so you can start uploading right away.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <!-- Submit Button with Loading State -->
                                <button type="submit"
                                        class="w-full px-4 py-3 bg-gray-900 text-white rounded-lg text-lg hover:opacity-90 transition-opacity disabled:opacity-50 disabled:cursor-not-allowed"
                                        :disabled="!canSubmit">
                                    <span x-show="!isSubmitting">
                                        Create My SBOM Identity
                                        <i class="fas fa-arrow-right ml-2"></i>
                                    </span>
                                    <span x-show="isSubmitting" x-cloak>
                                        <i class="fas fa-spinner fa-spin mr-2"></i>
                                        Setting up your workspace...
                                    </span>
                                </button>
                            </form>
                        </div>
                    {% else %}
                        <!-- Complete Step -->
                        <div class="text-center p-4 md:p-6">
                            <!-- Animated Success Icon -->
                            <div class="mb-4">
                                <div class="success-checkmark">
                                    <div class="check-icon">
                                        <span class="icon-line line-tip"></span>
                                        <span class="icon-line line-long"></span>
                                        <div class="icon-circle"></div>
                                        <div class="icon-fix"></div>
                                    </div>
                                </div>
                            </div>
                            <h2 class="text-2xl font-semibold mb-4">You're All Set!</h2>
                            <!-- Created Entities Summary -->
                            <div class="mb-4">
                                <p class="text-gray-600 mb-3">We've created everything you need to get started:</p>
                                <div class="bg-gray-50 rounded-lg p-3 text-left">
                                    <div class="flex items-center py-2 border-b">
                                        <i class="fas fa-building text-gray-600 mr-3" style="width: 20px;"></i>
                                        <span class="text-gray-600 mr-2 text-sm">Workspace:</span>
                                        <strong class="text-sm">{{ company_name }}'s Workspace</strong>
                                    </div>
                                    <div class="flex items-center py-2 border-b">
                                        <i class="fas fa-address-card text-gray-600 mr-3" style="width: 20px"></i>
                                        <span class="text-gray-600 mr-2 text-sm">Contact Profile:</span>
                                        <strong class="text-sm">Default profile created</strong>
                                    </div>
                                    <div class="flex items-center py-2 border-b">
                                        <i class="fas fa-cube text-gray-600 mr-3" style="width: 20px;"></i>
                                        <span class="text-gray-600 mr-2 text-sm">Product:</span>
                                        <strong class="text-sm">{{ company_name }}</strong>
                                    </div>
                                    <div class="flex items-center py-2 border-b">
                                        <i class="fas fa-folder text-gray-600 mr-3" style="width: 20px;"></i>
                                        <span class="text-gray-600 mr-2 text-sm">Project:</span>
                                        <strong class="text-sm">Main Project</strong>
                                    </div>
                                    <div class="flex items-center py-2">
                                        <i class="fas fa-puzzle-piece text-gray-600 mr-3" style="width: 20px"></i>
                                        <span class="text-gray-600 mr-2 text-sm">Component:</span>
                                        <strong class="text-sm">Main Component</strong>
                                        <span class="inline-flex items-center px-2 py-1 text-xs font-semibold rounded-full bg-brand-primary text-white ml-2">SBOM</span>
                                    </div>
                                </div>
                            </div>
                            <!-- Next Step Card -->
                            <div class="bg-brand-primary bg-opacity-10 rounded-lg border-0 mb-4">
                                <div class="p-4">
                                    <div class="flex items-start text-left">
                                        <div class="bg-brand-primary rounded-full p-2 mr-3 flex-shrink-0">
                                            <i class="fas fa-cloud-upload-alt text-white"></i>
                                        </div>
                                        <div>
                                            <h5 class="font-bold mb-2">Next: Upload Your First SBOM</h5>
                                            <p class="text-gray-600 mb-0 text-sm">Use our GitHub Action or upload manually to start building your SBOM catalog.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Component Types Tip -->
                            <aside role="complementary"
                                   aria-label="Additional information about component types"
                                   class="bg-warning-50 rounded-lg p-3 mb-4 text-left">
                                <div class="flex items-start">
                                    <div class="flex-shrink-0" aria-hidden="true">
                                        <i class="fas fa-lightbulb text-warning-500"></i>
                                    </div>
                                    <div class="flex-grow-1 ml-3">
                                        <p class="font-semibold mb-2 text-sm">Tip: Components can hold SBOMs or Documents</p>
                                        <ul class="mb-2 pl-3 text-sm">
                                            <li>
                                                <strong>SBOM components:</strong> Software Bill of Materials (CycloneDX, SPDX)
                                            </li>
                                            <li>
                                                <strong>Document components:</strong> SOC 2, ISO 27001, Pen Test Reports, etc.
                                            </li>
                                        </ul>
                                        <p class="text-gray-600 mb-0 text-sm">
                                            Create Document components later for your Trust Center to share compliance artifacts.
                                        </p>
                                    </div>
                                </div>
                            </aside>
                            <!-- Primary CTA -->
                            <a href="{% url 'core:component_details' component_id=component_id %}"
                               class="block w-full px-4 py-3 bg-gray-900 text-white rounded-lg text-lg hover:opacity-90 transition-opacity mb-3">
                                Go to Component
                                <i class="fas fa-arrow-right ml-2"></i>
                            </a>
                            <!-- Secondary Link -->
                            <div>
                                <a href="{{ sbom_augmentation_url }}"
                                   target="_blank"
                                   rel="noopener noreferrer"
                                   class="text-gray-600 no-underline text-sm">
                                    <i class="fas fa-book-open mr-1"></i>
                                    Read the SBOM lifecycle guide
                                    <i class="fas fa-external-link-alt ml-1" style="font-size: 0.7em;"></i>
                                </a>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    {% vite_asset 'sbomify/apps/teams/js/main.ts' %}
{% endblock %}
{% block styles %}
    {% load static %}
    <link rel="stylesheet"
          href="{% static 'css/components/onboarding-wizard.css' %}">
{% endblock %}
