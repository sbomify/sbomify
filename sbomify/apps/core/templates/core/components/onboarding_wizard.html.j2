{% extends "core/dashboard_base.html.j2" %}
{% load widget_tweaks %}
{% load django_vite %}
{% block title %}Set Up Your SBOM Identity - sbomify{% endblock %}
{% block content %}
    <div class="py-6 md:py-10">
        <div class="tw-card shadow-xl shadow-black/20 rounded-2xl border-0 relative ring-1 ring-white/5 overflow-hidden">
            {# Subtle top gradient accent #}
            <div class="absolute top-0 inset-x-0 h-1 bg-gradient-to-r from-primary via-primary-light to-primary"></div>
            {% if current_step == 'setup' %}
                <!-- Setup Step -->
                <div class="p-6 md:p-10"
                     x-data="onboardingWizard({ initialEmail: '{{ form.email.value|default:''|escapejs }}', initialContactName: '{{ form.contact_name.value|default:''|escapejs }}' })">
                    <!-- Header with centered icon -->
                    <div class="text-center mb-8">
                        <div class="relative inline-flex items-center justify-center mb-5">
                            {# Outer glow ring #}
                            <div class="absolute inset-0 w-20 h-20 bg-primary/20 rounded-full blur-xl"></div>
                            <div class="relative w-18 h-18 bg-gradient-to-br from-primary/20 to-primary/5 rounded-full flex items-center justify-center ring-1 ring-primary/20">
                                <i class="fas fa-id-card text-primary text-2xl"></i>
                            </div>
                        </div>
                        {# Progress Stepper #}
                        <div class="flex items-center justify-center gap-3 mb-5">
                            <div class="flex items-center gap-2">
                                <span class="w-7 h-7 rounded-full bg-primary text-white text-xs font-bold flex items-center justify-center shadow-md shadow-primary/30">1</span>
                                <span class="text-xs font-medium text-text">Setup</span>
                            </div>
                            <div class="w-8 h-px bg-border"></div>
                            <div class="flex items-center gap-2">
                                <span class="w-7 h-7 rounded-full bg-border/50 text-text-muted text-xs font-medium flex items-center justify-center">2</span>
                                <span class="text-xs font-medium text-text-muted">Complete</span>
                            </div>
                        </div>
                        <h1 class="text-2xl font-bold text-text mb-2">Set Up Your SBOM Identity</h1>
                        <p class="text-text-muted m-0 text-sm">Get started in under a minute</p>
                    </div>
                    <!-- Value Proposition Callout -->
                    <div class="bg-gradient-to-r from-primary/10 to-primary/5 rounded-xl p-4 mb-8 border-l-4 border-l-primary ring-1 ring-primary/10">
                        <p class="mb-2 text-sm text-text leading-relaxed">
                            This information identifies you as the <strong class="text-primary">supplier</strong> in your SBOMs
                            and enables <strong class="text-primary">NTIA compliance</strong>.
                        </p>
                        <a href="{{ sbom_augmentation_url }}"
                           target="_blank"
                           rel="noopener noreferrer"
                           class="inline-flex items-center gap-1.5 text-primary no-underline hover:underline text-sm font-medium">
                            <i class="fas fa-book-open"></i>
                            Learn about SBOM augmentation
                            <i class="fas fa-external-link-alt text-[10px] opacity-70"></i>
                        </a>
                    </div>
                    <!-- Form -->
                    <form method="post"
                          action="{% url 'teams:onboarding_wizard' %}"
                          @submit="handleSubmit()">
                        {% csrf_token %}
                        {% if form.non_field_errors %}
                            <div class="p-3 rounded-lg bg-danger/10 text-danger text-sm mb-4"
                                 role="alert">
                                {% for error in form.non_field_errors %}{{ error }}{% endfor %}
                            </div>
                        {% endif %}
                        <!-- Company Name Field -->
                        <div class="mb-5">
                            <label for="id_company_name"
                                   class="block text-sm font-medium text-text mb-1.5">
                                Company / Organization Name <span class="text-danger">*</span>
                            </label>
                            <input type="text"
                                   class="w-full px-4 py-3 border border-border rounded-xl bg-background text-text placeholder:text-text-muted/50 focus:outline-none focus:ring-2 focus:ring-primary/40 focus:border-primary focus:bg-surface transition-all duration-200"
                                   id="id_company_name"
                                   name="company_name"
                                   placeholder="e.g., Acme Corporation"
                                   required
                                   minlength="2"
                                   maxlength="200"
                                   autocomplete="organization"
                                   x-model="companyName"
                                   @blur="markTouched('companyName')"
                                   :class="getValidationClass('companyName')"
                                   {% if form.company_name.value %}value="{{ form.company_name.value }}"{% endif %}>
                            {% if form.company_name.errors %}
                                <div class="text-danger text-sm mt-1.5 flex items-center gap-1.5">
                                    <i class="fas fa-exclamation-circle text-xs"></i>
                                    {% for error in form.company_name.errors %}{{ error }}{% endfor %}
                                </div>
                            {% endif %}
                            <div class="text-xs text-text-muted mt-1.5">Identifies you as the supplier. Appears in your Trust Center.</div>
                        </div>
                        <!-- Contact Name Field -->
                        <div class="mb-5">
                            <label for="id_contact_name"
                                   class="block text-sm font-medium text-text mb-1.5">
                                Contact Name <span class="text-danger">*</span>
                            </label>
                            <input type="text"
                                   class="w-full px-4 py-3 border border-border rounded-xl bg-background text-text placeholder:text-text-muted/50 focus:outline-none focus:ring-2 focus:ring-primary/40 focus:border-primary focus:bg-surface transition-all duration-200"
                                   id="id_contact_name"
                                   name="contact_name"
                                   placeholder="e.g., Jane Smith"
                                   required
                                   minlength="2"
                                   maxlength="150"
                                   autocomplete="name"
                                   x-model="contactName"
                                   @blur="markTouched('contactName')"
                                   :class="getValidationClass('contactName')"
                                   {% if form.contact_name.value %}value="{{ form.contact_name.value }}"{% endif %}>
                            {% if form.contact_name.errors %}
                                <div class="text-danger text-sm mt-1.5 flex items-center gap-1.5">
                                    <i class="fas fa-exclamation-circle text-xs"></i>
                                    {% for error in form.contact_name.errors %}{{ error }}{% endfor %}
                                </div>
                            {% endif %}
                            <div class="text-xs text-text-muted mt-1.5">
                                Required for NTIA compliance. The person responsible for SBOM inquiries.
                            </div>
                        </div>
                        <!-- Email Field -->
                        <div class="mb-5">
                            <label for="id_email" class="block text-sm font-medium text-text mb-1.5">Contact Email</label>
                            <input type="email"
                                   class="w-full px-4 py-3 border border-border rounded-xl bg-background text-text placeholder:text-text-muted/50 focus:outline-none focus:ring-2 focus:ring-primary/40 focus:border-primary focus:bg-surface transition-all duration-200"
                                   id="id_email"
                                   name="email"
                                   placeholder="security@example.com"
                                   maxlength="254"
                                   autocomplete="email"
                                   x-model="email"
                                   @blur="markTouched('email')"
                                   :class="getValidationClass('email')"
                                   {% if form.email.value %}value="{{ form.email.value }}"{% endif %}>
                            {% if form.email.errors %}
                                <div class="text-danger text-sm mt-1.5 flex items-center gap-1.5">
                                    <i class="fas fa-exclamation-circle text-xs"></i>
                                    {% for error in form.email.errors %}{{ error }}{% endfor %}
                                </div>
                            {% endif %}
                            <div class="text-xs text-text-muted mt-1.5">For security inquiries. Embedded in SBOM metadata.</div>
                        </div>
                        <!-- Website Field -->
                        <div class="mb-5">
                            <label for="id_website" class="block text-sm font-medium text-text mb-1.5">
                                Website <span class="text-text-muted font-normal">(optional)</span>
                            </label>
                            <input type="url"
                                   class="w-full px-4 py-3 border border-border rounded-xl bg-background text-text placeholder:text-text-muted/50 focus:outline-none focus:ring-2 focus:ring-primary/40 focus:border-primary focus:bg-surface transition-all duration-200"
                                   id="id_website"
                                   name="website"
                                   placeholder="https://example.com"
                                   maxlength="500"
                                   autocomplete="url"
                                   pattern="https?://.+"
                                   x-model="website"
                                   @blur="markTouched('website')"
                                   :class="getValidationClass('website')"
                                   {% if form.website.value %}value="{{ form.website.value }}"{% endif %}>
                            {% if form.website.errors %}
                                <div class="text-danger text-sm mt-1.5 flex items-center gap-1.5">
                                    <i class="fas fa-exclamation-circle text-xs"></i>
                                    {% for error in form.website.errors %}{{ error }}{% endfor %}
                                </div>
                            {% endif %}
                            <div class="text-xs text-text-muted mt-1.5">Added to SBOM external references.</div>
                        </div>
                        <!-- Auto-creation Info -->
                        <div class="bg-gradient-to-r from-info/15 to-info/5 rounded-xl p-4 mb-8 ring-1 ring-info/20">
                            <div class="flex items-start gap-3">
                                <div class="w-8 h-8 rounded-lg bg-info/20 flex items-center justify-center shrink-0">
                                    <i class="fas fa-wand-magic-sparkles text-info text-sm"></i>
                                </div>
                                <p class="m-0 text-sm text-text leading-relaxed">
                                    We'll automatically create your first <strong class="text-info">product</strong>,
                                    <strong class="text-info">project</strong>, and <strong class="text-info">SBOM component</strong>
                                    so you can start uploading right away.
                                </p>
                            </div>
                        </div>
                        <!-- Submit Button with Loading State -->
                        <button type="submit"
                                class="btn-primary-action group relative w-full py-4 px-6 text-base font-bold rounded-xl overflow-hidden transition-all duration-300 hover:-translate-y-1 disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:translate-y-0"
                                :disabled="!canSubmit">
                            {# Shine effect on hover #}
                            <span class="absolute inset-0 -translate-x-full group-hover:translate-x-full transition-transform duration-700 bg-gradient-to-r from-transparent via-white/25 to-transparent"></span>
                            <span x-show="!isSubmitting"
                                  class="relative flex items-center justify-center gap-3">
                                <i class="fas fa-rocket text-sm"></i>
                                Create My SBOM Identity
                                <i class="fas fa-arrow-right transition-transform duration-300 group-hover:translate-x-1.5"></i>
                            </span>
                            <span x-show="isSubmitting"
                                  x-cloak
                                  class="relative flex items-center justify-center gap-2">
                                <i class="fas fa-circle-notch animate-spin"></i>
                                Setting up your workspace...
                            </span>
                        </button>
                    </form>
                </div>
            {% else %}
                <!-- Complete Step -->
                <div class="text-center p-6 md:p-10"
                     x-data="{ show: false }"
                     x-init="setTimeout(() => show = true, 100)">
                    {# Progress Stepper - Completed State #}
                    <div class="flex items-center justify-center gap-3 mb-6"
                         x-show="show"
                         x-transition:enter="transition ease-out duration-500 delay-100"
                         x-transition:enter-start="opacity-0 -translate-y-2"
                         x-transition:enter-end="opacity-100 translate-y-0">
                        <div class="flex items-center gap-2">
                            <span class="w-7 h-7 rounded-full bg-success text-white text-xs font-bold flex items-center justify-center shadow-md shadow-success/30">
                                <i class="fas fa-check text-[10px]"></i>
                            </span>
                            <span class="text-xs font-medium text-success">Setup</span>
                        </div>
                        <div class="w-8 h-px bg-success"></div>
                        <div class="flex items-center gap-2">
                            <span class="w-7 h-7 rounded-full bg-success text-white text-xs font-bold flex items-center justify-center shadow-md shadow-success/30">
                                <i class="fas fa-check text-[10px]"></i>
                            </span>
                            <span class="text-xs font-medium text-success">Complete</span>
                        </div>
                    </div>
                    <!-- Animated Success Icon -->
                    <div class="mb-6"
                         x-show="show"
                         x-transition:enter="transition ease-out duration-500 delay-200"
                         x-transition:enter-start="opacity-0 scale-50"
                         x-transition:enter-end="opacity-100 scale-100">
                        <div class="success-checkmark">
                            <div class="check-icon">
                                <span class="icon-line line-tip"></span>
                                <span class="icon-line line-long"></span>
                                <div class="icon-circle"></div>
                                <div class="icon-fix"></div>
                            </div>
                        </div>
                    </div>
                    <h2 class="text-2xl font-bold text-text mb-8"
                        x-show="show"
                        x-transition:enter="transition ease-out duration-500 delay-300"
                        x-transition:enter-start="opacity-0 translate-y-2"
                        x-transition:enter-end="opacity-100 translate-y-0">You're All Set!</h2>
                    <!-- Created Entities Summary -->
                    <div class="mb-8"
                         x-show="show"
                         x-transition:enter="transition ease-out duration-500 delay-400"
                         x-transition:enter-start="opacity-0 translate-y-2"
                         x-transition:enter-end="opacity-100 translate-y-0">
                        <p class="text-text-muted mb-4 text-sm">We've created everything you need to get started:</p>
                        <div class="bg-gradient-to-b from-border/20 to-border/10 rounded-xl p-1 text-left ring-1 ring-white/5">
                            <div class="flex items-center py-3 px-4 border-b border-border/50 hover:bg-white/5 transition-colors rounded-t-lg">
                                <div class="w-8 h-8 rounded-lg bg-primary/10 flex items-center justify-center mr-3">
                                    <i class="fas fa-building text-primary text-sm"></i>
                                </div>
                                <span class="text-text-muted text-sm mr-2">Workspace:</span>
                                <strong class="text-sm text-text">{{ company_name }}'s Workspace</strong>
                            </div>
                            <div class="flex items-center py-3 px-4 border-b border-border/50 hover:bg-white/5 transition-colors">
                                <div class="w-8 h-8 rounded-lg bg-info/10 flex items-center justify-center mr-3">
                                    <i class="fas fa-address-card text-info text-sm"></i>
                                </div>
                                <span class="text-text-muted text-sm mr-2">Contact Profile:</span>
                                <strong class="text-sm text-text">Default profile created</strong>
                            </div>
                            <div class="flex items-center py-3 px-4 border-b border-border/50 hover:bg-white/5 transition-colors">
                                <div class="w-8 h-8 rounded-lg bg-accent/10 flex items-center justify-center mr-3">
                                    <i class="fas fa-cube text-accent text-sm"></i>
                                </div>
                                <span class="text-text-muted text-sm mr-2">Product:</span>
                                <strong class="text-sm text-text">{{ company_name }}</strong>
                            </div>
                            <div class="flex items-center py-3 px-4 border-b border-border/50 hover:bg-white/5 transition-colors">
                                <div class="w-8 h-8 rounded-lg bg-warning/10 flex items-center justify-center mr-3">
                                    <i class="fas fa-folder text-warning text-sm"></i>
                                </div>
                                <span class="text-text-muted text-sm mr-2">Project:</span>
                                <strong class="text-sm text-text">Main Project</strong>
                            </div>
                            <div class="flex items-center py-3 px-4 hover:bg-white/5 transition-colors rounded-b-lg">
                                <div class="w-8 h-8 rounded-lg bg-success/10 flex items-center justify-center mr-3">
                                    <i class="fas fa-puzzle-piece text-success text-sm"></i>
                                </div>
                                <span class="text-text-muted text-sm mr-2">Component:</span>
                                <strong class="text-sm text-text">Main Component</strong>
                                <span class="ml-2 px-2.5 py-1 text-[10px] font-bold rounded-full bg-primary/20 text-primary ring-1 ring-primary/30">SBOM</span>
                            </div>
                        </div>
                    </div>
                    <!-- Next Step Card -->
                    <div class="bg-gradient-to-r from-primary/15 to-primary/5 rounded-xl p-5 mb-6 ring-1 ring-primary/20"
                         x-show="show"
                         x-transition:enter="transition ease-out duration-500 delay-500"
                         x-transition:enter-start="opacity-0 translate-y-2"
                         x-transition:enter-end="opacity-100 translate-y-0">
                        <div class="flex items-start text-left gap-4">
                            <div class="upload-icon-box rounded-xl p-3 flex-shrink-0">
                                <i class="fas fa-cloud-upload-alt text-white text-lg"></i>
                            </div>
                            <div>
                                <h5 class="font-bold text-text mb-1.5">Next: Upload Your First SBOM</h5>
                                <p class="text-text-muted m-0 text-sm leading-relaxed">
                                    Use our GitHub Action or upload manually to start building your SBOM catalog.
                                </p>
                            </div>
                        </div>
                    </div>
                    <!-- Component Types Tip -->
                    <aside role="complementary"
                           aria-label="Additional information about component types"
                           class="bg-gradient-to-r from-warning/15 to-warning/5 rounded-xl p-4 mb-8 text-left ring-1 ring-warning/20"
                           x-show="show"
                           x-transition:enter="transition ease-out duration-500 delay-600"
                           x-transition:enter-start="opacity-0 translate-y-2"
                           x-transition:enter-end="opacity-100 translate-y-0">
                        <div class="flex items-start gap-3">
                            <div class="w-8 h-8 rounded-lg bg-warning/20 flex items-center justify-center shrink-0">
                                <i class="fas fa-lightbulb text-warning text-sm"></i>
                            </div>
                            <div>
                                <p class="font-semibold mb-2 text-sm text-text">Tip: Components can hold SBOMs or Documents</p>
                                <ul class="mb-2 pl-4 text-sm text-text-muted list-disc space-y-1">
                                    <li>
                                        <strong class="text-text">SBOM components:</strong> Software Bill of Materials (CycloneDX, SPDX)
                                    </li>
                                    <li>
                                        <strong class="text-text">Document components:</strong> SOC 2, ISO 27001, Pen Test Reports, etc.
                                    </li>
                                </ul>
                                <p class="text-text-muted m-0 text-sm">
                                    Create Document components later for your Trust Center to share compliance artifacts.
                                </p>
                            </div>
                        </div>
                    </aside>
                    <!-- Primary CTA -->
                    <a href="{% url 'core:component_details' component_id=component_id %}"
                       class="btn-primary-action group flex items-center justify-center gap-2 w-full py-3.5 px-4 text-base font-semibold rounded-xl hover:-translate-y-0.5 transition-all duration-300 no-underline mb-4"
                       x-show="show"
                       x-transition:enter="transition ease-out duration-500 delay-700"
                       x-transition:enter-start="opacity-0 translate-y-2"
                       x-transition:enter-end="opacity-100 translate-y-0">
                        Go to Component
                        <i class="fas fa-arrow-right transition-transform duration-300 group-hover:translate-x-1"></i>
                    </a>
                    <!-- Secondary Link -->
                    <div x-show="show"
                         x-transition:enter="transition ease-out duration-500 delay-800"
                         x-transition:enter-start="opacity-0"
                         x-transition:enter-end="opacity-100">
                        <a href="{{ sbom_augmentation_url }}"
                           target="_blank"
                           rel="noopener noreferrer"
                           class="inline-flex items-center gap-1.5 text-text-muted no-underline hover:text-primary text-sm transition-colors">
                            <i class="fas fa-book-open"></i>
                            Read the SBOM lifecycle guide
                            <i class="fas fa-external-link-alt text-[10px] opacity-70"></i>
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
{% block scripts %}
    {% vite_asset 'sbomify/apps/teams/js/main.ts' %}
{% endblock %}
{% block styles %}
    <style>
        /* Upload icon box - works in both light and dark mode */
        .upload-icon-box {
            background: linear-gradient(135deg, rgb(var(--color-primary)) 0%, rgb(var(--color-primary-dark)) 100%);
            box-shadow: 0 8px 20px -4px rgb(var(--color-primary) / 0.5);
        }

        :root.light .upload-icon-box {
            box-shadow: 0 8px 20px -4px rgb(var(--color-primary) / 0.4);
        }

        /* Success Checkmark Animation */
        .success-checkmark {
            width: 80px;
            height: 80px;
            margin: 0 auto;
        }

        .success-checkmark .check-icon {
            width: 80px;
            height: 80px;
            position: relative;
            border-radius: 50%;
            box-sizing: content-box;
            border: 4px solid rgb(var(--color-success));
        }

        .success-checkmark .check-icon::before {
            top: 3px;
            left: -2px;
            width: 30px;
            transform-origin: 100% 50%;
            border-radius: 100px 0 0 100px;
        }

        .success-checkmark .check-icon::after {
            top: 0;
            left: 30px;
            width: 60px;
            transform-origin: 0 50%;
            border-radius: 0 100px 100px 0;
            animation: rotate-circle 1.25s ease-in;
        }

        .success-checkmark .check-icon::before,
        .success-checkmark .check-icon::after {
            content: '';
            height: 100px;
            position: absolute;
            background: rgb(var(--color-surface));
            transform: rotate(-45deg);
        }

        .success-checkmark .check-icon .icon-line {
            height: 5px;
            background-color: rgb(var(--color-success));
            display: block;
            border-radius: 2px;
            position: absolute;
            z-index: 10;
        }

        .success-checkmark .check-icon .icon-line.line-tip {
            top: 46px;
            left: 14px;
            width: 25px;
            transform: rotate(45deg);
            animation: icon-line-tip 0.75s;
        }

        .success-checkmark .check-icon .icon-line.line-long {
            top: 38px;
            right: 8px;
            width: 47px;
            transform: rotate(-45deg);
            animation: icon-line-long 0.75s;
        }

        .success-checkmark .check-icon .icon-circle {
            top: -4px;
            left: -4px;
            z-index: 10;
            width: 80px;
            height: 80px;
            border-radius: 50%;
            position: absolute;
            box-sizing: content-box;
            border: 4px solid rgb(var(--color-success) / 0.5);
        }

        .success-checkmark .check-icon .icon-fix {
            top: 8px;
            width: 5px;
            left: 26px;
            z-index: 1;
            height: 85px;
            position: absolute;
            transform: rotate(-45deg);
            background-color: rgb(var(--color-surface));
        }

        @keyframes rotate-circle {
            0% { transform: rotate(-45deg); }
            5% { transform: rotate(-45deg); }
            12% { transform: rotate(-405deg); }
            100% { transform: rotate(-405deg); }
        }

        @keyframes icon-line-tip {
            0% { width: 0; left: 1px; top: 19px; }
            54% { width: 0; left: 1px; top: 19px; }
            70% { width: 50px; left: -8px; top: 37px; }
            84% { width: 17px; left: 21px; top: 48px; }
            100% { width: 25px; left: 14px; top: 46px; }
        }

        @keyframes icon-line-long {
            0% { width: 0; right: 46px; top: 54px; }
            65% { width: 0; right: 46px; top: 54px; }
            84% { width: 55px; right: 0px; top: 35px; }
            100% { width: 47px; right: 8px; top: 38px; }
        }
    </style>
{% endblock %}
