<div class="standard-card-container">
    <div class="card settings-card">
        <div class="card-header">
            <h4 class="card-title mb-0">
                <i class="fas fa-envelope-open-text me-2"></i>
                Workspace Invitations
            </h4>
        </div>
        <div class="card-body">
            {% if pending_invitations %}
                <div class="invitation-list">
                    {% for inv in pending_invitations %}
                        <div class="invitation-card mb-3 p-3 border rounded">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="invitation-info">
                                    <h5 class="mb-1">
                                        <i class="fas fa-building me-2 text-primary"></i>
                                        {{ inv.team_name }}
                                    </h5>
                                    <div class="invitation-meta">
                                        <span class="badge bg-secondary me-2">{{ inv.role|title }}</span>
                                        <small class="text-muted">
                                            <i class="fas fa-clock me-1"></i>
                                            Expires {{ inv.expires_at|date:"M d, Y" }}
                                        </small>
                                    </div>
                                </div>
                                <div class="invitation-actions d-flex gap-2">
                                    <form method="post"
                                          action="{% url 'core:accept_user_invitation' inv.id %}"
                                          class="d-inline"
                                          hx-boost="false">
                                        {% csrf_token %}
                                        <button type="submit" class="btn btn-success btn-sm">
                                            <i class="fas fa-check me-1"></i> Accept
                                        </button>
                                    </form>
                                    <form method="post"
                                          action="{% url 'core:reject_user_invitation' inv.id %}"
                                          class="d-inline"
                                          hx-boost="false">
                                        {% csrf_token %}
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="fas fa-times me-1"></i> Decline
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-muted mb-0">
                    <i class="fas fa-inbox me-2"></i>
                    No pending workspace invitations.
                </p>
            {% endif %}
        </div>
    </div>
</div>
