{% load static %}
<link rel="stylesheet"
      href="{% static 'css/components/standard-card.css' %}">
<link rel="stylesheet"
      href="{% static 'css/components/public-download-card.css' %}">
<div class="standard-card mt-3">
    <div class="bg-white rounded-lg shadow-sm">
        <div class="px-6 py-4 border-b">
            <div class="header-content">
                <h4 class="text-lg font-semibold mb-0">{{ title|default:'Download' }}</h4>
            </div>
        </div>
        <div class="p-6 text-center">
            {% if description %}<p class="text-gray-600 mb-4">{{ description }}</p>{% endif %}
            <a href="{{ download_url }}"
               class="px-4 py-2 bg-brand-primary text-white rounded hover:opacity-90 transition-opacity download-btn">
                {% if download_icon %}
                    <i class="{{ download_icon }} mr-2"></i>
                {% else %}
                    <i class="fas fa-download mr-2"></i>
                {% endif %}
                {{ download_text|default:'Download' }}
            </a>
            {% if file_info %}
                <div class="file-info mt-2">
                    <small class="text-gray-600">{{ file_info }}</small>
                </div>
            {% endif %}
            {% if additional_info %}
                <div class="additional-info mt-2">
                    <small class="text-gray-600">{{ additional_info }}</small>
                </div>
            {% endif %}
        </div>
    </div>
</div>
