<div class="mt-4">
    <div class="tw-card shadow-sm">
        <div class="px-6 py-4 border-b border-border">
            <h4 class="text-lg font-semibold text-text m-0">{{ title|default:'Download' }}</h4>
        </div>
        <div class="p-6 text-center">
            {% if description %}<p class="text-text-muted mb-4">{{ description }}</p>{% endif %}
            <a href="{{ download_url }}" class="tw-btn-primary">
                {% if download_icon %}
                    <i class="{{ download_icon }} mr-2"></i>
                {% else %}
                    <i class="fas fa-download mr-2"></i>
                {% endif %}
                {{ download_text|default:'Download' }}
            </a>
            {% if file_info %}
                <div class="mt-3">
                    <small class="text-text-muted">{{ file_info }}</small>
                </div>
            {% endif %}
            {% if additional_info %}
                <div class="mt-2">
                    <small class="text-text-muted">{{ additional_info }}</small>
                </div>
            {% endif %}
        </div>
    </div>
</div>
