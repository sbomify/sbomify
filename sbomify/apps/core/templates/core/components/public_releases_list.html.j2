{# Public Releases List - server-rendered #}
{% load static %}
{% load humanize %}
{% if public_releases %}
    <div class="public-section">
        <div class="tw-card">
            <div class="px-6 py-4 border-b border-border flex justify-between items-center">
                <h4 class="text-lg font-semibold text-text flex items-center gap-2 m-0">
                    <i class="fas fa-tags text-primary"></i>Releases
                </h4>
                {% if view_all_releases_url %}
                    <a href="{{ view_all_releases_url }}"
                       class="inline-flex items-center gap-2 text-sm text-primary hover:underline">
                        View All<i class="fas fa-arrow-right"></i>
                    </a>
                {% endif %}
            </div>
            <div class="p-4">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    {% for release in public_releases %}
                        <a href="{{ release.public_url }}"
                           class="block p-4 rounded-lg border border-border bg-surface hover:bg-border/10 transition-colors no-underline">
                            <div class="flex justify-between items-start mb-2">
                                <div class="flex items-center gap-2 flex-wrap">
                                    <span class="font-semibold text-text">{{ release.name }}</span>
                                    {% if release.is_latest %}
                                        <span class="px-2 py-0.5 text-xs font-medium rounded bg-success/10 text-success">Latest</span>
                                    {% endif %}
                                    {% if release.is_prerelease %}
                                        <span class="px-2 py-0.5 text-xs font-medium rounded bg-warning/10 text-warning">Pre-release</span>
                                    {% endif %}
                                    {% if release.version %}
                                        <span class="px-2 py-0.5 text-xs font-medium rounded bg-border text-text-muted">{{ release.version }}</span>
                                    {% endif %}
                                </div>
                                <div class="text-text-muted text-xs flex items-center gap-1">
                                    <i class="far fa-clock"></i>
                                    {{ release.released_at|default:release.created_at|naturaltime }}
                                </div>
                            </div>
                            {% if release.description %}
                                <p class="text-text-muted text-sm m-0">{{ release.description|truncatechars:100 }}</p>
                            {% endif %}
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endif %}
