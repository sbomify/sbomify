{% comment %}
Recent Activity Feed Component
Displays chronological list of recent workspace events.

Parameters:
- activities: List of activity dicts with keys:
  - type: 'upload', 'scan', 'create', 'update', 'delete'
  - title: Activity title
  - description: Short description
  - user: Username who performed action
  - timestamp: Datetime of activity
  - url: Optional link to related item
- view_all_url: Optional URL to view all activities
{% endcomment %}
<div class="tw-card h-full flex flex-col">
    <div class="px-6 py-4 border-b border-border">
        <h3 class="text-lg font-semibold text-text flex items-center gap-2 m-0">
            <i class="fas fa-history text-primary"></i>
            Recent Activity
        </h3>
    </div>
    <div class="p-6 flex-1 overflow-hidden">
        {% if activities %}
            <div class="space-y-4 max-h-[320px] overflow-y-auto pr-2">
                {% for activity in activities %}
                    <div class="flex items-start gap-3 group">
                        {# Activity icon with color based on type #}
                        <div class="w-8 h-8 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5 {% if activity.type == 'upload' %}text-teal-500 bg-teal-500/10{% elif activity.type == 'scan' %}text-orange-500 bg-orange-500/10{% elif activity.type == 'create' %}text-success bg-success/10{% elif activity.type == 'update' %}text-primary bg-primary/10{% elif activity.type == 'delete' %}text-danger bg-danger/10{% else %}text-text-muted bg-border/50{% endif %}">
                            <i class="fas {% if activity.type == 'upload' %}fa-cloud-upload-alt{% elif activity.type == 'scan' %}fa-shield-alt{% elif activity.type == 'create' %}fa-plus-circle{% elif activity.type == 'update' %}fa-edit{% elif activity.type == 'delete' %}fa-trash-alt{% else %}fa-circle{% endif %} text-sm"></i>
                        </div>
                        <div class="flex-1 min-w-0">
                            <div class="flex items-start justify-between gap-2">
                                <div class="min-w-0">
                                    {% if activity.url %}
                                        <a href="{{ activity.url }}"
                                           class="text-sm font-medium text-text hover:text-primary truncate block">
                                            {{ activity.title }}
                                        </a>
                                    {% else %}
                                        <span class="text-sm font-medium text-text truncate block">{{ activity.title }}</span>
                                    {% endif %}
                                    {% if activity.type == 'scan' and activity.scan_details %}
                                        {# Enhanced scan display with severity badges #}
                                        <div class="flex flex-wrap items-center gap-1 mt-1">
                                            <span class="text-xs text-text-muted">{{ activity.scan_details.total }} vulns:</span>
                                            {% if activity.scan_details.critical > 0 %}
                                                <span class="px-1.5 py-0.5 text-[10px] font-medium rounded bg-danger/10 text-danger">{{ activity.scan_details.critical }}C</span>
                                            {% endif %}
                                            {% if activity.scan_details.high > 0 %}
                                                <span class="px-1.5 py-0.5 text-[10px] font-medium rounded bg-orange-500/10 text-orange-500">{{ activity.scan_details.high }}H</span>
                                            {% endif %}
                                            {% if activity.scan_details.medium > 0 %}
                                                <span class="px-1.5 py-0.5 text-[10px] font-medium rounded bg-warning/10 text-warning">{{ activity.scan_details.medium }}M</span>
                                            {% endif %}
                                            {% if activity.scan_details.low > 0 %}
                                                <span class="px-1.5 py-0.5 text-[10px] font-medium rounded bg-border/50 text-text-muted">{{ activity.scan_details.low }}L</span>
                                            {% endif %}
                                            {% if activity.scan_details.total == 0 %}
                                                <span class="px-1.5 py-0.5 text-[10px] font-medium rounded bg-success/10 text-success">Clean</span>
                                            {% endif %}
                                        </div>
                                        <p class="text-xs text-text-muted mt-0.5 truncate">{{ activity.scan_details.component_name }}</p>
                                    {% elif activity.description %}
                                        <p class="text-xs text-text-muted mt-0.5 truncate">{{ activity.description }}</p>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="flex items-center gap-2 mt-1 text-xs text-text-muted">
                                {% if activity.user %}
                                    <span class="flex items-center gap-1">
                                        <i class="fas fa-user"></i>
                                        {{ activity.user }}
                                    </span>
                                    <span>Â·</span>
                                {% endif %}
                                <span class="flex items-center gap-1">
                                    <i class="fas fa-clock"></i>
                                    {% if activity.timestamp %}
                                        {{ activity.timestamp|timesince }} ago
                                    {% else %}
                                        Just now
                                    {% endif %}
                                </span>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="flex flex-col items-center justify-center py-8 text-center">
                <div class="w-12 h-12 rounded-full bg-border/50 flex items-center justify-center mb-3">
                    <i class="fas fa-inbox text-text-muted text-xl"></i>
                </div>
                <p class="text-text-muted text-sm">No recent activity</p>
                <p class="text-text-muted text-xs mt-1">Activity will appear here as you use the workspace</p>
            </div>
        {% endif %}
    </div>
    {% if view_all_url %}
        <div class="px-6 py-3 border-t border-border">
            <a href="{{ view_all_url }}"
               class="text-sm text-primary hover:text-primary-dark flex items-center gap-1">
                View all activity
                <i class="fas fa-arrow-right text-xs"></i>
            </a>
        </div>
    {% endif %}
</div>
