{% extends "core/dashboard_base.htmx.j2" %}
{% load static %}
{% block title %}sbomify Components{% endblock %}
{% block extra_styles %}
    <link rel="stylesheet" href="{% static 'css/components-dashboard.css' %}">
{% endblock %}
{% block dashboard_content %}
    <div class="dashboard">
        <div class="page-header mb-4">
            <div class="header-main">
                <div class="title-section">
                    <h1 class="item-title">
                        <i class="fas fa-cube me-3 text-primary"></i>Components
                    </h1>
                    <p class="item-subtitle">Manage individual software components and their SBOMs</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">{% include 'core/components_table.html.j2' %}</div>
        </div>
        {% if has_crud_permissions %}
            <div id="addComponentModal"
                 class="modal fade"
                 data-bs-backdrop="static"
                 tabindex="-1"
                 aria-labelledby="addComponentModalLabel"
                 aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content border-0">
                        <div class="modal-header border-bottom-0 pb-0">
                            <h4 id="addComponentModalLabel" class="modal-title text-secondary">Add Component</h4>
                            <button type="button"
                                    class="btn-close"
                                    data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                        </div>
                        <div class="modal-body pt-3">
                            <form id="addComponentForm"
                                  method="post"
                                  action="{% url 'core:components_dashboard' %}">
                                {% csrf_token %}
                                <div class="mb-4">
                                    <label class="form-label text-secondary fw-medium" for="componentName">
                                        Name
                                        <span class="text-danger">*</span>
                                    </label>
                                    <input id="componentName"
                                           name="name"
                                           type="text"
                                           class="form-control form-control-lg"
                                           required />
                                </div>
                                <div class="mb-4">
                                    <label class="form-label text-secondary fw-medium" for="componentType">
                                        Type
                                        <span class="text-danger">*</span>
                                    </label>
                                    <select id="componentType"
                                            name="component_type"
                                            class="form-select form-select-lg"
                                            required>
                                        <option value="sbom">SBOM</option>
                                        <option value="document">Document</option>
                                    </select>
                                    <div class="form-text">Choose the type of component you're creating</div>
                                </div>
                                <div class="mb-4" id="globalToggleGroup">
                                    <div class="form-check form-switch">
                                        <input id="componentIsGlobal"
                                               name="is_global"
                                               class="form-check-input"
                                               type="checkbox"
                                               role="switch">
                                        <label class="form-check-label text-secondary fw-medium"
                                               for="componentIsGlobal">
                                            Workspace-wide component (documents only)
                                        </label>
                                    </div>
                                    <div class="form-text">
                                        Global components live at the workspace level and are not tied to a specific project. Use for documents and attestations.
                                    </div>
                                </div>
                                <div class="d-flex justify-content-end gap-2 mt-4">
                                    <button type="button"
                                            class="btn btn-outline-secondary"
                                            data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-primary px-4">Create Component</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
{% block scripts %}
    <script>
        (function() {
            const typeSelect = document.getElementById('componentType');
            const globalToggle = document.getElementById('componentIsGlobal');
            const globalGroup = document.getElementById('globalToggleGroup');

            if (!typeSelect || !globalToggle || !globalGroup) return;

            const syncGlobalToggle = () => {
                const isDocument = typeSelect.value === 'document';
                globalGroup.style.display = isDocument ? 'block' : 'none';
                if (!isDocument) {
                    globalToggle.checked = false;
                }
            };

            typeSelect.addEventListener('change', syncGlobalToggle);
            syncGlobalToggle();
        })();
    </script>
{% endblock %}
