{% extends "core/dashboard_base.htmx.j2" %}
{% load static %}
{% load django_vite %}
{% block title %}sbomify Dashboard{% endblock %}
{% block dashboard_content %}
    <div class="space-y-6">
        {# Page Header #}
        <div class="mb-2">
            <h1 class="text-2xl font-bold text-text">Dashboard</h1>
        </div>
        {# Vulnerability Trends & Recent SBOM Scans #}
        <div class="tw-card">
            <div hx-get="{% url 'vulnerability_scanning:vulnerability_trends' %}?show_product_filter=true"
                 hx-trigger="load"
                 hx-swap="innerHTML">
                <div class="flex flex-col items-center justify-center py-12">
                    <div class="w-8 h-8 border-2 border-primary/20 border-t-primary rounded-full animate-spin"></div>
                    <p class="mt-3 text-text-muted">Loading vulnerability trends...</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}{{ block.super }}{% endblock %}
