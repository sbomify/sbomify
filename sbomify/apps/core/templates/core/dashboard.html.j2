{% extends "core/dashboard_base.htmx.j2" %}
{% load static %}
{% load django_vite %}
{% block title %}sbomify Dashboard{% endblock %}
{% block extra_styles %}
    <link rel="stylesheet" href="{% static 'css/dashboard.css' %}">
    <link rel="stylesheet" href="{% static 'css/components/stat-card.css' %}">
    <link rel="stylesheet"
          href="{% static 'css/components/vulnerability-trends.css' %}">
{% endblock %}
{% block dashboard_content %}
    <div class="dashboard">
        <h3 class="page-title">Dashboard</h3>
        <div class="mt-4">
            <div class="w-full">
                <div hx-get="{% url 'vulnerability_scanning:vulnerability_trends' %}?show_product_filter=true"
                     hx-trigger="load"
                     hx-swap="innerHTML">
                    <div class="text-center py-5">
                        <div class="inline-block h-8 w-8 animate-spin rounded-full border-4 border-solid border-brand-primary border-r-transparent"
                             role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                        <p class="mt-2 text-gray-600">Loading vulnerability trends...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    {% vite_asset 'sbomify/apps/core/js/main.ts' %}
{% endblock %}
