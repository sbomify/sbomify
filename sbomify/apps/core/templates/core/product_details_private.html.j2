{% extends "core/dashboard_base.htmx.j2" %}
{% load static %}
{% load django_vite %}
{% load utils %}
{% load public_url_tags %}
{% block title %}sbomify Product: {{ product.name }}{% endblock %}
{% block extra_styles %}
    <link rel="stylesheet"
          href="{% static 'css/product-details-private.css' %}">
    <link rel="stylesheet" href="{% static 'css/components/stat-card.css' %}">
{% endblock %}
{% block content %}
    <div class="page-header mb-4">
        <div class="header-main mb-3">
            <div class="title-section">
                <h1 class="item-title">
                    {% if product.has_crud_permissions %}
                        {% include 'core/components/editable_single_field.html.j2' with item_type='product' item_id=product.id item_value=product.name %}
                    {% else %}
                        {{ product.name }}
                    {% endif %}
                </h1>
                {% if product.has_crud_permissions %}
                    {% url 'core:product_details_public' product.id as product_public_url %}
                    {% include 'core/components/public_status_toggle.html.j2' with item_type='product' item_id=product.id public_url=product_public_url is_public=product.is_public %}
                {% endif %}
            </div>
            {% if product.has_crud_permissions %}
                <div class="description-section"
                     x-data="{ editing: false, isPublic: {{ product.is_public|yesno:'true,false' }} }"
                     @public-status-changed.window="if ($event.detail.itemType === 'product' && $event.detail.itemId === '{{ product.id }}') isPublic = $event.detail.isPublic">
                    <template x-if="!editing">
                        <div class="description-display" @click="editing = true">
                            {% if product.description %}
                                <p class="description-text mb-1">{{ product.description }}</p>
                            {% else %}
                                <p class="description-placeholder mb-1">Add a description...</p>
                            {% endif %}
                            <i class="fas fa-pencil-alt edit-icon"></i>
                        </div>
                    </template>
                    <template x-if="editing">
                        <form method="post"
                              action="{% url 'core:product_details' product.id %}"
                              class="description-form">
                            {% csrf_token %}
                            <input type="hidden" name="action" value="update_description">
                            <textarea name="description"
                                      class="form-control mb-2"
                                      rows="3"
                                      maxlength="1000"
                                      placeholder="Enter a product description..."
                                      x-init="$el.focus()">{{ product.description|default:'' }}</textarea>
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-sm btn-primary">
                                    <i class="fas fa-check me-1"></i>Save
                                </button>
                                <button type="button"
                                        class="btn btn-sm btn-outline-secondary"
                                        @click="editing = false">Cancel</button>
                            </div>
                        </form>
                    </template>
                </div>
            {% elif product.description %}
                <p class="text-muted mb-0 mt-2">{{ product.description }}</p>
            {% endif %}
        </div>
        <div class="header-meta">
            <span class="meta-item">
                <i class="fas fa-box me-2 text-primary"></i>
                <span class="meta-label">Product</span>
            </span>
            <span class="meta-divider">â€¢</span>
            <span class="meta-item">
                {% include 'core/components/copyable-value.html.j2' with value=product.id title="Product ID: "|add:product.id|add:" (click to copy)" %}
            </span>
        </div>
        <div class="header-stats">
            <span class="stat-badge">
                <i class="fas fa-folder"></i>
                <span class="stat-number">{{ dashboard_summary.total_projects|default:0 }}</span>
                <span class="stat-label">Projects</span>
            </span>
            <span class="stat-badge">
                <i class="fas fa-puzzle-piece"></i>
                <span class="stat-number">{{ dashboard_summary.total_components|default:0 }}</span>
                <span class="stat-label">Components</span>
            </span>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            {% include 'core/components/item_assignment_manager.html.j2' with parent_type='product' parent_id=product.id child_type='project' can_edit=product.has_crud_permissions %}
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12"
             hx-get="{% url 'core:product_identifiers' product.id %}"
             hx-trigger="load"
             hx-swap="innerHTML">
            <div class="d-flex justify-content-center py-4">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12"
             hx-get="{% url 'core:product_links' product.id %}"
             hx-trigger="load"
             hx-swap="innerHTML">
            <div class="d-flex justify-content-center py-4">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12"
             hx-get="{% url 'core:product_lifecycle' product.id %}"
             hx-trigger="load"
             hx-swap="innerHTML">
            <div class="d-flex justify-content-center py-4">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            {% include 'core/components/product_releases.html.j2' with product_id=product.id is_public_view=False can_create=product.has_crud_permissions can_edit=product.has_crud_permissions can_delete=product.has_crud_permissions %}
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <div class="standard-card">
                <div class="card download-card shadow-sm">
                    <div class="card-header">
                        <h4 class="card-title mb-0">
                            <i class="fas fa-download me-2"></i>Latest Release
                        </h4>
                    </div>
                    <div class="card-body text-center">
                        <p class="text-muted mb-3">
                            Download SBOM from the latest release containing the most current artifacts for this product
                        </p>
                        <div class="d-flex justify-content-center gap-3 flex-wrap">
                            <a class="btn btn-outline-secondary d-inline-flex align-items-center gap-2 px-3 py-2"
                               href="{% url 'core:sbom_download_product' product.id %}"
                               title="Download as CycloneDX">
                                <img src="{% static 'img/cyclonedx-logo.svg' %}"
                                     alt="CycloneDX"
                                     height="18"
                                     width="90"
                                     style="height: 18px;
                                            width: auto">
                                <i class="fas fa-download"></i>
                            </a>
                            <a class="btn btn-outline-secondary d-inline-flex align-items-center gap-2 px-3 py-2"
                               href="{% url 'core:sbom_download_product' product.id %}?format=spdx"
                               title="Download as SPDX">
                                <img src="{% static 'img/spdx-logo.svg' %}"
                                     alt="SPDX"
                                     height="18"
                                     width="54"
                                     style="height: 18px;
                                            width: auto">
                                <i class="fas fa-download"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% if product.has_crud_permissions %}
        <div class="row mt-3">
            <div class="col-12">
                {% include 'components/product_danger_zone.html.j2' with product_id=product.id product_name=product.name %}
            </div>
        </div>
    {% endif %}
{% endblock %}
{% block scripts %}
    {% vite_asset 'sbomify/apps/core/js/main.ts' %}
    {% vite_asset 'sbomify/apps/sboms/js/main.ts' %}
{% endblock %}
