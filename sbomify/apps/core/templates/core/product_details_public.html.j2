{% extends "core/public_base.htmx.j2" %}
{% load breadcrumb_tags %}
{% load django_vite %}
{% load static %}
{% load public_url_tags %}
{% load humanize %}
{% block title %}{{ product.name }} - SBOM & Security{% endblock %}
{% block meta_description %}
    {{ product.name }} - Software Bill of Materials (SBOM) for this product. View projects, components, and download SBOMs.
{% endblock %}
{% block og_title %}{{ product.name }} - Software Bill of Materials{% endblock %}
{% block og_description %}
    {{ product.name }} - View projects, components, and download Software Bill of Materials (SBOM) for this product.
{% endblock %}
{% block breadcrumb %}
    {% breadcrumb product 'product' %}
{% endblock %}
{% block content %}
    <div class="public-item-header">
        {% if workspace_public_url %}
            <a href="{{ workspace_public_url }}" class="back-link">
                <i class="fas fa-arrow-left"></i>Back to Trust Center
            </a>
        {% endif %}
        <h1 class="public-item-title">
            <span class="public-item-title-icon icon-product">
                <i class="fas fa-box"></i>
            </span>
            {{ product.name }}
        </h1>
        {% if product.description %}<p class="public-item-description">{{ product.description }}</p>{% endif %}
        {% if public_projects or passing_assessments %}
            <div class="public-item-badges">
                {% if public_projects %}
                    <span class="public-badge badge-count">
                        <i class="fas fa-diagram-project"></i>
                        {{ public_projects|length }} Project{{ public_projects|length|pluralize }}
                    </span>
                {% endif %}
                {% for assessment in passing_assessments %}
                    {% include 'plugins/components/public_assessment_badge.html.j2' with assessment=assessment %}
                {% endfor %}
            </div>
        {% endif %}
    </div>
    {% include 'core/components/public_product_identifiers.html.j2' %}
    {% include 'core/components/public_product_links.html.j2' %}
    {% include 'core/components/public_product_projects.html.j2' with projects=public_projects %}
    {% include 'core/components/public_releases_list.html.j2' %}
    {% if has_downloadable_content %}
        <div class="public-section">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">
                        <i class="fas fa-download"></i>Download Latest Release
                    </h4>
                </div>
                <div class="card-body text-center py-4">
                    <p class="text-muted mb-3">
                        Download the combined SBOM from the latest release containing all artifacts for this product
                    </p>
                    <a class="btn btn-primary"
                       href="{% url 'core:sbom_download_product' product.id %}">
                        <i class="fas fa-download me-2"></i>Download Latest Release
                    </a>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
{% block scripts %}
    {% vite_asset 'sbomify/apps/core/js/main.ts' %}
    {% vite_asset 'sbomify/apps/sboms/js/main.ts' %}
{% endblock %}
