{% extends "core/public_base.htmx.j2" %}
{% load breadcrumb_tags %}
{% load static %}
{% load public_url_tags %}
{% load humanize %}
{% block title %}{{ product.name }} - Releases{% endblock %}
{% block extra_css %}
    <link rel="stylesheet"
          href="{% static 'css/product-releases-public.css' %}">
    <style>
        .meta-item i {
            color: var(--brand-color) !important;
        }
    </style>
{% endblock %}
{% block breadcrumb %}
    {% breadcrumb releases 'releases' %}
{% endblock %}
{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-header mb-4">
                    <div class="header-main mb-3">
                        <div class="title-section">
                            <h1 class="item-title">Releases</h1>
                            <p class="item-subtitle">Software releases for {{ product.name }}</p>
                        </div>
                    </div>
                    {% if releases %}
                        <div class="header-meta">
                            <span class="meta-item">
                                <i class="fas fa-tag me-2"></i>
                                <span class="meta-label">{{ releases|length|apnumber }} release{{ releases|length|pluralize }}</span>
                            </span>
                        </div>
                    {% endif %}
                </div>
                {% if releases %}
                    <div class="releases-grid">
                        {% for release in releases %}
                            <div class="release-card">
                                <div class="release-header">
                                    <div class="release-title">
                                        <h3 class="release-name">
                                            <a href="{% public_url 'core:release_details_public' product_id=product.id product_slug=product.slug release_id=release.id release_slug=release.slug %}">{{ release.name }}</a>
                                            {% if release.is_latest %}<span class="badge bg-success ms-2">Latest</span>{% endif %}
                                        </h3>
                                        {% if release.description %}<p class="release-description">{{ release.description }}</p>{% endif %}
                                    </div>
                                    <div class="release-meta">
                                        <small class="text-muted">
                                            <i class="fas fa-clock me-1"></i>
                                            {{ release.released_at|default_if_none:release.created_at|naturaltime }}
                                        </small>
                                    </div>
                                </div>
                                <div class="release-content">
                                    <div class="release-stats">
                                        {% if release.artifacts.count %}
                                            <div class="stat-item">
                                                <i class="fas fa-puzzle-piece me-1"></i>
                                                <span class="stat-value">{{ release.artifacts.count|apnumber }}</span>
                                                <span class="stat-label">artifact{{ release.artifacts.count|pluralize }}</span>
                                            </div>
                                        {% endif %}
                                        {% with sbom_count=release.artifacts.filter|length %}
                                            {% if sbom_count > 0 %}
                                                <div class="stat-item">
                                                    <i class="fas fa-download me-1"></i>
                                                    <a href="{% url 'api-1:download_release' release.id %}"
                                                       class="download-link">Download SBOM</a>
                                                </div>
                                            {% endif %}
                                        {% endwith %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
