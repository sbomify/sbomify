{% extends "core/dashboard_base.htmx.j2" %}
{% comment %}
Template context:
project: Project object
APP_BASE_URL: Base URL for the application (for AJAX requests)
has_crud_permissions: Boolean indicating if user has CRUD permissions
{% endcomment %}
{% load static %}
{% load django_vite %}
{% block title %}sbomify Project: {{ project.name }}{% endblock %}
{% block extra_styles %}
    <link rel="stylesheet"
          href="{% static 'css/project-details-private.css' %}">
    <link rel="stylesheet" href="{% static 'css/components/stat-card.css' %}">
    <link rel="stylesheet"
          href="{% static 'css/components/export-data-card.css' %}">
{% endblock %}
{% block content %}
    <div class="page-header mb-4">
        <div class="header-main mb-3">
            <div class="title-section">
                <h1 class="item-title">
                    {% if project.has_crud_permissions %}
                        <span class="vc-editable-single-field"
                              data-item-type="project"
                              data-item-id="{{ project.id }}"
                              data-item-value="{{ project.name }}"></span>
                    {% else %}
                        {{ project.name }}
                    {% endif %}
                </h1>
                {% if project.has_crud_permissions %}
                    <div class="vc-public-status-toggle"
                         data-item-type="project"
                         data-item-id="{{ project.id }}"
                         data-public-url="{{ APP_BASE_URL }}{% url 'core:project_details_public' project.id %}"
                         data-inline="true"></div>
                {% endif %}
            </div>
        </div>
        <div class="header-meta">
            <span class="meta-item">
                <i class="fas fa-project-diagram me-2 text-primary"></i>
                <span class="meta-label">Project</span>
            </span>
            <span class="meta-divider">â€¢</span>
            <span class="meta-item">
                {% include 'core/components/copyable-value.html.j2' with value=project.id title="Project ID: "|add:project.id|add:" (click to copy)" %}
            </span>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="container-fluid p-0">
                <div class="row">
                    <div class="col-md-4">
                        <div class="standard-card mt-3">
                            <div class="card stats-card shadow-sm">
                                <div class="card-header">
                                    <div class="header-content">
                                        <h4 class="card-title mb-0">Components in Project</h4>
                                    </div>
                                </div>
                                <div class="card-body text-center">
                                    <div class="stat-content">
                                        <div class="stat-display">
                                            <div class="stat-value">
                                                <span class="display-4 stat-number text-dark-emphasis">{{ dashboard_summary.total_components|default:0 }}</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <div class="vc-item-assignment-manager"
                 data-parent-type="project"
                 data-parent-id="{{ project.id }}"
                 data-has-crud-permissions="{% if project.has_crud_permissions %}true{% else %}false{% endif %}"></div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <div class="standard-card mt-3">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <div class="header-content">
                            <h4 class="card-title mb-0">Export Data</h4>
                        </div>
                    </div>
                    <div class="card-body text-center">
                        <p class="text-muted mb-3">Download all SBOMs associated with this project as a ZIP archive</p>
                        <a class="btn btn-primary download-btn"
                           href="{% url 'api-1:download_project_sbom' project.id %}">
                            <i class="fas fa-download me-2"></i>Download Project SBOMs as Zip file
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% if project.has_crud_permissions %}
        <div class="row mt-3">
            <div class="col-12">
                <div class="vc-project-danger-zone"
                     data-project-id="{{ project.id }}"
                     data-project-name="{{ project.name }}"
                     data-csrf-token="{{ csrf_token }}"></div>
            </div>
        </div>
    {% endif %}
{% endblock %}
{% block scripts %}
    {% vite_asset 'sbomify/apps/core/js/main.ts' %}
    {% vite_asset 'sbomify/apps/sboms/js/main.ts' %}
{% endblock %}
