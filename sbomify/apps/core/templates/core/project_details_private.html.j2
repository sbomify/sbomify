{% extends "core/dashboard_base.htmx.j2" %}
{% comment %}
Template context:
project: Project object
APP_BASE_URL: Base URL for the application (for AJAX requests)
has_crud_permissions: Boolean indicating if user has CRUD permissions
{% endcomment %}
{% load static %}
{% load django_vite %}
{% load public_url_tags %}
{% block title %}sbomify Project: {{ project.name }}{% endblock %}
{% block extra_styles %}
    <link rel="stylesheet"
          href="{% static 'css/project-details-private.css' %}">
    <link rel="stylesheet" href="{% static 'css/components/stat-card.css' %}">
    <link rel="stylesheet"
          href="{% static 'css/components/export-data-card.css' %}">
{% endblock %}
{% block content %}
    <div class="page-header mb-4">
        <div class="header-main mb-3">
            <div class="title-section">
                <h1 class="item-title">
                    {% if project.has_crud_permissions %}
                        {% include 'core/components/editable_single_field.html.j2' with item_type='project' item_id=project.id item_value=project.name %}
                    {% else %}
                        {{ project.name }}
                    {% endif %}
                </h1>
                {% if project.has_crud_permissions %}
                    {% url 'core:project_details_public' project.id as project_public_url %}
                    {% include 'core/components/public_status_toggle.html.j2' with item_type='project' item_id=project.id public_url=project_public_url is_public=project.is_public %}
                {% endif %}
            </div>
        </div>
        <div class="header-meta">
            <span class="meta-item">
                <i class="fas fa-folder mr-2 text-brand-primary"></i>
                <span class="meta-label">Project</span>
            </span>
            <span class="meta-divider">â€¢</span>
            <span class="meta-item">
                {% include 'core/components/copyable-value.html.j2' with value=project.id title="Project ID: "|add:project.id|add:" (click to copy)" %}
            </span>
        </div>
        <div class="header-stats">
            <span class="stat-badge">
                <i class="fas fa-puzzle-piece"></i>
                <span class="stat-number">{{ dashboard_summary.total_components|default:0 }}</span>
                <span class="stat-label">Components</span>
            </span>
        </div>
    </div>
    <div class="mt-3">
        <div>
            {% include 'core/components/item_assignment_manager.html.j2' with parent_type='project' parent_id=project.id child_type='component' can_edit=project.has_crud_permissions %}
        </div>
    </div>
    <div class="mt-3">
        <div>
            <div class="standard-card mt-3">
                <div class="bg-white rounded-lg shadow-sm">
                    <div class="px-6 py-4 border-b">
                        <div class="header-content">
                            <h4 class="text-lg font-semibold mb-0">Export Data</h4>
                        </div>
                    </div>
                    <div class="p-6 text-center">
                        <p class="text-gray-600 mb-3">Download aggregated SBOM containing all components in this project</p>
                        <div class="flex justify-center gap-3 flex-wrap">
                            <a class="inline-flex items-center gap-2 px-3 py-2 border border-gray-300 text-gray-700 rounded hover:bg-gray-50 transition-colors"
                               href="{% url 'api-1:download_project_sbom' project.id %}"
                               title="Download as CycloneDX">
                                <img src="{% static 'img/cyclonedx-logo.svg' %}"
                                     alt="CycloneDX"
                                     height="18"
                                     width="90"
                                     style="height: 18px;
                                            width: auto">
                                <i class="fas fa-download"></i>
                            </a>
                            <span class="inline-flex items-center gap-2 px-3 py-2 border border-gray-300 text-gray-700 rounded opacity-50 cursor-not-allowed"
                                  role="button"
                                  aria-disabled="true">
                                <img src="{% static 'img/spdx-logo.svg' %}"
                                     alt="SPDX"
                                     height="18"
                                     width="54"
                                     style="height: 18px;
                                            width: auto">
                                <small>coming soon</small>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% if project.has_crud_permissions %}
        <div class="row mt-3">
            <div class="col-12">
                {% include 'components/project_danger_zone.html.j2' with project_id=project.id project_name=project.name %}
            </div>
        </div>
    {% endif %}
{% endblock %}
{% block scripts %}
    {% vite_asset 'sbomify/apps/core/js/main.ts' %}
    {% vite_asset 'sbomify/apps/sboms/js/main.ts' %}
{% endblock %}
