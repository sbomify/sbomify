{% extends "core/dashboard_base.htmx.j2" %}
{% load static %}
{% block title %}sbomify Projects{% endblock %}
{% block extra_styles %}
    <link rel="stylesheet" href="{% static 'css/projects-dashboard.css' %}">
    <link rel="stylesheet"
          href="{% static 'css/components/items-list-table.css' %}">
{% endblock %}
{% block dashboard_content %}
    <div class="dashboard">
        <div class="page-header mb-4">
            <div class="header-main">
                <div class="title-section">
                    <h1 class="item-title">
                        <i class="fas fa-project-diagram me-3 text-primary"></i>Projects
                    </h1>
                    <p class="item-subtitle">Organize components into logical project groups</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="projects-list standard-card mt-3">
                    <div class="card shadow-sm">
                        <div class="card-header">
                            <div class="header-content">
                                <h4 class="card-title mb-0">Projects</h4>
                                {% if has_crud_permissions %}
                                    <div class="header-actions">
                                        <button class="btn btn-primary px-4"
                                                data-bs-toggle="modal"
                                                data-bs-target="#addProjectModal">Add Project</button>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="card-body">
                            {% if projects %}
                                <div class="table-responsive">
                                    <table class="table dashboard-table mobile-card-table">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Components</th>
                                                <th class="text-center">Public?</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for project in projects %}
                                                <tr>
                                                    <td data-label="Name">
                                                        <a class="text-primary text-decoration-none"
                                                           href="{% url 'core:project_details' project.id %}">{{ project.name }}</a>
                                                    </td>
                                                    <td data-label="Components">
                                                        <div>
                                                            <div>
                                                                {% for component in project.components %}
                                                                    <a href="{% url 'core:component_details' component.id %}"
                                                                       title="Details"
                                                                       class="icon-link me-1 mb-1">
                                                                        <span class="badge bg-secondary-subtle text-secondary">
                                                                            {{ component.name }}
                                                                            <small class="ms-1 text-muted">({{ component.component_type_display }})</small>
                                                                        </span>
                                                                    </a>
                                                                {% empty %}
                                                                    <span class="text-muted">No components</span>
                                                                {% endfor %}
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="text-center" data-label="Public?">
                                                        {% if project.is_public %}
                                                            <span class="badge bg-success-subtle text-success">Public</span>
                                                        {% else %}
                                                            <span class="badge bg-secondary-subtle text-secondary">Private</span>
                                                        {% endif %}
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% else %}
                                <div class="dashboard-empty">
                                    <p class="mb-0">No projects added</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% if has_crud_permissions %}
            <div id="addProjectModal"
                 class="modal fade"
                 data-bs-backdrop="static"
                 tabindex="-1"
                 aria-labelledby="addProjectModalLabel"
                 aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content border-0">
                        <div class="modal-header border-bottom-0 pb-0">
                            <h4 id="addProjectModalLabel" class="modal-title text-secondary">Add Project</h4>
                            <button type="button"
                                    class="btn-close"
                                    data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                        </div>
                        <div class="modal-body pt-3">
                            <form id="addProjectForm"
                                  method="post"
                                  action="{% url 'core:projects_dashboard' %}">
                                {% csrf_token %}
                                <div class="mb-3">
                                    <label class="form-label text-secondary fw-medium" for="projectName">
                                        Name
                                        <span class="text-danger">*</span>
                                    </label>
                                    <input id="projectName"
                                           name="name"
                                           type="text"
                                           class="form-control form-control-lg"
                                           required />
                                </div>
                                <div class="d-flex justify-content-end gap-2 mt-4">
                                    <button type="button"
                                            class="btn btn-outline-secondary"
                                            data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-primary px-4">Create Project</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
{% block scripts %}{% endblock %}
