{% extends "core/dashboard_base.htmx.j2" %}
{% load static %}
{% block title %}sbomify Projects{% endblock %}
{% block extra_styles %}
    <link rel="stylesheet" href="{% static 'css/projects-dashboard.css' %}">
    <link rel="stylesheet"
          href="{% static 'css/components/items-list-table.css' %}">
{% endblock %}
{% block dashboard_content %}
    <div class="dashboard">
        <div class="page-header mb-4">
            <div class="header-main">
                <div class="title-section">
                    <h1 class="item-title">
                        <i class="fas fa-project-diagram me-3 text-primary"></i>Projects
                    </h1>
                    <p class="item-subtitle">Organize components into logical project groups</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">{% include 'core/projects_table.html.j2' %}</div>
        </div>
        {% if has_crud_permissions %}
            <div id="addProjectModal"
                 class="modal fade"
                 data-bs-backdrop="static"
                 tabindex="-1"
                 aria-labelledby="addProjectModalLabel"
                 aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content border-0">
                        <div class="modal-header border-bottom-0 pb-0">
                            <h4 id="addProjectModalLabel" class="modal-title text-secondary">Add Project</h4>
                            <button type="button"
                                    class="btn-close"
                                    data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                        </div>
                        <div class="modal-body pt-3">
                            <form id="addProjectForm"
                                  method="post"
                                  action="{% url 'core:projects_dashboard' %}">
                                {% csrf_token %}
                                <div class="mb-3">
                                    <label class="form-label text-secondary fw-medium" for="projectName">
                                        Name
                                        <span class="text-danger">*</span>
                                    </label>
                                    <input id="projectName"
                                           name="name"
                                           type="text"
                                           class="form-control form-control-lg"
                                           required />
                                </div>
                                <div class="d-flex justify-content-end gap-2 mt-4">
                                    <button type="button"
                                            class="btn btn-outline-secondary"
                                            data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-primary px-4">Create Project</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
{% block scripts %}{% endblock %}
