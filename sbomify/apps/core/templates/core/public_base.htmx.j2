                opacity: 0.85;
                transform: scale(1.02);
            }

            .brand-logo-link:focus {
                outline: 2px solid var(--brand-color);
                outline-offset: 4px;
                border-radius: var(--radius-sm);
            }

            .brand-logo {
                height: 3rem;
                max-width: 12rem;
                width: auto;
                object-fit: contain;
                filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.05));
            }

            .brand-name {
                font-size: 1.5rem;
                font-weight: 600;
                color: var(--brand-color);
                text-shadow: none;
            }

            /* Main Content */
            .public-main {
                flex: 1;
                position: relative;
                background: var(--bg-secondary);
            }

            .public-content-container {
                max-width: 1200px;
                margin: 0 auto;
                padding: 2rem 1.5rem;
            }

            /* Modern Footer */
            .public-footer {
                background: linear-gradient(180deg, var(--bg-secondary, #ffffff) 0%, var(--bg-tertiary, #f8fafc) 100%);
                border-top: 1px solid var(--border-color-light, #f0f0f0);
                margin-top: auto;
                position: relative;
                overflow: hidden;
            }

            .public-footer::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 3px;
                background: linear-gradient(90deg,
                    var(--brand-color, #6366f1) 0%,
                    color-mix(in srgb, var(--brand-color, #6366f1), #fff 30%) 50%,
                    var(--brand-color, #6366f1) 100%);
                opacity: 0.6;
            }

            .public-footer-container {
                max-width: 1200px;
                margin: 0 auto;
                padding: 0 1.5rem;
            }

