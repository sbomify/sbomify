{% load static %}
{% load django_vite %}
{% load django_htmx %}
{% load cache %}
{% load schema_tags %}
{% load breadcrumb_tags %}
{% load brand_tags %}
{% load public_url_tags %}
<!DOCTYPE html>
<html lang="en">
    <head>
        {% block head %}
            <meta charset="utf-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport"
                  content="width=device-width, initial-scale=1, shrink-to-fit=no">
            <meta name="color-scheme" content="light">
            <!-- SEO Meta Tags -->
            <meta name="description"
                  content="{% block meta_description %}{% if brand.name %}{{ brand.name }} Trust Center - Browse security artifacts, SBOMs, and compliance documents{% else %}sbomify - Your Security Artifact Hub{% endif %}{% endblock %}">
            <meta name="keywords"
                  content="{% block meta_keywords %}SBOM, Software Bill of Materials, security, compliance, vulnerability management{% endblock %}">
            <meta name="author"
                  content="{% if brand.name %}{{ brand.name }}{% else %}sbomify{% endif %}">
            <meta name="robots"
                  content="{% block meta_robots %}index, follow{% endblock %}">
            <!-- Canonical URL -->
            <link rel="canonical" href="{{ request.build_absolute_uri }}">
            <!-- Favicon -->
            <link rel="apple-touch-icon"
                  sizes="180x180"
                  href="{% if brand.brand_icon_url %}{{ brand.brand_icon_url }}{% else %}{% static 'img/favicons/apple-touch-icon.png' %}{% endif %}">
            <link rel="icon"
                  type="image/png"
                  sizes="32x32"
                  href="{% if brand.brand_icon_url %}{{ brand.brand_icon_url }}{% else %}{% static 'img/favicons/favicon-32x32.png' %}{% endif %}">
            <link rel="icon"
                  type="image/png"
                  sizes="16x16"
                  href="{% if brand.brand_icon_url %}{{ brand.brand_icon_url }}{% else %}{% static 'img/favicons/favicon-16x16.png' %}{% endif %}">
            <link rel="icon"
                  type="image/svg+xml"
                  href="{% if brand.brand_icon_url %}{{ brand.brand_icon_url }}{% else %}{% static 'img/favicons/favicon.svg' %}{% endif %}">
            <link rel="manifest" href="{% static 'dist/manifest.webmanifest' %}">
            <!-- Schema.org metadata -->
            {% schema_org_metadata %}
            <!-- Social media image: use brand image or absolute fallback URL -->
            {% with social_image=brand.brand_image|default_if_none:"" %}
                {% with fallback_image=request.scheme|add:"://"|add:request.get_host %}
                    {% static 'img/favicons/android-chrome-512x512.png' as default_logo %}
                    {% with final_image=social_image|default:fallback_image|add:default_logo %}
                        {% with brand_name=brand.name|default:"sbomify" %}
                            <!-- Open Graph / Facebook -->
                            <meta property="og:type" content="website">
                            <meta property="og:url" content="{{ request.build_absolute_uri }}">
                            <meta property="og:title"
                                  content="{% block og_title %}{% if brand.name %}{{ brand.name }} Trust Center{% else %}sbomify - Your Security Artifact Hub{% endif %}{% endblock %}">
                            <meta property="og:description"
                                  content="{% block og_description %}{% if brand.name %}{{ brand.name }} Trust Center - Browse security artifacts, SBOMs, and compliance documents{% else %}sbomify - Your Security Artifact Hub{% endif %}{% endblock %}">
                            <meta property="og:image"
                                  content="{% if brand.brand_image %}{{ brand.brand_image }}{% else %}{{ fallback_image }}{{ default_logo }}{% endif %}">
                            <meta property="og:image:alt" content="{{ brand_name }} Logo">
                            <!-- Twitter -->
                            <meta property="twitter:card" content="summary_large_image">
                            <meta property="twitter:url" content="{{ request.build_absolute_uri }}">
                            <meta property="twitter:title"
                                  content="{% block twitter_title %}{% if brand.name %}{{ brand.name }} Trust Center{% else %}sbomify - Your Security Artifact Hub{% endif %}{% endblock %}">
                            <meta property="twitter:description"
                                  content="{% block twitter_description %}{% if brand.name %}{{ brand.name }} Trust Center - Browse security artifacts, SBOMs, and compliance documents{% else %}sbomify - Your Security Artifact Hub{% endif %}{% endblock %}">
                            <meta property="twitter:image"
                                  content="{% if brand.brand_image %}{{ brand.brand_image }}{% else %}{{ fallback_image }}{{ default_logo }}{% endif %}">
                            <meta property="twitter:image:alt" content="{{ brand_name }} Logo">
                        {% endwith %}
                    {% endwith %}
                {% endwith %}
            {% endwith %}
            <!-- Fonts -->
            <link rel="preconnect" href="https://fonts.gstatic.com">
            <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
                  rel="stylesheet">
            <!-- CSS -->
            <link href="{% static 'css/bootstrap.min.css' %}" rel="stylesheet">
            <link href="{% static 'css/fontawesome.min.css' %}" rel="stylesheet">
            <link href="{% static 'css/tokens.css' %}" rel="stylesheet">
            <link href="{% static 'css/base.css' %}" rel="stylesheet">
            <link href="{% static 'css/layout.css' %}" rel="stylesheet">
            <link href="{% static 'css/components.css' %}" rel="stylesheet">
            <link href="{% static 'css/responsive.css' %}" rel="stylesheet">
            <link href="{% static 'css/pages.css' %}" rel="stylesheet">
            <link href="{% static 'css/utilities.css' %}" rel="stylesheet">
            <link href="{% static 'css/components/download-card.css' %}"
                  rel="stylesheet">
            <link href="{% static 'css/components/items-list-table.css' %}"
                  rel="stylesheet">
            <link href="{% static 'css/components/standard-card.css' %}"
                  rel="stylesheet">
            <link href="{% static 'css/public-base.css' %}" rel="stylesheet">
            <link href="{% static 'css/public-pages.css' %}" rel="stylesheet">
            <!-- Custom CSS Variables for Branding -->
            <style>
            :root {
                --brand-color: {{ brand.brand_color|default:'#4f46e5' }};
                --accent-color: {{ brand.accent_color|default:'#7c8b9d' }};
                --brand-color-rgb: {{ brand.brand_color|default:'#4f46e5'|hex_to_rgb }};
                --accent-color-rgb: {{ brand.accent_color|default:'#7c8b9d'|hex_to_rgb }};
                --brand-color-light: {{ brand.brand_color|default:'#4f46e5'|lighten:0.1 }};
                --brand-color-dark: {{ brand.brand_color|default:'#4f46e5'|darken:0.1 }};
                --accent-color-light: {{ brand.accent_color|default:'#7c8b9d'|lighten:0.1 }};
                --accent-color-dark: {{ brand.accent_color|default:'#7c8b9d'|darken:0.1 }};
                --text-primary: #1a202c;
                --text-secondary: #64748b;
                --text-muted: #94a3b8;
                --bg-primary: #ffffff;
                --bg-secondary: #f8fafc;
                --bg-tertiary: #f1f5f9;
                --border-color: #e2e8f0;
                --border-color-light: #f1f5f9;
                --shadow-color: rgba(0, 0, 0, 0.1);
                --shadow-color-light: rgba(0, 0, 0, 0.05);
                --radius-sm: 0.375rem;
                --radius-md: 0.5rem;
                --radius-lg: 0.75rem;
                --font-family-primary: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;

                /* Bootstrap Overrides */
                --bs-primary: var(--accent-color);
                --bs-primary-rgb: var(--accent-color-rgb);
                --bs-link-color: var(--accent-color);
                --bs-link-hover-color: var(--accent-color-dark);
            }

            /* Dark mode support based on brand colors */
            @media (prefers-color-scheme: dark) {
                :root {
                    --text-primary: #f8fafc;
                    --text-secondary: #cbd5e1;
                    --text-muted: #94a3b8;
                    --bg-primary: #0f172a;
                    --bg-secondary: #1e293b;
                    --bg-tertiary: #334155;
                    --border-color: #334155;
                    --border-color-light: #475569;
                    --shadow-color: rgba(0, 0, 0, 0.3);
                    --shadow-color-light: rgba(0, 0, 0, 0.15);
                }
            }

            /* Force light theme for all public pages - override dark mode */
            :root {
                color-scheme: light only !important;
                --text-primary: #0f172a !important;
                --text-secondary: #475569 !important;
                --text-muted: #64748b !important;
                --bg-primary: #ffffff !important;
                --bg-secondary: #f8fafc !important;
                --bg-tertiary: #f1f5f9 !important;
                --border-color: #e2e8f0 !important;
                --border-color-light: #f1f5f9 !important;
                --shadow-color: rgba(0, 0, 0, 0.1) !important;
                --shadow-color-light: rgba(0, 0, 0, 0.05) !important;
            }

            @media (prefers-color-scheme: dark) {
                :root {
                    --text-primary: #0f172a !important;
                    --text-secondary: #475569 !important;
                    --text-muted: #64748b !important;
                    --bg-primary: #ffffff !important;
                    --bg-secondary: #f8fafc !important;
                    --bg-tertiary: #f1f5f9 !important;
                    --border-color: #e2e8f0 !important;
                    --border-color-light: #f1f5f9 !important;
                    --shadow-color: rgba(0, 0, 0, 0.1) !important;
                    --shadow-color-light: rgba(0, 0, 0, 0.05) !important;
                }
            }

            body.public-page {
                background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 100%) !important;
                color: #0f172a !important;
                min-height: 100vh;
            }

            .public-main {
                background: transparent !important;
            }

            /* Public Page Layout Styles */
            .public-page {
                font-family: var(--font-family-primary);
                color: var(--text-primary);
                background-color: var(--bg-secondary);
                line-height: 1.6;
                margin: 0;
                padding: 0;
            }

            .public-page-layout {
                min-height: 100vh;
                display: flex;
                flex-direction: column;
            }

            /* Public Header */
            .public-header {
                background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-tertiary) 100%);
                padding: 2rem 0;
                position: relative;
                overflow: hidden;
                border-bottom: 1px solid var(--border-color);
                border-top: 3px solid var(--brand-color);
            }

            .public-header::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: linear-gradient(135deg, transparent 0%, rgba(var(--brand-color-rgb), 0.03) 100%);
                pointer-events: none;
            }

            .public-header-container {
                max-width: 1200px;
                margin: 0 auto;
                padding: 0 1.5rem;
                position: relative;
                z-index: 1;
                text-align: center;
            }

            .brand-section {
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 1rem;
                text-align: center;
            }

            .brand-logo-link {
                display: inline-flex;
                text-decoration: none;
                transition: opacity 0.2s ease, transform 0.2s ease;
            }

            .brand-logo-link:hover {
                opacity: 0.85;
                transform: scale(1.02);
            }

            .brand-logo-link:focus {
                outline: 2px solid var(--brand-color);
                outline-offset: 4px;
                border-radius: var(--radius-sm);
            }

            .brand-logo {
                height: 3rem;
                max-width: 12rem;
                width: auto;
                object-fit: contain;
                filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.05));
            }

            .brand-name {
                font-size: 1.5rem;
                font-weight: 600;
                color: var(--brand-color);
                text-shadow: none;
            }

            /* Main Content */
            .public-main {
                flex: 1;
                position: relative;
                background: var(--bg-secondary);
            }

            .public-content-container {
                max-width: 1200px;
                margin: 0 auto;
                padding: 2rem 1.5rem;
            }

            /* Modern Footer */
            .public-footer {
                background: linear-gradient(180deg, var(--bg-secondary, #ffffff) 0%, var(--bg-tertiary, #f8fafc) 100%);
                border-top: 1px solid var(--border-color-light, #f0f0f0);
                margin-top: auto;
                position: relative;
                overflow: hidden;
            }

            .public-footer::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 3px;
                background: linear-gradient(90deg,
                    var(--brand-color, #6366f1) 0%,
                    color-mix(in srgb, var(--brand-color, #6366f1), #fff 30%) 50%,
                    var(--brand-color, #6366f1) 100%);
                opacity: 0.6;
            }

            .public-footer-container {
                max-width: 1200px;
                margin: 0 auto;
                padding: 0 1.5rem;
            }

            .public-header-container,
            .public-content-container {
                max-width: 1200px;
                margin: 0 auto;
                padding-left: 1rem;
                padding-right: 1rem;
            }

            .public-content-container {
                width: 100%;
            }

            .footer-content-wrapper {
                padding: 2.5rem 0 2rem;
            }

            .footer-main-content {
                display: flex;
                flex-direction: column;
                align-items: center;
                text-align: center;
                gap: 1.5rem;
            }

            .footer-brand {
                display: flex;
                flex-direction: column;
                align-items: center;
                gap: 0.5rem;
            }

            .footer-brand-name {
                font-size: 1.25rem;
                font-weight: 700;
                color: var(--text-title, #0f172a);
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }

            .footer-brand-name i {
                color: var(--brand-color, #6366f1);
                font-size: 1rem;
            }

            .footer-tagline {
                font-size: 0.875rem;
                color: var(--text-muted, #64748b);
                max-width: 400px;
            }

            .footer-divider {
                width: 60px;
                height: 2px;
                background: linear-gradient(90deg, transparent, var(--border-color, #e2e8f0), transparent);
                border-radius: 1px;
            }

            .footer-bottom {
                display: flex;
                justify-content: center;
                align-items: center;
                gap: 1.5rem;
                flex-wrap: wrap;
            }

            .footer-meta {
                font-size: 0.8rem;
                color: var(--text-muted, #64748b);
            }

            .footer-dot {
                width: 3px;
                height: 3px;
                background: var(--border-color, #cbd5e1);
                border-radius: 50%;
            }

            .footer-powered {
                display: flex;
                align-items: center;
                gap: 0.375rem;
                font-size: 0.8rem;
                color: var(--text-muted, #64748b);
            }

            .footer-powered a {
                color: var(--brand-color, #6366f1);
                text-decoration: none;
                font-weight: 600;
                transition: all 0.2s ease;
                display: inline-flex;
                align-items: center;
                gap: 0.25rem;
            }

            .footer-powered a:hover {
                color: color-mix(in srgb, var(--brand-color, #6366f1), #000 15%);
            }

            .footer-powered a::after {
                content: '→';
                font-size: 0.75rem;
                opacity: 0;
                transform: translateX(-4px);
                transition: all 0.2s ease;
            }

            .footer-powered a:hover::after {
                opacity: 1;
                transform: translateX(0);
            }

            @media (max-width: 576px) {
                .footer-bottom {
                    flex-direction: column;
                    gap: 0.75rem;
                }

                .footer-dot {
                    display: none;
                }
            }
            </style>
            {% block extra_css %}{% endblock %}
            <title>
                {% block title %}{% endblock %}
                -
                {% if brand.name %}
                    {{ brand.name }}
                {% else %}
                    sbomify
                {% endif %}
            </title>
        {% endblock %}
        {% vite_hmr_client %}
    </head>
    <body class="public-page" data-theme="public">
        <!-- Public Page Layout -->
        <div class="public-page-layout">
            <!-- Brand Header -->
            <header class="public-header">
                <div class="public-header-container">
                    <div class="brand-section">
                        {% workspace_public_url as trust_center_url %}
                        {% if trust_center_url %}
                            <a href="{{ trust_center_url }}"
                               class="brand-logo-link"
                               title="Trust Center Home">
                                {% if brand.brand_image %}
                                    <img src="{{ brand.brand_image }}"
                                         alt="{% if brand.name %}{{ brand.name }}{% else %}sbomify{% endif %} Logo"
                                         class="brand-logo"
                                         width="32"
                                         height="32">
                                {% else %}
                                    <img src="{% static 'img/sbomify.svg' %}"
                                         alt="sbomify Logo"
                                         class="brand-logo"
                                         width="32"
                                         height="32">
                                {% endif %}
                            </a>
                        {% else %}
                            {% if brand.brand_image %}
                                <img src="{{ brand.brand_image }}"
                                     alt="{% if brand.name %}{{ brand.name }}{% else %}sbomify{% endif %} Logo"
                                     class="brand-logo"
                                     width="32"
                                     height="32">
                            {% else %}
                                <img src="{% static 'img/sbomify.svg' %}"
                                     alt="sbomify Logo"
                                     class="brand-logo"
                                     width="32"
                                     height="32">
                            {% endif %}
                        {% endif %}
                    </div>
                    {% block header_content %}{% endblock %}
                </div>
            </header>
            <!-- Main Content -->
            <main class="public-main">
                <div class="public-content-container">
                    <!-- Breadcrumb Navigation -->
                    {% block breadcrumb %}{% endblock %}
                    <!-- Page Content -->
                    {% block content %}{% endblock %}
                </div>
            </main>
            <!-- Footer -->
            <footer class="public-footer">
                <div class="public-footer-container">
                    <div class="footer-content-wrapper">
                        <div class="footer-main-content">
                            <div class="footer-brand">
                                <div class="footer-brand-name">
                                    <i class="fas fa-shield-alt"></i>
                                    {% if brand.name %}
                                        {{ brand.name }}
                                    {% else %}
                                        sbomify
                                    {% endif %}
                                    Trust Center
                                </div>
                                <div class="footer-tagline">Transparency and security through Software Bill of Materials</div>
                            </div>
                            <div class="footer-divider"></div>
                            <div class="footer-bottom">
                                <div class="footer-meta">
                                    © {% now "Y" %}
                                    {% if brand.name %}
                                        {{ brand.name }}
                                    {% else %}
                                        sbomify
                                    {% endif %}
                                </div>
                                <span class="footer-dot"></span>
                                <div class="footer-powered">
                                    Powered by <a href="https://sbomify.com?utm_source=sbomify&utm_medium=trust_center&utm_campaign=powered_by"
    target="_blank"
    rel="noopener noreferrer">sbomify</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
        {% block scripts %}{% endblock %}
        {% vite_asset 'sbomify/apps/core/js/htmx-bundle.ts' %}
        {% htmx_script %}
    </body>
</html>
