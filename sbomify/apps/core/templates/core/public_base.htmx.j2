                          content="{% block og_description %}{% if brand.name %}{{ brand.name }} Trust Center - Browse security artifacts, SBOMs, and compliance documents{% else %}sbomify - Your Security Artifact Hub{% endif %}{% endblock %}">
                    {# Use brand.brand_image only if it's an absolute URL (starts with http), otherwise use fallback #}
                    {# This ensures social crawlers always get a full URL they can fetch #}
                    <meta property="og:image"
                          content="{% if brand.brand_image and brand.brand_image|slice:':4' == 'http' %}{{ brand.brand_image }}{% else %}{{ absolute_fallback }}{% endif %}">
                    {% if not brand.brand_image or brand.brand_image|slice:":4" != "http" %}
