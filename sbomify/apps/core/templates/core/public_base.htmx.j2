                color: var(--brand-color) !important;
            }

            /* Header top border uses brand color */
            .public-header {
                border-top-color: var(--brand-color) !important;
            }

            /* Footer gradient accent uses brand color */
            .public-footer::before {
                background: linear-gradient(90deg,
                    var(--brand-color) 0%,
                    color-mix(in srgb, var(--brand-color), #fff 30%) 50%,
                    var(--brand-color) 100%) !important;
            }

            /* Focus states use accent color */
            .public-page *:focus-visible {
                outline-color: var(--accent-color);
            }

