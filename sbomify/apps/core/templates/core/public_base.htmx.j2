            /* ===========================================
               PUBLIC PAGE BRANDING STYLES
               Primary Color: Headers, navigation, primary elements
               Accent Color: Buttons, links, highlights
               =========================================== */

            /* Links use accent color */
            .public-page a:not(.tw-btn-primary):not(.tw-btn-secondary):not(.tw-btn-outline):not(.brand-logo-link):not(.workspace-dropdown-item):not(.theme-toggle-item) {
                color: var(--accent-color);
                text-decoration: none;
                transition: color 0.15s ease;
            }

            .public-page a:not(.tw-btn-primary):not(.tw-btn-secondary):not(.tw-btn-outline):not(.brand-logo-link):not(.workspace-dropdown-item):not(.theme-toggle-item):hover {
                color: var(--accent-color-dark);
            }

            /* Primary buttons use accent color */
            .public-page .tw-btn-primary {
                background: linear-gradient(135deg, var(--accent-color) 0%, var(--accent-color-dark) 100%) !important;
                border-color: var(--accent-color) !important;
                color: #ffffff !important;
                box-shadow: 0 1px 3px rgba(var(--accent-color-rgb), 0.3), inset 0 1px 0 rgba(255, 255, 255, 0.1) !important;
            }

            .public-page .tw-btn-primary:hover {
                background: linear-gradient(135deg, var(--accent-color-light) 0%, var(--accent-color) 100%) !important;
                border-color: var(--accent-color-dark) !important;
                box-shadow: 0 4px 12px rgba(var(--accent-color-rgb), 0.4), inset 0 1px 0 rgba(255, 255, 255, 0.1) !important;
            }

            .public-page .tw-btn-primary:focus {
                box-shadow: 0 0 0 3px rgba(var(--accent-color-rgb), 0.25) !important;
            }

            /* Outline buttons use accent color */
            .public-page .tw-btn-outline {
                color: var(--accent-color) !important;
                border-color: var(--accent-color) !important;
            }

            .public-page .tw-btn-outline:hover {
                background-color: var(--accent-color) !important;
                color: #ffffff !important;
            }

            /* Text with primary color class uses accent (for highlights) */
            .public-page .text-primary {
                color: var(--accent-color) !important;
            }

            /* Background primary uses accent */
            .public-page .bg-primary {
                background-color: var(--accent-color) !important;
            }

            .public-page .bg-primary\/10,
            .public-page [class*="bg-primary/10"] {
                background-color: rgba(var(--accent-color-rgb), 0.1) !important;
            }

            .public-page .bg-primary\/15,
            .public-page [class*="bg-primary/15"] {
                background-color: rgba(var(--accent-color-rgb), 0.15) !important;
            }

            .public-page .bg-primary\/5,
            .public-page [class*="bg-primary/5"] {
                background-color: rgba(var(--accent-color-rgb), 0.05) !important;
            }

            /* Border primary uses accent */
            .public-page .border-primary {
                border-color: var(--accent-color) !important;
            }

            .public-page [class*="border-primary/30"] {
                border-color: rgba(var(--accent-color-rgb), 0.3) !important;
            }

            .public-page [class*="hover:border-primary"]:hover {
                border-color: var(--accent-color) !important;
            }

