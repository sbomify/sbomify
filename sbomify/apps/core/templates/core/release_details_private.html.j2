{% extends "core/dashboard_base.htmx.j2" %}
{% load static %}
{% load django_vite %}
{% load breadcrumb_tags %}
{% block title %}sbomify Product: {{ release.product.name }} - {{ release.name }}{% endblock %}
{% block extra_styles %}
    <link rel="stylesheet"
          href="{% static 'css/release-details-private.css' %}">
{% endblock %}
{% block breadcrumb %}
    {% breadcrumb release 'release' %}
{% endblock %}
{% block content %}
    <div class="page-header mb-4">
        <div class="header-main mb-3">
            <div class="title-section">
                <h1 class="item-title">
                    {% if release.has_crud_permissions and not release.is_latest %}
                        <span class="vc-editable-single-field"
                              data-item-type="release"
                              data-item-id="{{ release.id }}"
                              data-item-value="{{ release.name }}"></span>
                    {% else %}
                        {{ release.name }}
                    {% endif %}
                    {% if release.is_latest %}<span class="badge bg-success ms-3">Latest</span>{% endif %}
                </h1>
                {% if release.description %}
                    <p class="item-subtitle">
                        {% if release.has_crud_permissions and not release.is_latest %}
                            <span class="vc-editable-single-field"
                                  data-item-type="release"
                                  data-item-id="{{ release.id }}"
                                  data-field-name="description"
                                  data-item-value="{{ release.description }}"></span>
                        {% else %}
                            {{ release.description }}
                        {% endif %}
                    </p>
                {% elif release.has_crud_permissions and not release.is_latest %}
                    <p class="item-subtitle">
                        <span class="vc-editable-single-field text-muted"
                              data-item-type="release"
                              data-item-id="{{ release.id }}"
                              data-field-name="description"
                              data-item-value=""
                              data-placeholder="Click to add description..."></span>
                    </p>
                {% endif %}
                <div class="created-info text-muted">
                    <i class="fas fa-calendar-plus me-2"></i>
                    {% if release.has_crud_permissions and not release.is_latest %}
                        <span class="vc-editable-single-field"
                              data-item-type="release"
                              data-item-id="{{ release.id }}"
                              data-field-name="created_at"
                              data-field-type="date"
                              data-item-value="{{ release.created_at|date:'Y-m-d' }}"
                              data-display-value="Created {{ release.created_at|date:'M d, Y' }}">Created {{ release.created_at|date:"M d, Y" }}</span>
                    {% else %}
                        <span>Created {{ release.created_at|date:"M d, Y" }}</span>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="header-meta">
            <span class="meta-item">
                <i class="fas fa-calendar me-2 text-primary"></i>
                {% if release.has_crud_permissions and not release.is_latest %}
                    <span class="vc-editable-single-field meta-label"
                          data-item-type="release"
                          data-item-id="{{ release.id }}"
                          data-field-name="released_at"
                          data-field-type="date"
                          data-item-value="{{ release.released_at|default_if_none:release.created_at|date:'Y-m-d' }}"
                          data-display-value="Released {{ release.released_at|default_if_none:release.created_at|date:'M d, Y' }}">Released {{ release.released_at|default_if_none:release.created_at|date:"M d, Y" }}</span>
                {% else %}
                    <span class="meta-label">Released {{ release.released_at|default_if_none:release.created_at|date:"M d, Y" }}</span>
                {% endif %}
            </span>
            <span class="meta-divider">•</span>
            <span class="meta-item">
                <i class="fas fa-puzzle-piece me-2 text-primary"></i>
                <span class="meta-label">{{ release.artifacts.count }} Artifact{{ release.artifacts.count|pluralize }}</span>
            </span>
            <span class="meta-divider">•</span>
            <span class="meta-item">
                <span class="vc-copyable-value meta-id"
                      data-value="{{ release.id }}"
                      title="Release ID: {{ release.id }} (click to copy)">{{ release.id }}</span>
            </span>
        </div>
    </div>
    {% if release.has_sboms %}
        <div class="row mb-4">
            <div class="col-12">
                <div class="standard-card">
                    <div class="card download-card shadow-sm">
                        <div class="card-header">
                            <h4 class="card-title mb-0">
                                <i class="fas fa-download me-2"></i>Download Release
                            </h4>
                        </div>
                        <div class="card-body text-center">
                            <p class="text-muted mb-3">Download consolidated SBOM containing all artifacts in this release</p>
                            <a class="btn btn-primary download-btn"
                               href="{% url 'api-1:download_release' release.id %}">
                                <i class="fas fa-download me-2"></i>Download Release SBOM
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
    <div class="row">
        <div class="col-12">
            <div class="vc-release-artifacts"
                 data-release-id="{{ release.id }}"
                 data-product-id="{{ release.product.id }}"
                 data-has-crud-permissions="{% if release.has_crud_permissions %}true{% else %}false{% endif %}"
                 data-is-latest-release="{% if release.is_latest %}true{% else %}false{% endif %}"></div>
        </div>
    </div>
    {% if release.has_crud_permissions and not release.is_latest %}
        <div class="row mt-4">
            <div class="col-12">
                <div class="vc-release-danger-zone"
                     data-release-id="{{ release.id }}"
                     data-product-id="{{ release.product.id }}"
                     data-release-name="{{ release.name }}"
                     data-csrf-token="{{ csrf_token }}"></div>
            </div>
        </div>
    {% endif %}
{% endblock %}
{% block scripts %}
    {% vite_asset 'sbomify/apps/core/js/main.ts' %}
{% endblock %}
