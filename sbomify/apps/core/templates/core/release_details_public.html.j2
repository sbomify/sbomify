{% extends "core/public_base.htmx.j2" %}
{% load breadcrumb_tags %}
{% load django_vite %}
{% load static %}
{% block title %}{{ release.product.name }} - {{ release.name }}{% endblock %}
{% block extra_css %}
    <link rel="stylesheet" href="{% static 'css/release-details-public.css' %}">
{% endblock %}
{% block breadcrumb %}
    {% breadcrumb release 'release' %}
{% endblock %}
{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-header mb-4">
                    <div class="header-main mb-3">
                        <div class="title-section">
                            <h1 class="item-title">
                                {{ release.name }}
                                {% if release.is_latest %}<span class="badge bg-success ms-3">Latest</span>{% endif %}
                            </h1>
                            {% if release.description %}<p class="item-subtitle">{{ release.description }}</p>{% endif %}
                        </div>
                    </div>
                    <div class="header-meta">
                        <span class="meta-item">
                            <i class="fas fa-calendar me-2 text-primary"></i>
                            <span class="meta-label">Released {{ release.released_at|default_if_none:release.created_at|date:"M d, Y" }}</span>
                        </span>
                        <span class="meta-divider">â€¢</span>
                        <span class="meta-item">
                            <i class="fas fa-puzzle-piece me-2 text-primary"></i>
                            <span class="meta-label">{{ release.artifacts.count }} Artifact{{ release.artifacts.count|pluralize }}</span>
                        </span>
                    </div>
                </div>
                {% if release.has_sboms %}
                    <div class="vc-public-download-card"
                         data-title="Download Release"
                         data-description="Download consolidated SBOM containing all artifacts in this release"
                         data-download-url="{% url 'api-1:download_release' release.id %}"
                         data-download-text="Download Release SBOM"
                         data-download-icon="fas fa-download"></div>
                {% endif %}
                {{ release.artifacts|json_script:"artifacts-data" }}
                <div class="vc-public-release-artifacts"
                     data-release-id="{{ release.id }}"
                     data-product-id="{{ release.product.id }}"
                     data-artifacts-data-element-id="artifacts-data"></div>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    {% vite_asset 'sbomify/apps/core/js/main.ts' %}
{% endblock %}
