{% extends "core/public_base.htmx.j2" %}
{% load breadcrumb_tags %}
{% load django_vite %}
{% load static %}
{% load humanize %}
{% block title %}{{ release.product.name }} - {{ release.name }}{% endblock %}
{% block meta_description %}
    {{ release.name }} release for {{ release.product.name }}.
    {% if release.description %}
        {{ release.description|truncatechars:120 }}
    {% else %}
        Download SBOM and view release artifacts.
    {% endif %}
{% endblock %}
{% block og_title %}{{ release.product.name }} - {{ release.name }}{% endblock %}
{% block og_description %}
    {{ release.name }} release for {{ release.product.name }}. Download SBOM and view release artifacts.
{% endblock %}
{% block breadcrumb %}
    {% breadcrumb release 'release' %}
{% endblock %}
{% block content %}
    <div class="public-item-header">
        <a href="{% url 'core:product_details_public' release.product.id %}"
           class="inline-flex items-center gap-2 text-text-muted hover:text-text mb-4 no-underline"
           onclick="if (window.history.length > 1) { window.history.back(); return false; }">
            <i class="fas fa-arrow-left"></i>Back
        </a>
        <h1 class="text-3xl font-bold text-text flex items-center gap-4 mb-3">
            <span class="w-12 h-12 rounded-xl flex items-center justify-center {% if release.is_latest %}bg-success text-white{% else %}bg-border/30 text-text-muted{% endif %}">
                <i class="fas {% if release.is_latest %}fa-check{% else %}fa-tag{% endif %}"></i>
            </span>
            {{ release.name }}
        </h1>
        {% if release.description %}<p class="text-text-muted text-lg mb-4">{{ release.description }}</p>{% endif %}
        <div class="flex flex-wrap gap-2 mb-6">
            {% if release.is_latest %}
                <span class="px-3 py-1.5 text-sm font-medium rounded-full bg-success/10 text-success flex items-center gap-2">
                    <i class="fas fa-check-circle"></i>
                    Latest Release
                </span>
            {% endif %}
            {% if release.is_prerelease %}
                <span class="px-3 py-1.5 text-sm font-medium rounded-full bg-warning/10 text-warning flex items-center gap-2">
                    <i class="fas fa-flask"></i>
                    Pre-release
                </span>
            {% endif %}
            {% if release.version %}
                <span class="px-3 py-1.5 text-sm font-medium rounded-full bg-border/50 text-text flex items-center gap-2">
                    <i class="fas fa-code-branch"></i>
                    {{ release.version }}
                </span>
            {% endif %}
            <span class="px-3 py-1.5 text-sm font-medium rounded-full bg-border/50 text-text flex items-center gap-2">
                <i class="fas fa-calendar"></i>
                {{ release.released_at|default_if_none:release.created_at|naturaltime }}
            </span>
            {% if release.artifacts.count %}
                <span class="px-3 py-1.5 text-sm font-medium rounded-full bg-primary/10 text-primary flex items-center gap-2">
                    <i class="fas fa-puzzle-piece"></i>
                    {{ release.artifacts.count }} Artifact{{ release.artifacts.count|pluralize }}
                </span>
            {% endif %}
        </div>
    </div>
    {% if release.has_sboms %}
        <div class="public-section">
            <div class="tw-card">
                <div class="px-6 py-4 border-b border-border">
                    <h4 class="text-lg font-semibold text-text flex items-center gap-2 m-0">
                        <i class="fas fa-download text-primary"></i>Download Release
                    </h4>
                </div>
                <div class="p-6 text-center">
                    <p class="text-text-muted mb-4">Download consolidated SBOM containing all artifacts in this release</p>
                    <div class="flex justify-center gap-3 flex-wrap">
                        <a class="inline-flex items-center gap-2 px-4 py-2 border border-border rounded-lg text-text hover:bg-border/30 transition-colors no-underline"
                           href="{% url 'api-1:download_release' release.id %}"
                           title="Download as CycloneDX">
                            <img src="{% static 'img/cyclonedx-logo.svg' %}"
                                 alt="CycloneDX"
                                 class="h-[18px] w-auto"
                                 width="18"
                                 height="18">
                            <i class="fas fa-download text-primary"></i>
                        </a>
                        <a class="inline-flex items-center gap-2 px-4 py-2 border border-border rounded-lg text-text hover:bg-border/30 transition-colors no-underline"
                           href="{% url 'api-1:download_release' release.id %}?format=spdx"
                           title="Download as SPDX">
                            <img src="{% static 'img/spdx-logo.svg' %}"
                                 alt="SPDX"
                                 class="h-[18px] w-auto"
                                 width="18"
                                 height="18">
                            <i class="fas fa-download text-primary"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
    {% include 'core/components/public_release_artifacts.html.j2' %}
{% endblock %}
{% block scripts %}
    {% vite_asset 'sbomify/apps/core/js/main.ts' %}
{% endblock %}
