{% extends "core/public_base.htmx.j2" %}
{% load breadcrumb_tags %}
{% load django_vite %}
{% load static %}
{% load humanize %}
{% block title %}{{ release.product.name }} - {{ release.name }}{% endblock %}
{% block meta_description %}
    {{ release.name }} release for {{ release.product.name }}.
    {% if release.description %}
        {{ release.description|truncatechars:120 }}
    {% else %}
        Download SBOM and view release artifacts.
    {% endif %}
{% endblock %}
{% block og_title %}{{ release.product.name }} - {{ release.name }}{% endblock %}
{% block og_description %}
    {{ release.name }} release for {{ release.product.name }}. Download SBOM and view release artifacts.
{% endblock %}
{% block breadcrumb %}
    {% breadcrumb release 'release' %}
{% endblock %}
{% block content %}
    <div class="public-item-header">
        <a href="{% url 'core:product_details_public' release.product.id %}"
           class="back-link">
            <i class="fas fa-arrow-left"></i>Back to {{ release.product.name }}
        </a>
        <h1 class="public-item-title">
            <span class="public-item-title-icon {% if release.is_latest %}icon-release{% else %}icon-project{% endif %}"
                  style="{% if release.is_latest %}background: linear-gradient(135deg, #10b981 0%, #059669 100%);
                         {% endif %}">
                <i class="fas {% if release.is_latest %}fa-check{% else %}fa-tag{% endif %}"></i>
            </span>
            {{ release.name }}
        </h1>
        {% if release.description %}<p class="public-item-description">{{ release.description }}</p>{% endif %}
        <div class="public-item-badges">
            {% if release.is_latest %}
                <span class="public-badge badge-compliance">
                    <i class="fas fa-check-circle"></i>
                    Latest Release
                </span>
            {% endif %}
            {% if release.is_prerelease %}
                <span class="public-badge badge-type">
                    <i class="fas fa-flask"></i>
                    Pre-release
                </span>
            {% endif %}
            <span class="public-badge badge-count">
                <i class="fas fa-calendar"></i>
                {{ release.released_at|default_if_none:release.created_at|naturaltime }}
            </span>
            {% if release.artifacts.count %}
                <span class="public-badge badge-workspace">
                    <i class="fas fa-puzzle-piece"></i>
                    {{ release.artifacts.count }} Artifact{{ release.artifacts.count|pluralize }}
                </span>
            {% endif %}
        </div>
    </div>
    {% if release.has_sboms %}
        <div class="public-section">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">
                        <i class="fas fa-download"></i>Download Release
                    </h4>
                </div>
                <div class="card-body" style="text-align: center; padding: 2rem;">
                    <p style="color: var(--text-secondary); margin-bottom: 1.5rem;">
                        Download consolidated SBOM containing all artifacts in this release
                    </p>
                    <a href="{% url 'api-1:download_release' release.id %}"
                       class="public-action-btn"
                       style="padding: 0.75rem 1.5rem;
                              font-size: 1rem">
                        <i class="fas fa-download"></i>
                        Download Release SBOM
                    </a>
                </div>
            </div>
        </div>
    {% endif %}
    {% include 'core/components/public_release_artifacts.html.j2' %}
{% endblock %}
{% block scripts %}
    {% vite_asset 'sbomify/apps/core/js/main.ts' %}
{% endblock %}
