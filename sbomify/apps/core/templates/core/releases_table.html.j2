{# WebSocket listener for real-time updates #}
<div id="releases-table-container"
     x-data
     hx-get="{% url 'core:releases_table' %}"
     hx-trigger="refresh-releases from:body"
     hx-swap="outerHTML"
     @ws:message.window="if (['release_created', 'release_updated', 'release_deleted'].includes($event.detail.type)) { document.body.dispatchEvent(new CustomEvent('refresh-releases')); }">
    <div class="standard-card mt-3">
        <div class="card shadow-sm">
            <div class="card-header">
                <div class="header-content">
                    <h4 class="card-title mb-0">All Releases</h4>
                </div>
            </div>
            <div class="card-body">
                {% if releases %}
                    <div class="table-responsive">
                        <table class="table dashboard-table">
                            <thead>
                                <tr>
                                    <th>Release Name</th>
                                    <th>Product</th>
                                    <th>Artifacts</th>
                                    <th>Created</th>
                                    <th class="text-center">Status</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for release in releases %}
                                    <tr>
                                        <td>
                                            <div class="release-info">
                                                <a href="{% url 'core:release_details' release.product.id release.id %}"
                                                   class="release-name">{{ release.name }}</a>
                                                <div class="release-badges">
                                                    {% if release.is_latest %}<span class="badge bg-success-subtle text-success">Latest</span>{% endif %}
                                                    {% if release.is_prerelease %}<span class="badge bg-warning-subtle text-warning">Pre-release</span>{% endif %}
                                                    {% if release.version %}<span class="badge bg-secondary-subtle text-secondary">{{ release.version }}</span>{% endif %}
                                                </div>
                                                {% if release.description %}<div class="release-description">{{ release.description }}</div>{% endif %}
                                            </div>
                                        </td>
                                        <td>
                                            {% if release.product %}
                                                <a href="{% url 'core:product_details' release.product.id %}"
                                                   class="product-link"
                                                   title="View {{ release.product.name }}">
                                                    <i class="fas fa-box me-1"></i>
                                                    {{ release.product.name }}
                                                </a>
                                            {% else %}
                                                <span class="text-muted">
                                                    <i class="fas fa-box me-1"></i>
                                                    Product not found
                                                </span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="artifacts-info">
                                                <span class="artifact-count">
                                                    <i class="fas fa-puzzle-piece me-1"></i>
                                                    {{ release.artifacts_count|default:0 }}
                                                </span>
                                                {% if release.has_sboms %}
                                                    <div class="download-action">
                                                        <a href="{% url 'api-1:download_release' release.id %}"
                                                           class="btn btn-sm btn-outline-primary"
                                                           title="Download release SBOM">
                                                            <i class="fas fa-download"></i>
                                                        </a>
                                                    </div>
                                                {% endif %}
                                            </div>
                                        </td>
                                        <td>
                                            <span class="date-info"
                                                  title="{{ release.released_at|default_if_none:release.created_at|date:'F d, Y H:i' }}">
                                                {{ release.released_at|default_if_none:release.created_at|date:"M d, Y" }}
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            {% if release.is_public %}
                                                <span class="badge bg-success-subtle text-success">Public</span>
                                            {% else %}
                                                <span class="badge bg-secondary-subtle text-secondary">Private</span>
                                            {% endif %}
                                        </td>
                                        <td class="text-center">
                                            <div class="action-buttons">
                                                <a href="{% url 'core:release_details' release.product.id release.id %}"
                                                   class="btn btn-sm btn-outline-primary"
                                                   title="View release details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="{% url 'core:product_releases' release.product.id %}"
                                                   class="btn btn-sm btn-outline-secondary"
                                                   title="View all releases for this product">
                                                    <i class="fas fa-list"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="dashboard-empty">
                        <div class="empty-icon">
                            <i class="fas fa-tag"></i>
                        </div>
                        <h5>No releases found</h5>
                        <p class="mb-0 text-muted">Create your first product release to get started</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
