{% extends "core/base.html.j2" %}
{% load widget_tweaks %}
{% block title %}Contact Support - sbomify{% endblock %}
{% block head %}
    {{ block.super }}
    {% if turnstile_site_key and not debug %}
        <script src="https://challenges.cloudflare.com/turnstile/v0/api.js"
                async
                defer></script>
    {% endif %}
{% endblock %}
{% block content %}
    <div class="container mx-auto px-4 py-8">
        <div class="flex justify-center">
            <div class="w-full max-w-3xl">
                <!-- Page Header -->
                <div class="text-center mb-10">
                    <h1 class="text-4xl font-bold text-primary mb-4">Contact Support</h1>
                    <p class="text-lg text-text-muted">
                        Need help? We're here to assist you. Fill out the form below and we'll get back to you within 1-2 business days.
                    </p>
                </div>
                {% if messages %}
                    {% for message in messages %}
                        <div class="p-4 rounded-lg mb-4 flex items-center justify-between {% if message.tags == 'success' %}bg-success/10 text-success{% elif message.tags == 'error' %}bg-danger/10 text-danger{% else %}bg-info/10 text-info{% endif %}"
                             role="alert">
                            {{ message }}
                            <button type="button"
                                    class="p-1 text-current opacity-70 hover:opacity-100"
                                    onclick="this.parentElement.remove()"
                                    aria-label="Close">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    {% endfor %}
                {% endif %}
                <div class="tw-card shadow-lg border-0">
                    <div class="p-8">
                        <form method="post" novalidate>
                            {% csrf_token %}
                            <!-- Contact Information Section -->
                            <div class="mb-8">
                                <div class="flex items-center mb-6 pb-4 border-b border-border">
                                    <div class="w-10 h-10 bg-primary text-white rounded-lg flex items-center justify-center mr-3">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <h3 class="text-lg font-semibold text-text m-0">Contact Information</h3>
                                </div>
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label for="{{ form.first_name.id_for_label }}"
                                               class="block text-sm font-semibold text-text mb-1">
                                            {{ form.first_name.label }} <span class="text-danger">*</span>
                                        </label>
                                        {% render_field form.first_name class="w-full px-3 py-2 border border-border rounded-lg bg-background text-text focus:outline-none focus:ring-2 focus:ring-primary/30 focus:border-primary" %}
                                        {% if form.first_name.errors %}<div class="text-danger text-sm mt-1">{{ form.first_name.errors.0 }}</div>{% endif %}
                                    </div>
                                    <div>
                                        <label for="{{ form.last_name.id_for_label }}"
                                               class="block text-sm font-semibold text-text mb-1">
                                            {{ form.last_name.label }} <span class="text-danger">*</span>
                                        </label>
                                        {% render_field form.last_name class="w-full px-3 py-2 border border-border rounded-lg bg-background text-text focus:outline-none focus:ring-2 focus:ring-primary/30 focus:border-primary" %}
                                        {% if form.last_name.errors %}<div class="text-danger text-sm mt-1">{{ form.last_name.errors.0 }}</div>{% endif %}
                                    </div>
                                    <div class="md:col-span-2">
                                        <label for="{{ form.email.id_for_label }}"
                                               class="block text-sm font-semibold text-text mb-1">
                                            {{ form.email.label }} <span class="text-danger">*</span>
                                        </label>
                                        {% render_field form.email class="w-full px-3 py-2 border border-border rounded-lg bg-background text-text focus:outline-none focus:ring-2 focus:ring-primary/30 focus:border-primary" %}
                                        {% if form.email.errors %}<div class="text-danger text-sm mt-1">{{ form.email.errors.0 }}</div>{% endif %}
                                        <div class="text-xs text-text-muted mt-1">We'll use this email to respond to your support request.</div>
                                    </div>
                                </div>
                            </div>
                            <!-- Support Request Details Section -->
                            <div class="mb-8">
                                <div class="flex items-center mb-6 pb-4 border-b border-border">
                                    <div class="w-10 h-10 bg-primary text-white rounded-lg flex items-center justify-center mr-3">
                                        <i class="fas fa-headset"></i>
                                    </div>
                                    <h3 class="text-lg font-semibold text-text m-0">Support Request Details</h3>
                                </div>
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label for="{{ form.support_type.id_for_label }}"
                                               class="block text-sm font-semibold text-text mb-1">
                                            {{ form.support_type.label }} <span class="text-danger">*</span>
                                        </label>
                                        {% render_field form.support_type class="w-full px-3 py-2 border border-border rounded-lg bg-background text-text focus:outline-none focus:ring-2 focus:ring-primary/30 focus:border-primary" %}
                                        {% if form.support_type.errors %}
                                            <div class="text-danger text-sm mt-1">{{ form.support_type.errors.0 }}</div>
                                        {% endif %}
                                    </div>
                                    <div>
                                        <label for="{{ form.browser_info.id_for_label }}"
                                               class="block text-sm font-semibold text-text mb-1">
                                            {{ form.browser_info.label }}
                                        </label>
                                        {% render_field form.browser_info class="w-full px-3 py-2 border border-border rounded-lg bg-background text-text focus:outline-none focus:ring-2 focus:ring-primary/30 focus:border-primary" %}
                                        {% if form.browser_info.errors %}
                                            <div class="text-danger text-sm mt-1">{{ form.browser_info.errors.0 }}</div>
                                        {% endif %}
                                        <div class="text-xs text-text-muted mt-1">{{ form.browser_info.help_text }}</div>
                                    </div>
                                    <div class="md:col-span-2">
                                        <label for="{{ form.subject.id_for_label }}"
                                               class="block text-sm font-semibold text-text mb-1">
                                            {{ form.subject.label }} <span class="text-danger">*</span>
                                        </label>
                                        {% render_field form.subject class="w-full px-3 py-2 border border-border rounded-lg bg-background text-text focus:outline-none focus:ring-2 focus:ring-primary/30 focus:border-primary" %}
                                        {% if form.subject.errors %}<div class="text-danger text-sm mt-1">{{ form.subject.errors.0 }}</div>{% endif %}
                                    </div>
                                </div>
                            </div>
                            <!-- Message Section -->
                            <div class="mb-8">
                                <div class="flex items-center mb-6 pb-4 border-b border-border">
                                    <div class="w-10 h-10 bg-primary text-white rounded-lg flex items-center justify-center mr-3">
                                        <i class="fas fa-comment-alt"></i>
                                    </div>
                                    <h3 class="text-lg font-semibold text-text m-0">Describe Your Issue</h3>
                                </div>
                                <div>
                                    <label for="{{ form.message.id_for_label }}"
                                           class="block text-sm font-semibold text-text mb-1">
                                        {{ form.message.label }} <span class="text-danger">*</span>
                                    </label>
                                    {% render_field form.message class="w-full px-3 py-2 border border-border rounded-lg bg-background text-text focus:outline-none focus:ring-2 focus:ring-primary/30 focus:border-primary" rows="6" %}
                                    {% if form.message.errors %}<div class="text-danger text-sm mt-1">{{ form.message.errors.0 }}</div>{% endif %}
                                    <div class="text-xs text-text-muted mt-1">
                                        Please provide as much detail as possible about your issue or question. This helps us provide better support.
                                    </div>
                                </div>
                            </div>
                            <!-- Turnstile CAPTCHA Section -->
                            {% if turnstile_site_key and not debug %}
                                <div class="mb-6">
                                    <div class="flex items-center mb-4 pb-3 border-b border-border">
                                        <div class="w-10 h-10 bg-primary text-white rounded-lg flex items-center justify-center mr-3">
                                            <i class="fas fa-shield-alt"></i>
                                        </div>
                                        <h3 class="text-lg font-semibold text-text m-0">Security Verification</h3>
                                    </div>
                                    <div class="cf-turnstile"
                                         data-sitekey="{{ turnstile_site_key }}"
                                         data-callback="turnstileCallback"
                                         data-error-callback="turnstileErrorCallback"></div>
                                    {% render_field form.cf_turnstile_response %}
                                    {% if form.cf_turnstile_response.errors %}
                                        <div class="text-danger text-sm mt-2">{{ form.cf_turnstile_response.errors.0 }}</div>
                                    {% endif %}
                                </div>
                            {% else %}
                                <!-- Development Mode Warning -->
                                <div class="flex items-center gap-2 p-4 rounded-lg bg-warning/10 mb-6">
                                    <i class="fas fa-exclamation-triangle text-warning"></i>
                                    <span class="text-text"><strong>Development Mode:</strong> Turnstile verification is not configured. In production, this form will include spam protection.</span>
                                </div>
                                {% render_field form.cf_turnstile_response %}
                            {% endif %}
                            <!-- Support Information -->
                            <div class="flex items-start gap-3 p-4 rounded-lg bg-info/10 mb-6">
                                <i class="fas fa-info-circle text-info mt-1"></i>
                                <div class="text-text">
                                    <strong>Support Information:</strong>
                                    <ul class="m-0 mt-2 pl-4 list-disc">
                                        <li>We typically respond within 1-2 business days</li>
                                        <li>You'll receive a confirmation email once we receive your request</li>
                                    </ul>
                                </div>
                            </div>
                            <!-- Submit Section -->
                            <div class="flex flex-row justify-between items-center gap-4 pt-6 border-t border-border">
                                <a href="{% url 'core:dashboard' %}" class="tw-btn-secondary">
                                    <i class="fas fa-arrow-left mr-2"></i>Back to Dashboard
                                </a>
                                <button type="submit" class="tw-btn-primary px-6">
                                    <i class="fas fa-paper-plane mr-2"></i>Send Support Request
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    {% if turnstile_site_key and not debug %}
        <script>
// Turnstile callback functions
function turnstileCallback(token) {
    document.getElementById('id_cf_turnstile_response').value = token;
}

function turnstileErrorCallback() {
    document.getElementById('id_cf_turnstile_response').value = '';
    console.error('Turnstile error occurred');
}
        </script>
    {% endif %}
{% endblock %}
