{% extends "core/public_base.html.j2" %}
{% load static %}
{% load django_vite %}
{% block title %}{{ workspace.name }}'s Trust Center{% endblock %}
{% block meta_description %}
    Public trust center for {{ workspace.name }}: browse public products, releases, and organization-wide compliance artifacts.
{% endblock %}
{% block extra_css %}
    <style>
  /* Force light theme - override dark mode */
  :root {
    color-scheme: light only !important;
    --text-primary: #0f172a !important;
    --text-secondary: #475569 !important;
    --text-muted: #64748b !important;
    --bg-primary: #ffffff !important;
    --bg-secondary: #f8fafc !important;
    --bg-tertiary: #f1f5f9 !important;
    --border-color: #e2e8f0 !important;
    --border-color-light: #f1f5f9 !important;
    --shadow-color: rgba(0, 0, 0, 0.1) !important;
    --shadow-color-light: rgba(0, 0, 0, 0.05) !important;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --text-primary: #0f172a !important;
      --text-secondary: #475569 !important;
      --text-muted: #64748b !important;
      --bg-primary: #ffffff !important;
      --bg-secondary: #f8fafc !important;
      --bg-tertiary: #f1f5f9 !important;
      --border-color: #e2e8f0 !important;
      --border-color-light: #f1f5f9 !important;
      --shadow-color: rgba(0, 0, 0, 0.1) !important;
      --shadow-color-light: rgba(0, 0, 0, 0.05) !important;
    }
  }

  body.public-page {
    background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 100%) !important;
    color: #0f172a !important;
    min-height: 100vh;
  }

  .public-main {
    background: transparent !important;
  }

  /* Hero Section */
  .workspace-hero {
    position: relative;
    border-radius: 16px;
    padding: 24px 24px;
    background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
    border: 1px solid #e2e8f0;
    box-shadow: 0 20px 60px -20px rgba(15, 23, 42, 0.15),
                0 8px 16px -8px rgba(15, 23, 42, 0.1);
    overflow: hidden;
    margin-bottom: 24px;
  }

  .workspace-hero::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -30%;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(99, 102, 241, 0.08) 0%, transparent 70%);
    pointer-events: none;
  }

  .workspace-hero::after {
    content: '';
    position: absolute;
    bottom: -30%;
    left: -20%;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(168, 85, 247, 0.06) 0%, transparent 70%);
    pointer-events: none;
  }

  .workspace-hero-content {
    position: relative;
    z-index: 1;
  }

  .workspace-hero .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-size: 12px;
    font-weight: 700;
    color: #6366f1;
    margin-bottom: 12px;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.1) 0%, rgba(168, 85, 247, 0.1) 100%);
    padding: 8px 16px;
    border-radius: 8px;
    border: 1px solid rgba(99, 102, 241, 0.2);
  }

  .workspace-hero .eyebrow::before {
    content: '';
    width: 6px;
    height: 6px;
    background: #6366f1;
    border-radius: 50%;
    box-shadow: 0 0 8px rgba(99, 102, 241, 0.6);
  }

  .workspace-hero h1 {
    color: #0f172a;
    font-weight: 900;
    font-size: 1.875rem;
    margin-bottom: 12px;
    line-height: 1.1;
    letter-spacing: -0.03em;
  }

  .workspace-hero-description {
    font-size: 1rem;
    color: #475569;
    line-height: 1.6;
    margin-bottom: 20px;
    max-width: 800px;
    font-weight: 400;
  }

  .meta-chip {
    background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
    border: 1px solid #e2e8f0;
    color: #0f172a;
    border-radius: 16px;
    padding: 14px 24px;
    display: inline-flex;
    align-items: center;
    gap: 12px;
    font-size: 1rem;
    font-weight: 600;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 2px 12px -3px rgba(0, 0, 0, 0.1),
                0 1px 4px -1px rgba(0, 0, 0, 0.06);
    position: relative;
    overflow: hidden;
  }

  .meta-chip::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, #6366f1 0%, #a855f7 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .meta-chip:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 24px -6px rgba(0, 0, 0, 0.15),
                0 4px 8px -2px rgba(0, 0, 0, 0.08);
    border-color: #cbd5e1;
  }

  .meta-chip:hover::before {
    opacity: 1;
  }

  .meta-chip i {
    color: #6366f1;
    font-size: 1.25rem;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.1) 0%, rgba(168, 85, 247, 0.1) 100%);
    border-radius: 8px;
  }

  .meta-chip-number {
    font-weight: 700;
    color: #6366f1;
    font-size: 1.125rem;
  }

  .meta-chip-label {
    color: #475569;
    font-weight: 500;
  }

  /* Section Headers */
  .content-section {
    margin-bottom: 56px;
  }

  .section-header {
    margin-bottom: 32px;
  }

  .section-title {
    color: #0f172a !important;
    font-weight: 700;
    font-size: 1.75rem;
    margin-bottom: 8px;
    letter-spacing: -0.01em;
  }

  .section-title i {
    color: #6366f1;
  }

  .section-subtitle {
    color: #64748b !important;
    font-size: 1rem;
    line-height: 1.5;
  }

  /* Enhanced Cards */
  .glass-card {
    background: #ffffff;
    border: 1px solid #e2e8f0;
    border-radius: 16px;
    padding: 28px;
    height: 100%;
    display: flex;
    flex-direction: column;
    box-shadow: 0 4px 16px -4px rgba(15, 23, 42, 0.08);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .glass-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #6366f1 0%, #a855f7 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .glass-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px -8px rgba(15, 23, 42, 0.15);
    border-color: #cbd5e1;
  }

  .glass-card:hover::before {
    opacity: 1;
  }

  .card-header-section {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 16px;
    gap: 12px;
  }

  .card-title {
    color: #0f172a !important;
    font-weight: 600;
    font-size: 1.25rem;
    margin: 0;
    line-height: 1.3;
    flex: 1;
  }

  .card-description {
    color: #64748b !important;
    font-size: 0.95rem;
    line-height: 1.6;
    flex-grow: 1;
    margin-bottom: 20px;
  }

  .card-footer-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
    padding-top: 20px;
    border-top: 1px solid #f1f5f9;
  }

  /* Badges */
  .badge {
    padding: 6px 12px;
    border-radius: 8px;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.02em;
  }

  .badge-count {
    background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
    color: #475569;
  }

  .badge-type {
    background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
    color: #1e40af;
  }

  .badge-workspace {
    background: linear-gradient(135deg, #ede9fe 0%, #ddd6fe 100%);
    color: #6366f1;
    display: inline-flex;
    align-items: center;
    gap: 6px;
  }

  .badge-workspace i {
    font-size: 0.7rem;
  }

  /* Buttons */
  .btn-view {
    background: linear-gradient(135deg, #6366f1 0%, #7c3aed 100%);
    border: none;
    color: #ffffff;
    padding: 10px 20px;
    border-radius: 10px;
    font-weight: 600;
    font-size: 0.875rem;
    transition: all 0.2s ease;
    box-shadow: 0 4px 12px -2px rgba(99, 102, 241, 0.3);
    text-decoration: none;
    display: inline-block;
  }

  .btn-view:hover {
    transform: translateY(-1px);
    box-shadow: 0 8px 20px -4px rgba(99, 102, 241, 0.4);
    color: #ffffff;
  }

  /* Empty State */
  .empty-state {
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
    border: 2px dashed #cbd5e1;
    border-radius: 16px;
    padding: 48px 32px;
    text-align: center;
    margin-top: 24px;
  }

  .empty-state-icon {
    width: 64px;
    height: 64px;
    background: linear-gradient(135deg, #e2e8f0 0%, #cbd5e1 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 20px;
  }

  .empty-state-icon i {
    font-size: 1.75rem;
    color: #64748b;
  }

  .empty-state-text {
    color: #475569;
    font-size: 1rem;
    font-weight: 500;
    margin: 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .workspace-hero {
      padding: 32px 24px;
      border-radius: 16px;
    }

    .workspace-hero h1 {
      font-size: 1.875rem;
    }

    .workspace-hero-description {
      font-size: 1rem;
    }

    .meta-chip {
      font-size: 0.85rem;
      padding: 8px 14px;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .glass-card {
      padding: 20px;
    }
  }
    </style>
{% endblock %}
{% block content %}
    <div class="public-page-layout">
        <div class="content-wrapper">
            <div class="content-container">
                <!-- Hero Section -->
                <div class="workspace-hero">
                    <div class="workspace-hero-content">
                        <div class="eyebrow">TRUST CENTER</div>
                        <h1>{{ workspace.name }}'s Trust Center</h1>
                        <p class="workspace-hero-description">
                            Your centralized hub for transparency and compliance. Browse our public products, releases, and organization-wide security artifacts.
                        </p>
                        <div class="d-flex gap-3 flex-wrap">
                            <div class="meta-chip">
                                <i class="fas fa-cube"></i>
                                <span class="meta-chip-number">{{ products|length }}</span>
                                <span class="meta-chip-label">Public Product{{ products|length|pluralize }}</span>
                            </div>
                            <div class="meta-chip">
                                <i class="fas fa-award"></i>
                                <span class="meta-chip-number">{{ global_components|length }}</span>
                                <span class="meta-chip-label">Compliance Artifact{{ global_components|length|pluralize }}</span>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Products Section -->
                <div class="content-section">
                    <div class="section-header">
                        <h2 class="section-title">
                            <i class="fas fa-cube me-2"></i>Public Products
                        </h2>
                        <p class="section-subtitle">Explore our publicly available products and their software bill of materials (SBOMs)</p>
                    </div>
                    {% if products %}
                        <div class="row g-4">
                            {% for product in products %}
                                <div class="col-md-6 col-lg-4">
                                    <div class="glass-card">
                                        <div class="card-header-section">
                                            <h3 class="card-title">{{ product.name }}</h3>
                                            <span class="badge badge-count">{{ product.project_count }} project{{ product.project_count|pluralize }}</span>
                                        </div>
                                        <p class="card-description">
                                            {{ product.description|default:"Comprehensive product information and software composition details." }}
                                        </p>
                                        <div class="card-footer-section">
                                            <span class="badge badge-type">
                                                <i class="fas fa-tag me-1"></i>Product
                                            </span>
                                            <a class="btn-view"
                                               href="{% url 'core:product_details_public' product.id %}">
                                                View Details <i class="fas fa-arrow-right ms-1"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="empty-state">
                            <div class="empty-state-icon">
                                <i class="fas fa-cube"></i>
                            </div>
                            <p class="empty-state-text">No public products available yet</p>
                        </div>
                    {% endif %}
                </div>
                <!-- Workspace Artifacts Section -->
                <div class="content-section">
                    <div class="section-header">
                        <h2 class="section-title">
                            <i class="fas fa-award me-2"></i>Organization Compliance Artifacts
                        </h2>
                        <p class="section-subtitle">Organization-wide compliance documents, certifications, and security attestations</p>
                    </div>
                    {% if global_components %}
                        <div class="row g-4">
                            {% for component in global_components %}
                                <div class="col-md-6 col-lg-4">
                                    <div class="glass-card">
                                        <div class="card-header-section">
                                            <h3 class="card-title">{{ component.name }}</h3>
                                            <span class="badge badge-type">{{ component.component_type_display }}</span>
                                        </div>
                                        <p class="card-description">Organization-level compliance artifact available across the entire organization.</p>
                                        <div class="card-footer-section">
                                            <span class="badge badge-workspace">
                                                <i class="fas fa-building"></i>
                                                Organization-Wide
                                            </span>
                                            <a class="btn-view"
                                               href="{% url 'core:component_details_public' component.id %}">
                                                View Details <i class="fas fa-arrow-right ms-1"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="empty-state">
                            <div class="empty-state-icon">
                                <i class="fas fa-award"></i>
                            </div>
                            <p class="empty-state-text">No organization-level artifacts published yet</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    {% vite_asset 'sbomify/apps/core/js/main.ts' %}
{% endblock %}
