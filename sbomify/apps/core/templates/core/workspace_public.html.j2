{% extends "core/public_base.htmx.j2" %}
{% load static %}
{% load django_vite %}
{% block title %}{{ workspace.name }} Workspace{% endblock %}
{% block meta_description %}
    Public workspace overview for {{ workspace.name }}: browse public products and workspace-wide artifacts.
{% endblock %}
{% block content %}
    <div class="public-page-layout">
        <div class="content-wrapper">
            <div class="content-container">
                <div class="public-page-header">
                    <div class="page-header-content">
                        <p class="eyebrow text-muted mb-1">Workspace</p>
                        <h1 class="page-title">
                            <i class="fas fa-shield-alt title-icon"></i>
                            {{ workspace.name }}
                        </h1>
                        <p class="text-muted mb-0">Explore public products and workspace-level artifacts.</p>
                    </div>
                </div>
                <div class="public-main-content">
                    <div class="content-section">
                        <div class="section-heading d-flex justify-content-between align-items-center flex-wrap gap-2">
                            <div>
                                <h2 class="section-title mb-0">
                                    <i class="fas fa-box-open me-2 text-primary"></i>Public products
                                </h2>
                                <p class="text-muted mb-0">Top-level view of every public product in this workspace.</p>
                            </div>
                        </div>
                        {% if products %}
                            <div class="row g-3 mt-1">
                                {% for product in products %}
                                    <div class="col-md-6">
                                        <div class="card shadow-sm h-100">
                                            <div class="card-body d-flex flex-column">
                                                <div class="d-flex justify-content-between align-items-start mb-2">
                                                    <h5 class="card-title mb-0">{{ product.name }}</h5>
                                                    <span class="badge bg-secondary-subtle text-secondary">
                                                        {{ product.project_count }} project
                                                        {% if product.project_count|default:0 != 1 %}s{% endif %}
                                                    </span>
                                                </div>
                                                <p class="text-muted flex-grow-1">{{ product.description|default:"No description provided." }}</p>
                                                <div class="d-flex justify-content-end">
                                                    <a class="btn btn-outline-primary btn-sm"
                                                       href="{% url 'core:product_details_public' product.id %}">
                                                        View product
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="alert alert-secondary d-flex align-items-center gap-2 mt-3"
                                 role="alert">
                                <i class="fas fa-info-circle text-secondary"></i>
                                <div class="text-muted mb-0">No public products are available yet.</div>
                            </div>
                        {% endif %}
                    </div>
                    <div class="content-section mt-4">
                        <div class="section-heading d-flex justify-content-between align-items-center flex-wrap gap-2">
                            <div>
                                <h2 class="section-title mb-0">
                                    <i class="fas fa-file-alt me-2 text-primary"></i>Workspace artifacts
                                </h2>
                                <p class="text-muted mb-0">Org-wide documents and attestations published at the workspace level.</p>
                            </div>
                        </div>
                        {% if global_components %}
                            <div class="row g-3 mt-1">
                                {% for component in global_components %}
                                    <div class="col-md-6 col-lg-4">
                                        <div class="card shadow-sm h-100">
                                            <div class="card-body d-flex flex-column">
                                                <div class="d-flex justify-content-between align-items-start mb-2">
                                                    <h5 class="card-title mb-0">{{ component.name }}</h5>
                                                    <span class="badge bg-info-subtle text-info">{{ component.component_type_display }}</span>
                                                </div>
                                                <p class="text-muted mb-3">Workspace-wide artifact.</p>
                                                <div class="d-flex justify-content-between align-items-center mt-auto">
                                                    <span class="badge bg-primary-subtle text-primary">Workspace</span>
                                                    <a class="btn btn-outline-primary btn-sm"
                                                       href="{% url 'core:component_details_public' component.id %}">
                                                        View artifact
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="alert alert-secondary d-flex align-items-center gap-2 mt-3"
                                 role="alert">
                                <i class="fas fa-info-circle text-secondary"></i>
                                <div class="text-muted mb-0">No workspace-level artifacts are public yet.</div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    {% vite_asset 'sbomify/apps/core/js/main.ts' %}
{% endblock %}
