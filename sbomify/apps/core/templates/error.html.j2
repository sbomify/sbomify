{% extends "core/base.html.j2" %}
{% block title %}{{ exception.status_code }} - {{ exception.reason_phrase }}{% endblock %}
{% block main %}
    <main class="flex w-full h-full">
        <div class="container mx-auto px-4 flex flex-col">
            <div class="min-h-screen flex items-center justify-center">
                <div class="w-full max-w-md">
                    <div class="text-center">
                        <div class="messages-container">{% include "core/components/messages.html.j2" %}</div>
                        <h1 class="text-8xl font-bold text-text">{{ exception.status_code }}</h1>
                        <p class="text-2xl font-semibold text-text mt-4">{{ exception.reason_phrase }}</p>
                        <p class="text-lg text-text-muted mt-3 mb-6">{{ exception.content.decode }}</p>
                        <a href="/" class="tw-btn-primary text-lg px-6 py-3">Return to website</a>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
