{% extends "core/auth_base.html.j2" %}
{% block title %}sbomify Login{% endblock %}
{% block login_content %}
    <h1 class="text-xl font-semibold text-text mb-4 text-center">Log In / Register</h1>
    <div class="text-center mb-6">
        <p class="text-text-muted">Please log in or register to access your account.</p>
    </div>
    <form method="post" action="{% url 'openid_connect_login' 'keycloak' %}">
        {% csrf_token %}
        <button type="submit"
                class="tw-btn-primary w-full justify-center text-lg py-3">Log In / Register</button>
    </form>
{% endblock %}
