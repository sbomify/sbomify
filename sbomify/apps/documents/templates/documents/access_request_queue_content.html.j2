{% load static %}
{% load humanize %}
{# Access Requests Section #}
<div class="tw-settings-card">
    <div class="px-6 py-4 border-b border-border">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg bg-info/10 flex items-center justify-center">
                    <i class="fas fa-user-clock text-info"></i>
                </div>
                <div>
                    <h5 class="text-lg font-semibold text-text m-0">Access Requests</h5>
                    <p class="text-text-muted text-sm m-0">Manage access to gated components</p>
                </div>
            </div>
            <button type="button"
                    class="tw-btn-primary tw-btn-sm"
                    onclick="window.dispatchEvent(new CustomEvent('open-invite-user-modal'))">
                <i class="fas fa-user-plus mr-1"></i>Invite
            </button>
        </div>
    </div>
    <div class="p-6 space-y-6">
        {# Pending Requests #}
        <div>
            <div class="flex items-center gap-2 mb-3">
                <h6 class="text-base font-semibold text-text m-0">Pending Requests</h6>
                {% if pending_requests %}
                    <span class="w-5 h-5 rounded-full text-xs font-medium bg-warning/10 text-warning inline-flex items-center justify-center">{{ pending_requests|length }}</span>
                {% endif %}
            </div>
            {% if pending_requests %}
                <div class="overflow-x-auto">
                    <table class="tw-table w-full">
                        <thead>
                            <tr>
                                <th class="text-left">User</th>
                                <th class="text-left">Email</th>
                                <th class="text-left">Requested</th>
                                <th class="text-left">NDA Signed</th>
                                <th class="text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for req in pending_requests %}
                                <tr>
                                    <td class="font-medium text-text">
                                        {% if req.user.first_name or req.user.last_name %}
                                            {{ req.user.first_name }} {{ req.user.last_name }}
                                        {% else %}
                                            {{ req.user.username }}
                                        {% endif %}
                                    </td>
                                    <td class="text-text-muted">{{ req.user.email }}</td>
                                    <td class="text-text-muted">{{ req.requested_at|naturaltime }}</td>
                                    <td>
                                        {% if req.nda_signature %}
                                            {% if req.has_current_nda_signature %}
                                                {% if req.nda_signature.is_document_modified %}
                                                    <span class="tw-badge-secondary"
                                                          title="NDA document has been modified after signing">Modified</span>
                                                {% else %}
                                                    <span class="tw-badge-secondary">Yes</span>
                                                {% endif %}
                                            {% else %}
                                                <span class="tw-badge-secondary"
                                                      title="NDA version has been updated. User needs to sign the new version.">Invalid</span>
                                            {% endif %}
                                        {% else %}
                                            <span class="tw-badge-secondary">No</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="flex items-center justify-end gap-1">
                                            <button type="button"
                                                    class="tw-icon-btn tw-icon-btn-sm text-text-muted hover:text-primary hover:bg-primary/10 info-btn"
                                                    title="View Details"
                                                    aria-label="View details for {{ req.user.email }}"
                                                    data-info-request-id="{{ req.id }}"
                                                    data-info-user-name="{% if req.user.first_name or req.user.last_name %}{{ req.user.first_name|escapejs }} {{ req.user.last_name|escapejs }}{% else %}{{ req.user.username|escapejs }}{% endif %}"
                                                    data-info-user-email="{{ req.user.email|escapejs }}"
                                                    data-info-status="{{ req.status|escapejs }}"
                                                    data-info-requested-at="{{ req.requested_at|date:'F d, Y g:i A' }}"
                                                    data-info-decided-at="{% if req.decided_at %}{{ req.decided_at|date:'F d, Y g:i A' }}{% endif %}"
                                                    data-info-decided-by="{% if req.decided_by %}{{ req.decided_by.email|escapejs }}{% endif %}"
                                                    data-info-revoked-at="{% if req.revoked_at %}{{ req.revoked_at|date:'F d, Y g:i A' }}{% endif %}"
                                                    data-info-revoked-by="{% if req.revoked_by %}{{ req.revoked_by.email|escapejs }}{% endif %}"
                                                    data-info-notes="{{ req.notes|default:''|escapejs }}"
                                                    data-info-nda-signed="{% if req.nda_signature %}true{% else %}false{% endif %}"
                                                    data-info-nda-signed-name="{% if req.nda_signature %}{{ req.nda_signature.signed_name|escapejs }}{% endif %}"
                                                    data-info-nda-signed-at="{% if req.nda_signature %}{{ req.nda_signature.signed_at|date:'F d, Y g:i A' }}{% endif %}"
                                                    data-info-nda-ip="{% if req.nda_signature %}{{ req.nda_signature.ip_address|default:''|escapejs }}{% endif %}"
                                                    data-info-nda-user-agent="{% if req.nda_signature %}{{ req.nda_signature.user_agent|default:''|escapejs }}{% endif %}"
                                                    data-info-nda-modified="{% if req.nda_signature and req.nda_signature.is_document_modified %}true{% else %}false{% endif %}"
                                                    data-info-nda-current="{% if req.has_current_nda_signature %}true{% else %}false{% endif %}"
                                                    data-info-nda-url="{% if req.nda_signature %}{% url 'documents:document_download' req.nda_signature.nda_document.id %}?view=inline{% endif %}">
                                                <i class="fas fa-info-circle" aria-hidden="true"></i>
                                            </button>
                                            <form method="post"
                                                  action="{% url 'documents:access_request_queue' team.key %}"
                                                  hx-post="{% url 'documents:access_request_queue' team.key %}"
                                                  hx-target="#access-requests-wrapper"
                                                  hx-swap="innerHTML"
                                                  hx-trigger="submit"
                                                  class="inline-flex gap-1"
                                                  id="access-request-form-{{ req.id }}">
                                                {% csrf_token %}
                                                <input type="hidden" name="request_id" value="{{ req.id }}">
                                                <input type="hidden" name="active_tab" value="trust-center">
                                                <button type="submit"
                                                        name="action"
                                                        value="approve"
                                                        class="tw-icon-btn tw-icon-btn-sm text-success hover:text-success hover:bg-success/10"
                                                        title="Approve Access"
                                                        aria-label="Approve Access">
                                                    <i class="fas fa-check" aria-hidden="true"></i>
                                                </button>
                                                <button type="button"
                                                        name="action"
                                                        value="reject"
                                                        class="tw-icon-btn tw-icon-btn-sm text-danger hover:text-danger hover:bg-danger/10 reject-btn"
                                                        title="Reject Access"
                                                        aria-label="Reject Access"
                                                        data-request-id="{{ req.id }}"
                                                        data-user-email="{{ req.user.email }}">
                                                    <i class="fas fa-times" aria-hidden="true"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <p class="text-text-muted text-sm py-3">No pending access requests</p>
            {% endif %}
        </div>
