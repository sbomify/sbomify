<script>
    (function() {
        // Handle info button clicks
        function initInfoButtons() {
            document.querySelectorAll('.info-btn').forEach(function(button) {
                // Skip if already initialized
                if (button.hasAttribute('data-info-initialized')) return;
                button.setAttribute('data-info-initialized', 'true');

                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    const data = {
                        requestId: this.getAttribute('data-info-request-id'),
                        userName: this.getAttribute('data-info-user-name'),
                        userEmail: this.getAttribute('data-info-user-email'),
                        status: this.getAttribute('data-info-status'),
                        requestedAt: this.getAttribute('data-info-requested-at'),
                        decidedAt: this.getAttribute('data-info-decided-at'),
                        decidedBy: this.getAttribute('data-info-decided-by'),
                        revokedAt: this.getAttribute('data-info-revoked-at'),
                        revokedBy: this.getAttribute('data-info-revoked-by'),
                        notes: this.getAttribute('data-info-notes'),
                        ndaSigned: this.getAttribute('data-info-nda-signed') === 'true',
                        ndaSignedName: this.getAttribute('data-info-nda-signed-name'),
                        ndaSignedAt: this.getAttribute('data-info-nda-signed-at'),
                        ndaIp: this.getAttribute('data-info-nda-ip'),
                        ndaUserAgent: this.getAttribute('data-info-nda-user-agent'),
                        ndaModified: this.getAttribute('data-info-nda-modified') === 'true',
                        ndaCurrent: this.getAttribute('data-info-nda-current') === 'true',
                        ndaUrl: this.getAttribute('data-info-nda-url')
                    };
                    window.dispatchEvent(new CustomEvent('open-access-request-info-modal', { detail: data }));
                });
            });
        }

        // Handle reject button clicks with confirmation
        function initRejectButtons() {
            document.querySelectorAll('.reject-btn').forEach(function(button) {
                // Skip if already initialized
                if (button.hasAttribute('data-reject-initialized')) return;
                button.setAttribute('data-reject-initialized', 'true');

                button.addEventListener('click', async function(e) {
                    e.preventDefault();

                    const requestId = this.getAttribute('data-request-id');
                    const userEmail = this.getAttribute('data-user-email');
                    const form = document.getElementById('access-request-form-' + requestId);

                    if (!form) {
                        console.error('Form not found for request ID:', requestId);
                        return;
                    }

                    const message = `Are you sure you want to reject the access request from ${userEmail}? This action cannot be undone.`;

                    // Use window.showConfirmation if available, otherwise use native confirm
                    const confirmed = typeof window.showConfirmation === 'function' ?
                        await window.showConfirmation({
                            title: 'Reject Access Request?',
                            message: message,
                            confirmButtonText: 'Reject',
                            cancelButtonText: 'Cancel',
                            type: 'warning'
                        }) : confirm(message);

                    if (confirmed) {
                        // Remove existing action inputs
                        form.querySelectorAll('input[name="action"][type="hidden"]').forEach(input => input.remove());

                        // Create and append action input
                        const actionInput = document.createElement('input');
                        actionInput.type = 'hidden';
                        actionInput.name = 'action';
                        actionInput.value = 'reject';
                        form.appendChild(actionInput);

                        // Use requestSubmit to trigger HTMX
                        form.requestSubmit();
                    }
                });
            });
        }

        // Initialize buttons
        function initAll() {
            initInfoButtons();
            initRejectButtons();
        }

        // Initialize immediately since content is loaded via HTMX
        initAll();

        // Re-initialize after HTMX swaps (for subsequent swaps within this content)
        document.body.addEventListener('htmx:afterSwap', function(event) {
            if (event.detail.target.id?.includes('access-request') ||
                event.detail.target.querySelector?.('.reject-btn') ||
                event.detail.target.querySelector?.('.info-btn')) {
                requestAnimationFrame(initAll);
            }
        });
    })();
</script>
