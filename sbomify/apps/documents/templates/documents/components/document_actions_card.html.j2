{% load static %}
<link rel="stylesheet"
      href="{% static 'css/components/document-actions-card.css' %}">
<div class="standard-card mt-3">
    <div class="card shadow-sm">
        <div class="card-header">
            <div class="header-content">
                <h4 class="card-title mb-0">
                    <i class="fas fa-cogs me-2"></i>Document Actions
                </h4>
            </div>
        </div>
        <div class="card-body">
            <div class="actions-grid">
                <div class="action-item">
                    <div class="action-icon download-icon">
                        <i class="fas fa-download"></i>
                    </div>
                    <div class="action-content">
                        <h6 class="action-title">Download Document</h6>
                        <p class="action-description">Get the complete document file in its original format</p>
                        <a href="{% url 'documents:document_download' item.id %}"
                           class="btn btn-primary btn-action">
                            <i class="fas fa-download me-2"></i>
                            Download File
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
