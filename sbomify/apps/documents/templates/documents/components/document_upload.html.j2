{% load static %}
<link rel="stylesheet"
      href="{% static 'css/components/document-upload.css' %}">
<div class="document-upload-wrapper"
     x-data="documentUpload('{{ component_id }}')"
     x-cloak>
    <script type="application/json"
            id="document-type-subcategories-{{ component_id }}">{{ document_type_subcategories_json|safe }}</script>
    <div class="standard-card mt-3">
        <div class="bg-white rounded-lg shadow-sm"
             :class="{ 'card-collapsed': !expanded }">
            <div class="px-6 py-4 border-b collapsible-header cursor-pointer"
                 @click="expanded = !expanded"
                 role="button"
                 tabindex="0"
                 @keydown.enter="expanded = !expanded"
                 @keydown.space.prevent="expanded = !expanded"
                 :aria-expanded="expanded"
                 aria-controls="document-upload-body">
                <div class="header-content">
                    <h4 class="text-lg font-semibold mb-0">
                        <i class="fas fa-upload mr-2" aria-hidden="true"></i>Upload Document File
                        <i class="fas ml-2"
                           :class="expanded ? 'fa-chevron-up' : 'fa-chevron-down'"
                           aria-hidden="true"></i>
                    </h4>
                </div>
            </div>
            <div class="p-6" id="document-upload-body" x-show="expanded" x-collapse>
                <div class="augmentation-notice flex items-center mb-3">
                    <i class="fas fa-info-circle mr-2 text-brand-primary"></i>
                    <span class="text-gray-600">
                        <strong>Document Upload:</strong> Upload documents like specifications, manuals, reports, compliance documents, or any file related to your component. You can specify a version and description during upload.
                    </span>
                </div>
                <div class="mb-4">
                    <label for="document-version"
                           class="block text-sm font-medium text-gray-700 mb-1">
                        Version <span class="text-danger-500">*</span>
                    </label>
                    <input id="document-version"
                           x-model="documentVersion"
                           type="text"
                           class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-brand-primary focus:border-transparent"
                           placeholder="e.g., 1.0, v2.1, latest"
                           required>
                    <div class="text-sm text-gray-600 mt-1">Specify the version of this document</div>
                </div>
                <div class="mb-4">
                    <label for="document-type"
                           class="block text-sm font-medium text-gray-700 mb-1">Document Type</label>
                    <select id="document-type"
                            x-model="documentType"
                            class="w-full px-3 py-2 border border-gray-300 rounded bg-white focus:outline-none focus:ring-2 focus:ring-brand-primary"
                            @change="documentSubcategory = ''">
                        <option value="">Select document type (optional)</option>
                        <optgroup label="Technical Documentation">
                            <option value="specification">Specification</option>
                            <option value="manual">Manual</option>
                            <option value="readme">README</option>
                            <option value="documentation">Documentation</option>
                            <option value="build-instructions">Build Instructions</option>
                            <option value="configuration">Configuration</option>
                        </optgroup>
                        <optgroup label="Legal and Compliance">
                            <option value="license">License</option>
                            <option value="compliance">Compliance</option>
                            <option value="evidence">Evidence</option>
                        </optgroup>
                        <optgroup label="Release Information">
                            <option value="changelog">Changelog</option>
                            <option value="release-notes">Release Notes</option>
                        </optgroup>
                        <optgroup label="Security Documents">
                            <option value="security-advisory">Security Advisory</option>
                            <option value="vulnerability-report">Vulnerability Report</option>
                            <option value="threat-model">Threat Model</option>
                            <option value="risk-assessment">Risk Assessment</option>
                            <option value="pentest-report">Penetration Test Report</option>
                        </optgroup>
                        <optgroup label="Analysis Reports">
                            <option value="static-analysis">Static Analysis Report</option>
                            <option value="dynamic-analysis">Dynamic Analysis Report</option>
                            <option value="quality-metrics">Quality Metrics</option>
                            <option value="maturity-report">Maturity Report</option>
                            <option value="report">Report</option>
                        </optgroup>
                        <optgroup label="Other">
                            <option value="other">Other</option>
                        </optgroup>
                    </select>
                    <div class="text-sm text-gray-600 mt-1">
                        Select the type of document you're uploading. This helps with SBOM generation and compliance.
                    </div>
                </div>
                <template x-for="(subcategoryInfo, docType) in documentTypeSubcategories"
                          :key="docType">
                    <div class="mb-4" x-show="documentType === docType">
                        <label :for="'document-subcategory-' + docType"
                               class="block text-sm font-medium text-gray-700 mb-1"
                               x-text="subcategoryInfo.label"></label>
                        <select :id="'document-subcategory-' + docType"
                                x-model="documentSubcategory"
                                class="w-full px-3 py-2 border border-gray-300 rounded bg-white focus:outline-none focus:ring-2 focus:ring-brand-primary"
                                :name="subcategoryInfo.field_name">
                            <option value="">Select subcategory (optional)</option>
                            <template x-for="[value, label] in subcategoryInfo.choices" :key="value">
                                <option :value="value" x-text="label"></option>
                            </template>
                        </select>
                        <div class="text-sm text-gray-600 mt-1">Select a subcategory for auto-detection and badging.</div>
                    </div>
                </template>
                <div class="mb-4">
                    <label for="document-description"
                           class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                    <textarea id="document-description"
                              x-model="documentDescription"
                              class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-brand-primary focus:border-transparent"
                              rows="3"
                              placeholder="Brief description of this document (optional)"></textarea>
                </div>
                <div class="upload-area"
                     :class="{ 'drag-over': isDragOver, 'file-selected': selectedFile && !isUploading }"
                     @drop.prevent="handleDrop($event)"
                     @dragover.prevent="isDragOver = true"
                     @dragleave.prevent="isDragOver = false"
                     @dragenter.prevent>
                    <template x-if="!selectedFile && !isUploading">
                        <div class="upload-content">
                            <div class="upload-icon">
                                <i class="fas fa-cloud-upload-alt"></i>
                            </div>
                            <p class="upload-text">
                                <strong>Drop your document file here</strong> or
                                <label class="upload-link">
                                    <input type="file"
                                           accept=".pdf,.doc,.docx,.txt,.md,.html,.json,.xml,.yaml,.yml"
                                           class="hidden"
                                           @change="handleFileSelect($event)">
                                    click to browse
                                </label>
                            </p>
                            <p class="upload-hint">Supports PDF, Word, text, markdown, and other document formats (max 50MB)</p>
                        </div>
                    </template>
                    <template x-if="selectedFile && !isUploading">
                        <div class="file-selected-content">
                            <div class="file-icon">
                                <i class="fas fa-file-alt"></i>
                            </div>
                            <div class="file-info">
                                <p class="file-name" x-text="selectedFile.name"></p>
                                <p class="file-size" x-text="formatFileSize(selectedFile.size)"></p>
                            </div>
                            <button type="button"
                                    class="px-2 py-1 text-sm border border-gray-300 text-gray-700 rounded hover:bg-gray-50 transition-colors"
                                    title="Remove file"
                                    @click="clearSelectedFile()">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </template>
                    <template x-if="isUploading">
                        <div class="upload-progress">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Uploading...</span>
                            </div>
                            <p class="mt-2">Uploading and processing document...</p>
                        </div>
                    </template>
                </div>
                <template x-if="selectedFile && !isUploading">
                    <div class="flex flex-col md:flex-row justify-between items-center md:items-center gap-3 mt-3">
                        <div class="text-gray-600 text-sm">
                            <i class="fas fa-info-circle mr-1"></i>
                            Review your document details and click "Save Document" to upload.
                        </div>
                        <div class="w-full md:w-auto flex flex-col sm:flex-row gap-2 sm:justify-end">
                            <button type="button"
                                    class="px-4 py-2 border border-gray-300 rounded text-gray-700 hover:bg-gray-50 transition-colors order-1 sm:order-0"
                                    @click="clearSelectedFile()">Cancel</button>
                            <button type="button"
                                    class="px-4 py-2 bg-brand-primary text-white rounded hover:opacity-90 transition-opacity disabled:opacity-50 disabled:cursor-not-allowed"
                                    :disabled="!isFormValid"
                                    @click="saveDocument()">
                                <i class="fas fa-save mr-1"></i>
                                Save Document
                            </button>
                        </div>
                    </div>
                </template>
            </div>
        </div>
    </div>
</div>
