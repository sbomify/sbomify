{% load static %}
<link rel="stylesheet"
      href="{% static 'css/components/documents-table.css' %}">
<div x-data="documentsTable('{{ documents_table_data_json|escapejs }}')">
    <div x-show="!isPublicView"
         class="standard-card mt-3"
         style="display: none">
        <div class="card shadow-sm">
            <div class="card-header">
                <h4 class="card-title mb-0">Documents</h4>
            </div>
            <div class="card-body">{% include 'documents/documents_table_content.html.j2' %}</div>
        </div>
    </div>
    <div x-show="isPublicView" class="mt-3" style="display: none;">
        {% include 'documents/documents_table_content.html.j2' %}
    </div>
    <template x-if="documentToEdit !== null">
        {% include 'documents/components/edit_document_modal.html.j2' %}
    </template>
</div>
