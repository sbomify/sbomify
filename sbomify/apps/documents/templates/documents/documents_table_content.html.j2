{% load static %}
{% load humanize %}
<link rel="stylesheet"
      href="{% static 'css/components/documents-table.css' %}">
{% if not documents %}
    <div class="text-center text-gray-600 py-4">
        <i class="fas fa-file-alt fa-3x mb-3"></i>
        <p>No documents found for this component.</p>
    </div>
{% else %}
    <div class="data-table">
        <table class="w-full{% if not is_public_view %} dashboard-table{% endif %}">
            <thead>
                <tr class="border-b">
                    <th scope="col" class="text-left py-2">Name</th>
                    <th scope="col" class="text-left py-2">Artifact Type</th>
                    <th scope="col" class="text-left py-2">Type</th>
                    <th scope="col" class="text-left py-2">Version</th>
                    <th scope="col" class="text-left py-2">Created</th>
                    <th scope="col" class="text-left py-2">Releases</th>
                    <th scope="col" class="text-left py-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for document in documents %}
                    <tr x-show="isVisible({{ forloop.counter0 }})"
                        style="display: none"
                        class="border-b hover:bg-gray-50">
                        <td {% if not is_public_view %}data-label="Name"{% endif %} class="py-2">
                            <a href="{% if is_public_view %}{% url 'core:component_item_public' component_id=component_id item_type='documents' item_id=document.document.id %}{% else %}{% url 'core:component_item' component_id=component_id item_type='documents' item_id=document.document.id %}{% endif %}"
                               title="Details"
                               class="icon-link">{{ document.document.name }}</a>
                        </td>
                        <td {% if not is_public_view %}data-label="Artifact Type"{% endif %}
                            class="py-2">Document</td>
                        <td {% if not is_public_view %}data-label="Type"{% endif %} class="py-2">
                            <span class="inline-flex items-center px-2 py-1 text-xs font-semibold rounded-full bg-warning-50 text-warning-700">{{ document.document.document_type_display|default:"Document" }}</span>
                        </td>
                        <td {% if not is_public_view %}data-label="Version"{% endif %}
                            title="{{ document.document.version }}"
                            class="py-2">
                            <span>{{ document.document.version|truncatechars:20 }}</span>
                        </td>
                        <td {% if not is_public_view %}data-label="Created"{% endif %}
                            class="py-2">
                            {% if is_public_view %}
                                {{ document.document.created_at|naturaltime }}
                            {% else %}
                                {{ document.document.created_at|date:"M d, Y" }}
                            {% endif %}
                        </td>
                        <td {% if not is_public_view %}data-label="Releases"{% endif %}
                            class="py-2">
                            {% include 'core/components/release_list.html.j2' with releases=document.releases document_id=document.document.id is_public_view=is_public_view %}
                        </td>
                        <td {% if not is_public_view %}data-label="Actions"{% endif %}
                            class="py-2">
                            <div class="flex gap-2">
                                <a href="{% url 'documents:document_download' document.document.id %}"
                                   title="Download"
                                   class="px-2 py-1 text-sm border border-brand-primary text-brand-primary rounded hover:bg-brand-primary hover:text-white transition-colors action-btn">
                                    <i class="fas fa-download"></i>
                                </a>
                                {% if has_crud_permissions %}
                                    <button class="px-2 py-1 text-sm border border-gray-300 text-gray-700 rounded hover:bg-gray-50 transition-colors action-btn"
                                            title="Edit Document"
                                            @click="editDocument('{{ document.document.id }}'); $dispatch('open-modal', { id: 'edit-document-modal' })">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button type="button"
                                            class="px-2 py-1 text-sm border border-danger-500 text-danger-500 rounded hover:bg-danger-500 hover:text-white transition-colors action-btn"
                                            title="Delete Document"
                                            @click="$dispatch('open-delete-modal', { id: 'delete-document-modal', button: $el })"
                                            data-display-name="{{ document.document.name|escapejs }}"
                                            data-form-document_id="{{ document.document.id }}">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% include 'core/components/pagination_controls.html.j2' %}
{% endif %}
