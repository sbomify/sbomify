{% extends "core/public_base.htmx.j2" %}
{% load static %}
{% load django_vite %}
{% block title %}Request Access - {{ team.name }}{% endblock %}
{% block content %}
    <div class="max-w-lg mx-auto py-8 px-4">
        <div class="rounded-2xl shadow-xl overflow-hidden border"
             style="background: var(--surface-card);
                    border-color: var(--border-color)">
            {# Header with brand gradient #}
            <div class="px-6 py-6 text-center relative overflow-hidden"
                 style="background: linear-gradient(135deg, var(--brand-color) 0%, var(--brand-color-dark) 100%)">
                {# Subtle pattern overlay #}
                <div class="absolute inset-0 opacity-10"
                     style="background-image: radial-gradient(circle at 20% 80%, rgba(255,255,255,0.3) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(255,255,255,0.2) 0%, transparent 40%)">
                </div>
                <div class="relative z-10">
                    <div class="w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg"
                         style="background: rgba(255,255,255,0.2);
                                backdrop-filter: blur(10px)">
                        <i class="fas fa-lock text-white text-2xl"></i>
                    </div>
                    <h1 class="text-2xl font-bold text-white m-0">Request Access</h1>
                    <p class="text-white/80 text-sm mt-2 m-0">Secure document access</p>
                </div>
            </div>
            {# Form content #}
            <div class="p-6">
                <p class="mb-6 text-center text-sm leading-relaxed"
                   style="color: var(--text-secondary)">
                    Request access to download gated components from
                    <strong style="color: var(--text-primary);">{{ team.name }}</strong>.
                    {% if requires_nda %}
                        <br>
                        <br>
                        <span class="inline-flex items-center gap-1.5">
                            <i class="fas fa-file-signature text-xs"
                               style="color: var(--accent-color)"></i>
                            You will need to sign a Non-Disclosure Agreement after submitting.
                        </span>
                    {% endif %}
                </p>
                <form method="post" action="{% url 'documents:request_access' team.key %}">
                    {% csrf_token %}
                    {% if not user %}
                        <div class="mb-5">
                            <label for="email"
                                   class="block text-sm font-medium mb-2"
                                   style="color: var(--text-primary)">
                                Email Address <span style="color: var(--accent-color);">*</span>
                            </label>
                            <input type="email"
                                   class="w-full px-4 py-3 rounded-xl transition-all duration-200"
                                   style="background: var(--bg-secondary);
                                          border: 1px solid var(--border-color);
                                          color: var(--text-primary)"
                                   id="email"
                                   name="email"
                                   required
                                   autocomplete="email"
                                   placeholder="your.email@example.com"
                                   onfocus="this.style.borderColor='var(--accent-color)'; this.style.boxShadow='0 0 0 3px rgba(var(--accent-color-rgb), 0.15)';"
                                   onblur="this.style.borderColor='var(--border-color)'; this.style.boxShadow='none';">
                        </div>
                        <div class="mb-5">
                            <label for="name"
                                   class="block text-sm font-medium mb-2"
                                   style="color: var(--text-primary)">
                                Name <span style="color: var(--text-muted);">(Optional)</span>
                            </label>
                            <input type="text"
                                   class="w-full px-4 py-3 rounded-xl transition-all duration-200"
                                   style="background: var(--bg-secondary);
                                          border: 1px solid var(--border-color);
                                          color: var(--text-primary)"
                                   id="name"
                                   name="name"
                                   autocomplete="name"
                                   placeholder="Your Name"
                                   onfocus="this.style.borderColor='var(--accent-color)'; this.style.boxShadow='0 0 0 3px rgba(var(--accent-color-rgb), 0.15)';"
                                   onblur="this.style.borderColor='var(--border-color)'; this.style.boxShadow='none';">
                        </div>
                    {% else %}
                        <div class="rounded-xl p-4 mb-5"
                             style="background: rgba(var(--accent-color-rgb), 0.1);
                                    border: 1px solid rgba(var(--accent-color-rgb), 0.2)">
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 rounded-lg flex items-center justify-center"
                                     style="background: rgba(var(--accent-color-rgb), 0.15)">
                                    <i class="fas fa-user" style="color: var(--accent-color);"></i>
                                </div>
                                <div>
                                    <span class="text-xs font-medium" style="color: var(--accent-color);">Requesting as</span>
                                    <div class="font-semibold" style="color: var(--text-primary);">{{ user.email }}</div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                    {% if requires_nda %}
                        <div class="rounded-xl p-4 mb-6"
                             style="background: rgba(245, 158, 11, 0.1);
                                    border: 1px solid rgba(245, 158, 11, 0.25)">
                            <div class="flex items-start gap-3">
                                <div class="w-9 h-9 rounded-lg flex items-center justify-center shrink-0"
                                     style="background: rgba(245, 158, 11, 0.15)">
                                    <i class="fas fa-file-signature" style="color: #f59e0b;"></i>
                                </div>
                                <div>
                                    <strong class="block mb-1 text-sm" style="color: #b45309;">NDA Required</strong>
                                    <p class="text-sm m-0" style="color: #92400e;">
                                        You will be asked to sign a Non-Disclosure Agreement after submitting this request.
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                    <div class="flex flex-col sm:flex-row gap-3">
                        <button type="submit"
                                class="flex-1 inline-flex items-center justify-center gap-2 px-6 py-3.5 text-white font-semibold rounded-xl transition-all duration-200 hover:-translate-y-0.5"
                                style="background: linear-gradient(135deg, var(--accent-color) 0%, var(--accent-color-dark) 100%);
                                       box-shadow: 0 4px 14px -2px rgba(var(--accent-color-rgb), 0.4)">
                            <i class="fas fa-paper-plane"></i>
                            Submit Request
                        </button>
                        <a href="{% url 'core:workspace_public' workspace_key=team.key %}"
                           class="flex-1 inline-flex items-center justify-center px-6 py-3.5 font-medium rounded-xl transition-all duration-200 text-center no-underline hover:no-underline"
                           style="background: var(--bg-tertiary);
                                  color: var(--text-secondary);
                                  border: 1px solid var(--border-color)">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
