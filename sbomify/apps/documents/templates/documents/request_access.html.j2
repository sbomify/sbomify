{% extends "core/public_base.htmx.j2" %}
{% load static %}
{% load django_vite %}
{% block title %}Request Access - {{ team.name }}{% endblock %}
{% block content %}
    <div class="container py-4 py-md-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">
                            <i class="fas fa-lock me-2"></i>Request Access
                        </h4>
                    </div>
                    <div class="card-body">
                        <p class="text-muted">
                            Request access to download gated components from <strong>{{ team.name }}</strong>.
                            {% if requires_nda %}You will need to sign an NDA before your request can be processed.{% endif %}
                        </p>
                        <form method="post" action="{% url 'documents:request_access' team.key %}">
                            {% csrf_token %}
                            {% if not user %}
                                <div class="mb-3">
                                    <label for="email" class="form-label">
                                        Email Address <span class="text-danger">*</span>
                                    </label>
                                    <input type="email"
                                           class="form-control"
                                           id="email"
                                           name="email"
                                           required
                                           placeholder="your.email@example.com">
                                </div>
                                <div class="mb-3">
                                    <label for="name" class="form-label">Name (Optional)</label>
                                    <input type="text"
                                           class="form-control"
                                           id="name"
                                           name="name"
                                           placeholder="Your Name">
                                </div>
                            {% else %}
                                <div class="mb-3">
                                    <p class="text-muted">
                                        <strong>Requesting as:</strong> {{ user.email }}
                                    </p>
                                </div>
                            {% endif %}
                            {% if requires_nda %}
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <strong>NDA Required:</strong> You will be asked to sign a Non-Disclosure Agreement after submitting this request.
                                </div>
                            {% endif %}
                            <div class="d-flex flex-column flex-sm-row gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-paper-plane me-2"></i>Submit Request
                                </button>
                                <a href="{% url 'core:workspace_public' workspace_key=team.key %}"
                                   class="btn btn-outline-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
