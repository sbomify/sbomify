{% extends "core/public_base.htmx.j2" %}
{% load static %}
{% load django_vite %}
{% block title %}Request Access - {{ team.name }}{% endblock %}
{% block content %}
    <div class="max-w-lg mx-auto py-8 px-4">
        <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100">
            <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-6 py-5 text-center">
                <div class="w-14 h-14 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-3">
                    <i class="fas fa-lock text-white text-2xl"></i>
                </div>
                <h4 class="text-xl font-semibold text-white m-0">Request Access</h4>
            </div>
            <div class="p-6">
                <p class="text-gray-600 mb-6 text-center">
                    Request access to download gated components from <strong class="text-gray-900">{{ team.name }}</strong>.
                    {% if requires_nda %}
                        <br>
                        <br>
                        You will need to sign a Non-Disclosure Agreement after submitting this request.
                    {% endif %}
                </p>
                <form method="post" action="{% url 'documents:request_access' team.key %}">
                    {% csrf_token %}
                    {% if not user %}
                        <div class="mb-5">
                            <label for="email" class="block text-sm font-medium text-gray-700 mb-1.5">
                                Email Address <span class="text-red-500">*</span>
                            </label>
                            <input type="email"
                                   class="w-full px-4 py-2.5 border border-gray-300 rounded-lg text-gray-900 placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                                   id="email"
                                   name="email"
                                   required
                                   placeholder="your.email@example.com">
                        </div>
                        <div class="mb-5">
                            <label for="name" class="block text-sm font-medium text-gray-700 mb-1.5">Name (Optional)</label>
                            <input type="text"
                                   class="w-full px-4 py-2.5 border border-gray-300 rounded-lg text-gray-900 placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                                   id="name"
                                   name="name"
                                   placeholder="Your Name">
                        </div>
                    {% else %}
                        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-5">
                            <strong class="text-blue-800 text-sm">Requesting as:</strong>
                            <div class="text-blue-900 font-medium mt-1">{{ user.email }}</div>
                        </div>
                    {% endif %}
                    {% if requires_nda %}
                        <div class="bg-amber-50 border border-amber-200 rounded-lg p-4 mb-6">
                            <div class="flex items-start gap-3">
                                <i class="fas fa-file-signature text-amber-500 mt-0.5"></i>
                                <div>
                                    <strong class="text-amber-800 block mb-1">NDA Required</strong>
                                    <p class="text-sm text-amber-700 m-0">
                                        You will be asked to sign a Non-Disclosure Agreement after submitting this request.
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                    <div class="flex flex-col sm:flex-row gap-3">
                        <button type="submit"
                                class="flex-1 inline-flex items-center justify-center gap-2 px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
                            <i class="fas fa-paper-plane"></i>Submit Request
                        </button>
                        <a href="{% url 'core:workspace_public' workspace_key=team.key %}"
                           class="flex-1 inline-flex items-center justify-center px-6 py-3 bg-gray-100 text-gray-700 font-medium rounded-lg hover:bg-gray-200 transition-colors text-center">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
