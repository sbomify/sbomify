{% extends "core/public_base.htmx.j2" %}
{% load static %}
{% load django_vite %}
{% block title %}Sign NDA - {{ team.name }}{% endblock %}
{% block content %}
    <div class="max-w-3xl mx-auto py-8 px-4">
        <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100">
            <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-6 py-5 text-center">
                <div class="w-14 h-14 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-3">
                    <i class="fas fa-file-signature text-white text-2xl"></i>
                </div>
                <h4 class="text-xl font-semibold text-white m-0">Sign Non-Disclosure Agreement</h4>
            </div>
            <div class="p-6">
                <p class="text-gray-600 mb-6 text-center">
                    Please review and sign the NDA below to complete your access request for <strong class="text-gray-900">{{ team.name }}</strong>.
                </p>
                <div class="mb-6">
                    <div class="flex items-center justify-between mb-3">
                        <h5 class="text-base font-semibold text-gray-900 m-0">NDA Document</h5>
                        <div class="flex items-center gap-3">
                            {% if nda_document.file_size %}
                                <span class="text-sm text-gray-500">{{ nda_document.file_size|filesizeformat }}</span>
                            {% endif %}
                            <a href="{% url 'documents:document_download' nda_document.id %}?view=inline"
                               target="_blank"
                               class="inline-flex items-center gap-1 text-sm text-blue-600 hover:text-blue-700 font-medium">
                                <i class="fas fa-external-link-alt"></i>Open in New Tab
                            </a>
                        </div>
                    </div>
                    <div class="border border-gray-200 rounded-lg overflow-hidden bg-gray-50">
                        <iframe src="{% url 'documents:document_download' nda_document.id %}?view=inline"
                                title="NDA Document"
                                class="w-full h-96 border-0"></iframe>
                    </div>
                </div>
                <form method="post"
                      action="{% url 'documents:sign_nda' team.key access_request.id %}">
                    {% csrf_token %}
                    <div class="mb-5">
                        <label for="signed_name"
                               class="block text-sm font-medium text-gray-700 mb-1.5">
                            Full Name <span class="text-red-500">*</span>
                        </label>
                        <input type="text"
                               class="w-full px-4 py-2.5 border border-gray-300 rounded-lg text-gray-900 placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                               id="signed_name"
                               name="signed_name"
                               required
                               placeholder="Enter your full name">
                        <p class="text-sm text-gray-500 mt-1.5">This name will be recorded with your NDA signature.</p>
                    </div>
                    <div class="mb-5">
                        <label class="flex items-start gap-3 cursor-pointer">
                            <input class="mt-0.5 w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                                   type="checkbox"
                                   id="consent"
                                   name="consent"
                                   required>
                            <span class="text-sm text-gray-700">
                                I have read and agree to the terms of the Non-Disclosure Agreement <span class="text-red-500">*</span>
                            </span>
                        </label>
                    </div>
                    <div class="bg-amber-50 border border-amber-200 rounded-lg p-4 mb-6">
                        <div class="flex items-start gap-3">
                            <i class="fas fa-exclamation-triangle text-amber-500 mt-0.5"></i>
                            <div>
                                <strong class="text-amber-800 block mb-1">Important</strong>
                                <p class="text-sm text-amber-700 m-0">
                                    By signing this NDA, you agree to keep confidential information secure. Your signature, IP address, and timestamp will be recorded.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="flex flex-col sm:flex-row gap-3">
                        <button type="submit"
                                class="flex-1 inline-flex items-center justify-center gap-2 px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
                            <i class="fas fa-signature"></i>Sign NDA and Submit Request
                        </button>
                        <a href="{% url 'core:workspace_public' workspace_key=team.key %}"
                           class="flex-1 inline-flex items-center justify-center px-6 py-3 bg-gray-100 text-gray-700 font-medium rounded-lg hover:bg-gray-200 transition-colors text-center">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
