{# Individual assessment run accordion item - rendered server-side #}
{% load plugins_extras %}
{# Safely compute has_issues - run.result may be None for pending/running assessments #}
{% with run_id=run.id|default:loop_index result=run.result|default_if_none:"" summary=run.result.summary|default_if_none:"" fail_count=run.result.summary.fail_count|default:0 error_count=run.result.summary.error_count|default:0 %}
    {% with has_issues=fail_count|add:error_count %}
        <div class="border rounded mb-2 {% if has_issues %}has-issues{% elif run.status == 'completed' %}all-passed{% endif %}"
             id="plugin-{{ run.plugin_name }}"
             x-cloak
             x-data="accordionItem(false)">
            <h2>
                <button class="w-full px-4 py-3 text-left flex items-center justify-between bg-white hover:bg-gray-50 transition-colors rounded-t"
                        :class="{ 'rounded-b': !expanded }"
                        type="button"
                        @click="toggle()"
                        :aria-expanded="expanded"
                        aria-controls="collapse-{{ run_id }}">
                    <div class="flex items-center justify-between w-full mr-3">
                        <div class="plugin-header flex items-center gap-2">
                            <span class="plugin-name font-medium">{{ run.plugin_display_name|default:run.plugin_name }}</span>
                            {% if run.status == 'completed' %}
                                {% if has_issues %}
                                    <span class="inline-flex items-center px-2 py-1 text-xs font-semibold rounded-full bg-warning-50 text-warning-700">
                                        <i class="fas fa-exclamation-triangle mr-1"></i>{{ has_issues }} Issue{{ has_issues|pluralize }}
                                    </span>
                                {% else %}
                                    <span class="inline-flex items-center px-2 py-1 text-xs font-semibold rounded-full bg-success-50 text-success-700">
                                        <i class="fas fa-check-circle mr-1"></i>Passed
                                    </span>
                                {% endif %}
                            {% elif run.status == 'failed' %}
                                <span class="inline-flex items-center px-2 py-1 text-xs font-semibold rounded-full bg-danger-50 text-danger-700">
                                    <i class="fas fa-times-circle mr-1"></i>Error
                                </span>
                            {% elif run.status == 'running' %}
                                <span class="inline-flex items-center px-2 py-1 text-xs font-semibold rounded-full bg-info-50 text-info-700">
                                    <i class="fas fa-sync-alt fa-spin mr-1"></i>Running
                                </span>
                            {% else %}
                                <span class="inline-flex items-center px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-700">
                                    <i class="fas fa-clock mr-1"></i>Pending
                                </span>
                            {% endif %}
                        </div>
                        <div class="plugin-meta hidden md:block text-gray-600 text-sm">
                            {% if run.result.summary %}<span>{{ run.result.summary.total_findings|default:0 }} findings</span>{% endif %}
                        </div>
                    </div>
                </button>
            </h2>
            <div id="collapse-{{ run_id }}"
                 class="border-t"
                 x-show="expanded"
                 x-collapse>
                <div class="p-4">
                    {% if run.status == 'completed' or run.status == 'failed' %}
                        <!-- Run Metadata -->
                        <div class="run-metadata flex flex-wrap gap-3 text-sm text-gray-600 mb-3">
                            <span class="flex items-center">
                                <i class="fas fa-code-branch mr-1"></i>
                                v{{ run.plugin_version }}
                            </span>
                            <span class="flex items-center">
                                <i class="fas fa-play-circle mr-1"></i>
                                {{ run.run_reason|format_run_reason }}
                            </span>
                            {% if run.completed_at %}
                                <span class="flex items-center">
                                    <i class="fas fa-calendar-check mr-1"></i>
                                    {{ run.completed_at|date:"M d, Y \a\t H:i" }}
                                </span>
                            {% endif %}
                        </div>
                        {% if run.status == 'failed' and run.error_message %}
                            <!-- Error Message -->
                            <div class="bg-danger-50 border border-danger-200 text-danger-800 px-4 py-3 rounded flex items-start mb-3">
                                <i class="fas fa-exclamation-circle mr-2 mt-1"></i>
                                <div>{{ run.error_message }}</div>
                            </div>
                        {% endif %}
                        {% if run.result.summary %}
                            <!-- Findings Summary - Compact grid -->
                            <div class="findings-summary">
                                <div class="grid grid-cols-3 md:grid-cols-6 gap-2">
                                    <div class="finding-stat bg-success-50 rounded p-2 text-center">
                                        <div class="font-bold text-success-700">{{ run.result.summary.pass_count|default:0 }}</div>
                                        <small class="text-gray-600 text-xs">Pass</small>
                                    </div>
                                    <div class="finding-stat bg-warning-50 rounded p-2 text-center">
                                        <div class="font-bold text-warning-700">{{ run.result.summary.fail_count|default:0 }}</div>
                                        <small class="text-gray-600 text-xs">Fail</small>
                                    </div>
                                    <div class="finding-stat bg-danger-50 rounded p-2 text-center">
                                        <div class="font-bold text-danger-700">{{ run.result.summary.error_count|default:0 }}</div>
                                        <small class="text-gray-600 text-xs">Error</small>
                                    </div>
                                    <div class="finding-stat bg-info-50 rounded p-2 text-center">
                                        <div class="font-bold text-info-700">{{ run.result.summary.warning_count|default:0 }}</div>
                                        <small class="text-gray-600 text-xs">Warn</small>
                                    </div>
                                    <div class="finding-stat bg-gray-100 rounded p-2 text-center">
                                        <div class="font-bold text-gray-700">{{ run.result.summary.info_count|default:0 }}</div>
                                        <small class="text-gray-600 text-xs">Info</small>
                                    </div>
                                    <div class="finding-stat stat-total rounded p-2 text-center">
                                        <div class="font-bold text-gray-900">{{ run.result.summary.total_findings|default:0 }}</div>
                                        <small class="text-gray-600 text-xs">Total</small>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                        {% if run.result.findings %}
                            <!-- Findings List -->
                            <div class="findings-list">
                                <h6>
                                    <i class="fas fa-list-ul me-1"></i>Findings
                                </h6>
                                {% for finding in run.result.findings %}
                                    <div class="finding-item {{ finding.status|status_border_class }}">
                                        <div class="d-flex align-items-start">
                                            <span class="finding-status-icon {{ finding.status|status_text_class }}">
                                                <i class="{{ finding.status|status_icon }}"></i>
                                            </span>
                                            <div class="flex-grow-1 ms-2">
                                                <div class="finding-title">{{ finding.title }}</div>
                                                <div class="finding-description">{{ finding.description|format_finding_description }}</div>
                                                {% if finding.remediation %}
                                                    <div class="finding-remediation">
                                                        <i class="fas fa-lightbulb me-1"></i>
                                                        {{ finding.remediation }}
                                                    </div>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                        {% if run.result.metadata.standard_name %}
                            <!-- Standard Info (for compliance plugins) -->
                            <div class="standard-info mt-3">
                                <h6>
                                    <i class="fas fa-book me-1"></i>Standard Reference
                                </h6>
                                <div class="small">
                                    <strong>Standard:</strong> {{ run.result.metadata.standard_name }}
                                    <br>
                                    <strong>Version:</strong> {{ run.result.metadata.standard_version }}
                                    {% if run.result.metadata.standard_url %}
                                        <br>
                                        <strong>Reference:</strong>
                                        <a href="{{ run.result.metadata.standard_url }}"
                                           target="_blank"
                                           rel="noopener noreferrer">
                                            View Standard <i class="fas fa-external-link-alt ms-1"></i>
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        {% endif %}
                    {% else %}
                        <!-- Pending state -->
                        <div class="assessment-no-results py-4">
                            <i class="fas fa-sync-alt fa-spin fa-2x d-block mb-3"></i>
                            <p class="mb-0">Assessment in progress...</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endwith %}
{% endwith %}
