{% load static plugins_extras %}
<link rel="stylesheet"
      href="{% static 'css/components/assessment-results-card.css' %}">
{# WebSocket listener for real-time assessment updates #}
<div id="assessment-results"
     class="mt-4"
     x-data
     @ws:message.window=" if ($event.detail.type === 'assessment_complete' && $event.detail.sbom_id === '{{ sbom_id }}') { location.reload(); } ">
    <div class="tw-card">
        <div class="px-6 py-4 border-b border-border flex justify-between items-center">
            <div>
                <h4 class="text-lg font-semibold text-text m-0 flex items-center gap-2">
                    <i class="fas fa-clipboard-check"></i>Assessment Results
                </h4>
            </div>
            <div>
                {% with status=assessment_runs.status_summary %}
                    {% if status.overall_status == 'all_pass' %}
                        <span class="px-3 py-1.5 text-sm font-medium rounded-full bg-success/10 text-success flex items-center gap-1">
                            <i class="fas fa-check-circle"></i>All Passed
                        </span>
                    {% elif status.overall_status == 'has_failures' %}
                        <span class="px-3 py-1.5 text-sm font-medium rounded-full bg-warning/10 text-warning flex items-center gap-1">
                            <i class="fas fa-exclamation-triangle"></i>Issues Found
                        </span>
                    {% elif status.overall_status == 'pending' or status.overall_status == 'in_progress' %}
                        <span class="px-3 py-1.5 text-sm font-medium rounded-full bg-info/10 text-info flex items-center gap-1">
                            <i class="fas fa-sync-alt fa-spin"></i>Processing
                        </span>
                    {% else %}
                        <span class="px-3 py-1.5 text-sm font-medium rounded-full bg-border/50 text-text-muted flex items-center gap-1">
                            <i class="fas fa-clock"></i>Pending
                        </span>
                    {% endif %}
                {% endwith %}
            </div>
        </div>
        <div class="p-6">
            {% with status=assessment_runs.status_summary %}
                {% if status.total_assessments > 0 %}
                    <!-- Summary Stats - Clean 4 column layout -->
                    <div class="assessment-stats-grid">
                        <div class="stat-item stat-pass">
                            <div class="stat-number">{{ status.passing_count }}</div>
                            <div class="stat-label">Passed</div>
                        </div>
                        <div class="stat-item stat-fail">
                            <div class="stat-number">{{ status.failing_count }}</div>
                            <div class="stat-label">Issues</div>
                        </div>
                        <div class="stat-item stat-pending">
                            <div class="stat-number">{{ status.pending_count|add:status.in_progress_count }}</div>
                            <div class="stat-label">Pending</div>
                        </div>
                        <div class="stat-item stat-total">
                            <div class="stat-number">{{ status.total_assessments }}</div>
                            <div class="stat-label">Total</div>
                        </div>
                    </div>
                    <!-- Consulting CTA for compliance failures -->
                    {% if assessment_runs|has_compliance_failures %}
                        <div class="flex items-center justify-between flex-wrap gap-3 p-4 bg-primary/5 border border-primary/20 rounded-lg mt-4">
                            <div class="flex items-center gap-2 text-text">
                                <i class="fas fa-hands-helping text-primary"></i>
                                <span>Need help resolving these compliance issues? Our experts can help.</span>
                            </div>
                            <a href="{% url 'core:support_contact' %}"
                               class="tw-btn-primary text-sm">
                                <i class="fas fa-envelope mr-1"></i>Contact Us
                            </a>
                        </div>
                    {% endif %}
                    <!-- Plugin Results -->
                    <div class="plugin-results-section">
                        <h6 class="section-title">
                            <i class="fas fa-puzzle-piece mr-2"></i>Plugin Results
                        </h6>
                        <div class="accordion" id="assessmentAccordion">
                            {% for run in assessment_runs.latest_runs %}
                                {% include 'plugins/components/_assessment_run_item.html.j2' with run=run loop_index=forloop.counter %}
                            {% empty %}
                                <div class="assessment-no-results">
                                    <div class="no-results-icon">
                                        <i class="fas fa-info-circle"></i>
                                    </div>
                                    <p>No assessment runs found.</p>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% else %}
                    <!-- No Assessments Message -->
                    <div class="assessment-no-results">
                        <div class="no-results-icon">
                            <i class="fas fa-hourglass-half"></i>
                        </div>
                        <p>Assessment results will appear here once processing completes.</p>
                        <small>This usually takes a few minutes after SBOM upload.</small>
                    </div>
                {% endif %}
            {% endwith %}
        </div>
    </div>
</div>
