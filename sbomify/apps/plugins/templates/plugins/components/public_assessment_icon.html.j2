{# Compact icon-only badge with tooltip for public pages #}
{# Usage: {% include 'plugins/components/public_assessment_icon.html.j2' with assessment=assessment %} #}
{# Expected assessment dict: display_name (str), category (str: attestation, compliance, security, license) #}
{% if assessment %}
    {% if assessment.category == 'attestation' %}
        <span class="compliance-icon compliance-icon--attestation"
              x-tooltip="'{{ assessment.display_name|escapejs }}'">
            <i class="fas fa-certificate"></i>
        </span>
    {% elif assessment.category == 'security' %}
        <span class="compliance-icon compliance-icon--security"
              x-tooltip="'{{ assessment.display_name|escapejs }}'">
            <i class="fas fa-shield-halved"></i>
        </span>
    {% elif assessment.category == 'license' %}
        <span class="compliance-icon compliance-icon--license"
              x-tooltip="'{{ assessment.display_name|escapejs }}'">
            <i class="fas fa-scale-balanced"></i>
        </span>
    {% else %}
        {# Default: compliance or unknown category #}
        <span class="compliance-icon compliance-icon--compliance"
              x-tooltip="'{{ assessment.display_name|escapejs }}'">
            <i class="fas fa-check-circle"></i>
        </span>
    {% endif %}
{% endif %}
