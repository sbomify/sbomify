{% load static %}
{# Assessment Plugins Card #}
<div class="tw-settings-card">
    <div class="px-6 py-4 border-b border-border">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center">
                    <i class="fas fa-puzzle-piece text-primary"></i>
                </div>
                <div>
                    <h5 class="text-lg font-semibold text-text m-0">Assessment Plugins</h5>
                    <p class="text-text-muted text-sm m-0">Configure which assessment plugins run on your SBOMs</p>
                </div>
            </div>
            {% if plugin_settings.available_plugins %}
                <div class="flex items-center gap-3">
                    <span id="plugin-settings-spinner"
                          class="htmx-indicator tw-spinner tw-spinner-sm"></span>
                    <button type="submit"
                            form="plugin-settings-form"
                            class="tw-btn-primary tw-btn-sm">
                        <i class="fas fa-save mr-2"></i>Save Settings
                    </button>
                </div>
            {% endif %}
        </div>
    </div>
    <div class="p-6">
        <form id="plugin-settings-form"
              hx-post="{% url 'plugins:team_plugin_settings' team.key %}"
              hx-swap="none"
              hx-disabled-elt="find button[type='submit']"
              hx-indicator="#plugin-settings-spinner">
            {% csrf_token %}
            {% if plugin_settings.available_plugins %}
                <div class="space-y-3">
                    {% for plugin in plugin_settings.available_plugins %}
                        {% if plugin.show_upgrade_divider %}
                            <div class="flex items-center gap-3 pt-3 pb-1">
                                <div class="flex-1 border-t border-border"></div>
                                <span class="text-xs font-medium text-text-muted uppercase tracking-wider whitespace-nowrap">
                                    <i class="fas fa-lock mr-1"></i>Requires Plan Upgrade
                                </span>
                                <div class="flex-1 border-t border-border"></div>
                            </div>
                        {% endif %}
                        <div class="bg-background/50 border border-border rounded-xl p-4 {% if plugin.requires_upgrade %}opacity-50 grayscale{% endif %}" x-data="{ enabled:
                            {% if plugin.is_enabled %}
                                true
                            {% else %}
                                false
                            {% endif %}
                            }">
                            <div class="flex items-start gap-4">
                                <div class="w-10 h-10 rounded-lg {% if plugin.requires_upgrade %}bg-border/50{% else %}bg-primary/10{% endif %} flex items-center justify-center flex-shrink-0">
                                    <i class="fas fa-puzzle-piece {% if plugin.requires_upgrade %}text-text-muted{% else %}text-primary{% endif %}"></i>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <div class="flex items-center flex-wrap gap-2 mb-1">
                                        <label class="font-medium text-text {% if plugin.requires_upgrade %}text-text-muted{% endif %} cursor-pointer"
                                               for="plugin-{{ plugin.name }}">{{ plugin.display_name }}</label>
                                        <span class="tw-badge-primary text-xs capitalize">{{ plugin.category }}</span>
                                        <span class="tw-badge-secondary text-xs">v{{ plugin.version }}</span>
                                        {% if plugin.is_beta %}
                                            <span class="tw-badge-info text-xs">
                                                <i class="fas fa-flask mr-1"></i>Beta
                                            </span>
                                        {% endif %}
                                        {% if plugin.requires_upgrade %}
                                            <span class="tw-badge-warning text-xs">
                                                <i class="fas fa-lock mr-1"></i>{{ plugin.required_plan }}+ Plan
                                            </span>
                                        {% endif %}
                                    </div>
                                    <p class="text-text-muted text-sm m-0">{{ plugin.description }}</p>
                                    {% if plugin.requires_upgrade %}
                                        <div class="mt-3">
                                            <a href="{% url 'billing:select_plan' team.key %}"
                                               class="tw-btn-warning tw-btn-sm no-underline">
                                                <i class="fas fa-arrow-up mr-1"></i>Upgrade to Enable
                                            </a>
                                        </div>
                                    {% endif %}
                                    {% if plugin.config_schema %}
                                        <div x-show="enabled" x-cloak class="mt-4 pt-4 border-t border-border">
                                            {% for field in plugin.config_schema %}
                                                {% if field.type == "select" and not field.choices %}
                                                    {# Skip entire field â€” no choices available (e.g., Business tier for DT server) #}
                                                {% else %}
                                                    <div class="{% if not forloop.last %}mb-3{% endif %}">
                                                        <label class="tw-form-label"
                                                               for="plugin_config_{{ plugin.name }}_{{ field.key }}">
                                                            {{ field.label }}
                                                        </label>
                                                        {% if field.type == "select" %}
                                                            <select name="plugin_config_{{ plugin.name }}_{{ field.key }}"
                                                                    id="plugin_config_{{ plugin.name }}_{{ field.key }}"
                                                                    class="tw-form-select">
                                                                <option value="">-- Default --</option>
                                                                {% for choice in field.choices %}
                                                                    {% if field.current_value == choice.value %}
                                                                        <option value="{{ choice.value }}" selected>{{ choice.label }}</option>
                                                                    {% else %}
                                                                        <option value="{{ choice.value }}">{{ choice.label }}</option>
                                                                    {% endif %}
                                                                {% endfor %}
                                                            </select>
                                                        {% elif field.type == "boolean" %}
                                                            {% if field.current_value == "true" %}
                                                                <input type="checkbox"
                                                                       name="plugin_config_{{ plugin.name }}_{{ field.key }}"
                                                                       id="plugin_config_{{ plugin.name }}_{{ field.key }}"
                                                                       class="tw-toggle"
                                                                       value="true"
                                                                       checked>
                                                            {% else %}
                                                                <input type="checkbox"
                                                                       name="plugin_config_{{ plugin.name }}_{{ field.key }}"
                                                                       id="plugin_config_{{ plugin.name }}_{{ field.key }}"
                                                                       class="tw-toggle"
                                                                       value="true">
                                                            {% endif %}
                                                        {% elif field.type == "number" %}
                                                            <input type="number"
                                                                   name="plugin_config_{{ plugin.name }}_{{ field.key }}"
                                                                   id="plugin_config_{{ plugin.name }}_{{ field.key }}"
                                                                   class="tw-form-input"
                                                                   value="{{ field.current_value }}">
                                                        {% else %}
                                                            <input type="text"
                                                                   name="plugin_config_{{ plugin.name }}_{{ field.key }}"
                                                                   id="plugin_config_{{ plugin.name }}_{{ field.key }}"
                                                                   class="tw-form-input"
                                                                   value="{{ field.current_value }}">
                                                        {% endif %}
                                                        {% if field.help_text %}<p class="tw-form-help">{{ field.help_text }}</p>{% endif %}
                                                    </div>
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="flex-shrink-0">
                                    <input type="checkbox"
                                           name="enabled_plugins"
                                           value="{{ plugin.name }}"
                                           id="plugin-{{ plugin.name }}"
                                           class="tw-toggle"
                                           x-model="enabled"
                                           {% if plugin.requires_upgrade %}disabled{% endif %}>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="tw-alert tw-alert-info mt-6">
                    <div class="flex items-start gap-3">
                        <i class="fas fa-info-circle text-lg mt-0.5"></i>
                        <p class="text-sm m-0">Enabled plugins will automatically assess new SBOM uploads.</p>
                    </div>
                </div>
            {% else %}
                <div class="tw-empty-state py-12">
                    <div class="tw-empty-state-icon">
                        <i class="fas fa-puzzle-piece text-2xl"></i>
                    </div>
                    <h4 class="tw-empty-state-title">No plugins available</h4>
                    <p class="tw-empty-state-description">Plugins will appear here once they are registered by administrators.</p>
                </div>
            {% endif %}
        </form>
    </div>
</div>
{# Info Card about Plugin Behavior #}
<div class="tw-settings-card mt-6">
    <div class="px-6 py-4 border-b border-border">
        <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-info/10 flex items-center justify-center">
                <i class="fas fa-info-circle text-info"></i>
            </div>
            <div>
                <h5 class="text-lg font-semibold text-text m-0">About Assessment Plugins</h5>
                <p class="text-text-muted text-sm m-0">Learn how plugins work with your SBOMs</p>
            </div>
        </div>
    </div>
    <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="bg-background/50 border border-border rounded-xl p-4">
                <div class="flex items-start gap-3">
                    <div class="w-8 h-8 rounded-lg bg-success/10 flex items-center justify-center flex-shrink-0">
                        <i class="fas fa-check-circle text-success text-sm"></i>
                    </div>
                    <div>
                        <h6 class="font-medium text-text m-0 mb-1">Automatic Assessments</h6>
                        <p class="text-text-muted text-sm m-0">
                            Enabled plugins automatically run assessments when new SBOMs are uploaded.
                            Results appear on the SBOM detail page and in the SBOMs table.
                        </p>
                    </div>
                </div>
            </div>
            <div class="bg-background/50 border border-border rounded-xl p-4">
                <div class="flex items-start gap-3">
                    <div class="w-8 h-8 rounded-lg bg-info/10 flex items-center justify-center flex-shrink-0">
                        <i class="fas fa-history text-info text-sm"></i>
                    </div>
                    <div>
                        <h6 class="font-medium text-text m-0 mb-1">Historical Tracking</h6>
                        <p class="text-text-muted text-sm m-0">
                            All assessment results are preserved, allowing you to track compliance
                            and security status over time for audit purposes.
                        </p>
                    </div>
                </div>
            </div>
            <div class="bg-background/50 border border-border rounded-xl p-4">
                <div class="flex items-start gap-3">
                    <div class="w-8 h-8 rounded-lg bg-primary/10 flex items-center justify-center flex-shrink-0">
                        <i class="fas fa-shield-alt text-primary text-sm"></i>
                    </div>
                    <div>
                        <h6 class="font-medium text-text m-0 mb-1">Compliance Plugins</h6>
                        <p class="text-text-muted text-sm m-0">
                            Compliance plugins like NTIA Minimum Elements verify that your SBOMs
                            meet industry standards and regulatory requirements.
                        </p>
                    </div>
                </div>
            </div>
            <div class="bg-background/50 border border-border rounded-xl p-4">
                <div class="flex items-start gap-3">
                    <div class="w-8 h-8 rounded-lg bg-border/50 flex items-center justify-center flex-shrink-0">
                        <i class="fas fa-cog text-text-muted text-sm"></i>
                    </div>
                    <div>
                        <h6 class="font-medium text-text m-0 mb-1">Per-Plugin Configuration</h6>
                        <p class="text-text-muted text-sm m-0">
                            Some plugins support custom configuration. Configuration options
                            will appear when the plugin is enabled.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
