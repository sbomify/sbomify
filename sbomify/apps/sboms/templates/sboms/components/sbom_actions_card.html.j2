{% load static %}
<link rel="stylesheet"
      href="{% static 'css/components/sbom-actions-card.css' %}">
<div class="standard-card mt-3">
    <div class="card shadow-sm">
        <div class="card-header">
            <div class="header-content">
                <h4 class="card-title mb-0">
                    <i class="fas fa-cogs me-2"></i>SBOM Actions
                </h4>
            </div>
        </div>
        <div class="card-body">
            <div class="actions-grid">
                <div class="action-item">
                    <div class="action-icon download-icon">
                        <i class="fas fa-download"></i>
                    </div>
                    <div class="action-content">
                        <h6 class="action-title">Download SBOM</h6>
                        <p class="action-description">Get the complete SBOM file in its original format</p>
                        <a href="{% url 'sboms:sbom_download' item.id %}"
                           class="btn btn-primary btn-action">
                            <i class="fas fa-download me-2"></i>
                            Download File
                        </a>
                    </div>
                </div>
                <div class="action-item">
                    <div class="action-icon vulnerability-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <div class="action-content">
                        <h6 class="action-title">Vulnerability Analysis</h6>
                        <p class="action-description">
                            View vulnerability scan results, security insights, and trends from automatic weekly scans
                        </p>
                        <a href="{% url 'sboms:sbom_vulnerabilities' item.id %}"
                           class="btn btn-warning btn-action">
                            <i class="fas fa-shield-alt me-2"></i>
                            View Vulnerability Report
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
