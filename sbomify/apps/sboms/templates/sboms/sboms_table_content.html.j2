{% load static %}
{% load json_extras %}
{% load humanize %}
{% if not sboms %}
    <div class="text-center text-muted py-4">
        <i class="fas fa-file-code fa-3x mb-3"></i>
        <p>No SBOMs found for this component.</p>
    </div>
{% else %}
    <div class="data-table">
        <table class="table{% if not is_public_view %} dashboard-table{% endif %}">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Format</th>
                    <th scope="col">Version</th>
                    {% if not is_public_view %}<th scope="col">Assessments</th>{% endif %}
                    <th scope="col">Created</th>
                    <th scope="col">Releases</th>
                </tr>
            </thead>
            <tbody>
                {% for sbom in sboms %}
                    <tr x-show="isVisible({{ forloop.counter0 }})" style="display: none;">
                        <td {% if not is_public_view %}data-label="Name"{% endif %}>
                            <a href="{% if is_public_view %}{% url 'core:component_item_public' component_id=component_id item_type='sboms' item_id=sbom.sbom.id %}{% else %}{% url 'core:component_item' component_id=component_id item_type='sboms' item_id=sbom.sbom.id %}{% endif %}"
                               title="Details"
                               class="icon-link">{{ sbom.sbom.name }}</a>
                        </td>
                        <td {% if not is_public_view %}data-label="Format"{% endif %}>
                            <span class="badge bg-success-subtle text-success">
                                {{ sbom.sbom.format_display|default:sbom.sbom.format|upper }} {{ sbom.sbom.format_version }}
                            </span>
                        </td>
                        <td {% if not is_public_view %}data-label="Version"{% endif %}
                            title="{{ sbom.sbom.version }}">
                            <span>{{ sbom.sbom.version|truncatechars:20 }}</span>
                        </td>
                        {% if not is_public_view %}
                            <td data-label="Assessments">
                                {% include 'plugins/components/assessment_badge.html.j2' with sbom_id=sbom.sbom.id component_id=component_id assessments_data=sbom.assessments team_billing_plan=team_billing_plan|default:'' team_key=team_key|default:'' %}
                            </td>
                        {% endif %}
                        <td {% if not is_public_view %}data-label="Created"{% endif %}>
                            {% if is_public_view %}
                                {{ sbom.sbom.created_at|naturaltime }}
                            {% else %}
                                {{ sbom.sbom.created_at|date:"M d, Y" }}
                            {% endif %}
                        </td>
                        <td {% if not is_public_view %}data-label="Releases"{% endif %}>
                            {% include 'core/components/release_list.html.j2' with releases=sbom.releases document_id=sbom.sbom.id is_public_view=is_public_view %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% include 'core/components/pagination_controls.html.j2' %}
{% endif %}
