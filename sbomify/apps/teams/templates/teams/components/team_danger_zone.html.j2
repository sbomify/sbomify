{% load static %}
<div x-cloak
     x-data="{ showDeleteModal: false, confirmText: '', isExpanded: false, get canConfirm() { return this.confirmText.toLowerCase() === 'delete'; } }">
    <!-- Standard Card Structure Inlined -->
    <div class="standard-card mt-3">
        <div class="bg-white rounded-lg dangerzone-card shadow-sm">
            <div class="px-6 py-4 border-b cursor-pointer collapsible-header"
                 @click="isExpanded = !isExpanded">
                <div class="header-content flex justify-between items-center w-full">
                    <h4 class="text-lg font-semibold mb-0">
                        <i class="fas fa-exclamation-triangle mr-2"></i>
                        Danger Zone
                        <i class="fas ml-2"
                           :class="isExpanded ? 'fa-chevron-down' : 'fa-chevron-right'"></i>
                    </h4>
                </div>
            </div>
            <div class="p-6" x-show="isExpanded" x-collapse>
                <!-- Delete Workspace Section -->
                <div class="danger-section delete-section">
                    <div class="section-header">
                        <div class="section-icon delete-icon">
                            <i class="fas fa-trash-alt"></i>
                        </div>
                        <div class="section-content">
                            <h6 class="section-title">Delete Workspace</h6>
                            <p class="section-description">
                                Permanently remove this workspace and all its associated data.
                                {% if is_default_team %}
                                    <span class="text-warning-700 block mt-1">
                                        <i class="fas fa-info-circle mr-1"></i>
                                        You must set another workspace as default before deleting this one.
                                    </span>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                    <button id="del_{{ team_key }}"
                            class="px-4 py-2 bg-danger-500 text-white rounded hover:opacity-90 transition-opacity disabled:opacity-50 disabled:cursor-not-allowed modern-btn delete-btn"
                            {% if is_default_team %}disabled{% endif %}
                            @click.prevent="showDeleteModal = true">
                        <i class="fas fa-trash-alt mr-2"></i>
                        Delete Workspace
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- Custom Delete Modal for Workspace - teleported to body for proper positioning -->
    <template x-teleport="body">
        <div x-show="showDeleteModal"
             x-cloak
             class="delete-modal-overlay"
             tabindex="-1"
             @click.self="showDeleteModal = false; confirmText = ''"
             @keydown.escape.window="showDeleteModal = false; confirmText = ''">
            <div class="delete-modal" @click.stop>
                <div class="delete-modal-header">
                    <div class="delete-modal-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <h3 class="delete-modal-title">Delete Workspace</h3>
                    <button type="button"
                            class="delete-modal-close"
                            @click="showDeleteModal = false; confirmText = ''">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <div class="delete-modal-body">
                    <p class="delete-modal-message">
                        Are you sure you want to delete the workspace
                        <span class="delete-modal-name">{{ team_name }}</span>?
                    </p>
                    <p class="delete-modal-warning">
                        This action cannot be undone. All products, projects, components, SBOMs, and documents in this workspace will be permanently deleted.
                    </p>
                    <p class="delete-modal-confirm-text mb-2 mt-3">
                        Type <strong>delete</strong> to confirm:
                    </p>
                    <input x-model="confirmText"
                           type="text"
                           class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-brand-primary focus:border-transparent"
                           placeholder="Type 'delete' to confirm"
                           @keydown.enter="if (canConfirm) $refs.deleteForm.submit()" />
                </div>
                <div class="delete-modal-footer">
                    <button type="button"
                            class="delete-modal-button delete-modal-button--secondary"
                            @click="showDeleteModal = false; confirmText = ''">Cancel</button>
                    <form x-ref="deleteForm"
                          method="post"
                          action="{% url 'teams:team_general' team_key %}">
                        {% csrf_token %}
                        <input type="hidden" name="action" value="delete">
                        <button type="submit"
                                class="delete-modal-button delete-modal-button--danger"
                                :disabled="!canConfirm">
                            <i class="fas fa-trash me-2"></i>
                            Delete Workspace
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </template>
</div>
