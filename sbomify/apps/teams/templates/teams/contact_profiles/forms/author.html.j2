{% load widget_tweaks %}
<div class="author-card border-bottom"
     x-data="authorEntry"
     x-show="!deleted"
     x-transition:enter="transition ease-out duration-200"
     x-transition:enter-start="opacity-0"
     x-transition:enter-end="opacity-100">
    {% for hidden in form.hidden_fields %}{{ hidden }}{% endfor %}
    <input type="hidden"
           name="{{ form.prefix }}-DELETE"
           x-model="deleted"
           value="">
    <div class="d-flex align-items-center py-2 px-3 gap-3">
        {# Author avatar #}
        <div class="flex-shrink-0">
            <div class="contact-avatar-circle">
                <i class="fas fa-user-pen contact-icon-purple"></i>
            </div>
        </div>
        {# Name field #}
        <div class="flex-shrink-0 contact-field-name">
            {{ form.name|add_class:"form-control form-control-sm bg-white rounded-2"|attr:"placeholder:Name *"|attr:"required:required"|attr:"title:Click to edit name"|attr:"aria-label:Author Name" }}
            {% if form.name.errors %}
                <div class="text-danger small mt-1" role="alert" aria-live="polite">{{ form.name.errors.0 }}</div>
            {% endif %}
        </div>
        {# Email field #}
        <div class="flex-grow-1 contact-field-email">
            {{ form.email|add_class:"form-control form-control-sm bg-white rounded-2"|attr:"placeholder:Email *"|attr:"required:required"|attr:"title:Please enter a valid email address (e.g., contact@example.com)"|attr:"type:email"|attr:"aria-label:Author Email" }}
            {% if form.email.errors %}
                <div class="text-danger small mt-1" role="alert" aria-live="polite">{{ form.email.errors.0 }}</div>
            {% endif %}
        </div>
        {# Phone field #}
        <div class="flex-shrink-0 contact-field-phone">
            {{ form.phone|add_class:"form-control form-control-sm bg-white rounded-2"|attr:"placeholder:Phone"|attr:"title:Click to edit phone"|attr:"aria-label:Author Phone" }}
        </div>
        {# Remove button #}
        <div class="flex-shrink-0">
            <button type="button"
                    class="btn btn-sm btn-link p-1"
                    @click="removeAuthor"
                    title="Remove author"
                    aria-label="Remove author">
                <i class="fas fa-trash-alt text-danger"></i>
            </button>
        </div>
    </div>
</div>
