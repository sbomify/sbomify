{% load static %}
<div x-data="contactProfileList" x-init="init()">
    {{ profiles|json_script:"profiles-data" }}
    {% if profiles %}
        <div class="mb-3">
            <label for="search-input" class="form-label small text-muted mb-1">Search</label>
            <input type="text"
                   id="search-input"
                   class="form-control"
                   placeholder="Search by profile name..."
                   x-model="searchQuery"
                   @input="filterProfiles()">
        </div>
    {% endif %}
    {% if not profiles %}
        <div class="empty-state">
            <i class="fas fa-address-book fa-3x text-muted mb-3"></i>
            <h5 class="text-muted mb-2">No contact profiles yet</h5>
            <p class="text-muted">Create a profile to reuse supplier information across components.</p>
            <button class="btn btn-primary mt-3"
                    hx-get="{% url 'teams:contact_profiles_form' team.key %}"
                    hx-target="#contact-profiles-content"
                    hx-swap="innerHTML">
                <i class="fas fa-plus me-1"></i> Create Profile
            </button>
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col" style="width: 120px;">Status</th>
                        <th scope="col" class="text-end" style="width: 160px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <template x-for="profile in filteredProfiles" :key="profile.id">
                        <tr x-show="!profile.hidden" x-transition>
                            <td>
                                <div class="fw-semibold" x-text="profile.name"></div>
                                <div class="small text-muted" x-text="formatDate(profile.created_at)"></div>
                            </td>
                            <td>
                                <span class="badge bg-success-subtle text-success"
                                      x-show="profile.is_default">Default</span>
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <button class="btn btn-outline-secondary"
                                            :hx-get="`{% url 'teams:contact_profiles_detail_form' team.key '0000' %}`.replace('0000', profile.id)"
                                            hx-target="#contact-profiles-content"
                                            hx-swap="innerHTML">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-outline-primary"
                                            :disabled="profile.is_default"
                                            hx-post="{% url 'teams:contact_profiles_list' team.key %}"
                                            :hx-vals="JSON.stringify({'_method': 'PATCH', 'profile_id': profile.id})"
                                            hx-target="#contact-profiles-content"
                                            hx-swap="innerHTML">
                                        <i class="fas fa-star"></i>
                                    </button>
                                    <button class="btn btn-outline-danger"
                                            data-bs-toggle="modal"
                                            data-bs-target="#delete-contact-profile-modal"
                                            :data-form-profile_id="profile.id"
                                            :data-display-name="profile.name">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        {# Collapsible Preview Row #}
                        <tr x-show="expandedProfiles.includes(profile.id)"
                            x-transition:enter="transition ease-out duration-200"
                            x-transition:enter-start="opacity-0"
                            x-transition:enter-end="opacity-100"
                            x-transition:leave="transition ease-in duration-150"
                            x-transition:leave-start="opacity-100"
                            x-transition:leave-end="opacity-0">
                            <td colspan="3" class="bg-light p-4">
                                <div class="row g-3">
                                    {# Manufacturer Card #}
                                    <template x-if="profile.manufacturer">
                                        <div class="col-md-6">
                                            <div class="card h-100 border">
                                                <div class="card-header bg-primary-subtle">
                                                    <h6 class="mb-0 fw-bold text-primary">Manufacturer</h6>
                                                </div>
                                                <div class="card-body">
                                                    <h6 class="card-title mb-2" x-text="profile.manufacturer.name"></h6>
                                                    <div class="small text-muted mb-2">
                                                        <div x-show="profile.manufacturer.email">
                                                            <i class="fas fa-envelope me-1"></i>
                                                            <span x-text="profile.manufacturer.email"></span>
                                                        </div>
                                                        <div x-show="profile.manufacturer.phone" class="mt-1">
                                                            <i class="fas fa-phone me-1"></i>
                                                            <span x-text="profile.manufacturer.phone"></span>
                                                        </div>
                                                    </div>
                                                    <template x-if="profile.manufacturer.contacts && profile.manufacturer.contacts.length > 0">
                                                        <div class="mt-2">
                                                            <small class="text-muted fw-bold">Contacts:</small>
                                                            <ul class="list-unstyled small mb-0 mt-1">
                                                                <template x-for="contact in profile.manufacturer.contacts">
                                                                    <li class="mb-1">
                                                                        <i class="fas fa-user me-1 text-muted"></i>
                                                                        <span x-text="contact.name"></span>
                                                                        <span class="text-muted ms-1" x-text="`(${contact.email})`"></span>
                                                                    </li>
                                                                </template>
                                                            </ul>
                                                        </div>
                                                    </template>
                                                </div>
                                            </div>
                                        </div>
                                    </template>
                                    {# Supplier Card #}
                                    <template x-if="profile.supplier">
                                        <div class="col-md-6">
                                            <div class="card h-100 border">
                                                <div class="card-header bg-success-subtle">
                                                    <h6 class="mb-0 fw-bold text-success">Supplier</h6>
                                                </div>
                                                <div class="card-body">
                                                    <h6 class="card-title mb-2" x-text="profile.supplier.name"></h6>
                                                    <div class="small text-muted mb-2">
                                                        <div x-show="profile.supplier.email">
                                                            <i class="fas fa-envelope me-1"></i>
                                                            <span x-text="profile.supplier.email"></span>
                                                        </div>
                                                        <div x-show="profile.supplier.phone" class="mt-1">
                                                            <i class="fas fa-phone me-1"></i>
                                                            <span x-text="profile.supplier.phone"></span>
                                                        </div>
                                                    </div>
                                                    <template x-if="profile.supplier.contacts && profile.supplier.contacts.length > 0">
                                                        <div class="mt-2">
                                                            <small class="text-muted fw-bold">Contacts:</small>
                                                            <ul class="list-unstyled small mb-0 mt-1">
                                                                <template x-for="contact in profile.supplier.contacts">
                                                                    <li class="mb-1">
                                                                        <i class="fas fa-user me-1 text-muted"></i>
                                                                        <span x-text="contact.name"></span>
                                                                        <span class="text-muted ms-1" x-text="`(${contact.email})`"></span>
                                                                    </li>
                                                                </template>
                                                            </ul>
                                                        </div>
                                                    </template>
                                                </div>
                                            </div>
                                        </div>
                                    </template>
                                    {# Authors Card #}
                                    <template x-if="profile.authors && profile.authors.length > 0">
                                        <div class="col-12">
                                            <div class="card border">
                                                <div class="card-header bg-info-subtle">
                                                    <h6 class="mb-0 fw-bold text-info">
                                                        <i class="fas fa-user-edit me-2"></i>Authors
                                                    </h6>
                                                </div>
                                                <div class="card-body">
                                                    <div class="row g-2">
                                                        <template x-for="author in profile.authors">
                                                            <div class="col-md-4 col-lg-3">
                                                                <div class="d-flex align-items-center gap-2 p-2 bg-light rounded">
                                                                    <i class="fas fa-user text-muted"></i>
                                                                    <div class="small">
                                                                        <div class="fw-semibold" x-text="author.name"></div>
                                                                        <div class="text-muted" x-text="author.email"></div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </template>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </template>
                                    {# Empty State #}
                                    <template x-if="!profile.manufacturer && !profile.supplier && (!profile.authors || profile.authors.length === 0)">
                                        <div class="col-12">
                                            <div class="text-center text-muted py-3">
                                                <i class="fas fa-address-card fa-2x mb-2 opacity-50"></i>
                                                <p class="mb-0">No entities or authors in this profile</p>
                                            </div>
                                        </div>
                                    </template>
                                </div>
                            </td>
                        </tr>
                    </template>
                </tbody>
            </table>
            <template x-if="filteredProfiles.length === 0 && profiles.length > 0">
                <div class="text-center py-5 text-muted">
                    <i class="fas fa-search fa-2x mb-2 opacity-50"></i>
                    <p class="mb-0">No profiles match your search criteria</p>
                </div>
            </template>
        </div>
    {% endif %}
</div>
{% include "components/modals/delete_modal.html.j2" with modal_id="delete-contact-profile-modal" modal_title="Delete Contact Profile" message_text="Are you sure you want to delete" warning_text="This action cannot be undone. The contact profile will be permanently removed." form_action=request.path form=form submit_text="Delete Profile" use_htmx=True %}
