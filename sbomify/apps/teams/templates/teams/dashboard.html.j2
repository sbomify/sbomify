{% extends "core/dashboard_base.htmx.j2" %}
{% load django_vite %}
{% load widget_tweaks %}
{% load teams %}
{% load static %}
{% block extra_styles %}
    <link rel="stylesheet" href="{% static 'css/components/teams-list.css' %}">
{% endblock %}
{% block title %}sbomify Team Dashboard{% endblock %}
{% block dashboard_content %}
    {% include "core/base_messages.html.j2" %}
    <div class="page-header mb-4">
        <div class="header-main">
            <div class="title-section">
                <h1 class="item-title">
                    <i class="fas fa-users me-3 text-primary"></i>Workspaces
                </h1>
                <p class="item-subtitle">Manage your teams and collaborative workspaces</p>
            </div>
            <div class="header-actions">
                <button class="btn btn-primary px-4"
                        data-bs-toggle="modal"
                        data-bs-target="#add-workspace-modal">
                    <i class="fas fa-plus me-2"></i>
                    Add Workspace
                </button>
            </div>
        </div>
    </div>
    <div class="standard-card mt-3">
        <div class="card shadow-sm">
            <div class="card-header">
                <div class="header-content">
                    <h4 class="card-title mb-0">Your Workspaces</h4>
                    <div class="header-actions">
                        <div class="d-flex align-items-center gap-2">
                            <span class="badge bg-primary-subtle text-primary">{{ teams|length }} workspace
                                {% if teams|length != 1 %}s{% endif %}
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="teams-grid">
                    {% for team in teams %}
                        <div class="team-card">
                            <div class="team-card-header">
                                <div class="team-info">
                                    {% current_member team.members as me %}
                                    <h6 class="team-name">
                                        <a href="{% url 'teams:team_settings' team.key %}"
                                           class="text-decoration-none">{{ team.name }}</a>
                                        {% if team.is_default_team %}<span class="badge bg-primary ms-2">Default</span>{% endif %}
                                    </h6>
                                    <div class="team-meta">
                                        <span class="meta-item"><i class="fas fa-user-tag me-1"></i>{{ me.role }}</span>
                                        <span class="meta-divider">•</span>
                                        <span class="meta-item"><i class="fas fa-users me-1"></i>{{ team.members|length }} member
                                            {% if team.members|length != 1 %}s{% endif %}
                                        </span>
                                        {% if team.invitations|length > 0 %}
                                            <span class="meta-divider">•</span>
                                            <span class="meta-item"><i class="fas fa-envelope me-1"></i>{{ team.invitations|length }} pending</span>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="team-actions">
                                    <div>
                                        <form method="post" action="{{ request.path }}" class="d-inline">
                                            {% csrf_token %}
                                            <input type="hidden" name="_method" value="PATCH">
                                            <input type="hidden" name="key" value="{{ team.key }}">
                                            <button type="submit"
                                                    title="{% if me.is_default_team %}Already default workspace{% else %}Make default workspace{% endif %}"
                                                    class="btn btn-sm btn-outline-primary"
                                                    {% if me.is_default_team %}disabled{% endif %}>
                                                <i class="fas fa-star"></i>
                                            </button>
                                        </form>
                                        {% if me.role == 'owner' %}
                                            <a href="{% url 'teams:invite_user' team.key %}"
                                               title="Invite user"
                                               class="btn btn-sm btn-outline-secondary">
                                                <i class="fas fa-user-plus"></i>
                                            </a>
                                        {% endif %}
                                        {% if me.role == 'owner' and not me.is_default_team %}
                                            <button type="button"
                                                    class="btn btn-sm btn-outline-danger"
                                                    title="Delete workspace"
                                                    data-form-key="{{ team.key }}"
                                                    data-display-name="{{ team.name }}"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#delete-workspace-modal">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    {% include "components/modals/form_modal.html.j2" with modal_id="add-workspace-modal" modal_title="Add Workspace" form_action=request.path form=add_form submit_text="Add Workspace" icon="fa-plus" %}
    {% include "components/modals/delete_modal.html.j2" with modal_id="delete-workspace-modal" modal_title="Delete Workspace" message_text="Are you sure you want to delete the workspace" warning_text="This action cannot be undone and will permanently remove the workspace and all associated data from the system." form_action=request.path form=delete_form submit_text="Delete Workspace" %}
{% endblock %}
