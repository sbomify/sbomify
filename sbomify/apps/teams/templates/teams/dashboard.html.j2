{% extends "core/dashboard_base.htmx.j2" %}
{% load django_vite %}
{% load widget_tweaks %}
{% load teams %}
{% load static %}
{% block title %}sbomify Workspace Dashboard{% endblock %}
{% block content %}
    <div class="space-y-6 animate-[fadeInUp_0.4s_ease-out]">
        {# Page Header #}
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
            <div class="flex items-center gap-4">
                <div class="tw-avatar tw-avatar-lg">
                    <i class="fas fa-building"></i>
                </div>
                <div>
                    <h1 class="text-2xl font-bold text-text">Workspaces</h1>
                    <p class="text-text-muted text-sm mt-0.5">Manage your collaborative workspaces</p>
                </div>
            </div>
            <button type="button"
                    class="tw-btn-primary px-4"
                    @click="$dispatch('open-add-workspace-modal')">
                <i class="fas fa-plus mr-2"></i>
                Add Workspace
            </button>
        </div>
        {# Workspaces Card #}
        <div class="tw-settings-card">
            <div class="px-6 py-4 border-b border-border/40">
                <div class="flex items-center justify-between">
                    <h5 class="text-lg font-semibold text-text m-0">Your Workspaces</h5>
                    {# djlint:off #}
                    <span class="tw-badge-primary">{{ teams|length }} workspace{% if teams|length != 1 %}s{% endif %}</span>
                    {# djlint:on #}
                </div>
            </div>
            <div class="p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    {% for team in teams %}
                        {% current_member team.members as me %}
                        <div class="border border-border rounded-xl bg-surface hover:shadow-md transition-shadow overflow-hidden">
                            <div class="p-5">
                                <div class="flex items-start gap-3 mb-3">
                                    <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center flex-shrink-0">
                                        <i class="fas fa-building text-primary"></i>
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <h6 class="font-semibold text-text m-0 flex items-center gap-2 flex-wrap">
                                            <a href="{% url 'teams:team_settings' team.key %}"
                                               class="text-text hover:text-primary no-underline truncate">{{ team.name|workspace_display }}</a>
                                        </h6>
                                        <div class="flex flex-wrap items-center gap-1.5 mt-1">
                                            {% if request.session.current_team and request.session.current_team.key == team.key %}
                                                <span class="tw-badge-success text-[11px]">Active</span>
                                            {% endif %}
                                            {% if team.is_default_team %}<span class="tw-badge-primary text-[11px]">Default</span>{% endif %}
                                            <span class="{% if me.role == 'owner' %}tw-badge-primary{% elif me.role == 'admin' %}tw-badge-warning{% else %}tw-badge-secondary{% endif %} text-[11px]">{{ me.role|title }}</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="flex flex-wrap items-center gap-3 text-xs text-text-muted">
                                    <span class="flex items-center gap-1.5">
                                        <i class="fas fa-users text-text-muted/60"></i>
                                        {# djlint:off #}
                                        {{ team.members|length }} member{% if team.members|length != 1 %}s{% endif %}
                                        {# djlint:on #}
                                    </span>
                                    {% if team.invitations|length > 0 %}
                                        <span class="flex items-center gap-1.5 text-warning">
                                            <i class="fas fa-paper-plane"></i>
                                            {{ team.invitations|length }} pending
                                        </span>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="flex items-center gap-2 px-5 py-3 border-t border-border/40 bg-background/30">
                                <form method="post" action="{{ request.path }}" class="inline">
                                    {% csrf_token %}
                                    <input type="hidden" name="_method" value="PATCH">
                                    <input type="hidden" name="key" value="{{ team.key }}">
                                    <button type="submit"
                                            title="{% if me.is_default_team %}Already default workspace{% else %}Make default workspace{% endif %}"
                                            aria-label="{% if me.is_default_team %}Already default workspace{% else %}Make {{ team.name|workspace_display }} default workspace{% endif %}"
                                            class="tw-icon-btn tw-icon-btn-sm text-primary hover:bg-primary/10 disabled:opacity-40 disabled:cursor-not-allowed"
                                            {% if me.is_default_team %}disabled{% endif %}>
                                        <i class="fas fa-star" aria-hidden="true"></i>
                                    </button>
                                </form>
                                {% if request.session.current_team and request.session.current_team.key == team.key %}
                                    <span class="tw-icon-btn tw-icon-btn-sm text-text-muted/40 cursor-not-allowed"
                                          title="Already active"
                                          aria-label="Already active workspace">
                                        <i class="fas fa-exchange-alt" aria-hidden="true"></i>
                                    </span>
                                {% else %}
                                    <a href="{% url 'teams:switch_team' team.key %}"
                                       title="Switch to this workspace"
                                       aria-label="Switch to {{ team.name|workspace_display }}"
                                       class="tw-icon-btn tw-icon-btn-sm text-text-muted hover:text-primary hover:bg-primary/10">
                                        <i class="fas fa-exchange-alt" aria-hidden="true"></i>
                                    </a>
                                {% endif %}
                                {% if me.role == 'owner' and not me.is_default_team %}
                                    <button type="button"
                                            class="tw-icon-btn tw-icon-btn-sm text-text-muted hover:text-danger hover:bg-danger/10 ml-auto"
                                            title="Delete workspace"
                                            aria-label="Delete {{ team.name|workspace_display }} workspace"
                                            @click="$dispatch('open-delete-workspace-modal', { formData: { key: '{{ team.key|escapejs }}' }, displayName: '{{ team.name|workspace_display|escapejs }}' })">
                                        <i class="fas fa-trash-alt" aria-hidden="true"></i>
                                    </button>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    {# add-workspace modal is already included globally in base templates; avoid duplicating IDs #}
    {% include "components/modals/delete_modal.html.j2" with modal_id="delete-workspace-modal" modal_title="Delete Workspace" message_text="Are you sure you want to delete the workspace" warning_text="This action cannot be undone and will permanently remove the workspace and all associated data from the system." form_action=request.path form=delete_form submit_text="Delete Workspace" %}
{% endblock %}
