{% extends "core/dashboard_base.htmx.j2" %}
{% load django_vite %}
{% load widget_tweaks %}
{% load teams %}
{% load static %}
{% block title %}sbomify Workspace Dashboard{% endblock %}
{% block content %}
    {% include "core/base_messages.html.j2" %}
    <div class="p-6">
        {# Page Header #}
        <div class="mb-6">
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
                <div class="flex items-center gap-3">
                    <div class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center">
                        <i class="fas fa-users text-primary text-xl"></i>
                    </div>
                    <div>
                        <h1 class="text-2xl font-bold text-text">Workspaces</h1>
                        <p class="text-text-muted">Manage your collaborative workspaces</p>
                    </div>
                </div>
                <button type="button"
                        class="tw-btn-primary px-4"
                        @click="$dispatch('open-add-workspace-modal')">
                    <i class="fas fa-plus mr-2"></i>
                    Add Workspace
                </button>
            </div>
        </div>
        {# Workspaces Card #}
        <div class="tw-card">
            <div class="px-6 py-4 border-b border-border flex justify-between items-center">
                <h4 class="text-lg font-semibold text-text m-0">Your Workspaces</h4>
                <span class="px-3 py-1 text-sm font-medium rounded-full bg-primary/10 text-primary">
                    {# djlint:off #}
                    {{ teams|length }} workspace{% if teams|length != 1 %}s{% endif %}
                    {# djlint:on #}
                </span>
            </div>
            <div class="p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    {% for team in teams %}
                        <div class="border border-border rounded-xl bg-surface p-4 hover:shadow-md transition-shadow">
                            <div class="flex justify-between items-start mb-3">
                                {% current_member team.members as me %}
                                <div class="flex-1 min-w-0">
                                    <h6 class="font-semibold text-text mb-1 flex items-center gap-2 flex-wrap">
                                        <a href="{% url 'teams:team_settings' team.key %}"
                                           class="text-text hover:text-primary no-underline truncate">{{ team.name|workspace_display }}</a>
                                        {% if request.session.current_team and request.session.current_team.key == team.key %}
                                            <span class="px-2 py-0.5 text-xs font-medium rounded-full bg-success/10 text-success flex items-center gap-1">
                                                <i class="fas fa-eye" aria-hidden="true"></i>
                                                Current
                                            </span>
                                        {% endif %}
                                        {% if team.is_default_team %}
                                            <span class="px-2 py-0.5 text-xs font-medium rounded-full bg-primary/10 text-primary">Default</span>
                                        {% endif %}
                                    </h6>
                                    <div class="flex flex-wrap items-center gap-2 text-sm text-text-muted">
                                        <span class="flex items-center gap-1"><i class="fas fa-user-tag"></i>{{ me.role }}</span>
                                        <span class="text-border">•</span>
                                        <span class="flex items-center gap-1"><i class="fas fa-users"></i>{{ team.members|length }} member
                                            {% if team.members|length != 1 %}s{% endif %}
                                        </span>
                                        {% if team.invitations|length > 0 %}
                                            <span class="text-border">•</span>
                                            <span class="flex items-center gap-1"><i class="fas fa-envelope"></i>{{ team.invitations|length }} pending</span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            <div class="flex gap-2 pt-3 border-t border-border">
                                <form method="post" action="{{ request.path }}" class="inline">
                                    {% csrf_token %}
                                    <input type="hidden" name="_method" value="PATCH">
                                    <input type="hidden" name="key" value="{{ team.key }}">
                                    <button type="submit"
                                            title="{% if me.is_default_team %}Already default workspace{% else %}Make default workspace{% endif %}"
                                            aria-label="{% if me.is_default_team %}Already default workspace{% else %}Make {{ team.name|workspace_display }} default workspace{% endif %}"
                                            class="p-2 text-primary border border-primary/30 rounded-lg hover:bg-primary/10 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
                                            {% if me.is_default_team %}disabled{% endif %}>
                                        <i class="fas fa-star" aria-hidden="true"></i>
                                    </button>
                                </form>
                                {% if me.role == 'owner' %}
                                    <a href="{% url 'teams:invite_user' team.key %}"
                                       title="Invite user"
                                       aria-label="Invite user to {{ team.name|workspace_display }}"
                                       class="p-2 text-text-muted border border-border rounded-lg hover:bg-border/30 transition-colors">
                                        <i class="fas fa-user-plus" aria-hidden="true"></i>
                                    </a>
                                {% endif %}
                                {% if me.role == 'owner' and not me.is_default_team %}
                                    <button type="button"
                                            class="p-2 text-danger border border-danger/30 rounded-lg hover:bg-danger/10 transition-colors"
                                            title="Delete workspace"
                                            aria-label="Delete {{ team.name|workspace_display }} workspace"
                                            @click="$dispatch('open-delete-workspace-modal', { formData: { key: '{{ team.key|escapejs }}' }, displayName: '{{ team.name|workspace_display|escapejs }}' })">
                                        <i class="fas fa-trash" aria-hidden="true"></i>
                                    </button>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    {# add-workspace modal is already included globally in base templates; avoid duplicating IDs #}
    {% include "components/modals/delete_modal.html.j2" with modal_id="delete-workspace-modal" modal_title="Delete Workspace" message_text="Are you sure you want to delete the workspace" warning_text="This action cannot be undone and will permanently remove the workspace and all associated data from the system." form_action=request.path form=delete_form submit_text="Delete Workspace" %}
{% endblock %}
