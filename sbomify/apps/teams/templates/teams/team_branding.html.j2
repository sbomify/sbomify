{% load static %}
{% load utils %}
<link rel="stylesheet"
      href="{% static 'css/components/team-branding.css' %}">
<div class="standard-card">
    <div id="team-branding-content"
         class="card settings-card shadow-md"
         x-data="teamBranding('{{ branding_info|pydantic_json|escapejs }}')">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="card-title mb-0">Workspace Branding</h4>
            <div class="d-flex align-items-center gap-2">
                <button x-show="hasUnsavedChanges()"
                        type="button"
                        class="btn btn-sm btn-outline-secondary"
                        @click="$dispatch('refreshTeamBranding')">
                    <i class="fas fa-undo me-2"></i> Cancel
                </button>
                <button type="submit"
                        form="team-branding-form"
                        class="btn btn-sm btn-success"
                        :disabled="!hasUnsavedChanges()">
                    <i class="fas fa-save me-2"></i>
                    Save Changes
                </button>
            </div>
        </div>
        <div class="card-body">
            <p class="subtitle mb-5">Customize your workspace's visual identity for public SBOMs and shared content.</p>
            <form id="team-branding-form"
                  method="post"
                  enctype="multipart/form-data"
                  hx-post="{% url 'teams:team_branding' team.key %}"
                  hx-swap="none">
                {% csrf_token %}
                <div class="section-card">
                    <div class="section-header">
                        <h3 class="section-title">Brand Colors</h3>
                        <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
                            <p class="section-description mb-0">Define your primary brand colors for consistent visual identity.</p>
                            <button type="button"
                                    class="btn btn-sm btn-outline-secondary"
                                    @click="setDefaultColors">
                                <i class="fas fa-undo me-1"></i>
                                Use defaults
                            </button>
                        </div>
                    </div>
                    <div class="section-content row g-4">
                        <div class="col-md-6">
                            <div class="color-field">
                                <label for="brand-color" class="field-label">Primary Brand Color</label>
                                <div class="color-input-group">
                                    <input type="color"
                                           id="brand-color"
                                           class="color-picker-modern"
                                           x-model="uiColors.brand_color"
                                           :value="uiColors.brand_color"
                                           @input="updateColor('brand_color', $event.target.value)">
                                    <input type="hidden"
                                           name="brand_color"
                                           :value="localBrandingInfo.brand_color || ''">
                                    <div class="color-info">
                                        <span class="color-hex" x-text="displayColor('brand_color')"></span>
                                        <small class="color-hint">Click to choose color</small>
                                    </div>
                                </div>
                                <small class="field-hint">Used for primary branding elements and headers</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="color-field">
                                <label for="accent-color" class="field-label">Accent Color</label>
                                <div class="color-input-group">
                                    <input type="color"
                                           id="accent-color"
                                           class="color-picker-modern"
                                           x-model="uiColors.accent_color"
                                           :value="uiColors.accent_color"
                                           @input="updateColor('accent_color', $event.target.value)">
                                    <input type="hidden"
                                           name="accent_color"
                                           :value="localBrandingInfo.accent_color || ''">
                                    <div class="color-info">
                                        <span class="color-hex" x-text="displayColor('accent_color')"></span>
                                        <small class="color-hint">Click to choose color</small>
                                    </div>
                                </div>
                                <small class="field-hint">Used for buttons, links, and highlights</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="section-card">
                    <div class="section-header">
                        <h3 class="section-title">Visual Assets</h3>
                        <p class="section-description">Upload your brand assets to personalize the appearance of public content.</p>
                    </div>
                    <div class="section-content row g-4">
                        <div class="col-md-6">
                            <div class="upload-field">
                                <label class="field-label">Brand Icon</label>
                                <div class="upload-container">
                                    <div class="modern-upload"
                                         @file-selected.window="handleFileFromComponent($event.detail.field,$event.detail.file)"
                                         @file-removed.window="removeFile($event.detail.field)"
                                         @existing-file-removed.window="handleExistingFileRemoval($event.detail.field)">
                                        {% include 'core/components/file-drag-and-drop.html.j2' with accept='image/*' existing_url=branding_info.icon_url field_name='icon' %}
                                    </div>
                                    <input type="hidden"
                                           name="icon_pending_deletion"
                                           :value="localBrandingInfo.icon_pending_deletion ? 'true' : 'false'">
                                </div>
                                <small class="field-hint">Recommended: 512x512px PNG or SVG. Used in headers and navigation.</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="upload-field">
                                <label class="field-label">Brand Logo</label>
                                <div class="upload-container">
                                    <div class="modern-upload"
                                         @file-selected.window="handleFileFromComponent($event.detail.field,$event.detail.file)"
                                         @file-removed.window="removeFile($event.detail.field)"
                                         @existing-file-removed.window="handleExistingFileRemoval($event.detail.field)">
                                        {% include 'core/components/file-drag-and-drop.html.j2' with accept='image/*' existing_url=branding_info.logo_url field_name='logo' %}
                                    </div>
                                    <input type="hidden"
                                           name="logo_pending_deletion"
                                           :value="localBrandingInfo.logo_pending_deletion ? 'true' : 'false'">
                                </div>
                                <small class="field-hint">Recommended: 1200x300px PNG or SVG. Used for larger brand displays.</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="section-card">
                    <div class="section-header">
                        <h3 class="section-title">Display Preferences</h3>
                        <p class="section-description">Toggle workspace branding on or off without losing your uploaded assets or colors.</p>
                    </div>
                    <div class="section-content">
                        <div class="preference-row">
                            <div class="preference-content">
                                <label class="preference-label" for="branding-enabled-toggle">Workspace Branding</label>
                                <p class="preference-description">
                                    Turn off to use the default sbomify visuals while keeping your custom assets and colors saved for later.
                                </p>
                            </div>
                            <div class="preference-control">
                                <div class="form-check form-switch">
                                    <input type="checkbox"
                                           id="branding-enabled-toggle"
                                           {% if branding_info.branding_enabled|default_if_none:False %}checked{% endif %}
                                           class="form-check-input"
                                           role="switch"
                                           x-model="localBrandingInfo.branding_enabled">
                                </div>
                                <input type="hidden"
                                       name="branding_enabled"
                                       :value="localBrandingInfo.branding_enabled ? 'true' : 'false'">
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{# Custom Domain Section - Outside branding form, uses separate API #}
<div class="standard-card mt-4"
     x-data="customDomain({ teamKey: '{{ team.key }}', initialDomain: '{{ team.custom_domain|default:'' }}', isValidated: {{ team.custom_domain_validated|yesno:'true,false' }}, lastCheckedAt: '{{ team.custom_domain_last_checked_at|date:'c'|default:'' }}', hasAccess: {{ has_custom_domain_access|yesno:'true,false' }} })">
    <div class="card settings-card shadow-md">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center gap-2">
                <h4 class="card-title mb-0">Custom Domain</h4>
                {% if not has_custom_domain_access %}<span class="badge bg-secondary">Business / Enterprise</span>{% endif %}
            </div>
            <div class="d-flex align-items-center gap-2" x-show="hasAccess">
                <button x-show="hasUnsavedChanges() && !isLoading"
                        type="button"
                        class="btn btn-sm btn-outline-secondary"
                        @click="cancelChanges()">
                    <i class="fas fa-undo me-2"></i> Cancel
                </button>
                <button x-show="hasUnsavedChanges() && !isLoading"
                        type="button"
                        class="btn btn-sm btn-success"
                        @click="saveDomain()"
                        :disabled="!canSave()">
                    <i class="fas fa-save me-2"></i>
                    Save Domain
                </button>
                <button x-show="currentDomain && !hasUnsavedChanges() && !isLoading"
                        type="button"
                        class="btn btn-sm btn-outline-danger"
                        @click="removeDomain()">
                    <i class="fas fa-trash me-2"></i>
                    Remove Domain
                </button>
                <span x-show="isLoading" class="text-muted">
                    <i class="fas fa-spinner fa-spin me-1"></i> Saving...
                </span>
            </div>
        </div>
        <div class="card-body">
            {% if has_custom_domain_access %}
                <p class="subtitle mb-4">Configure a custom domain for your Trust Center to use your own branded URL.</p>
                <div class="section-card">
                    <div class="section-header">
                        <h3 class="section-title">Domain Configuration</h3>
                        <p class="section-description">Enter your custom domain (e.g., sbom.yourcompany.com)</p>
                    </div>
                    <div class="section-content">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="custom-domain-input" class="form-label">Custom Domain</label>
                                    <input type="text"
                                           id="custom-domain-input"
                                           class="form-control"
                                           x-model="localDomain"
                                           placeholder="sbom.yourcompany.com"
                                           :class="{ 'is-invalid': error }">
                                    <div class="invalid-feedback" x-text="error"></div>
                                    <small class="form-text text-muted">Enter a subdomain (e.g., sbom.example.com). Do not include http:// or https://</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Verification Status</label>
                                    <div class="d-flex align-items-center gap-2">
                                        <template x-if="!currentDomain">
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-minus-circle me-1"></i>
                                                No domain configured
                                            </span>
                                        </template>
                                        <template x-if="currentDomain && validated">
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle me-1"></i>
                                                Verified
                                            </span>
                                        </template>
                                        <template x-if="currentDomain && !validated">
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-clock me-1"></i>
                                                Pending verification
                                            </span>
                                        </template>
                                    </div>
                                    <template x-if="currentDomain && lastChecked">
                                        <small class="form-text text-muted">
                                            Last checked: <span x-text="formatLastChecked()"></span>
                                        </small>
                                    </template>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="section-card">
                    <div class="section-header">
                        <h3 class="section-title">Setup Instructions</h3>
                        <p class="section-description">Follow these steps to configure your custom domain.</p>
                    </div>
                    <div class="section-content">
                        <div class="alert alert-info mb-0">
                            <h6 class="alert-heading">
                                <i class="fas fa-info-circle me-2"></i>DNS Configuration Required
                            </h6>
                            <p class="mb-2">
                                To use a custom domain, create a <strong>CNAME</strong> record in your DNS provider:
                            </p>
                            <div class="bg-light p-3 rounded mb-3">
                                <div class="row">
                                    <div class="col-md-4">
                                        <strong>Type:</strong> CNAME
                                    </div>
                                    <div class="col-md-4">
                                        <strong>Name:</strong> <code x-text="localDomain ? localDomain.split('.')[0] : 'sbom'"></code>
                                    </div>
                                    <div class="col-md-4">
                                        <strong>Target:</strong> <code>{{ app_hostname }}</code>
                                    </div>
                                </div>
                            </div>
                            <p class="mb-0 small">
                                <i class="fas fa-clock me-1"></i>
                                DNS changes may take up to 48 hours to propagate. Verification happens automatically once the DNS is configured correctly.
                            </p>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="alert alert-secondary mb-0">
                    <h6 class="alert-heading">
                        <i class="fas fa-lock me-2"></i>Custom Domain Feature
                    </h6>
                    <p class="mb-2">
                        Custom domains allow you to serve your Trust Center from your own branded URL (e.g., sbom.yourcompany.com).
                    </p>
                    <p class="mb-0">
                        This feature is available on <strong>Business</strong> and <strong>Enterprise</strong> plans.
                        <a href="mailto:sales@sbomify.com" class="alert-link">Contact us</a> to upgrade your plan.
                    </p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
