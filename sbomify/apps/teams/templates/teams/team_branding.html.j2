{% load static %}
{% load utils %}
<link rel="stylesheet"
      href="{% static 'css/components/team-branding.css' %}">
<div class="standard-card">
    <div id="team-branding-content"
         class="card settings-card shadow-md"
         x-data="teamBranding('{{ branding_info|pydantic_json|escapejs }}')">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="card-title mb-0">Workspace Branding</h4>
            <div class="d-flex align-items-center gap-2">
                <button x-show="hasUnsavedChanges()"
                        type="button"
                        class="btn btn-sm btn-outline-secondary"
                        @click="$dispatch('refreshTeamBranding')">
                    <i class="fas fa-undo me-2"></i> Cancel
                </button>
                <button type="submit"
                        form="team-branding-form"
                        class="btn btn-sm btn-success"
                        :disabled="!hasUnsavedChanges()">
                    <i class="fas fa-save me-2"></i>
                    Save Changes
                </button>
            </div>
        </div>
        <div class="card-body">
            <p class="subtitle mb-5">Customize your workspace's visual identity for public SBOMs and shared content.</p>
            <form id="team-branding-form"
                  method="post"
                  enctype="multipart/form-data"
                  hx-post="{% url 'teams:team_branding' team.key %}"
                  hx-swap="none">
                {% csrf_token %}
                <div class="section-card">
                    <div class="section-header">
                        <h3 class="section-title">Brand Colors</h3>
                        <p class="section-description">Define your primary brand colors for consistent visual identity.</p>
                    </div>
                    <div class="section-content row g-4">
                        <div class="col-md-6">
                            <div class="color-field">
                                <label for="brand-color" class="field-label">Primary Brand Color</label>
                                <div class="color-input-group">
                                    <input type="color"
                                           name="brand_color"
                                           id="brand-color"
                                           value="{{ branding_info.brand_color|default:'' }}"
                                           class="color-picker-modern"
                                           x-model="localBrandingInfo.brand_color"
                                           @input="localBrandingInfo.brand_color = $event.target.value">
                                    <div class="color-info">
                                        <span class="color-hex" x-text="localBrandingInfo.brand_color || 'Not set'"></span>
                                        <small class="color-hint">Click to choose color</small>
                                    </div>
                                </div>
                                <small class="field-hint">Used for primary branding elements and headers</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="color-field">
                                <label for="accent-color" class="field-label">Accent Color</label>
                                <div class="color-input-group">
                                    <input type="color"
                                           name="accent_color"
                                           id="accent-color"
                                           value="{{ branding_info.accent_color|default:'' }}"
                                           class="color-picker-modern"
                                           x-model="localBrandingInfo.accent_color"
                                           @input="localBrandingInfo.accent_color = $event.target.value">
                                    <div class="color-info">
                                        <span class="color-hex"
                                              x-text="localBrandingInfo.accent_color || 'Not set'"></span>
                                        <small class="color-hint">Click to choose color</small>
                                    </div>
                                </div>
                                <small class="field-hint">Used for buttons, links, and highlights</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="section-card">
                    <div class="section-header">
                        <h3 class="section-title">Visual Assets</h3>
                        <p class="section-description">Upload your brand assets to personalize the appearance of public content.</p>
                    </div>
                    <div class="section-content row g-4">
                        <div class="col-md-6">
                            <div class="upload-field">
                                <label class="field-label">Brand Icon</label>
                                <div class="upload-container">
                                    <div class="modern-upload"
                                         @file-selected.window="handleFileFromComponent($event.detail.field,$event.detail.file)"
                                         @file-removed.window="removeFile($event.detail.field)"
                                         @existing-file-removed.window="handleExistingFileRemoval($event.detail.field)">
                                        {% include 'core/components/file-drag-and-drop.html.j2' with accept='image/*' existing_url=branding_info.icon_url field_name='icon' %}
                                    </div>
                                    <input type="hidden"
                                           name="icon_pending_deletion"
                                           :value="localBrandingInfo.icon_pending_deletion ? 'true' : 'false'">
                                </div>
                                <small class="field-hint">Recommended: 512x512px PNG or SVG. Used in headers and navigation.</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="upload-field">
                                <label class="field-label">Brand Logo</label>
                                <div class="upload-container">
                                    <div class="modern-upload"
                                         @file-selected.window="handleFileFromComponent($event.detail.field,$event.detail.file)"
                                         @file-removed.window="removeFile($event.detail.field)"
                                         @existing-file-removed.window="handleExistingFileRemoval($event.detail.field)">
                                        {% include 'core/components/file-drag-and-drop.html.j2' with accept='image/*' existing_url=branding_info.logo_url field_name='logo' %}
                                    </div>
                                    <input type="hidden"
                                           name="logo_pending_deletion"
                                           :value="localBrandingInfo.logo_pending_deletion ? 'true' : 'false'">
                                </div>
                                <small class="field-hint">Recommended: 1200x300px PNG or SVG. Used for larger brand displays.</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="section-card">
                    <div class="section-header">
                        <h3 class="section-title">Display Preferences</h3>
                        <p class="section-description">Configure how your brand assets are displayed across the platform.</p>
                    </div>
                    <div class="section-content">
                        <div class="preference-row">
                            <div class="preference-content">
                                <label class="preference-label" for="prefer-logo-over-icon">Primary Brand Asset</label>
                                <p class="preference-description">
                                    When you upload both an icon and logo, choose which one takes priority in public pages.
                                    <br>
                                    <strong>Icon:</strong> Better for compact spaces (headers, favicons)
                                    <br>
                                    <strong>Logo:</strong> Better for prominent branding areas
                                </p>
                            </div>
                            <div class="preference-control">
                                <div class="form-check form-switch">
                                    <input type="checkbox"
                                           name="prefer_logo_over_icon"
                                           id="prefer-logo-over-icon"
                                           {% if branding_info.prefer_logo_over_icon %}checked{% endif %}
                                           class="form-check-input"
                                           role="switch"
                                           x-model="localBrandingInfo.prefer_logo_over_icon">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
