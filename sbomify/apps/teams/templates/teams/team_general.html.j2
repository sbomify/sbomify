{% load static %}
{% load widget_tweaks %}
{# Store team name as JSON in data attribute for safe Alpine.js initialization #}
<div id="team-general-content"
     class="tw-settings-card"
     data-team-name="{{ team.name }}"
     x-cloak
     x-data="teamGeneral($el.dataset.teamName)">
    {# Card Header #}
    <div class="px-6 py-4 border-b border-border">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center">
                    <i class="fas fa-sliders-h text-primary"></i>
                </div>
                <div>
                    <h5 class="text-lg font-semibold text-text m-0">General Settings</h5>
                    <p class="text-text-muted text-sm m-0">Manage your workspace's basic information</p>
                </div>
            </div>
            <div class="flex items-center gap-2">
                <button x-show="hasUnsavedChanges()"
                        type="button"
                        class="tw-btn-secondary tw-btn-sm"
                        @click="$dispatch('refreshTeamGeneral')">
                    <i class="fas fa-undo mr-2"></i>Cancel
                </button>
                <button type="submit"
                        id="team-general-save-btn"
                        form="team-general-form"
                        class="tw-btn-primary tw-btn-sm"
                        :disabled="!hasUnsavedChanges()">
                    <i class="fas fa-save mr-2"></i>Save Changes
                </button>
            </div>
        </div>
    </div>
    {# Card Content #}
    <div class="p-6">
        <form id="team-general-form"
              method="post"
              hx-post="{% url 'teams:team_general' team.key %}"
              hx-disabled-elt="#team-general-save-btn"
              hx-swap="none">
            {% csrf_token %}
            {# Workspace Name Section #}
            <div class="bg-background/50 border border-border rounded-xl p-5 mb-4">
                <div class="flex items-start gap-3 mb-4">
                    <div class="w-8 h-8 rounded-lg bg-border/50 flex items-center justify-center flex-shrink-0">
                        <i class="fas fa-building text-text-muted text-sm"></i>
                    </div>
                    <div>
                        <h6 class="text-base font-semibold text-text m-0">Workspace Name</h6>
                        <p class="text-text-muted text-sm m-0">The name displayed across the platform for this workspace</p>
                    </div>
                </div>
                <div class="max-w-md ml-11">
                    <label for="workspace-name" class="tw-form-label">Name</label>
                    <input type="text"
                           id="workspace-name"
                           name="name"
                           class="tw-form-input"
                           x-model="localName"
                           placeholder="Enter workspace name"
                           maxlength="255"
                           required>
                    <p class="tw-form-hint">Maximum 255 characters</p>
                </div>
            </div>
        </form>
        {# Default Workspace Section #}
        <div class="bg-background/50 border border-border rounded-xl p-5 mb-4">
            <div class="flex items-start gap-3 mb-4">
                <div class="w-8 h-8 rounded-lg bg-border/50 flex items-center justify-center flex-shrink-0">
                    <i class="fas fa-star text-text-muted text-sm"></i>
                </div>
                <div>
                    <h6 class="text-base font-semibold text-text m-0">Default Workspace</h6>
                    <p class="text-text-muted text-sm m-0">Set this as your default workspace when you log in</p>
                </div>
            </div>
            <div class="flex items-center justify-between flex-wrap gap-3 ml-11">
                <div>
                    {% if is_default_team %}
                        <span class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full text-sm font-medium bg-success/10 text-success">
                            <i class="fas fa-check-circle"></i>
                            This is your default workspace
                        </span>
                    {% else %}
                        <span class="text-text-muted text-sm">This workspace is not set as your default</span>
                    {% endif %}
                </div>
                {% if not is_default_team %}
                    <form method="post"
                          hx-post="{% url 'teams:team_general' team.key %}"
                          hx-disabled-elt="find button[type='submit']"
                          hx-swap="none">
                        {% csrf_token %}
                        <input type="hidden" name="action" value="set_default">
                        <button type="submit" class="tw-btn-secondary tw-btn-sm">
                            <i class="fas fa-star mr-2"></i>Make Default
                        </button>
                    </form>
                {% endif %}
            </div>
        </div>
        {# Danger Zone #}
        {% include 'teams/components/team_danger_zone.html.j2' with team_key=team.key team_name=team.name is_default_team=is_default_team %}
    </div>
</div>
