{% extends "core/dashboard_base.htmx.j2" %}
{% load widget_tweaks %}
{% load django_vite %}
{% load django_htmx %}
{% load static %}
{% load json_extras %}
{% load teams %}
{% block title %}sbomify Workspace Settings: {{ team.name|workspace_display }}{% endblock %}
{% block content %}
    <div class="page-header mb-4">
        <div class="header-main">
            <div class="title-section">
                <h1 class="item-title">
                    <i class="fas fa-cog me-3 text-primary"></i>
                    Workspace Settings
                </h1>
                <p class="item-subtitle">Manage {{ team.name }} configuration, members, and preferences</p>
            </div>
            <div class="header-actions">
                {% include 'core/components/copyable-value.html.j2' with value=team.key title="Workspace Key: "|add:team.key|add:" (click to copy)" %}
            </div>
        </div>
    </div>
    <div class="mb-4">
        <div class="card settings-card workspace-visibility-card shadow-sm">
            <div class="card-header">
                <h4 class="card-title mb-0">Trust Center Availability</h4>
            </div>
            <div class="card-body">
                <div class="visibility-wrapper">
                    <div class="copy">
                        <p class="eyebrow">Workspace trust center</p>
                        <h3 class="title">Enable or disable your trust center</h3>
                        <p class="description">Control whether your trust center is accessible to visitors.</p>
                        <span class="status-pill {{ team.is_public|yesno:'public,private' }}">
                            <i class="fas {{ team.is_public|yesno:'fa-globe,fa-lock' }}"></i>
                            {{ team.is_public|yesno:'Enabled,Disabled' }}
                        </span>
                        {% if team.is_public %}
                            {% with public_url=APP_BASE_URL|add:'/public/workspace/'|add:team.key %}
                                <div class="mt-2 d-flex align-items-center gap-2 flex-wrap">
                                    <code class="bg-light px-2 py-1 rounded small">{{ public_url }}</code>
                                    <button type="button"
                                            class="copy-url-btn visibility-copy-btn"
                                            title="Copy public URL"
                                            aria-label="Copy public URL"
                                            data-public-url="{{ public_url }}">
                                        <i class="fas fa-copy"></i>
                                        <span class="copy-text">Copy public URL</span>
                                    </button>
                                </div>
                            {% endwith %}
                        {% endif %}
                        {% if not is_owner %}
                            <div class="text-muted mt-2 small">Only workspace owners can change visibility.</div>
                        {% elif not can_set_private %}
                            <div class="text-muted mt-2 small">Disabling the trust center is available on Business or Enterprise plans.</div>
                        {% endif %}
                    </div>
                    <div class="control">
                        <form method="post"
                              action="{% url 'teams:team_settings' team.key %}"
                              class="d-inline-block">
                            {% csrf_token %}
                            <input type="hidden" name="visibility_action" value="update">
                            <input type="hidden" name="is_public" value="false">
                            <div class="form-check form-switch">
                                <input id="workspace-visibility-toggle"
                                       class="form-check-input"
                                       type="checkbox"
                                       name="is_public"
                                       value="true"
                                       {% if team.is_public %}checked{% endif %}
                                       {% if not is_owner %}disabled{% endif %}
                                       onchange="this.form.submit()">
                                <label class="form-check-label" for="workspace-visibility-toggle">{{ team.is_public|yesno:'Enabled,Disabled' }}</label>
                            </div>
                            <button type="submit" class="visually-hidden">Save visibility</button>
                            <small class="text-muted hint">
                                {% if can_set_private %}Toggle anytime.{% endif %}
                            </small>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <style>
        .workspace-visibility-card .visibility-wrapper {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 1.5rem;
            flex-wrap: wrap;
        }

        .workspace-visibility-card .copy {
            flex: 1 1 60%;
        }

        .workspace-visibility-card .eyebrow {
            text-transform: uppercase;
            letter-spacing: 0.05em;
            font-size: 0.75rem;
            color: #6b7280;
            margin-bottom: 0.35rem;
        }

        .workspace-visibility-card .title {
            font-size: 1.25rem;
            margin: 0 0 0.35rem;
            color: #111827;
        }

        .workspace-visibility-card .description {
            color: #4b5563;
            margin-bottom: 0.75rem;
        }

        .workspace-visibility-card .status-pill {
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
            padding: 0.35rem 0.75rem;
            border-radius: 999px;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .workspace-visibility-card .status-pill.public {
            background-color: #ecfdf3;
            color: #15803d;
            border: 1px solid #bbf7d0;
        }

        .workspace-visibility-card .status-pill.private {
            background-color: #f4f5f7;
            color: #374151;
            border: 1px solid #e5e7eb;
        }

        .workspace-visibility-card .control {
            min-width: 220px;
            text-align: right;
            padding: 2rem;
            border-radius: 8px;
        }

        .workspace-visibility-card .form-check-input {
            width: 3rem;
            height: 1.5rem;
            cursor: pointer;
            margin-top: 0;
            margin-left: 0;
            flex-shrink: 0;
        }

        .workspace-visibility-card .form-check-label {
            margin-left: 0.75rem;
            font-weight: 500;
            color: #374151;
            cursor: pointer;
            line-height: 1.5rem;
            margin-bottom: 0;
        }

        .workspace-visibility-card .form-switch {
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: flex-end;
            padding-left: 0;
        }

        .workspace-visibility-card .hint {
            display: block;
            margin-top: 0.5rem;
            font-size: 0.8rem;
        }

        .workspace-visibility-card .visibility-copy-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
            padding: 0.4rem 0.75rem;
            background: linear-gradient(135deg, #3b82f6, #1d4ed8);
            color: #fff;
            border: none;
            border-radius: 6px;
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.02em;
            cursor: pointer;
            transition: all 0.2s ease;
            box-shadow: 0 2px 4px rgba(59, 130, 246, 0.2);
        }

        .workspace-visibility-card .visibility-copy-btn:hover {
            background: linear-gradient(135deg, #1d4ed8, #1e40af);
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(59, 130, 246, 0.3);
        }

        .workspace-visibility-card .visibility-copy-btn:active {
            transform: translateY(0);
            box-shadow: 0 2px 4px rgba(59, 130, 246, 0.2);
        }

        .workspace-visibility-card .visibility-copy-btn .copy-text {
            font-size: 0.75rem;
        }

        @media (max-width: 768px) {
            .workspace-visibility-card .control {
                text-align: left;
            }
        }
    </style>
    <!-- Navigation Tabs -->
    <div class="settings-nav mb-4">
        <nav class="nav nav-pills nav-fill settings-tabs">
            <a class="nav-link"
               data-bs-toggle="pill"
               href="#members"
               data-tab="members">
                <i class="fas fa-users me-2"></i>
                Members
            </a>
            {% if request.session.current_team.role == 'owner' or request.session.current_team.role == 'admin' %}
                <a class="nav-link"
                   data-bs-toggle="pill"
                   href="#branding"
                   data-tab="branding">
                    <i class="fas fa-palette me-2"></i>
                    Branding
                </a>
                <a class="nav-link"
                   data-bs-toggle="pill"
                   href="#contact-profiles"
                   data-tab="contact-profiles">
                    <i class="fas fa-address-book me-2"></i>
                    Contact Profiles
                </a>
            {% endif %}
            {% if request.session.current_team.role == 'owner' %}
                <a class="nav-link"
                   data-bs-toggle="pill"
                   href="#integrations"
                   data-tab="integrations">
                    <i class="fas fa-plug me-2"></i>
                    Integrations
                </a>
                <a class="nav-link"
                   data-bs-toggle="pill"
                   href="#billing"
                   data-tab="billing">
                    <i class="fas fa-credit-card me-2"></i>
                    Billing
                </a>
            {% endif %}
        </nav>
    </div>
    <!-- Tab Content -->
    <div class="tab-content settings-content mt-4">
        <div class="tab-pane fade" id="members">
            <div class="row g-4 g-lg-5">
                <div class="col-12">{% include "teams/team_settings_tabs/members.html.j2" %}</div>
            </div>
        </div>
        <div class="tab-pane fade" id="branding">
            <div class="row">
                <div class="col-12">{% include "teams/team_settings_tabs/branding.html.j2" %}</div>
            </div>
        </div>
        {% if request.session.current_team.role == 'owner' or request.session.current_team.role == 'admin' %}
            <div class="tab-pane fade" id="contact-profiles">
                <div class="row">
                    <div class="col-12">{% include "teams/team_settings_tabs/contact_profiles.html.j2" %}</div>
                </div>
            </div>
        {% endif %}
        {% if request.session.current_team.role == 'owner' %}
            <div class="tab-pane fade" id="integrations">
                <div class="row">
                    <div class="col-12">{% include "teams/team_settings_tabs/integrations.html.j2" %}</div>
                </div>
            </div>
            <div class="tab-pane fade" id="billing">
                <div class="row">
                    <div class="col-12">{% include "teams/team_settings_tabs/billing.html.j2" %}</div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
{% block scripts %}
    {% htmx_script %}
    {% vite_asset 'sbomify/apps/core/js/main.ts' %}
    {% vite_asset 'sbomify/apps/teams/js/main.ts' %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Get available tabs
            const availableTabs = ['members', 'branding'];
            {% if request.session.current_team.role == 'owner' or request.session.current_team.role == 'admin' %}
                availableTabs.push('contact-profiles');
            {% endif %}
            {% if request.session.current_team.role == 'owner' %}
                availableTabs.push('integrations');
                availableTabs.push('billing');
            {% endif %}

            // Function to activate a tab
            function activateTab(tabName) {
                // Remove active class from all nav links and tab panes
                document.querySelectorAll('.settings-tabs .nav-link').forEach(link => {
                    link.classList.remove('active');
                });
                document.querySelectorAll('.tab-pane').forEach(pane => {
                    pane.classList.remove('show', 'active');
                });

                // Add active class to the selected tab nav link and pane
                const navLink = document.querySelector(`.settings-tabs .nav-link[href="#${tabName}"]`);
                const tabPane = document.getElementById(tabName);

                if (navLink && tabPane) {
                    navLink.classList.add('active');
                    tabPane.classList.add('show', 'active');
                }
            }

            // Function to get the current tab from URL hash
            function getCurrentTab() {
                const hash = window.location.hash.substring(1); // Remove the #
                return availableTabs.includes(hash) ? hash : 'members'; // Default to members
            }

            // Activate tab based on current URL hash
            activateTab(getCurrentTab());

            // Listen for hash changes
            window.addEventListener('hashchange', function() {
                activateTab(getCurrentTab());
            });

            // Update hash when tab links are clicked
            document.querySelectorAll('.settings-tabs .nav-link').forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const targetTab = this.getAttribute('href').substring(1);
                    if (availableTabs.includes(targetTab)) {
                        history.pushState(null, null, `#${targetTab}`);
                        activateTab(targetTab);
                    }
                });
            });

            // Visibility copy button (avoid inline JS for CSP)
            const copyBtn = document.querySelector('.visibility-copy-btn');
            if (copyBtn) {
                copyBtn.addEventListener('click', async function(event) {
                    event.preventDefault();
                    const url = this.dataset.publicUrl;
                    if (!url) return;

                    try {
                        await navigator.clipboard.writeText(url);
                        if (window.showSuccess) {
                            window.showSuccess('Public URL copied to clipboard');
                        }
                    } catch (err) {
                        if (window.showError) {
                            window.showError('Failed to copy URL to clipboard');
                        }
                    }
                });
            }
        });
    </script>
{% endblock %}
