{% load static %}
<link rel="stylesheet"
      href="{% static 'css/components/contact-profiles.css' %}">
<div class="bg-white rounded-lg shadow-md">
    <div class="px-6 py-4 border-b flex justify-between items-center">
        <h5 class="text-lg font-semibold mb-0">Contact Profiles</h5>
        <button class="px-3 py-1.5 bg-brand-primary text-white rounded text-sm hover:opacity-90 transition-opacity"
                hx-get="{% url 'teams:contact_profiles_form' team.key %}"
                hx-target="#contact-profiles-content"
                hx-swap="innerHTML">
            <i class="fas fa-plus mr-1"></i>
            Add Profile
        </button>
    </div>
    <div class="p-6">
        <div id="contact-profiles-content"
             hx-get="{% url 'teams:contact_profiles_list' team.key %}"
             hx-trigger="load, refreshProfileList from:body"
             hx-swap="morph">
            <div class="text-center py-4">
                <div class="inline-block h-8 w-8 animate-spin rounded-full border-4 border-solid border-brand-primary border-r-transparent"
                     role="status">
                    <span class="sr-only">Loading...</span>
                </div>
                <p class="mt-2 text-gray-600">Loading contact profiles...</p>
            </div>
        </div>
    </div>
</div>
{% include "teams/contact_profiles/partials/delete_confirmation_modal.html.j2" %}
