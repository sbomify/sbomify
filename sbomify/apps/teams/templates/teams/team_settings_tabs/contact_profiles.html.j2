<div class="tw-card">
    <div class="px-6 py-4 border-b border-border flex justify-between items-center">
        <h5 class="text-lg font-semibold text-text m-0">Contact Profiles</h5>
        <button class="tw-btn-primary text-sm"
                hx-get="{% url 'teams:contact_profiles_form' team.key %}"
                hx-target="#contact-profiles-content"
                hx-swap="innerHTML">
            <i class="fas fa-plus mr-1"></i>
            Add Profile
        </button>
    </div>
    <div class="p-6">
        <div id="contact-profiles-content"
             hx-get="{% url 'teams:contact_profiles_list' team.key %}"
             hx-trigger="load, refreshProfileList from:body"
             hx-swap="morph">
            <div class="text-center py-8">
                <div class="animate-spin w-8 h-8 border-4 border-primary border-t-transparent rounded-full mx-auto"></div>
                <p class="mt-3 text-text-muted">Loading contact profiles...</p>
            </div>
        </div>
    </div>
</div>
{% include "teams/contact_profiles/partials/alpine_components.html.j2" %}
