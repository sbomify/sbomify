<div id="vulnerability-settings-wrapper"
     hx-get="{% url 'teams:vulnerability_settings' team.key %}"
     hx-trigger="load, refreshVulnerabilitySettings from:body"
     hx-swap="innerHTML">
    {# Skeleton Loading State #}
    <div class="tw-settings-card">
        <div class="px-6 py-4 border-b border-border">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg bg-border/50 animate-pulse"></div>
                <div>
                    <div class="h-5 w-36 bg-border/50 rounded animate-pulse"></div>
                    <div class="h-4 w-56 bg-border/30 rounded animate-pulse mt-1"></div>
                </div>
            </div>
        </div>
        <div class="p-6">
            <div class="space-y-4">
                {% for i in "12" %}
                    <div class="p-4 bg-background/30 rounded-lg border border-border">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center gap-3">
                                <div class="w-12 h-12 rounded-lg bg-border/50 animate-pulse"></div>
                                <div>
                                    <div class="h-4 w-40 bg-border/50 rounded animate-pulse"></div>
                                    <div class="h-3 w-64 bg-border/30 rounded animate-pulse mt-2"></div>
                                </div>
                            </div>
                            <div class="h-7 w-14 bg-border/50 rounded-full animate-pulse"></div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="flex items-center justify-center py-4 mt-4">
                <div class="tw-spinner tw-spinner-sm"></div>
                <span class="ml-3 text-text-muted text-sm">Loading integrations...</span>
            </div>
        </div>
    </div>
</div>
