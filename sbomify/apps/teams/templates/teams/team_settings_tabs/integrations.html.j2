{% load static %}
<link rel="stylesheet"
      href="{% static 'css/components/vulnerability-settings.css' %}">
<div id="vulnerability-settings-wrapper"
     hx-get="{% url 'teams:vulnerability_settings' team.key %}"
     hx-trigger="load, refreshVulnerabilitySettings from:body"
     hx-swap="innerHTML">
    <div class="text-center py-4">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2 text-muted">Loading vulnerability settings...</p>
    </div>
</div>
