<div class="tw-card">
    <div class="px-6 py-4 border-b border-border flex justify-between items-center">
        <h5 class="text-lg font-semibold text-text m-0">Workspace Members</h5>
        <span class="tw-badge-primary">{{ team.members|length }} member{{ team.members|length|pluralize }}</span>
    </div>
    <div class="p-6">
        <div class="space-y-3">
            {% for member in team.members %}
                <div class="flex items-center gap-4 p-4 bg-background/50 rounded-lg border border-border">
                    <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0">
                        <i class="fas fa-user text-primary"></i>
                    </div>
                    <div class="flex-1 min-w-0">
                        <h6 class="font-medium text-text m-0">{{ member.user.first_name }} {{ member.user.last_name }}</h6>
                        <div class="flex flex-wrap gap-3 mt-1 text-sm text-text-muted">
                            <span class="flex items-center gap-1">
                                <i class="fas fa-envelope"></i>
                                {{ member.user.email }}
                            </span>
                            <span class="flex items-center gap-1">
                                <i class="fas fa-user-tag"></i>
                                <span class="px-2 py-0.5 rounded text-xs font-medium {% if member.role == 'owner' %}bg-primary/10 text-primary{% elif member.role == 'admin' %}bg-warning/10 text-warning{% else %}bg-border/50 text-text{% endif %}">{{ member.role }}</span>
                            </span>
                        </div>
                    </div>
                    {% if request.session.current_team.role == 'owner' or request.session.current_team.role == 'admin' %}
                        <div class="flex-shrink-0">
                            <button class="p-2 rounded-lg text-danger hover:bg-danger/10 transition-colors"
                                    title="Remove member"
                                    data-bs-toggle="modal"
                                    data-bs-target="#delete-member-modal"
                                    data-form-member_id="{{ member.id }}"
                                    data-display-name="{{ member.user.first_name }} {{ member.user.last_name }}">
                                <i class="fas fa-user-minus"></i>
                            </button>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% if request.session.current_team.role == 'owner' or request.session.current_team.role == 'admin' %}
    {% include "components/modals/delete_modal.html.j2" with modal_id="delete-member-modal" modal_title="Remove Member" message_text="Are you sure you want to remove" warning_text="This action will immediately remove the member from the workspace and revoke their access." form_action=request.path form=delete_member_form submit_text="Remove Member" additional_fields='<input type="hidden" name="active_tab" value="members">' %}
{% endif %}
{% if request.session.current_team.role == 'owner' or request.session.current_team.role == 'admin' %}
    <div class="tw-card mt-6">
        <div class="px-6 py-4 border-b border-border flex justify-between items-center">
            <h5 class="text-lg font-semibold text-text m-0">Pending Invitations</h5>
            <div class="flex items-center gap-3">
                <span class="tw-badge-warning">{{ team.invitations|length }} pending</span>
                <a href="{% url 'teams:invite_user' team.key %}"
                   class="tw-btn-primary text-sm">
                    <i class="fas fa-user-plus mr-2"></i>
                    Invite Member
                </a>
            </div>
        </div>
        <div class="p-6">
            {% if team.invitations|length == 0 %}
                <div class="flex flex-col items-center justify-center py-8">
                    <div class="w-16 h-16 rounded-full bg-border/30 flex items-center justify-center mb-4">
                        <i class="fas fa-envelope text-2xl text-text-muted"></i>
                    </div>
                    <h5 class="text-text-muted font-medium mb-2">No pending invitations</h5>
                    <p class="text-text-muted m-0">Invite workspace members to get started</p>
                </div>
            {% else %}
                <div class="space-y-3">
                    {% for invitation in team.invitations %}
                        <div class="flex items-center gap-4 p-4 bg-background/50 rounded-lg border border-border">
                            <div class="w-10 h-10 rounded-full bg-warning/10 flex items-center justify-center flex-shrink-0">
                                <i class="fas fa-envelope text-warning"></i>
                            </div>
                            <div class="flex-1 min-w-0">
                                <h6 class="font-medium text-text m-0">{{ invitation.email }}</h6>
                                <div class="flex flex-wrap gap-3 mt-1 text-sm text-text-muted">
                                    <span class="flex items-center gap-1">
                                        <i class="fas fa-user-tag"></i>
                                        <span class="px-2 py-0.5 rounded text-xs font-medium {% if invitation.role == 'owner' %}bg-primary/10 text-primary{% elif invitation.role == 'admin' %}bg-warning/10 text-warning{% else %}bg-border/50 text-text{% endif %}">{{ invitation.role }}</span>
                                    </span>
                                    <span class="flex items-center gap-1">
                                        <i class="fas fa-clock"></i>
                                        Invited {{ invitation.created_at|date:"M j, Y" }}
                                    </span>
                                    <span class="flex items-center gap-1">
                                        <i class="fas fa-hourglass-half"></i>
                                        Expires {{ invitation.expires_at|date:"M j, Y" }}
                                    </span>
                                </div>
                            </div>
                            <div class="flex-shrink-0">
                                <button class="p-2 rounded-lg text-danger hover:bg-danger/10 transition-colors"
                                        title="Cancel invitation"
                                        data-bs-toggle="modal"
                                        data-bs-target="#delete-invitation-modal"
                                        data-form-invitation_id="{{ invitation.id }}"
                                        data-display-name="{{ invitation.email }}">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
    {% include "components/modals/delete_modal.html.j2" with modal_id="delete-invitation-modal" modal_title="Cancel Invitation" message_text="Are you sure you want to cancel the invitation for" warning_text="This action will immediately cancel the invitation and the user will no longer be able to join the workspace using this invite." form_action=request.path form=delete_invitation_form submit_text="Cancel Invitation" additional_fields='<input type="hidden" name="active_tab" value="members">' %}
{% endif %}
