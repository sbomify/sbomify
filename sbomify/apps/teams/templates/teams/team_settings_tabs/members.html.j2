{% load teams %}
{# Workspace Members Card #}
<div class="tw-settings-card">
    <div class="px-6 py-4 border-b border-border">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center">
                    <i class="fas fa-users text-primary"></i>
                </div>
                <div>
                    <h5 class="text-lg font-semibold text-text m-0">Workspace Members</h5>
                    <p class="text-text-muted text-sm m-0">People with access to this workspace</p>
                </div>
            </div>
            <span class="tw-badge-primary">{{ team.members|length }} member{{ team.members|length|pluralize }}</span>
        </div>
    </div>
    <div class="p-0">
        {% if team.members %}
            <div class="divide-y divide-border">
                {% for member in team.members %}
                    <div class="flex items-center gap-4 px-6 py-4 hover:bg-background/30 transition-colors">
                        {# Avatar with initials #}
                        <div class="relative flex-shrink-0">
                            <div class="tw-avatar tw-avatar-md {% if member.role == 'owner' %}bg-gradient-to-br from-primary to-primary/70{% elif member.role == 'admin' %}bg-gradient-to-br from-warning to-warning/70{% else %}bg-gradient-to-br from-border to-border/70{% endif %} text-white">
                                {{ member.user|user_initials }}
                            </div>
                            {% if member.role == 'owner' %}
                                <span class="absolute -bottom-0.5 -right-0.5 w-4 h-4 rounded-full bg-primary border-2 border-surface flex items-center justify-center">
                                    <i class="fas fa-crown text-white text-[8px]"></i>
                                </span>
                            {% endif %}
                        </div>
                        {# Member Info #}
                        <div class="flex-1 min-w-0">
                            <div class="flex items-center gap-2">
                                <h6 class="font-medium text-text m-0 truncate">{{ member.user.first_name }} {{ member.user.last_name }}</h6>
                                <span class="px-2 py-0.5 rounded-full text-xs font-medium {% if member.role == 'owner' %}bg-primary/10 text-primary{% elif member.role == 'admin' %}bg-warning/10 text-warning{% else %}bg-border/50 text-text-muted{% endif %}">
                                    {{ member.role|title }}
                                </span>
                            </div>
                            <p class="text-sm text-text-muted m-0 truncate">{{ member.user.email }}</p>
                        </div>
                        {# Actions #}
                        {% if request.session.current_team.role == 'owner' or request.session.current_team.role == 'admin' %}
                            {% if member.role != 'owner' %}
                                <div class="flex-shrink-0">
                                    <button class="tw-icon-btn tw-icon-btn-sm text-text-muted hover:text-danger hover:bg-danger/10"
                                            title="Remove member"
                                            @click="$dispatch('open-delete-member-modal', { displayName: '{{ member.user.first_name }} {{ member.user.last_name }}', formData: { member_id: '{{ member.id }}' } })">
                                        <i class="fas fa-user-minus"></i>
                                    </button>
                                </div>
                            {% endif %}
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="tw-empty-state py-12">
                <div class="tw-empty-state-icon">
                    <i class="fas fa-users text-2xl"></i>
                </div>
                <h4 class="tw-empty-state-title">No members yet</h4>
                <p class="tw-empty-state-description">Invite team members to collaborate on this workspace.</p>
            </div>
        {% endif %}
    </div>
</div>
{% if request.session.current_team.role == 'owner' or request.session.current_team.role == 'admin' %}
    {% include "components/modals/delete_modal.html.j2" with modal_id="delete-member-modal" modal_title="Remove Member" message_text="Are you sure you want to remove" warning_text="This action will immediately remove the member from the workspace and revoke their access." form_action=request.path form=delete_member_form submit_text="Remove Member" additional_fields='<input type="hidden" name="active_tab" value="members">' %}
{% endif %}
{# Pending Invitations Card #}
{% if request.session.current_team.role == 'owner' or request.session.current_team.role == 'admin' %}
    <div class="tw-settings-card mt-6">
        <div class="px-6 py-4 border-b border-border">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-lg bg-warning/10 flex items-center justify-center">
                        <i class="fas fa-paper-plane text-warning"></i>
                    </div>
                    <div>
                        <h5 class="text-lg font-semibold text-text m-0">Pending Invitations</h5>
                        <p class="text-text-muted text-sm m-0">Invitations awaiting acceptance</p>
                    </div>
                </div>
                <div class="flex items-center gap-3">
                    {% if team.invitations|length > 0 %}
                        <span class="tw-badge-warning">{{ team.invitations|length }} pending</span>
                    {% endif %}
                    <a href="{% url 'teams:invite_user' team.key %}"
                       class="tw-btn-primary tw-btn-sm">
                        <i class="fas fa-user-plus mr-2"></i>
                        Invite Member
                    </a>
                </div>
            </div>
        </div>
        <div class="p-0">
            {% if team.invitations|length == 0 %}
                <div class="tw-empty-state py-12">
                    <div class="tw-empty-state-icon bg-success/10">
                        <i class="fas fa-check-circle text-2xl text-success"></i>
                    </div>
                    <h4 class="tw-empty-state-title">All caught up!</h4>
                    <p class="tw-empty-state-description">No pending invitations. Use the button above to invite new members.</p>
                </div>
            {% else %}
                <div class="divide-y divide-border">
                    {% for invitation in team.invitations %}
                        <div class="flex items-center gap-4 px-6 py-4 hover:bg-background/30 transition-colors">
                            {# Avatar placeholder for pending user #}
                            <div class="relative flex-shrink-0">
                                <div class="tw-avatar tw-avatar-md bg-warning/20 text-warning">
                                    <i class="fas fa-envelope text-lg"></i>
                                </div>
                                <span class="absolute -bottom-0.5 -right-0.5 w-4 h-4 rounded-full bg-warning border-2 border-surface flex items-center justify-center">
                                    <i class="fas fa-clock text-white text-[8px]"></i>
                                </span>
                            </div>
                            {# Invitation Info #}
                            <div class="flex-1 min-w-0">
                                <div class="flex items-center gap-2">
                                    <h6 class="font-medium text-text m-0 truncate">{{ invitation.email }}</h6>
                                    <span class="px-2 py-0.5 rounded-full text-xs font-medium {% if invitation.role == 'admin' %}bg-warning/10 text-warning{% else %}bg-border/50 text-text-muted{% endif %}">
                                        {{ invitation.role|title }}
                                    </span>
                                </div>
                                <div class="flex items-center gap-4 mt-1">
                                    <span class="text-xs text-text-muted flex items-center gap-1">
                                        <i class="fas fa-calendar-plus"></i>
                                        Sent {{ invitation.created_at|date:"M j, Y" }}
                                    </span>
                                    <span class="text-xs text-text-muted flex items-center gap-1">
                                        <i class="fas fa-hourglass-half"></i>
                                        Expires {{ invitation.expires_at|date:"M j, Y" }}
                                    </span>
                                </div>
                            </div>
                            {# Actions #}
                            <div class="flex-shrink-0 flex items-center gap-2">
                                <button class="tw-icon-btn tw-icon-btn-sm text-text-muted hover:text-danger hover:bg-danger/10"
                                        title="Cancel invitation"
                                        @click="$dispatch('open-delete-invitation-modal', { displayName: '{{ invitation.email }}', formData: { invitation_id: '{{ invitation.id }}' } })">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
    {% include "components/modals/delete_modal.html.j2" with modal_id="delete-invitation-modal" modal_title="Cancel Invitation" message_text="Are you sure you want to cancel the invitation for" warning_text="This action will immediately cancel the invitation and the user will no longer be able to join the workspace using this invite." form_action=request.path form=delete_invitation_form submit_text="Cancel Invitation" additional_fields='<input type="hidden" name="active_tab" value="members">' %}
{% endif %}
