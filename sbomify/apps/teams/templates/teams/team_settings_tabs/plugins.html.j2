{% load static %}
<div id="team-plugins-wrapper"
     hx-get="{% url 'plugins:team_plugin_settings' team.key %}"
     hx-trigger="load, refreshPluginSettings from:body"
     hx-swap="innerHTML">
    <div class="text-center py-4">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2 text-muted">Loading plugin settings...</p>
    </div>
</div>
