{% load static %}
<div id="team-tokens-wrapper"
     hx-get="{% url 'teams:team_tokens' team.key %}"
     hx-trigger="load, refreshTeamTokens from:body"
     hx-target="#team-tokens-content"
     hx-swap="innerHTML">
    <div id="team-tokens-content" class="text-center py-4">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2 text-muted">Loading tokens settings...</p>
    </div>
</div>
