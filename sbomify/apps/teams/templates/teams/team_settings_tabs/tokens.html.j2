<div id="team-tokens-wrapper"
     hx-get="{% url 'teams:team_tokens' team.key %}"
     hx-trigger="load, refreshTeamTokens from:body"
     hx-target="#team-tokens-content"
     hx-swap="innerHTML">
    <div id="team-tokens-content">
        <div class="text-center py-8">
            <div class="animate-spin w-8 h-8 border-4 border-primary border-t-transparent rounded-full mx-auto"></div>
            <p class="mt-3 text-text-muted">Loading tokens settings...</p>
        </div>
    </div>
</div>
