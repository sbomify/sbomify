{% load public_url_tags %}
{# Trust Center Availability Section #}
<div class="tw-settings-card mb-6">
    <div class="px-6 py-4 border-b border-border">
        <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg {% if team.is_public %}bg-success/10{% else %}bg-border/30{% endif %} flex items-center justify-center">
                <i class="fas {% if team.is_public %}fa-globe text-success{% else %}fa-lock text-text-muted{% endif %}"></i>
            </div>
            <div>
                <h5 class="text-lg font-semibold text-text m-0">Trust Center Availability</h5>
                <p class="text-text-muted text-sm m-0">Control public access to your Trust Center</p>
            </div>
        </div>
    </div>
    <div class="p-6">
        <div class="flex items-center justify-between gap-4 mb-4">
            <span class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full text-sm font-medium {% if team.is_public %}bg-success/10 text-success{% else %}bg-border/50 text-text-muted{% endif %}">
                {{ team.is_public|yesno:'Enabled,Disabled' }}
            </span>
            <form method="post"
                  action="{% url 'teams:team_settings' team.key %}"
                  class="flex-shrink-0">
                {% csrf_token %}
                <input type="hidden" name="visibility_action" value="update">
                <input type="hidden" name="is_public" value="false">
                <input type="hidden" name="active_tab" value="trust-center">
                <input id="workspace-visibility-toggle"
                       type="checkbox"
                       name="is_public"
                       value="true"
                       class="tw-toggle"
                       {% if team.is_public %}checked{% endif %}
                       {% if not is_owner %}disabled{% endif %}
                       onchange="this.form.submit()">
                <button type="submit" class="sr-only">Save visibility</button>
            </form>
        </div>
        <p class="text-text-muted mb-4">
            {% if team.is_public %}
                Your Trust Center is publicly accessible. Visitors can view your public products and security artifacts.
            {% else %}
                Your Trust Center is currently disabled. Enable it to share your security posture with customers and partners.
            {% endif %}
        </p>
        {% if team.is_public %}
            {% trust_center_absolute_url team as public_url %}
            <div class="p-4 bg-background/50 rounded-lg border border-border"
                 x-data="{ copied: false }">
                <label class="text-xs font-semibold text-text-muted uppercase tracking-wider mb-2 block">Public URL</label>
                <div class="flex items-center gap-2">
                    <code class="flex-1 min-w-0 px-3 py-2 bg-background border border-border rounded-lg text-sm text-text font-mono truncate">{{ public_url }}</code>
                    <button type="button"
                            class="tw-btn-secondary tw-btn-sm flex-shrink-0"
                            :class="{ 'tw-btn-success': copied }"
                            title="Copy public URL"
                            aria-label="Copy public URL"
                            @click="navigator.clipboard.writeText('{{ public_url }}'); copied = true; setTimeout(() => copied = false, 2000)">
                        <i x-show="!copied" class="fas fa-copy"></i>
                        <i x-show="copied" x-cloak class="fas fa-check"></i>
                        <span x-text="copied ? 'Copied!' : 'Copy'"></span>
                    </button>
                    <a href="{{ public_url }}"
                       target="_blank"
                       rel="noopener noreferrer"
                       class="tw-btn-ghost tw-btn-sm flex-shrink-0"
                       title="Open Trust Center"
                       aria-label="Open Trust Center (opens in new tab)">
                        <i class="fas fa-external-link-alt" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
        {% endif %}
        {% if not is_owner %}
            <div class="tw-alert tw-alert-info mt-4">
                <i class="fas fa-info-circle tw-alert-icon"></i>
                <div class="tw-alert-content">
                    <p class="text-sm m-0">Only workspace owners can change Trust Center visibility.</p>
                </div>
            </div>
        {% elif not can_set_private %}
            <div class="tw-alert tw-alert-info mt-4">
                <i class="fas fa-crown tw-alert-icon"></i>
                <div class="tw-alert-content">
                    <p class="text-sm m-0">Disabling the Trust Center is available on Business or Enterprise plans.</p>
                </div>
            </div>
        {% endif %}
    </div>
</div>
{# TEA Section - uses team_obj (Django model) for tea_enabled since team is a Pydantic schema #}
{% if team.is_public %}
    <div class="tw-settings-card mb-6">
        <div class="px-6 py-4 border-b border-border">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg {% if team_obj.tea_enabled %}bg-success/10{% else %}bg-border/30{% endif %} flex items-center justify-center">
                    <i class="fas {% if team_obj.tea_enabled %}fa-exchange-alt text-success{% else %}fa-exchange-alt text-text-muted{% endif %}"></i>
                </div>
                <div>
                    <h5 class="text-lg font-semibold text-text m-0">Transparency Exchange API (TEA)</h5>
                    <p class="text-text-muted text-sm m-0">Standardized access to software transparency information</p>
                </div>
            </div>
        </div>
        <div class="p-6">
            <div class="flex items-center justify-between gap-4 mb-4">
                <span class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full text-sm font-medium {% if team_obj.tea_enabled %}bg-success/10 text-success{% else %}bg-border/50 text-text-muted{% endif %}">
                    {{ team_obj.tea_enabled|yesno:'Enabled,Disabled' }}
                </span>
                <form method="post"
                      action="{% url 'teams:team_settings' team.key %}"
                      class="flex-shrink-0">
                    {% csrf_token %}
                    <input type="hidden" name="tea_action" value="update">
                    <input type="hidden" name="tea_enabled" value="false">
                    <input type="hidden" name="active_tab" value="trust-center">
                    <input id="tea-toggle"
                           type="checkbox"
                           name="tea_enabled"
                           value="true"
                           class="tw-toggle"
                           {% if team_obj.tea_enabled %}checked{% endif %}
                           {% if not is_owner %}disabled{% endif %}
                           onchange="this.form.submit()">
                    <button type="submit" class="sr-only">Save TEA setting</button>
                </form>
            </div>
            <p class="text-text-muted mb-4">
                The Transparency Exchange API (TEA) provides standardized access to your software transparency
                information via a well-known discovery endpoint and REST API.
                <a href="https://github.com/CycloneDX/transparency-exchange-api"
                   target="_blank"
                   rel="noopener noreferrer"
                   class="text-primary hover:underline">Learn more</a>
            </p>
            {% if team_obj.tea_enabled and team_obj.custom_domain and team_obj.custom_domain_validated %}
                <div class="p-4 bg-background/50 rounded-lg border border-border"
                     x-data="{ copied: false }">
                    <label class="text-xs font-semibold text-text-muted uppercase tracking-wider mb-2 block">TEA Discovery Endpoint</label>
                    <div class="flex items-center gap-2">
                        <code class="flex-1 min-w-0 px-3 py-2 bg-background border border-border rounded-lg text-sm text-text font-mono truncate">https://{{ team_obj.custom_domain }}/.well-known/tea</code>
                        <button type="button"
                                class="tw-btn-secondary tw-btn-sm flex-shrink-0"
                                :class="{ 'tw-btn-success': copied }"
                                title="Copy TEA discovery URL"
                                aria-label="Copy TEA discovery URL"
                                @click="navigator.clipboard.writeText('https://{{ team_obj.custom_domain }}/.well-known/tea'); copied = true; setTimeout(() => copied = false, 2000)">
                            <i x-show="!copied" class="fas fa-copy"></i>
                            <i x-show="copied" x-cloak class="fas fa-check"></i>
                            <span x-text="copied ? 'Copied!' : 'Copy'"></span>
                        </button>
                    </div>
                </div>
            {% elif team_obj.tea_enabled %}
                <div class="tw-alert tw-alert-info mt-4">
                    <i class="fas fa-info-circle tw-alert-icon"></i>
                    <div class="tw-alert-content">
                        <p class="text-sm m-0">
                            Configure a custom domain to enable TEA discovery via <code>.well-known/tea</code>.
                        </p>
                    </div>
                </div>
            {% endif %}
            {% if not is_owner %}
                <div class="tw-alert tw-alert-info mt-4">
                    <i class="fas fa-info-circle tw-alert-icon"></i>
                    <div class="tw-alert-content">
                        <p class="text-sm m-0">Only workspace owners can change TEA settings.</p>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endif %}
{# Trust Center Description Section #}
{% if team.is_public %}
    <div class="tw-settings-card mb-6">
        <div class="px-6 py-4 border-b border-border">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center">
                    <i class="fas fa-align-left text-primary"></i>
                </div>
                <div>
                    <h5 class="text-lg font-semibold text-text m-0">Trust Center Description</h5>
                    <p class="text-text-muted text-sm m-0">Customize your landing page messaging</p>
                </div>
            </div>
        </div>
        <div class="p-6">
            <form method="post"
                  action="{% url 'teams:team_settings' team.key %}"
                  class="w-full">
                {% csrf_token %}
                <input type="hidden" name="trust_center_description_action" value="update">
                <input type="hidden" name="active_tab" value="trust-center">
                <div class="mb-4">
                    <label for="trust_center_description" class="tw-form-label">Description</label>
                    <textarea id="trust_center_description"
                              class="tw-form-textarea"
                              name="trust_center_description"
                              rows="4"
                              maxlength="500"
                              placeholder="Your centralized hub for transparency and compliance. Browse our public products, releases, and organization-wide security artifacts."
                              {% if not is_owner %}disabled{% endif %}>{{ branding_info.trust_center_description|default:'' }}</textarea>
                    <span class="tw-form-helper">Max 500 characters. Leave empty to use the default description.</span>
                </div>
                <div class="flex justify-end">
                    <button type="submit"
                            class="tw-btn-primary"
                            {% if not is_owner %}disabled{% endif %}>
                        <i class="fas fa-save mr-2"></i>Save Description
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endif %}
{# Company NDA Section #}
{% if team.is_public %}
    <div class="tw-settings-card mb-6">
        <div class="px-6 py-4 border-b border-border">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg bg-warning/10 flex items-center justify-center">
                    <i class="fas fa-file-contract text-warning"></i>
                </div>
                <div>
                    <h5 class="text-lg font-semibold text-text m-0">Company NDA</h5>
                    <p class="text-text-muted text-sm m-0">Non-disclosure agreement for gated content</p>
                </div>
            </div>
        </div>
        <div class="p-6">
            {% if company_nda_document %}
                {# Current NDA Display #}
                <div class="mb-6 p-4 bg-success/5 border border-success/20 rounded-xl">
                    <div class="flex items-start gap-4">
                        <div class="w-12 h-12 rounded-lg bg-success/10 flex items-center justify-center flex-shrink-0">
                            <i class="fas fa-file-pdf text-success text-xl"></i>
                        </div>
                        <div class="flex-1 min-w-0">
                            <div class="flex items-center gap-2 mb-1">
                                <h6 class="font-medium text-text m-0 truncate">{{ company_nda_document.name }}</h6>
                                {% if company_nda_document.version %}
                                    <span class="tw-badge-success">v{{ company_nda_document.version }}</span>
                                {% endif %}
                            </div>
                            <div class="flex items-center gap-3 text-sm text-text-muted">
                                <span class="flex items-center gap-1">
                                    <i class="fas fa-calendar-alt text-xs"></i>
                                    {{ company_nda_document.created_at|date:"M d, Y" }}
                                </span>
                                {% if company_nda_document.file_size %}
                                    <span class="flex items-center gap-1">
                                        <i class="fas fa-weight text-xs"></i>
                                        {{ company_nda_document.file_size|filesizeformat }}
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                        <a href="{% url 'documents:document_download' company_nda_document.id %}"
                           class="tw-btn-secondary tw-btn-sm"
                           target="_blank"
                           rel="noopener noreferrer">
                            <i class="fas fa-eye mr-1"></i>View
                        </a>
                    </div>
                </div>
            {% endif %}
            {# Upload Form #}
            <form method="post"
                  action="{% url 'teams:team_settings' team.key %}"
                  enctype="multipart/form-data"
                  class="w-full"
                  x-data="{ fileName: '' }">
                {% csrf_token %}
                <input type="hidden" name="company_nda_action" value="upload">
                <input type="hidden" name="active_tab" value="trust-center">
                <label for="company_nda_file"
                       class="tw-file-upload relative block mb-4 {% if not is_owner %}opacity-50 pointer-events-none{% endif %}">
                    <input type="file"
                           id="company_nda_file"
                           name="company_nda_file"
                           class="sr-only"
                           accept=".pdf"
                           {% if not is_owner %}disabled{% endif %}
                           required
                           @change="fileName = $event.target.files[0] ? $event.target.files[0].name : ''">
                    <div class="tw-file-upload-icon">
                        <i class="fas fa-cloud-upload-alt text-xl"></i>
                    </div>
                    <p class="tw-file-upload-text">
                        <template x-if="fileName">
                            <span class="text-success font-medium" x-text="fileName"></span>
                        </template>
                        <template x-if="!fileName">
                            <span><span class="text-primary font-medium">Click to upload</span> or drag and drop</span>
                        </template>
                    </p>
                    <p class="tw-file-upload-hint">PDF files only. Max 50MB.</p>
                </label>
                <div class="flex justify-end">
                    <button type="submit"
                            class="tw-btn-primary"
                            {% if not is_owner %}disabled{% endif %}>
                        <i class="fas fa-upload mr-2"></i>
                        {% if company_nda_document %}
                            Upload New Version
                        {% else %}
                            Upload NDA
                        {% endif %}
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endif %}
{# Access Requests Section #}
{% if team.is_public %}
    <div id="access-requests-wrapper"
         x-data
         hx-get="{% url 'documents:access_request_queue' team.key %}?partial=true"
         hx-trigger="load, refreshAccessRequests from:body"
         hx-swap="innerHTML"
         @ws:message.window="if ($event.detail.type === 'access_request_updated') { document.body.dispatchEvent(new CustomEvent('refreshAccessRequests')); }">
        <div class="tw-settings-card mb-6">
            <div class="px-6 py-4 border-b border-border">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-lg bg-background flex items-center justify-center">
                        <div class="tw-spinner tw-spinner-sm"></div>
                    </div>
                    <div>
                        <div class="h-5 w-32 bg-border/50 rounded animate-pulse"></div>
                        <div class="h-4 w-48 bg-border/30 rounded animate-pulse mt-1"></div>
                    </div>
                </div>
            </div>
            <div class="p-6">
                <div class="flex items-center justify-center py-8">
                    <div class="tw-spinner tw-spinner-md"></div>
                    <span class="ml-3 text-text-muted">Loading access requests...</span>
                </div>
            </div>
        </div>
    </div>
{% endif %}
{# Custom Domain Section #}
{% if team.is_public %}
    <div id="team-custom-domain-wrapper"
         hx-get="{% url 'teams:team_custom_domain' team.key %}"
         hx-trigger="load, refreshTeamCustomDomain from:body"
         hx-swap="innerHTML">
        <div class="tw-settings-card">
            <div class="px-6 py-4 border-b border-border">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-lg bg-background flex items-center justify-center">
                        <div class="tw-spinner tw-spinner-sm"></div>
                    </div>
                    <div>
                        <div class="h-5 w-32 bg-border/50 rounded animate-pulse"></div>
                        <div class="h-4 w-48 bg-border/30 rounded animate-pulse mt-1"></div>
                    </div>
                </div>
            </div>
            <div class="p-6">
                <div class="flex items-center justify-center py-8">
                    <div class="tw-spinner tw-spinner-md"></div>
                    <span class="ml-3 text-text-muted">Loading custom domain settings...</span>
                </div>
            </div>
        </div>
    </div>
{% else %}
    <div class="tw-settings-card">
        <div class="px-6 py-4 border-b border-border">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg bg-border/30 flex items-center justify-center">
                    <i class="fas fa-globe text-text-muted"></i>
                </div>
                <div>
                    <h5 class="text-lg font-semibold text-text m-0">Custom Domain</h5>
                    <p class="text-text-muted text-sm m-0">Use your own domain for the Trust Center</p>
                </div>
            </div>
        </div>
        <div class="p-6">
            <div class="tw-empty-state py-8">
                <div class="tw-empty-state-icon bg-border/30">
                    <i class="fas fa-lock text-2xl text-text-muted"></i>
                </div>
                <h4 class="tw-empty-state-title">Trust Center Required</h4>
                <p class="tw-empty-state-description">Enable your Trust Center above to configure a custom domain.</p>
            </div>
        </div>
    </div>
{% endif %}
