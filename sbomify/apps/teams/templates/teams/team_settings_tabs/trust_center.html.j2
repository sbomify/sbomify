{% load static %}
{% load public_url_tags %}
<link rel="stylesheet"
      href="{% static 'css/components/team-branding.css' %}">
<link rel="stylesheet"
      href="{% static 'css/components/trust-center-settings.css' %}">
<!-- Trust Center Availability Section -->
<div class="standard-card mb-4">
    <div class="card settings-card trust-center-visibility shadow-md">
        <div class="card-header">
            <h4 class="card-title mb-0">Trust Center Availability</h4>
        </div>
        <div class="card-body">
            <div class="visibility-wrapper">
                <div class="copy">
                    <p class="eyebrow">Workspace Trust Center</p>
                    <h3 class="title">Enable or disable your Trust Center</h3>
                    <p class="description">Control whether your Trust Center is accessible to visitors.</p>
                    <span class="status-pill {{ team.is_public|yesno:'public,private' }}">
                        <i class="fas {{ team.is_public|yesno:'fa-globe,fa-lock' }}"></i>
                        {{ team.is_public|yesno:'Enabled,Disabled' }}
                    </span>
                    {% if team.is_public %}
                        {% trust_center_absolute_url team as public_url %}
                        <div class="mt-2 d-flex align-items-center gap-2 flex-wrap">
                            <code class="public-url-display">{{ public_url }}</code>
                            <button type="button"
                                    class="copy-url-btn visibility-copy-btn"
                                    title="Copy public URL"
                                    aria-label="Copy public URL"
                                    data-public-url="{{ public_url }}">
                                <i class="fas fa-copy"></i>
                                <span class="copy-text">Copy public URL</span>
                            </button>
                        </div>
                    {% endif %}
                    {% if not is_owner %}
                        <div class="text-muted mt-2 small">Only workspace owners can change visibility.</div>
                    {% elif not can_set_private %}
                        <div class="text-muted mt-2 small">Disabling the Trust Center is available on Business or Enterprise plans.</div>
                    {% endif %}
                </div>
                <div class="control">
                    <form method="post"
                          action="{% url 'teams:team_settings' team.key %}"
                          class="d-inline-block">
                        {% csrf_token %}
                        <input type="hidden" name="visibility_action" value="update">
                        <input type="hidden" name="is_public" value="false">
                        <input type="hidden" name="active_tab" value="trust-center">
                        <div class="form-check form-switch">
                            <input id="workspace-visibility-toggle"
                                   class="form-check-input"
                                   type="checkbox"
                                   name="is_public"
                                   value="true"
                                   {% if team.is_public %}checked{% endif %}
                                   {% if not is_owner %}disabled{% endif %}
                                   onchange="this.form.submit()">
                            <label class="form-check-label" for="workspace-visibility-toggle">{{ team.is_public|yesno:'Enabled,Disabled' }}</label>
                        </div>
                        <button type="submit" class="visually-hidden">Save visibility</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Trust Center Description Section -->
{% if team.is_public %}
    <div class="standard-card mb-4">
        <div class="card settings-card shadow-md">
            <div class="card-header">
                <h4 class="card-title mb-0">Trust Center Description</h4>
            </div>
            <div class="card-body">
                <p class="text-muted mb-3">
                    Customize the description shown on your Trust Center landing page. Leave empty to use the default description.
                </p>
                <form method="post"
                      action="{% url 'teams:team_settings' team.key %}"
                      class="d-inline-block w-100">
                    {% csrf_token %}
                    <input type="hidden" name="trust_center_description_action" value="update">
                    <input type="hidden" name="active_tab" value="trust-center">
                    <div class="mb-3">
                        <label for="trust_center_description" class="form-label fw-semibold">Description</label>
                        <textarea id="trust_center_description"
                                  class="form-control"
                                  name="trust_center_description"
                                  rows="3"
                                  maxlength="500"
                                  placeholder="Your centralized hub for transparency and compliance. Browse our public products, releases, and organization-wide security artifacts."
                                  {% if not is_owner %}disabled{% endif %}>{{ branding_info.trust_center_description|default:'' }}</textarea>
                        <div class="form-text">Max 500 characters</div>
                    </div>
                    <button type="submit"
                            class="btn btn-primary"
                            {% if not is_owner %}disabled{% endif %}>
                        <i class="fas fa-save me-2"></i>Save Description
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endif %}
<!-- Company NDA Section -->
{% if team.is_public %}
    <div class="standard-card mb-4">
        <div class="card settings-card shadow-md">
            <div class="card-header">
                <h4 class="card-title mb-0">Company NDA</h4>
            </div>
            <div class="card-body">
                <p class="text-muted mb-3">
                    Upload a company-wide NDA that will be used for all gated components. New uploads will create a new version while keeping previous versions for reference.
                </p>
                {% if company_nda_document %}
                    <div class="mb-3 p-3 bg-light rounded">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">
                                    {{ company_nda_document.name }}
                                    {% if company_nda_document.version %}
                                        <span class="badge bg-secondary ms-2">v{{ company_nda_document.version }}</span>
                                    {% endif %}
                                </h6>
                                <small class="text-muted">
                                    Uploaded: {{ company_nda_document.created_at|date:"M d, Y" }}
                                    {% if company_nda_document.file_size %}â€¢ {{ company_nda_document.file_size|filesizeformat }}{% endif %}
                                </small>
                            </div>
                            <div class="btn-group">
                                <a href="{% url 'documents:document_download' company_nda_document.id %}"
                                   class="btn btn-sm btn-outline-primary"
                                   target="_blank">
                                    <i class="fas fa-download me-1"></i>View
                                </a>
                            </div>
                        </div>
                    </div>
                {% endif %}
                <form method="post"
                      action="{% url 'teams:team_settings' team.key %}"
                      enctype="multipart/form-data"
                      class="d-inline-block w-100">
                    {% csrf_token %}
                    <input type="hidden" name="company_nda_action" value="upload">
                    <input type="hidden" name="active_tab" value="trust-center">
                    <div class="mb-3">
                        <label for="company_nda_file" class="form-label fw-semibold">
                            {% if company_nda_document %}
                                Upload New Version
                            {% else %}
                                Upload Company NDA
                            {% endif %}
                        </label>
                        <input type="file"
                               id="company_nda_file"
                               name="company_nda_file"
                               class="form-control"
                               accept=".pdf"
                               {% if not is_owner %}disabled{% endif %}
                               required>
                        <div class="form-text">PDF files only. Max 50MB.</div>
                    </div>
                    <button type="submit"
                            class="btn btn-primary"
                            {% if not is_owner %}disabled{% endif %}>
                        <i class="fas fa-upload me-2"></i>
                        {% if company_nda_document %}
                            Upload New Version
                        {% else %}
                            Upload Company NDA
                        {% endif %}
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endif %}
<!-- Access Requests Section -->
{% if team.is_public %}
    <div id="access-requests-wrapper"
         hx-get="{% url 'documents:access_request_queue' team.key %}?partial=true"
         hx-trigger="load, refreshAccessRequests from:body"
         hx-swap="innerHTML">
        <div class="text-center py-4">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2 text-muted">Loading access requests...</p>
        </div>
    </div>
{% endif %}
<!-- Custom Domain Section -->
{% if team.is_public %}
    <!-- HTMX loaded when Trust Center is enabled -->
    <div id="team-custom-domain-wrapper"
         hx-get="{% url 'teams:team_custom_domain' team.key %}"
         hx-trigger="load, refreshTeamCustomDomain from:body"
         hx-swap="innerHTML">
        <div class="text-center py-4">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2 text-muted">Loading custom domain settings...</p>
        </div>
    </div>
{% else %}
    <!-- Disabled state when Trust Center is disabled -->
    <div class="standard-card">
        <div class="card settings-card shadow-md">
            <div class="card-header">
                <h4 class="card-title mb-0">Custom Domain</h4>
            </div>
            <div class="card-body">
                <div class="text-center py-4">
                    <i class="fas fa-globe text-muted mb-3"
                       style="font-size: 2.5rem;
                              opacity: 0.5"></i>
                    <p class="text-muted mb-0">Enable your Trust Center to configure a custom domain.</p>
                </div>
            </div>
        </div>
    </div>
{% endif %}
