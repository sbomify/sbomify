{% load static %}
{% load public_url_tags %}
<link rel="stylesheet"
      href="{% static 'css/components/team-branding.css' %}">
<style>
    .trust-center-visibility .visibility-wrapper {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1.5rem;
        flex-wrap: wrap;
    }

    .trust-center-visibility .copy {
        flex: 1 1 60%;
    }

    .trust-center-visibility .eyebrow {
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-size: 0.75rem;
        color: #6b7280;
        margin-bottom: 0.35rem;
    }

    .trust-center-visibility .title {
        font-size: 1.25rem;
        margin: 0 0 0.35rem;
        color: #111827;
    }

    .trust-center-visibility .description {
        color: #4b5563;
        margin-bottom: 0.75rem;
    }

    .trust-center-visibility .status-pill {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.35rem 0.75rem;
        border-radius: 999px;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .trust-center-visibility .status-pill.public {
        background-color: #ecfdf3;
        color: #15803d;
        border: 1px solid #bbf7d0;
    }

    .trust-center-visibility .status-pill.private {
        background-color: #f4f5f7;
        color: #374151;
        border: 1px solid #e5e7eb;
    }

    .trust-center-visibility .control {
        min-width: 220px;
        text-align: right;
        padding: 2rem;
        border-radius: 8px;
    }

    .trust-center-visibility .form-check-input {
        width: 3rem;
        height: 1.5rem;
        cursor: pointer;
        margin-top: 0;
        margin-left: 0;
        flex-shrink: 0;
    }

    .trust-center-visibility .form-check-label {
        margin-left: 0.75rem;
        font-weight: 500;
        color: #374151;
        cursor: pointer;
        line-height: 1.5rem;
        margin-bottom: 0;
    }

    .trust-center-visibility .form-switch {
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: flex-end;
        padding-left: 0;
    }


    .trust-center-visibility .visibility-copy-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.4rem 0.75rem;
        background: linear-gradient(135deg, #3b82f6, #1d4ed8);
        color: #fff;
        border: none;
        border-radius: 6px;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.02em;
        cursor: pointer;
        transition: all 0.2s ease;
        box-shadow: 0 2px 4px rgba(59, 130, 246, 0.2);
    }

    .trust-center-visibility .visibility-copy-btn:hover {
        background: linear-gradient(135deg, #1d4ed8, #1e40af);
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(59, 130, 246, 0.3);
    }

    .trust-center-visibility .visibility-copy-btn:active {
        transform: translateY(0);
        box-shadow: 0 2px 4px rgba(59, 130, 246, 0.2);
    }

    .trust-center-visibility .visibility-copy-btn .copy-text {
        font-size: 0.75rem;
    }

    @media (max-width: 768px) {
        .trust-center-visibility .visibility-wrapper {
            flex-direction: column;
            align-items: stretch;
            gap: 1.5rem;
        }

        .trust-center-visibility .copy {
            flex: 1 1 100%;
        }

        .trust-center-visibility .control {
            min-width: 100%;
            text-align: left;
            padding: 1rem;
            border-top: 1px solid #e5e7eb;
            margin-top: 1rem;
        }

        .trust-center-visibility .form-switch {
            justify-content: flex-start;
        }

        .trust-center-visibility .title {
            font-size: 1.125rem;
        }

        .trust-center-visibility .description {
            font-size: 0.875rem;
        }

        .trust-center-visibility code {
            font-size: 0.75rem;
            word-break: break-all;
            display: block;
            margin-bottom: 0.5rem;
        }

        .trust-center-visibility .visibility-copy-btn {
            width: 100%;
            justify-content: center;
            padding: 0.625rem 1rem;
        }
    }

    @media (max-width: 576px) {
        .trust-center-visibility .card-body {
            padding: 1rem 0.875rem;
        }

        .trust-center-visibility .title {
            font-size: 1rem;
        }

        .trust-center-visibility .control {
            padding: 0.875rem;
            margin-top: 0.875rem;
        }

        .trust-center-visibility .form-check-input {
            width: 2.5rem;
            height: 1.375rem;
        }
    }

    @media (max-width: 480px) {
        .trust-center-visibility .card-body {
            padding: 0.875rem 0.75rem;
        }

        .trust-center-visibility .title {
            font-size: 0.9375rem;
        }

        .trust-center-visibility .description {
            font-size: 0.8125rem;
        }

        .trust-center-visibility .control {
            padding: 0.75rem;
        }
    }
</style>
<!-- Trust Center Availability Section -->
<div class="standard-card mb-4">
    <div class="card settings-card trust-center-visibility shadow-md">
        <div class="card-header">
            <h4 class="card-title mb-0">Trust Center Availability</h4>
        </div>
        <div class="card-body">
            <div class="visibility-wrapper">
                <div class="copy">
                    <p class="eyebrow">Workspace Trust Center</p>
                    <h3 class="title">Enable or disable your Trust Center</h3>
                    <p class="description">Control whether your Trust Center is accessible to visitors.</p>
                    <span class="status-pill {{ team.is_public|yesno:'public,private' }}">
                        <i class="fas {{ team.is_public|yesno:'fa-globe,fa-lock' }}"></i>
                        {{ team.is_public|yesno:'Enabled,Disabled' }}
                    </span>
                    {% if team.is_public %}
                        {% trust_center_absolute_url team as public_url %}
                        <div class="mt-2 d-flex align-items-center gap-2 flex-wrap">
                            <code class="bg-light px-2 py-1 rounded small">{{ public_url }}</code>
                            <button type="button"
                                    class="copy-url-btn visibility-copy-btn"
                                    title="Copy public URL"
                                    aria-label="Copy public URL"
                                    data-public-url="{{ public_url }}">
                                <i class="fas fa-copy"></i>
                                <span class="copy-text">Copy public URL</span>
                            </button>
                        </div>
                    {% endif %}
                    {% if not is_owner %}
                        <div class="text-muted mt-2 small">Only workspace owners can change visibility.</div>
                    {% elif not can_set_private %}
                        <div class="text-muted mt-2 small">Disabling the Trust Center is available on Business or Enterprise plans.</div>
                    {% endif %}
                </div>
                <div class="control">
                    <form method="post"
                          action="{% url 'teams:team_settings' team.key %}"
                          class="d-inline-block">
                        {% csrf_token %}
                        <input type="hidden" name="visibility_action" value="update">
                        <input type="hidden" name="is_public" value="false">
                        <input type="hidden" name="active_tab" value="trust-center">
                        <div class="form-check form-switch">
                            <input id="workspace-visibility-toggle"
                                   class="form-check-input"
                                   type="checkbox"
                                   name="is_public"
                                   value="true"
                                   {% if team.is_public %}checked{% endif %}
                                   {% if not is_owner %}disabled{% endif %}
                                   onchange="this.form.submit()">
                            <label class="form-check-label" for="workspace-visibility-toggle">{{ team.is_public|yesno:'Enabled,Disabled' }}</label>
                        </div>
                        <button type="submit" class="visually-hidden">Save visibility</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Custom Domain Section (HTMX loaded) -->
<div id="team-custom-domain-wrapper"
     hx-get="{% url 'teams:team_custom_domain' team.key %}"
     hx-trigger="load, refreshTeamCustomDomain from:body"
     hx-swap="innerHTML">
    <div class="text-center py-4">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2 text-muted">Loading custom domain settings...</p>
    </div>
</div>
