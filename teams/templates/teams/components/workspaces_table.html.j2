{% comment %}
Workspaces listing table - replaces Vue TeamsList component
Context variables:
- memberships: QuerySet of Member objects with team relationships
- csrf_token: CSRF token for delete operations
{% endcomment %}
{% load static %}
<!-- Standard Table using same pattern as products/projects -->
<div class="mt-3 mb-4">
    <div class="card border-light shadow-brand">
        <!-- Card Header -->
        <div class="card-header px-4 py-3">
            <div class="d-flex justify-content-between align-items-center w-100">
                <h4 class="card-title mb-0">Workspaces</h4>
                <div class="d-flex align-items-center gap-2">
                    <button class="btn btn-primary px-4"
                            data-bs-toggle="modal"
                            data-bs-target="#addWorkspaceModal">Add Workspace</button>
                </div>
            </div>
        </div>
        <!-- Card Body -->
        <div class="card-body p-0">
            {% if not memberships %}
                <!-- Empty State -->
                <div class="dashboard-empty">
                    <p class="mb-0">No workspaces added</p>
                </div>
            {% else %}
                <!-- Data Table -->
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Role</th>
                                <th>Members</th>
                                <th class="col-actions text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for membership in memberships %}
                                <tr>
                                    <td data-label="Name">
                                        <a href="/workspace/{{ membership.team.key }}"
                                           class="text-primary text-decoration-none">{{ membership.team.name }}</a>
                                    </td>
                                    <td data-label="Role">
                                        <span class="badge bg-info-subtle text-info">{{ membership.role|title }}</span>
                                    </td>
                                    <td data-label="Members">
                                        <span class="text-muted">
                                            {{ membership.team.member_set.count }} member{{ membership.team.member_set.count|pluralize }}
                                            {% if membership.team.invitation_set.count > 0 %}
                                                <small class="ms-1">({{ membership.team.invitation_set.count }} pending)</small>
                                            {% endif %}
                                        </span>
                                        {% if membership.is_default_team %}
                                            <span class="badge bg-success-subtle text-success ms-2">
                                                <i class="fas fa-star me-1"></i>Default
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end" data-label="Actions">
                                        <div class="d-flex justify-content-end">
                                            {% if membership.role == 'owner' or membership.role == 'admin' %}
                                                <button class="btn btn-sm btn-link{% if membership.is_default_team %} text-warning disabled{% else %} text-muted{% endif %}"
                                                        {% if not membership.is_default_team %}onclick="window.location.href='/workspace/set_default/{{ membership.id }}/'"{% endif %}
                                                        title="{% if membership.is_default_team %}Default workspace{% else %}Make default workspace{% endif %}">
                                                    <i class="fas fa-star"></i>
                                                </button>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
</div>
