{% extends "core/dashboard_base.html.j2" %}
{% load django_vite %}
{% load widget_tweaks %}
{% block title %}sbomify Team Dashboard{% endblock %}
{% block dashboard_content %}
    {% include "core/base_messages.html.j2" %}
    <div class="page-header mb-4">
        <div class="header-main">
            <div class="title-section">
                <h1 class="item-title">
                    <i class="fas fa-users me-3 text-primary"></i>Workspaces
                </h1>
                <p class="item-subtitle">Manage your teams and collaborative workspaces</p>
            </div>
        </div>
    </div>
    <div class="v-application-wrapper">
        <div class="row">
            <div class="col-12">
                {% include "teams/components/teams_list.html.j2" with teams_data=teams_data pagination_meta=pagination_meta search_query=search_query current_page=current_page page_size=page_size page_size_options=page_size_options csrf_token=csrf_token %}
            </div>
        </div>
    </div>
    {% include "teams/components/add_workspace_modal.html.j2" with form=add_team_form action_url=request.get_full_path %}
{% endblock %}
{% block scripts %}
    {% vite_asset 'teams/js/main.ts' %}
{% endblock %}
