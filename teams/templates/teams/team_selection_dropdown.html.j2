<div class="navbar-nav me-auto workspace-selector">
    <div class="nav-item dropdown">
        <button class="nav-icon dropdown-toggle btn btn-link border-0 bg-transparent d-none"
                type="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
                aria-haspopup="true"
                aria-label="Workspace menu (mobile)">
            <i class="align-middle fas fa-users"></i>
        </button>
        {% with current_view_name=request.resolver_match.namespaces.0|add:":"|add:request.resolver_match.url_name %}
            <button class="nav-link dropdown-toggle btn btn-link border-0 bg-transparent d-inline-flex align-items-center"
                    type="button"
                    data-bs-toggle="dropdown"
                    aria-expanded="false"
                    aria-haspopup="true"
                    aria-label="Select workspace">
                <i class="fas fa-folder me-2 text-primary" aria-hidden="true"></i>
                <span class="fw-medium text-dark">
                    {% if request.session.current_team %}
                        {{ request.session.current_team.name }}
                    {% else %}
                        Select Workspace
                    {% endif %}
                </span>
            </button>
            <ul class="dropdown-menu shadow-sm" role="menu">
                <li role="presentation">
                    <h6 class="dropdown-header" role="heading" aria-level="2">Switch Workspace</h6>
                </li>
                {% for t_key, t_info in request.session.user_teams.items %}
                    <li role="presentation">
                        <a class="dropdown-item {% if request.session.current_team.key and t_key == request.session.current_team.key %}active{% endif %}"
                           href="{% url 'teams:switch_team' t_key %}?next={{ current_view_name }}"
                           role="menuitem">
                            <i class="fas fa-folder me-2" aria-hidden="true"></i>
                            {{ t_info.name }}
                            {% if request.session.current_team.key and t_key == request.session.current_team.key %}
                                <i class="fas fa-check ms-auto text-success" aria-hidden="true"></i>
                                <span class="visually-hidden">(current workspace)</span>
                            {% endif %}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        {% endwith %}
    </div>
</div>
